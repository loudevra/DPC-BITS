<UserControl x:Class="DPC.Components.ConfirmationModal.CurrencyInputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto"
             FontFamily="{StaticResource Lexend}"
             Background="Transparent">
    <materialDesign:Card Background="White"
                       Width="Auto"
                       Height="Auto"
                       Padding="20"
                       UniformCornerRadius="20"
                       HorizontalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Row - Input Controls -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Toggle buttons -->
                <Border Grid.Column="0" 
                        Background="Transparent" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="3" 
                        CornerRadius="25"
                        Width="120"
                        Height="55"
                        Margin="0,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Add icon (green) -->
                        <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="BriefcasePlusOutline " 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#4CAF50"/>
                        </Grid>

                        <!-- Subtract icon (red) -->
                        <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="BriefcaseMinusOutline" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#F44336"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Amount Input -->
                <Border Grid.Column="1" 
                        Background="Transparent" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="3" 
                        CornerRadius="25"
                        Height="55"
                        Margin="12,0">
                    <Grid Margin="0,0,48,0">
                        <TextBlock Text="Amount..."
                                   FontWeight="SemiBold"
                                   Foreground="#AAAAAA" 
                                   VerticalAlignment="Center" 
                                   Margin="25,0,0,0" 
                                   FontSize="16"/>
                    </Grid>
                </Border>

                <!-- Sales Commission % Input -->
                <Border Grid.Column="2" 
                        Background="Transparent" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="3" 
                        CornerRadius="25"
                        Height="55"
                        Margin="12,0,0,0">
                    <Grid Margin="0,0,40,0">
                        <TextBlock Text="Sales Commission %" 
                                   Foreground="#AAAAAA" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" 
                                   Margin="20,0,0,0" 
                                   FontSize="16"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Bottom Row - Total and Update Button -->
            <Grid Grid.Row="1" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Total Amount Display -->
                <StackPanel Grid.Column="0" 
                          Orientation="Horizontal" 
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                    <TextBlock Text="=" 
                               FontFamily="Lexend"
                               FontSize="22" 
                               Foreground="#555555" 
                               VerticalAlignment="Center" 
                               Margin="0,0,8,0"/>
                    <TextBlock Text="₱" 
                               FontFamily="Lexend"
                               FontSize="22" 
                               Foreground="#555555" 
                               VerticalAlignment="Center" 
                               Margin="0,0,4,0"/>
                    <TextBlock Text="0.00" 
                               FontFamily="Lexend"
                               FontSize="22" 
                               Foreground="#555555" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Update Button -->
                <Button Grid.Column="1" 
                        Background="#2E466B"
                        Foreground="White"
                        BorderThickness="0"
                        Width="120"
                        FontFamily="Lexend"
                        Height="55"
                        Style="{StaticResource RoundedButtonStyle}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right">
                    <TextBlock Text="Update" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
    </materialDesign:Card>
</UserControl>