<Window x:Class="DPC.Components.ConfirmationModals.ConfirmPurchaseOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPC"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Width="671" Height="261">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Modal Background -->
        <Border Background="White" CornerRadius="20" BorderBrush="#2E466B" BorderThickness="3"
            Width="671" Height="261">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="225">

                <!-- Title -->
                <TextBlock Text="Confirmation"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#2E466B"
                       HorizontalAlignment="Left"
                       Margin="0,10,0,0"/>

                <!-- Message -->
                <TextBlock Text="You are about to generate purchase order. Click confirm to proceed, or cancel to abort."
                       FontSize="20"
                       Foreground="Gray"
                       FontWeight="Medium"
                       TextAlignment="Left"
                       TextWrapping="Wrap"
                       Width="Auto"
                       HorizontalAlignment="Left"
                       Margin="0,30,0,40"/>

                <!-- Buttons Grid -->
                <Grid Width="Auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Grid.Column="1">

                        <!-- Cancel Button (Outlined) -->
                        <Button Click="CancelButton" Content="Cancel"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="20"
                            Foreground="#AEAEAE"
                            BorderBrush="#AEAEAE"
                            FontWeight="SemiBold"   
                            FontSize="16px"
                            Width="109"
                            Height="39"                              
                            Margin="0,0,10,0"/>

                        <!-- Confirm Button (Raised) -->
                        <Button Click="ConfirmButton" Content="Confirm"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="20"
                            Foreground="White"
                            FontWeight="SemiBold"   
                            FontSize="16px"
                            Width="128"
                            Height="39"
                            Background="#2E466B"/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
