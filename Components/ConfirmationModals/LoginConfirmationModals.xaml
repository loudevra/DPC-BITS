<UserControl x:Class="DPC.Components.ConfirmationModals.LoginConfirmationModals"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

	<UserControl.Resources>
		<!-- Button Style - Enhanced with MaterialDesign -->
		<Style x:Key="ModalButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#555555"/>
			<Setter Property="BorderBrush" Value="#DDDDDD"/>
			<Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
			<Setter Property="Padding" Value="20,8"/>
			<Setter Property="Height" Value="36"/>
			<Setter Property="FontWeight" Value="Medium"/>
			<Setter Property="FontSize" Value="14"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#F5F5F5"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<!-- Modal Overlay Style - Improved transition -->
		<Style x:Key="ModalOverlay" TargetType="Grid">
			<Setter Property="Background" Value="#80000000"/>
			<Setter Property="Opacity" Value="0"/>
			<Style.Triggers>
				<Trigger Property="Visibility" Value="Visible">
					<Trigger.EnterActions>
						<BeginStoryboard>
							<Storyboard>
								<DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3">
									<DoubleAnimation.EasingFunction>
										<PowerEase EasingMode="EaseOut" Power="2"/>
									</DoubleAnimation.EasingFunction>
								</DoubleAnimation>
							</Storyboard>
						</BeginStoryboard>
					</Trigger.EnterActions>
				</Trigger>
			</Style.Triggers>
		</Style>
	</UserControl.Resources>

	<Grid>
		<!-- Success Modal -->
		<Grid x:Name="SuccessModalOverlay" Style="{StaticResource ModalOverlay}" Visibility="Collapsed">
			<materialDesign:Card VerticalAlignment="Center" HorizontalAlignment="Center"
                               Width="320" UniformCornerRadius="8"
                               materialDesign:ElevationAssist.Elevation="Dp8"
                               RenderTransformOrigin="0.5,0.5">
				<materialDesign:Card.RenderTransform>
					<ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
				</materialDesign:Card.RenderTransform>
				<materialDesign:Card.Style>
					<Style TargetType="materialDesign:Card">
						<Style.Triggers>
							<DataTrigger Binding="{Binding Visibility, RelativeSource={RelativeSource AncestorType=Grid}}" Value="Visible">
								<DataTrigger.EnterActions>
									<BeginStoryboard>
										<Storyboard>
											<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                           From="0.9" To="1" Duration="0:0:0.3">
												<DoubleAnimation.EasingFunction>
													<BackEase EasingMode="EaseOut" Amplitude="0.5"/>
												</DoubleAnimation.EasingFunction>
											</DoubleAnimation>
											<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                           From="0.9" To="1" Duration="0:0:0.3">
												<DoubleAnimation.EasingFunction>
													<BackEase EasingMode="EaseOut" Amplitude="0.5"/>
												</DoubleAnimation.EasingFunction>
											</DoubleAnimation>
										</Storyboard>
									</BeginStoryboard>
								</DataTrigger.EnterActions>
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</materialDesign:Card.Style>

				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<!-- Header with smoother rounded edges -->
					<materialDesign:ColorZone Grid.Row="0" Mode="Custom" Background="#6DC067" Height="120"
                                            CornerRadius="8,8,0,0">
						<Grid>
							<Button x:Name="BtnCloseSuccess" HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Style="{StaticResource MaterialDesignIconButton}" Margin="0,8,8,0" Click="BtnCloseSuccess_Click">
								<materialDesign:PackIcon Kind="Close" Foreground="White" Width="20" Height="20"/>
							</Button>
							<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
								<TextBlock Text="Success!" FontSize="24" FontWeight="SemiBold" Foreground="White"
                                          HorizontalAlignment="Center" Margin="0,0,0,15"/>
								<materialDesign:Card Background="White" Width="48" Height="48" UniformCornerRadius="24">
									<materialDesign:PackIcon Kind="Check" Width="30" Height="30" Foreground="#6DC067"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
								</materialDesign:Card>
							</StackPanel>
						</Grid>
					</materialDesign:ColorZone>

					<!-- Content -->
					<TextBlock x:Name="SuccessMessage" Grid.Row="1" Text="Your operation was successful."
                              Margin="24,24,24,24" TextAlignment="Center" FontSize="16"/>

					<!-- Footer -->
					<Grid Grid.Row="2" Margin="24,0,24,24">
						<Button x:Name="BtnSuccessAction" Content="Got It!" Style="{StaticResource ModalButton}"
                               HorizontalAlignment="Center" Click="BtnSuccessAction_Click"/>
					</Grid>
				</Grid>
			</materialDesign:Card>
		</Grid>

		<!-- Error Modal -->
		<Grid x:Name="ErrorModalOverlay" Style="{StaticResource ModalOverlay}" Visibility="Collapsed">
			<materialDesign:Card VerticalAlignment="Center" HorizontalAlignment="Center"
                               Width="320" UniformCornerRadius="8"
                               materialDesign:ElevationAssist.Elevation="Dp8"
                               RenderTransformOrigin="0.5,0.5">
				<materialDesign:Card.RenderTransform>
					<ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
				</materialDesign:Card.RenderTransform>
				<materialDesign:Card.Style>
					<Style TargetType="materialDesign:Card">
						<Style.Triggers>
							<DataTrigger Binding="{Binding Visibility, RelativeSource={RelativeSource AncestorType=Grid}}" Value="Visible">
								<DataTrigger.EnterActions>
									<BeginStoryboard>
										<Storyboard>
											<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                           From="0.9" To="1" Duration="0:0:0.3">
												<DoubleAnimation.EasingFunction>
													<BackEase EasingMode="EaseOut" Amplitude="0.5"/>
												</DoubleAnimation.EasingFunction>
											</DoubleAnimation>
											<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                           From="0.9" To="1" Duration="0:0:0.3">
												<DoubleAnimation.EasingFunction>
													<BackEase EasingMode="EaseOut" Amplitude="0.5"/>
												</DoubleAnimation.EasingFunction>
											</DoubleAnimation>
										</Storyboard>
									</BeginStoryboard>
								</DataTrigger.EnterActions>
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</materialDesign:Card.Style>

				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<!-- Header with smoother rounded edges -->
					<materialDesign:ColorZone Grid.Row="0" Mode="Custom" Background="#E05D5D" Height="120"
                                            CornerRadius="8,8,0,0">
						<Grid>
							<Button x:Name="BtnCloseError" HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Style="{StaticResource MaterialDesignIconButton}" Margin="0,8,8,0" Click="BtnCloseError_Click">
								<materialDesign:PackIcon Kind="Close" Foreground="White" Width="20" Height="20"/>
							</Button>
							<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
								<TextBlock Text="Whoops!" FontSize="24" FontWeight="SemiBold" Foreground="White"
                                          HorizontalAlignment="Center" Margin="0,0,0,15"/>
								<materialDesign:Card Background="White" Width="48" Height="48" UniformCornerRadius="24">
									<materialDesign:PackIcon Kind="Close" Width="30" Height="30" Foreground="#E05D5D"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
								</materialDesign:Card>
							</StackPanel>
						</Grid>
					</materialDesign:ColorZone>

					<!-- Content -->
					<TextBlock x:Name="ErrorMessage" Grid.Row="1" Text="Something went wrong."
                              Margin="24,24,24,24" TextAlignment="Center" FontSize="16"/>

					<!-- Footer -->
					<Grid Grid.Row="2" Margin="24,0,24,24">
						<Button x:Name="BtnErrorAction" Content="Try Again" Style="{StaticResource ModalButton}"
                               HorizontalAlignment="Center" Click="BtnErrorAction_Click"/>
					</Grid>
				</Grid>
			</materialDesign:Card>
		</Grid>
	</Grid>
</UserControl>