<UserControl x:Class="DPC.Components.ConfirmationModals.ConfirmWarehouseDeletion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="namespace:DPC.Components.ConfirmationModals"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="Auto" Height="Auto">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Modal Background -->
        <Border Background="White" CornerRadius="20" BorderBrush="#E53935" BorderThickness="2" Padding="20"
                Width="425" Height="Auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="Auto">
                <!-- Title -->
                <TextBlock Text="Confirm Warehouse Deletion?"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#E53935"
                           HorizontalAlignment="Left"/>
                <!-- Message -->
                <TextBlock Text="You will lose all the information for this warehouse."
                           FontSize="16"
                           Foreground="Gray"
                           FontWeight="Medium"
                           TextAlignment="Left"
                           Margin="0,10,0,20"
                           TextWrapping="Wrap"
                           Width="543"
                           HorizontalAlignment="Left"/>
                <!-- Buttons Grid -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"> 

                    <Button Content="Confirm"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="20"
                            FontWeight="SemiBold"   
                            FontSize="14"
                            Background="#E53935"
                            Foreground="White"
                            Width="150"
                            Height="35"
                            Click="ConfirmDeletion_Click"
                                />

                    <Button Content="Cancel"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="20"
                            Foreground="Gray"
                            BorderBrush="Gray"
                            FontWeight="SemiBold"   
                            FontSize="14"
                            Width="150"
                            Height="35"
                            Margin="30,0,0,0"
                            Click="CloseDeleteDialog"
                            />

                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
