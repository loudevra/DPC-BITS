<UserControl x:Class="DPC.Components.Forms.AddBrand"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto"
             FontFamily="{StaticResource Lexend}"
             Background="Transparent">

    <materialDesign:Card Width="450" Padding="20" Background="White"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            UniformCornerRadius="20" Height="169">
        <Grid Margin="0,0,0,-13">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="History" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#555555"/>
                <TextBlock FontSize="20" Foreground="#555555" FontWeight="Bold" Text="History" Margin="0,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="BadgeAccountOutline" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#555555"/>
                <TextBlock FontSize="20" Foreground="#555555" FontWeight="Bold" Text="Employee Details" Margin="0,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="2,42,-2,-32">
                <materialDesign:PackIcon Kind="AccountCreditCardOutline" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#555555"/>
                <TextBlock FontSize="20" Foreground="#555555" FontWeight="Bold" Text="Update Salary" Margin="0,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>




        </Grid>
    </materialDesign:Card>
</UserControl>
