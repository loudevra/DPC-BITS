<UserControl x:Class="DPC.Components.Forms.PreviewPulloutReceipt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DPC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#D9D9D9"
             mc:Ignorable="d" >
    <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <StackPanel Margin="0,0,0,0" >
                <!--Buttons-->
                <DockPanel LastChildFill="False" Margin="0,10,0,10">
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="0,0,10,0">
                        <Button Visibility="Collapsed" Content="Cancel"
                                Margin="0,0,5,0"
        Style="{StaticResource MaterialDesignOutlinedButton}"
        materialDesign:ButtonAssist.CornerRadius="20"
        Foreground="#AEAEAE"
        BorderBrush="#AEAEAE"
        FontWeight="SemiBold"   
        FontSize="16px"
        Width="90"
        Height="39"/>
                        <Button x:Name="SaveDb" Content="Save"
                                Click="SaveToDB"
                                Margin="0,0,5,0"
Style="{StaticResource MaterialDesignOutlinedButton}"
materialDesign:ButtonAssist.CornerRadius="20"
Foreground="White"
FontWeight="SemiBold"   
FontSize="16px"
Width="80"
Height="39"
Background="#2E466B"/>

                        <Button  Content="Print"
                                 Click="SavePrint"
        Style="{StaticResource MaterialDesignOutlinedButton}"
        materialDesign:ButtonAssist.CornerRadius="20"
        Foreground="White"
        FontWeight="SemiBold"   
        FontSize="16px"
        Width="90"
        Height="39"
        Background="#2E466B"/>
                    </StackPanel>
                </DockPanel>
                <Border Height="1121.28" x:Name="PrintPreview" Background="White"  BorderThickness="0" Padding="10">


                    <Grid Margin="40,40,40,40">
                        <Grid.Background>
                            <ImageBrush ImageSource="/Assets/images/watermark.png" Opacity="0.1" Stretch="UniformToFill"/>
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--Rectangle as line-->
                        <!-- <Rectangle Grid.Row="0"
               Width="auto"
               Height="1" 
               Stroke="#AEAEAE"
               StrokeThickness="1"
               Fill="Transparent"
               VerticalAlignment="Top"
               Margin="10,0"/> -->

                        <!--DPC Logo Side Bar-->
                        <StackPanel>
                            <StackPanel Grid.Row="0" Height="Auto" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0" Background="White" Grid.RowSpan="2">
                                <Image Source="/Assets/logo/BLACK WHOL.ico" Stretch="UniformToFill" Width="65" Height="80"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="DREAM PC BUILD IT AND SOLUTIONS INC." FontWeight="Bold" FontFamily="Lexend" Height="Auto" FontSize="20" Foreground="#090909" VerticalAlignment="Center"/>
                                    <TextBlock Text="Unit 2A and 2B Legenda Building Circumferential Rd. Antipolo Philippines" FontWeight="SemiBold" FontFamily="Lexend" Height="Auto" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Text="MATERIAL PULLOUT RECEIPT" FontWeight="SemiBold" FontFamily="Lexend" Height="Auto" Margin="0,0,0,20" FontSize="15" Foreground="#090909" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>

                        
                        <!--Invoice and Date-->
                        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="POR #:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                <Border Background="White" BorderThickness="0.5,0.5,0.5,0.25"  BorderBrush="#090909" Padding="5,0" Width="150" Margin="10,0,0,0">
                                    <TextBlock x:Name="POR" FontSize="12"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                <Border Background="White" BorderThickness="0.5,0.25,0.5,0.5" BorderBrush="#090909" Padding="5,0" Width="150" Margin="10,0,0,0">
                                    <TextBlock x:Name="PORDate" FontSize="12"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!--DreamPC's Info-->
                        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,5">
                                <TextBlock Text="Pullout To:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                            </StackPanel>
                            <!--Info-->
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                                <TextBlock x:Name="PORTo" Text="Dream PC Build and I.T Solutions Inc" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center" Height="80" TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>

                        <!--Bill Info-->
                        <Border Grid.Row="5" Margin="5,0" BorderThickness="1, 1, 1, 1"
BorderBrush="Black">
                            <StackPanel>
                                <DataGrid 
            x:Name="dataGrid"
            IsReadOnly="True"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            HeadersVisibility="Column"
            GridLinesVisibility="None"
            Background="Transparent"
            RowBackground="Transparent"
            AlternatingRowBackground="Transparent"
            BorderThickness="0"
           >
                                    <DataGrid.Columns>
                                        <!-- Text Columns -->
                                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                                        <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="*"/>
                                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="150"/>
                                        <DataGridTemplateColumn Header="Return" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox PreviewTextInput="ValidateNumericInput" Text="{Binding ItemReturn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" BorderBrush="Transparent"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="FontFamily" Value="Lexend"/>
                                            <Setter Property="FontSize" Value="8"/>
                                            <Setter Property="Margin" Value="0,2,0,2"/>
                                            <Setter Property="Padding" Value="2"/>
                                            <Setter Property="Height" Value="Auto"/>
                                            <Setter Property="MinHeight" Value="15"/>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="FontFamily" Value="Lexend"/>
                                            <Setter Property="FontSize" Value="10"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#FDFDFD"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="10,5"/>
                                            <Setter Property="Background" Value="#090909"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Padding" Value="5,2"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DataGridCell">
                                                        <Border Padding="{TemplateBinding Padding}" 
                              BorderBrush="{TemplateBinding BorderBrush}" 
                              BorderThickness="{TemplateBinding BorderThickness}" 
                              Background="{TemplateBinding Background}">
                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                            <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGrid.CellStyle>
                                </DataGrid>
                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Rectangle Height="1" Fill="Black" HorizontalAlignment="Stretch" Width="170"/>
                                    <TextBlock FontWeight="SemiBold" Width="auto" FontSize="9" Text="NOTHING TO FOLLOW" Margin="10,0" FontFamily="{StaticResource Lexend}"/>
                                    <Rectangle Height="1" Fill="Black" HorizontalAlignment="Stretch" Width="170"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="6" Margin="5,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Margin="0,0,0,10" Text="Received the above merchandise in good order and condition." FontWeight="Bold" FontStyle="Italic" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Approved for release by:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                <Rectangle Height="1" Fill="Black" HorizontalAlignment="Stretch" Width="170" VerticalAlignment="Bottom"/>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Orientation="Vertical">
                                <TextBlock Text="Approved By:" FontWeight="SemiBold" Margin="0,0,0,30" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                <StackPanel Width="250" HorizontalAlignment="Left">
                                    <Rectangle Height="1" Fill="Black" HorizontalAlignment="Stretch"  VerticalAlignment="Bottom"/>
                                    <TextBlock Text="Signature over Printed name" HorizontalAlignment="Center" FontWeight="Bold" FontStyle="Italic" Margin="0,5,0,0" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                                <TextBlock Text="Prepared by:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                <Grid>
                                    <TextBlock x:Name="txtPrepared" HorizontalAlignment="Stretch" Margin="10,0,0,0" VerticalAlignment="Bottom"/>
                                    <Rectangle Height="1" Fill="Black" HorizontalAlignment="Stretch" Width="181" VerticalAlignment="Bottom"/>
                                </Grid>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right">
                                <TextBlock Text="Requested By:" FontWeight="SemiBold" Margin="0,0,0,30" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                <StackPanel Width="250" HorizontalAlignment="Left">
                                    <Rectangle Height="1" Fill="Black" HorizontalAlignment="Stretch"  VerticalAlignment="Bottom"/>
                                    <TextBlock Text="Signature over Printed name" HorizontalAlignment="Center" FontWeight="Bold" FontStyle="Italic" Margin="0,5,0,0" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
