<UserControl x:Class="DPC.Components.Forms.AddSubcategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto" Width="450"
             FontFamily="{StaticResource Lexend}"
             Foreground="#555555"
             Background="Transparent">
    <materialDesign:Card Width="450" Padding="20" Background="White"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            UniformCornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="TextBoxOutline" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock FontSize="20" FontWeight="Bold" Text="Add Subcategory" Margin="0,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Grid.Column="1" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" x:Name="BtnClose">
                    <materialDesign:PackIcon Kind="Close" Foreground="#555555" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Category:" FontSize="14" FontWeight="SemiBold" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <ComboBox x:Name="ComboBoxCategory" Style="{StaticResource RoundedComboBoxStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="No. of Sub-Categories:" FontSize="14" FontWeight="SemiBold" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button VerticalAlignment="Center" Padding="0" BorderThickness="0" Background="#D9D9D9" Click="DecreaseBtn">
                        <materialDesign:PackIcon Kind="Minus" Width="10" Foreground="#555555" Margin="7.5,-3"/>
                    </Button>
                    <TextBlock x:Name="SubCategoryNumber" Text="1" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center" Margin="7.5,0"/>
                    <Button VerticalAlignment="Center" Padding="0" BorderThickness="0" Background="#D9D9D9" Click="IncreaseBtn">
                        <materialDesign:PackIcon Kind="Plus" Width="10" Foreground="#555555" Margin="7.5,-3"/>
                    </Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="300">
                    <StackPanel x:Name="MainContent">
                    </StackPanel>
                </ScrollViewer>
                <Button Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Background="#52C69D" Margin="0,10,0,10" Click="InsertBtn">
                    <TextBlock Text="Add" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="15"/>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>