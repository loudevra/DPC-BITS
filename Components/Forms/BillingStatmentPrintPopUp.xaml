<UserControl x:Class="DPC.Components.Forms.BillingStatmentPrintPopUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="Auto"
    Background="Transparent">

    <UserControl.Resources>
        <!-- Buttons Style -->
        <Style x:Key="ButtonStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <!-- Main Grid to center the content -->
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- The Card is now in the center column/row -->
        <materialDesign:Card Grid.Column="1" Grid.Row="1" Background="White" UniformCornerRadius="0" Margin="0" Width="285">
            <StackPanel Orientation="Vertical" Margin="35,0,0,0">
                <!-- Print Button -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Printer" Foreground="#555555" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                           <TextBlock Text="Print" Style="{StaticResource ButtonStyle}"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
                <!-- PDF Button -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="FilePdfBox" Foreground="#555555" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                           <TextBlock Text="PDF Download" Style="{StaticResource ButtonStyle}"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
                <!-- Delivery Note Button -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="PencilBoxOutline" Foreground="#555555" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                           <TextBlock Text="Delivery Note" Style="{StaticResource ButtonStyle}"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
                <!-- Proforma Invoice Button -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="InvoiceTextOutline" Foreground="#555555" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                           <TextBlock Text="Proforma Invoice" Style="{StaticResource ButtonStyle}"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </StackPanel>

        </materialDesign:Card>
    </Grid>
</UserControl>