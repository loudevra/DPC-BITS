<UserControl x:Class="DPC.Components.Forms.AddNewClientGrpForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    d:DesignHeight="400" d:DesignWidth="400" Background="Transparent"
    Visibility="Visible">
    <!-- 🔹 Now Visible by Default -->

    <!-- Full-Screen Overlay -->
    <Grid Background="#99000000">

        <!-- Modal Box -->
        <Border Background="White" CornerRadius="15" Padding="20" Width="400"
                VerticalAlignment="Center" HorizontalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0">
                    <materialDesign:PackIcon Kind="AccountMultiplePlus" Foreground="Black" Width="24" Height="24" Margin="0,0,5,0"/>
                    <TextBlock Text="Add New Client Group" FontSize="18" FontWeight="Bold" Foreground="Black"/>

                    <!-- Close Button -->
                    <Button Content="✖" Background="Transparent" BorderThickness="0"
                            Foreground="Black" FontSize="16" Padding="5"
                            Click="CloseModal_Click" DockPanel.Dock="Right" HorizontalAlignment="Right"/>
                </DockPanel>

                <!-- Group Name Input -->
                <StackPanel Grid.Row="1" Margin="0,15,0,0">
                    <TextBlock Text="Group Name:" Foreground="Black" FontWeight="Bold"/>
                    <Border CornerRadius="15" BorderBrush="Black" BorderThickness="1" Background="Transparent">
                        <TextBox x:Name="txtGroupName" Height="35" Padding="5" BorderThickness="0" Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!-- Description Input -->
                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                    <TextBlock Text="Description:" Foreground="Black" FontWeight="Bold"/>
                    <Border CornerRadius="15" BorderBrush="Black" BorderThickness="1" Background="Transparent">
                        <TextBox x:Name="txtDescription" Height="35" Padding="5" BorderThickness="0" Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!-- Add Group Button -->
                <Button x:Name="btnAddGroup" Grid.Row="3" Content="Add Group" Width="120" Height="35"
                        Background="#3CB371" Foreground="White" FontWeight="Bold" Margin="0,15,0,0"
                        HorizontalAlignment="Right" Click="BtnAddGroup_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
