<UserControl x:Class="DPC.Components.Forms.PreviewPrintStatement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DPC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#D9D9D9"
             mc:Ignorable="d" >
    <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <StackPanel Margin="0,0,0,0" >
                <!--Buttons-->
                <DockPanel LastChildFill="False" Margin="0,10,0,10">
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="0,0,10,0">
                        <Button Click="CancelButton" Content="Cancel"
                                Margin="0,0,5,0"
        Style="{StaticResource MaterialDesignOutlinedButton}"
        materialDesign:ButtonAssist.CornerRadius="20"
        Foreground="#AEAEAE"
        BorderBrush="#AEAEAE"
        FontWeight="SemiBold"   
        FontSize="16px"
        Width="109"
        Height="39"/>
                        <Button x:Name="SaveDb" Content="Save"
                                Margin="0,0,5,0"
Style="{StaticResource MaterialDesignOutlinedButton}"
materialDesign:ButtonAssist.CornerRadius="20"
Foreground="White"
FontWeight="SemiBold"   
FontSize="16px"
Width="80"
Height="39"
Background="#2E466B"/>

                        <Button Click="SavePrint" Content="Save and Print"
        Style="{StaticResource MaterialDesignOutlinedButton}"
        materialDesign:ButtonAssist.CornerRadius="20"
        Foreground="White"
        FontWeight="SemiBold"   
        FontSize="16px"
        Width="150"
        Height="39"
        Background="#2E466B"/>
                    </StackPanel>
                </DockPanel>
                <Border x:Name="PrintPreview" Background="White"  BorderThickness="0" Padding="10">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--Rectangle as line-->
                        <!-- <Rectangle Grid.Row="0"
               Width="auto"
               Height="1" 
               Stroke="#AEAEAE"
               StrokeThickness="1"
               Fill="Transparent"
               VerticalAlignment="Top"
               Margin="10,0"/> -->

                        <!--DPC Logo Side Bar-->
                        <StackPanel Grid.Row="0" Height="Auto" Width="150" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,10,0,0" Background="White">
                            <Image Source="/Assets/images/logosidebarBlack.png" Stretch="Fill" VerticalAlignment="Center" Width="150"/>
                        </StackPanel>
                        <!--Billing Statement Label-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                            <TextBlock Text="PURCHASE ORDER" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                        </StackPanel>
                        <!--Invoice and Date-->
                        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Invoice #:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" VerticalAlignment="Center"/>
                                <Border Background="White" BorderThickness="0.5,0.5,0.5,0.25"  BorderBrush="#090909" Padding="5,0" Width="100" Margin="10,0,0,0">
                                    <TextBlock x:Name="InvoiceNumber" FontSize="8"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" VerticalAlignment="Center"/>
                                <Border Background="White" BorderThickness="0.5,0.25,0.5,0.5" BorderBrush="#090909" Padding="5,0" Width="100" Margin="10,0,0,0">
                                    <TextBlock x:Name="InvoiceDate" FontSize="8"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!--Customers' Info-->
                        <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,5">
                                <TextBlock Text="Bill to:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" VerticalAlignment="Center"/>
                            </StackPanel>
                            <!--Info-->
                            <StackPanel x:Name="BillAddress" Orientation="Vertical" HorizontalAlignment="Right">
                                <TextBlock Text="Eli Clark" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock Text="Wales, Swansea" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock Text="United Kingdom" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock Text="+63966634982" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock Text="brookerose@gmail.com" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        <!--Status Info-->
                        <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
                            <!--Status-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
                                <TextBlock Text="Status:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#555555" VerticalAlignment="Center"/>
                                <Border Background="#F0F0F0" BorderBrush="#090909" CornerRadius="5" Padding="1" Width="120" Margin="10,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Approved" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#B1CCA1" VerticalAlignment="Center" Width="80"/>
                                        <materialDesign:PackIcon Kind="CogSyncOutline" Width="12" Height="12" Foreground="#B3B3B3" Margin="10,0,5,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <!--Payment Terms-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
                                <TextBlock Text="Payment Terms:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#555555" VerticalAlignment="Center"/>
                                <Border Background="#F0F0F0" BorderBrush="#090909" CornerRadius="5" Padding="1" Width="120" Margin="10,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Payment on Receipt" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#AEAEAE" VerticalAlignment="Center" Width="80"/>
                                        <materialDesign:PackIcon Kind="CogSyncOutline" Width="12" Height="12" Foreground="#B3B3B3" Margin="10,0,5,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <!--Due Date-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
                                <TextBlock Text="Due Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#555555" VerticalAlignment="Center"/>
                                <Border Background="#F0F0F0" BorderBrush="#090909" CornerRadius="5" Padding="1" Width="120" Margin="10,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="DueDate" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#AEAEAE" VerticalAlignment="Center" Width="80"/>
                                        <materialDesign:PackIcon Kind="CogSyncOutline" Width="12" Height="12" Foreground="#B3B3B3" Margin="10,0,5,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!--DataGrid 1: Seller Info-->
                        <StackPanel Grid.Row="4" Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                            <DataGrid 
                            IsReadOnly="True"
                    x:Name="checkingGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"
                    GridLinesVisibility="None"
                    RowBackground="White"
                    AlternatingRowBackground="WhiteSmoke"
                    BorderThickness="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Sales Representative:" Binding="{Binding SalesRep}" Width="150"/>
                                    <DataGridTextColumn Header="Checked by:" Binding="{Binding CheckedBy}" Width="150"/>
                                    <DataGridTextColumn Header="Approved by:" Binding="{Binding ApprovedBy}" Width="150"/>
                                </DataGrid.Columns>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="FontFamily" Value="Lexend"/>
                                        <Setter Property="FontSize" Value="6"/>
                                        <Setter Property="Margin" Value="0,5,0,5"/>
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="Height" Value="Auto"/>
                                        <Setter Property="MinHeight" Value="25"/>
                                    </Style>
                                </DataGrid.RowStyle>

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontFamily" Value="Lexend"/>
                                        <Setter Property="FontSize" Value="8"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#FDFDFD"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="10,5"/>
                                        <Setter Property="Background" Value="#AEAEAE"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="10,5"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridCell">
                                                    <Border Padding="{TemplateBinding Padding}" 
                                          BorderBrush="{TemplateBinding BorderBrush}" 
                                          BorderThickness="{TemplateBinding BorderThickness}" 
                                          Background="{TemplateBinding Background}">
                                                        <ContentPresenter VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </DataGrid.CellStyle>
                            </DataGrid>
                        </StackPanel>

                        <!--Bill Info-->

                        <DataGrid Grid.Row="5" Margin="5"
                          x:Name="dataGrid"
                              IsReadOnly="True"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowBackground="White"
                          AlternatingRowBackground="WhiteSmoke"
                          BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="150"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="*"/>
                                <DataGridTextColumn Header="Line Price" Binding="{Binding LinePrice}" Width="*"/>
                            </DataGrid.Columns>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontFamily" Value="Lexend"/>
                                    <Setter Property="FontSize" Value="6"/>
                                    <Setter Property="Margin" Value="0,5,0,5"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Setter Property="MinHeight" Value="25"/>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="FontFamily" Value="Lexend"/>
                                    <Setter Property="FontSize" Value="8"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#FDFDFD"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Background" Value="#090909"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                    <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>


                        <!--Customer Confirmation -->
                        <Border MaxHeight="55" Grid.Row="6" BorderBrush="#090909" BorderThickness="1" Margin="5,0,5,0" Padding="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--Signature-->
                                <Border Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                    <TextBlock FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                        PRINTED NAME<LineBreak/>AND SIGNATURE
                                    </TextBlock>
                                </Border>

                                <!--Upload Signature-->
                                <Border x:Name="BrowseFile" Background="White" Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,1,0">

                                </Border>

                                <!--Total Cost Section-->
                                <Border Grid.Column="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                <TextBlock Text="SUBTOTAL VAT EX." FontWeight="SemiBold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                <TextBlock Text="INSTALLATION/CONFIGURATION" FontWeight="SemiBold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                <TextBlock Text="MOBILIZATION" FontWeight="SemiBold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                <TextBlock Text="VAT 12%" FontWeight="SemiBold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,1,0" Padding="1">
                                                <TextBlock Text="TOTAL COST" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#C75757" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock x:Name="SubVat" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock x:Name="Install" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock x:Name="Mobilization" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock x:Name="Tax" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                <TextBlock x:Name="TotalCost" Text="₱ 0.00" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#C75757" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!--Notes-->
                        <Border Grid.Row="7" BorderBrush="#090909" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                <TextBlock Text="Notes:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" VerticalAlignment="Center" Margin="10"/>
                            </StackPanel>
                        </Border>
                        <!--Remarks-->
                        <Border Grid.Row="8" BorderBrush="#090909" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                <TextBlock Text="Remarks:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" VerticalAlignment="Center" Margin="10"/>
                            </StackPanel>
                        </Border>
                    </Grid>


                </Border>


            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
