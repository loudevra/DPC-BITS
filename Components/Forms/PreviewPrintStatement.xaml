<UserControl x:Class="DPC.Components.Forms.PreviewPrintStatement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DPC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#D9D9D9"
             mc:Ignorable="d" >
    <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <StackPanel Margin="0,0,0,0" >
                <!--Buttons-->
                <DockPanel LastChildFill="False" Margin="0,10,0,10">
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="0,0,10,0">
                        <Button Click="CancelButton" Content="Cancel"
                                Margin="0,0,5,0"
        Style="{StaticResource MaterialDesignOutlinedButton}"
        materialDesign:ButtonAssist.CornerRadius="20"
        Foreground="#AEAEAE"
        BorderBrush="#AEAEAE"
        FontWeight="SemiBold"   
        FontSize="16px"
        Width="90"
        Height="39"/>
                        <Button x:Name="SaveDb" Content="Save"
                                Margin="0,0,5,0"
Style="{StaticResource MaterialDesignOutlinedButton}"
materialDesign:ButtonAssist.CornerRadius="20"
Foreground="White"
FontWeight="SemiBold"   
FontSize="16px"
Width="80"
Height="39"
Background="#2E466B"/>

                        <Button Click="SavePrint" Content="Print"
        Style="{StaticResource MaterialDesignOutlinedButton}"
        materialDesign:ButtonAssist.CornerRadius="20"
        Foreground="White"
        FontWeight="SemiBold"   
        FontSize="16px"
        Width="90"
        Height="39"
        Background="#2E466B"/>
                    </StackPanel>
                </DockPanel>
                <Border Height="1121.28" x:Name="PrintPreview" Background="White"  BorderThickness="0" Padding="10">


                    <Grid Margin="40,40,40,70">
                        <Grid.Background>
                            <ImageBrush ImageSource="/Assets/images/watermark.png" Opacity="0.1" Stretch="UniformToFill"/>
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--Rectangle as line-->
                        <!-- <Rectangle Grid.Row="0"
               Width="auto"
               Height="1" 
               Stroke="#AEAEAE"
               StrokeThickness="1"
               Fill="Transparent"
               VerticalAlignment="Top"
               Margin="10,0"/> -->

                        <!--DPC Logo Side Bar-->
                        <StackPanel Grid.Row="0" Height="Auto" Width="232" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,10,0,17" Background="White" Grid.RowSpan="2">
                            <Image Source="/Assets/images/logosidebarBlack.png" Stretch="Fill" Width="234" Height="75"/>
                        </StackPanel>
                        <!--Billing Statement Label-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                            <TextBlock Text="PURCHASE ORDER" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                        </StackPanel>
                        <!--Invoice and Date-->
                        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="PO #:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" VerticalAlignment="Center"/>
                                <Border Background="White" BorderThickness="0.5,0.5,0.5,0.25"  BorderBrush="#090909" Padding="5,0" Width="100" Margin="10,0,0,0">
                                    <TextBlock x:Name="InvoiceNumber" FontSize="9"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" VerticalAlignment="Center"/>
                                <Border Background="White" BorderThickness="0.5,0.25,0.5,0.5" BorderBrush="#090909" Padding="5,0" Width="100" Margin="10,0,0,0">
                                    <TextBlock x:Name="InvoiceDate" FontSize="9"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Due Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" VerticalAlignment="Center"/>
                                <Border Background="White" BorderThickness="0.5,0.25,0.5,0.5" BorderBrush="#090909" Padding="5,0" Width="100" Margin="10,0,0,0">
                                    <TextBlock x:Name="DueDate" FontSize="9"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Payment Terms:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" VerticalAlignment="Center"/>
                                <Border Background="White" BorderThickness="0.5,0.25,0.5,0.5" BorderBrush="#090909" Padding="5,0" Width="100" Margin="10,0,0,0">
                                    <TextBlock x:Name="PaymentTerms" Text="Payment on Receipt" FontSize="9"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Status:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" VerticalAlignment="Center"/>
                                <Border Background="White" BorderThickness="0.5,0.25,0.5,0.5" BorderBrush="#090909" Padding="5,0" Width="100" Margin="10,0,0,0">
                                    <TextBlock x:Name="Status" Text="Approved" FontSize="9"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!--DreamPC's Info-->
                        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,5">
                                <TextBlock Text="Bill from:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#090909" VerticalAlignment="Center"/>
                            </StackPanel>
                            <!--Info-->
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                                <TextBlock Text="Dream PC Build and I.T Solutions" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock Text="Unit 2A and 2B Legenda Building " FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock Text="Circumferential RD Antipolo, Philippines" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock Text="TEL: +639171873722" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock  Text="info.dreampcbuild@gmail.com" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock  Text="dreampcbuild.com" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!--Customers' Info-->
                        <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,5">
                                <TextBlock Text="Bill to:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#090909" VerticalAlignment="Center"/>
                            </StackPanel>
                            <!--Info-->
                            <StackPanel x:Name="BillAddress" Orientation="Vertical" HorizontalAlignment="Right">
                                <TextBlock x:Name="SupplierNameBox" Text="Eli Clark" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock x:Name="AddressLineOne" Text="Wales, Swansea" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock x:Name="AddressLineTwo" Text="United Kingdom" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock x:Name="PhoneBox" Text="+63966634982" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                <TextBlock x:Name="EmailBox" Text="brookerose@gmail.com" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>


                        <!--DataGrid 1: Seller Info-->
                        <DataGrid 
                                Margin="5, 0"
                                Grid.Row="4"
                            IsReadOnly="True"
                    x:Name="checkingGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"
                    GridLinesVisibility="None"
                    Background="Transparent"
                    RowBackground="Transparent"
                    BorderThickness="1, 1, 1, 0"
        BorderBrush="#AEAEAE">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Prepared by:" Binding="{Binding SalesRep}" Width="*"/>
                                <DataGridTextColumn Header="Approved by:" Binding="{Binding ApprovedBy}" Width="*"/>
                                <DataGridTextColumn Header="Payment Terms:" Width="*"/>
                            </DataGrid.Columns>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontFamily" Value="Lexend"/>
                                    <Setter Property="FontSize" Value="8"/>
                                    <Setter Property="Margin" Value="0,5,0,5"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Setter Property="MinHeight" Value="15"/>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="FontFamily" Value="Lexend"/>
                                    <Setter Property="FontSize" Value="8"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#FDFDFD"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Background" Value="#AEAEAE"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" 
                                          BorderBrush="{TemplateBinding BorderBrush}" 
                                          BorderThickness="{TemplateBinding BorderThickness}" 
                                          Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                    <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>

                        <!--Bill Info-->

                        <DataGrid Grid.Row="5" Margin="5, 0"
                          x:Name="dataGrid"
                              IsReadOnly="True"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          Background="Transparent"
                          RowBackground="Transparent"
                          BorderThickness="1, 1, 1, 0"
                                  BorderBrush="Black">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="100"/>
                                <DataGridTextColumn Header="Line Price" Binding="{Binding LinePrice}" Width="100"/>
                            </DataGrid.Columns>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontFamily" Value="Lexend"/>
                                    <Setter Property="FontSize" Value="8"/>
                                    <Setter Property="Margin" Value="0,2,0,2"/>
                                    <Setter Property="Padding" Value="2"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Setter Property="MinHeight" Value="15"/>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="FontFamily" Value="Lexend"/>
                                    <Setter Property="FontSize" Value="8"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#FDFDFD"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Background" Value="#090909"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="5,2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" 
                             BorderBrush="{TemplateBinding BorderBrush}" 
                             BorderThickness="{TemplateBinding BorderThickness}" 
                             Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                    <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>


                        <StackPanel Grid.Row="6">
                            <!--Customer Confirmation -->
                            <Border Height="70" BorderBrush="#090909" BorderThickness="1" Margin="5,0,5,0" Padding="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--Signature-->
                                    <Border Grid.Column="0" BorderBrush="#090909" Background="White" BorderThickness="0,0,1,0">
                                        <TextBlock FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="4">
PRINTED NAME AND SIGNATURE
                                        </TextBlock>
                                    </Border>
                                    <!--Upload Signature-->
                                    <Border x:Name="BrowseFile" Cursor="Hand" Background="White" Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="TrayUpload" Width="12" Height="12" Foreground="#555555" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Text="Upload Signature (.png, .jpeg) " FontWeight="Bold" FontFamily="Lexend" FontSize="8" Foreground="#AEAEAE" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                                <Border  BorderBrush="#AEAEAE" BorderThickness="1" Padding="1" Width="50" CornerRadius="5">
                                                    <TextBlock Text="Browse" FontWeight="Bold" FontFamily="Lexend" FontSize="8" Foreground="#AEAEAE" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!--Total Cost Section-->
                                    <Border Grid.Column="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                    <TextBlock Text="SUBTOTAL VAT EX." FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                                <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                    <TextBlock Text="INSTALLATION/CONFIGURATION" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                                <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                    <TextBlock Text="MOBILIZATION" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                                <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                    <TextBlock Text="VAT 12%" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                                <Border BorderBrush="#090909" BorderThickness="0,0,1,0" Padding="1">
                                                    <TextBlock Text="TOTAL COST" FontWeight="Bold" FontFamily="Lexend" FontSize="9" Foreground="#C75757" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                    <TextBlock x:Name="SubVat" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                                <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                    <TextBlock x:Name="Install" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                                <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                    <TextBlock x:Name="Mobilization" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                                <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                    <TextBlock x:Name="Tax" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                                <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                    <TextBlock x:Name="TotalCost" Text="₱ 0.00" FontWeight="Bold" FontFamily="Lexend" FontSize="9" Foreground="#C75757" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>

                            <!--Notes-->
                            <Border BorderBrush="#090909" Height="50" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0,3">
                                <DockPanel>
                                    <TextBlock Text="Notes:" Margin="2,0,5,0" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909" />
                                    <TextBox x:Name="noteBox" IsReadOnly="True" FontSize="9" Foreground="Black" TextWrapping="Wrap" BorderThickness="0"/>
                                </DockPanel>
                            </Border>
                            <!--Remarks-->
                            <Border BorderBrush="#090909" Height="20" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0,3">
                                <DockPanel>
                                    <TextBlock Text="Remarks:" Margin="2,0,5,0" FontWeight="SemiBold" FontFamily="Lexend" FontSize="9" Foreground="#090909"  />
                                    <TextBox x:Name="remarksBox" IsReadOnly="True" FontSize="9" Foreground="Black" TextWrapping="Wrap" BorderThickness="0"/>
                                </DockPanel>
                            </Border>

                            <Border BorderBrush="#090909" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0,1">
                                <TextBlock Text="TERMS" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909"/>
                            </Border>

                            <Border BorderBrush="#090909"  BorderThickness="1, 0, 1, 1" Margin="5,0,5,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                        <StackPanel>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="For CASH payments:" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="50% upon ordering" TextAlignment="Center"  FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="30% upon delivery" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="20% upon completion" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                <TextBlock Text="Progress billing remaining balance (for bulk orders)" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                        <StackPanel>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="For CHEQUES payment:" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="Order will process upon clearance of cheque" TextAlignment="Center"  FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="Any additional orders will be charged seperately" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="No return after installation" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                <TextBlock Text="" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="2" BorderBrush="#090909" BorderThickness="0,0,0,0">
                                        <StackPanel>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="For out of town projects:" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="Additional delivery charges" TextAlignment="Center"  FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="Please indicate lead time for installation" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                <TextBlock Text="We will have a site inscpetions prior to installation" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                <TextBlock Text="" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
