<UserControl x:Class="DPC.Components.Forms.EditWarehouse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto"
             FontFamily="{StaticResource Lexend}"
             Background="Transparent">

    <materialDesign:Card Width="300" Height="Auto" Padding="15" Background="White"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            UniformCornerRadius="20" BorderBrush="#555555" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="TextBoxOutline" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#555555"/>
                <TextBlock FontSize="20" Foreground="#555555" FontWeight="Bold" Text="Edit Warehouse" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Name:" Foreground="#555555" FontSize="14" FontWeight="SemiBold" />
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,10" CornerRadius="15" VerticalAlignment="Center">
                    <!--Product Name Value is here!-->
                    <TextBox x:Name="TxtWarehouseName" Style="{StaticResource RoundedTextboxStyle}" Height="Auto" FontSize="14" Margin="10,5,10,5"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Total Products:" Foreground="#555555" FontSize="14" FontWeight="SemiBold" />
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,10" CornerRadius="15">
                    <!--Product Name Value is here!-->
                    <TextBox Style="{StaticResource RoundedTextboxStyle}" Height="Auto" FontSize="14" Margin="10,5,10,5" />
                </Border>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Stock Quantity:" Foreground="#555555" FontSize="14" FontWeight="SemiBold" />
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,10" CornerRadius="15">
                    <!--Product Name Value is here!-->
                    <TextBox Style="{StaticResource RoundedTextboxStyle}" Height="Auto" FontSize="14" Margin="10,5,10,5"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Worth (Sales/Stocks):" Foreground="#555555" FontSize="14" FontWeight="SemiBold" />
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,20" CornerRadius="15">
                    <!--Product Name Value is here!-->
                    <TextBox Style="{StaticResource RoundedTextboxStyle}" Height="Auto" FontSize="14" Margin="10,5,10,5"/>
                </Border>


                <Button Style="{StaticResource RoundedButtonStyle}" Height="40" Width="125" BorderThickness="0" Background="#52C69D" Cursor="Hand" Click="SaveWarehouse_Click" Margin="0">
                    <TextBlock Text="Save" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
