<UserControl x:Class="DPC.Components.Forms.VariationModal102"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="700" Width="480"
             Background="Transparent">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Resources>
    <Border Background="#FDFDFD" CornerRadius="15" Padding="20" Width="480" Height="Auto"
         Effect="{StaticResource ShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="FormatListGroupPlus" Foreground="#555555" Margin="5,0,0,10" Width="28" Height="28"/>
                <TextBlock FontSize="18" Foreground="#AEAEAE" FontWeight="Bold" Text="Variation Details" Margin="7,0,0,10"/>
                <Button Background="Transparent" BorderThickness="0"
         HorizontalAlignment="Right" Click="ClosePopup" Margin="246,0,0,0">
                    <materialDesign:PackIcon Kind="ArrowULeftTop" Foreground="#555555" Width="20" Height="20" Margin="-8,0,0,16"/>
                </Button>
            </StackPanel>

            <!-- Separator and Edit Section -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,5">
                <TextBlock Text="Set same details for all variations" Foreground="#555555" FontWeight="SemiBold" FontSize="14" Width="380"/>
                <materialDesign:PackIcon Kind="Pencil" Foreground="#AEAEAE" Width="16" Height="16" Margin="5,0,0,0"/>
                <TextBlock Text="Edit" Foreground="#AEAEAE" FontSize="14" Margin="3,0,0,0"/>
            </StackPanel>
            <Separator Grid.Row="2" Background="#E0E0E0" Height="1"/>

            <!-- Variations Tabs -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="White" Foreground="#555555" FontWeight="SemiBold" FontSize="14"/>
                <TextBlock Text=" Pink" Foreground="#AEAEAE" FontSize="14" Margin="10,0,0,0"/>
            </StackPanel>
            <Separator Grid.Row="4" Background="#E0E0E0" Height="1"/>

            <!-- Fields -->
            <TextBlock Grid.Row="5" Text="Warehouse:" Foreground="#555555" FontWeight="Medium" Margin="0,7,0,3"/>
            <Border Grid.Row="6" Style="{StaticResource RoundedBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Kind="CurrencyPhp" Foreground="#555555" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Margin="10,0,10,0"/>

                    <TextBox Background="Transparent" BorderThickness="0" Padding="12" Height="40" Grid.Column="1"/>
                </Grid>
            </Border>

            <TextBlock Grid.Row="7" Text="Retail Price:" Foreground="#555555" FontWeight="Medium" Margin="0,5,0,5"/>
            <Border Grid.Row="8" Style="{StaticResource RoundedBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Kind="CurrencyPhp" Foreground="#555555" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Margin="10,0,10,0"/>

                    <TextBox Background="Transparent" BorderThickness="0" Padding="12" Height="40" Grid.Column="1"/>
                </Grid>
            </Border>

            <TextBlock Grid.Row="9" Text="Order Price:" Foreground="#555555" FontWeight="Medium" Margin="0,7,0,3"/>
            <Border Grid.Row="10" Style="{StaticResource RoundedBorderStyle}">
                <TextBox Background="Transparent" BorderThickness="0" Padding="12" Height="40"/>
            </Border>

            <TextBlock Grid.Row="11" Text="Default Tax Rate:" Foreground="#555555" FontWeight="Medium" Margin="0,4,0,6"/>
            <Border Grid.Row="12" Style="{StaticResource RoundedBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Background="Transparent" BorderThickness="0" Padding="12" Height="40" Grid.Column="0"/>

                    <materialDesign:PackIcon Kind="PercentOutline" Foreground="#555555" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Margin="0,0,10,0"/>
                </Grid>
            </Border>

            <TextBlock Grid.Row="13" Text="Default Discount Rate:" Foreground="#555555" FontWeight="Medium" Margin="0,5,0,5"/>
            <Border Grid.Row="14" Style="{StaticResource RoundedBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Background="Transparent" BorderThickness="0" Padding="12" Height="40" Grid.Column="0"/>

                    <materialDesign:PackIcon Kind="PercentOutline" Foreground="#555555" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Margin="0,0,10,0"/>
                </Grid>
            </Border>

            <TextBlock Grid.Row="15" Text="Stock Units:" Foreground="#555555" FontWeight="Medium" Margin="0,6,0,4"/>
            <Border Grid.Row="16" Style="{StaticResource RoundedBorderStyle}">
                <TextBox Background="Transparent" BorderThickness="0" Padding="12" Height="40"/>
            </Border>

            <TextBlock Grid.Row="17" Text="Alert Quantity:" Foreground="#555555" FontWeight="Medium" Margin="0,3,0,7"/>
            <Border Grid.Row="18" Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,17">
                <TextBox Background="Transparent" BorderThickness="0" Padding="12" Height="40"/>
            </Border>

            <!-- Add Button -->
            <Button Grid.Row="18" Content="Save" Width="440" Height="45" Background="#52C69D" 
                 Foreground="#FDFDFD" FontWeight="SemiBold" HorizontalAlignment="Center"
                 Margin="0,53,0,-37" Click="AddNewVariation">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>


</UserControl>
