<UserControl x:Class="DPC.Components.Forms.VariationDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="480" MaxHeight="800"
             Background="Transparent"
             FontFamily="{StaticResource Lexend}">

    <materialDesign:Card Width="480" Padding="0" Background="White"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     UniformCornerRadius="20">
        <Grid Margin="15,10,15,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="FormatListBulleted" Foreground="#555555" Margin="5,0,0,0" Width="30" Height="30" VerticalAlignment="Center"/>
                    <TextBlock FontSize="20" Foreground="#AEAEAE" FontWeight="SemiBold" Text="Variation Details" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="top">
                    <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" Margin="0,0,0,0">
                        <materialDesign:PackIcon Kind="ArrowLeftTop" Foreground="#555555" Width="20" Height="20" Margin="0,0,0,0"/>
                    </Button>
                </StackPanel>

            </Grid>

            

            <StackPanel Grid.Row="1">
                <Border BorderBrush="#AEAEAE" BorderThickness=".5" Height="1" Margin="-5,0,-5,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Set same details for all variations" Margin="10,0,0,0" Foreground="#555555" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Width="Auto" Height="Auto" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PencilOutline" Foreground="#AEAEAE" Width="15" Height="15" Margin="0,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Edit" Foreground="#AEAEAE" FontSize="14" FontWeight="SemiBold" Margin="5,0"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <Border BorderBrush="#AEAEAE" BorderThickness=".5" Height="1" Margin="-5,10,-5,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Background="Transparent" BorderThickness="0" Width="Auto" Height="Auto" Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal">
                            <Border BorderBrush="#555555" BorderThickness="1.75,0,0,0" Width="Auto" Height="Auto" Margin="0,0,0,0"/>
                            <TextBlock Text="White" Margin="7.5,0,0,0" Foreground="#555555" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Width="Auto" Height="Auto" Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal">
                            <Border BorderBrush="#555555" BorderThickness="1.75,0,0,0" Width="Auto" Height="Auto" Margin="0,0,0,0" Visibility="Collapsed"/>
                            <TextBlock Text="Pink" Margin="7.5,0,0,0" Foreground="#AEAEAE" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,10,0,0">
                <TextBlock Text="White" Margin="7.5,0,0,0" Foreground="#AEAEAE" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Warehouse:" Margin="7.5,0,0,0" Foreground="#555555" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <ComboBox Style="{StaticResource RoundedComboBoxStyle}"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Selling Price:" Margin="7.5,0,0,0" Foreground="#555555" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="PhilippinePeso" Grid.Column="0" Foreground="#555555" Width="20" Height="20" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Style="{StaticResource RoundedTextboxStyle}" Margin="0,0,20,0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Buying Price:" Margin="7.5,0,0,0" Foreground="#555555" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="PhilippinePeso" Grid.Column="0" Foreground="#555555" Width="20" Height="20" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Style="{StaticResource RoundedTextboxStyle}" Margin="0,0,20,0"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>

        </Grid>
    </materialDesign:Card>



</UserControl>
