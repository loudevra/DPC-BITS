<UserControl x:Class="DPC.Components.Forms.ConvertToPopUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="Auto"
    Background="Transparent">

    <UserControl.Resources>
        <!-- Buttons Style -->
        <Style x:Key="ButtonStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FDFDFD"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <!-- Main Grid to center the content -->
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- The Card is now in the center column/row -->
        <materialDesign:Card Grid.Column="1" Grid.Row="1" Background="#636363" UniformCornerRadius="0" Margin="0" Width="285">
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <!-- Invoice Button -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="1">
                           <TextBlock Text="Invoice" Style="{StaticResource ButtonStyle}"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
                <!-- Purchase Order Button -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="1">
                           <TextBlock Text="Purchase Order" Style="{StaticResource ButtonStyle}"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>