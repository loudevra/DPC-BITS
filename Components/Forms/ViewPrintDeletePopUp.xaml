<UserControl x:Class="DPC.Components.Forms.ViewPrintDeletePopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto"
             Background="Transparent"
             FontFamily="{StaticResource Lexend}">

    <Grid Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
        <materialDesign:Card Width="130" Padding="20" Background="White" UniformCornerRadius="20"
                             HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

                <!-- View Button -->
                <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,0,15" HorizontalContentAlignment="Left">
                    <DockPanel LastChildFill="True">
                        <materialDesign:PackIcon Kind="Eye" Width="24" Height="24" Foreground="#78B9D6" Margin="0,0,8,0"/>
                        <TextBlock Text="View" VerticalAlignment="Center" FontSize="14" Foreground="#78B9D6" FontWeight="SemiBold"/>
                    </DockPanel>
                </Button>

                <!-- Export Button -->
                <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,0,15" HorizontalContentAlignment="Left">
                    <DockPanel LastChildFill="True">
                        <materialDesign:PackIcon Kind="PrinterOutline" Width="24" Height="24" Foreground="#D6A9F5" Margin="0,0,8,0"/>
                        <TextBlock Text="Print" VerticalAlignment="Center" FontSize="14" Foreground="#D6A9F5" FontWeight="SemiBold"/>
                    </DockPanel>
                </Button>

                <!-- Delete Button -->
                <Button Background="Transparent" BorderThickness="0" Cursor="Hand" HorizontalContentAlignment="Left">
                    <DockPanel LastChildFill="True">
                        <materialDesign:PackIcon Kind="DeleteOutline" Width="24" Height="24" Foreground="#C94A4A" Margin="0,0,8,0"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center" FontSize="14" Foreground="#C94A4A" FontWeight="SemiBold"/>
                    </DockPanel>
                </Button>

            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
