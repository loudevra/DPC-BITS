<UserControl x:Class="DPC.Components.Forms.AddNewSupplierForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto" Width="450"
             Background="Transparent">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Resources>

    <Border Background="#FDFDFD" CornerRadius="15" Padding="20" Width="450" Height="Auto"
            Effect="{StaticResource ShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="AccountPlus" Foreground="#555555" Margin="5,0,0,10" Width="28" Height="28"/>
                <TextBlock FontSize="18" Foreground="#555555" FontWeight="Bold" Text="Add Supplier" Margin="7,0,0,10"/>
                <Button Background="Transparent" BorderThickness="0"
            HorizontalAlignment="Right" Click="ClosePopup" Margin="246,0,0,0">
                    <materialDesign:PackIcon Kind="Close" Foreground="#555555" Width="20" Height="20" Margin="-8,0,0,16"/>
                </Button>
            </StackPanel>


            <!-- Fields -->
            <TextBlock Grid.Row="1" Text="Name:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
            <Border Grid.Row="2" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="3" Text="Phone:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
            <Border Grid.Row="4" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="5" Text="Email:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
            <Border Grid.Row="6" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="7" Text="Company:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
            <Border Grid.Row="8" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="9" Text="Address:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
            <Border Grid.Row="10" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <!-- City, Region, Country Fields -->
            <Grid Grid.Row="11" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="City:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,0,0,5"/>
                    <Border Height="35" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                        <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                    <TextBlock Text="Region:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,0,0,5"/>
                    <Border Height="35" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                        <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Country:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,0,0,5"/>
                    <Border Height="35" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                        <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                    </Border>
                </StackPanel>
            </Grid>

            <TextBlock Grid.Row="12" Text="PostBox:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
            <Border Grid.Row="13" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="14" Text="TAX ID:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
            <Border Grid.Row="15" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <!-- Add Button -->
            <Button Grid.Row="16" Content="Add" Width="100" Height="35" Background="#52C69D" 
                    Foreground="#FDFDFD" FontWeight="SemiBold" HorizontalAlignment="Right"
                    Margin="0,10,0,0" Click="AddSupplier">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
    </Border>
</UserControl>
