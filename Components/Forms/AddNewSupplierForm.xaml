<UserControl x:Class="DPC.Components.Forms.AddNewSupplierForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="450"
             Background="Transparent">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Resources>

    <Border Background="White" CornerRadius="15" Padding="20" Width="450" Height="Auto"
            Effect="{StaticResource ShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock FontSize="18" FontWeight="Bold" Text="➕ Add Supplier" Margin="5,0,0,10"/>
                <Button Content="✖" Background="Transparent" BorderThickness="0"
                       HorizontalAlignment="Right" Click="ClosePopup" Margin="246,0,0,0"/>
            </StackPanel>

            <!-- Fields -->
            <TextBlock Grid.Row="1" Text="Name:" Margin="0,5,0,0"/>
            <Border Grid.Row="2" Height="35" Margin="0,5,0,0" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="3" Text="Phone:" Margin="0,5,0,0"/>
            <Border Grid.Row="4" Height="35" Margin="0,5,0,0" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="5" Text="Email:" Margin="0,5,0,0"/>
            <Border Grid.Row="6" Height="35" Margin="0,5,0,0" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="7" Text="Company:" Margin="0,5,0,0"/>
            <Border Grid.Row="8" Height="35" Margin="0,5,0,0" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="9" Text="Address:" Margin="0,5,0,0"/>
            <Border Grid.Row="10" Height="35" Margin="0,5,0,0" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <!-- City, Region, Country Fields -->
            <Grid Grid.Row="11" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="City:" Margin="0,0,0,5"/>
                    <Border Height="35" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                        <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                    <TextBlock Text="Region:" Margin="0,0,0,5"/>
                    <Border Height="35" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                        <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Country:" Margin="0,0,0,5"/>
                    <Border Height="35" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                        <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                    </Border>
                </StackPanel>
            </Grid>

            <TextBlock Grid.Row="12" Text="PostBox:" Margin="0,5,0,0"/>
            <Border Grid.Row="13" Height="35" Margin="0,5,0,0" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <TextBlock Grid.Row="14" Text="TAX ID:" Margin="0,5,0,0"/>
            <Border Grid.Row="15" Height="35" Margin="0,5,0,0" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
            </Border>

            <!-- Add Button -->
            <Button Grid.Row="16" Content="Add" Width="100" Height="35" Background="#3CB371" 
                    Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"
                    Margin="0,10,0,0" Click="AddSupplier">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
    </Border>
</UserControl>
