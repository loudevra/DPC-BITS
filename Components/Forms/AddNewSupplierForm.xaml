<Window x:Class="DPC.Components.Forms.AddNewSupplierForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DPC - Dashboard (Add Supplier Pop-Out)"
        WindowStyle="None" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Background="Transparent" AllowsTransparency="True">
    
    <Border Background="White" CornerRadius="15" Padding="20" Width="400">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="18" FontWeight="Bold" Text="➕ Add Supplier" Margin="5,0,0,10"/>
                <Button Content="✖" Background="Transparent" BorderThickness="0"
                        HorizontalAlignment="Right" Click="CloseWindow_Click"/>
            </StackPanel>

            <!-- Fields -->
            <TextBlock Grid.Row="1" Text="Name:" Margin="0,5,0,0"/>
            <TextBox Grid.Row="2" Height="30" Margin="0,5,0,0" BorderBrush="Black" CornerRadius="10"/>

            <TextBlock Grid.Row="3" Text="Phone:" Margin="0,5,0,0"/>
            <TextBox Grid.Row="4" Height="30" Margin="0,5,0,0" BorderBrush="Black" CornerRadius="10"/>

            <TextBlock Grid.Row="5" Text="Email:" Margin="0,5,0,0"/>
            <TextBox Grid.Row="6" Height="30" Margin="0,5,0,0" BorderBrush="Black" CornerRadius="10"/>

            <TextBlock Grid.Row="7" Text="Company:" Margin="0,5,0,0"/>
            <TextBox Grid.Row="8" Height="30" Margin="0,5,0,0" BorderBrush="Black" CornerRadius="10"/>

            <TextBlock Grid.Row="9" Text="Address:" Margin="0,5,0,0"/>
            <TextBox Grid.Row="10" Height="30" Margin="0,5,0,0" BorderBrush="Black" CornerRadius="10"/>

            <!-- Buttons -->
            <Button Grid.Row="11" Content="Add" Width="100" Height="30" Background="#3CB371" 
                    Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"
                    Margin="0,10,0,0" Click="AddSupplier_Click"/>
        </Grid>
    </Border>
</Window>