<Window x:Class="DPC.Components.Forms.PopOutQuoteTextEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DPC"
        mc:Ignorable="d"
        Height="Auto"
        FontFamily="{StaticResource Lexend}"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Border Width="450" Padding="20" Background="White" BorderBrush="#52C69D" BorderThickness="3"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,0">
                    <materialDesign:PackIcon Kind="TextBoxOutline" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#555555"/>
                    <TextBlock FontSize="20" Foreground="#555555" FontWeight="Bold" Text="Text Editor" Margin="0,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Background="White" BorderBrush="Transparent" x:Name="BtnClose" IsCancel="True">
                    <materialDesign:PackIcon Kind="Close" Foreground="#555555" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>

            <Border  Grid.Row="1" Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,10">
                <TextBox Height="300" AcceptsReturn="True" x:Name="txtEdited" TextWrapping="Wrap" Margin="15,10" BorderThickness="0" FontFamily="{StaticResource Lexend}" FontSize="15"/>
            </Border>
            <Button Click="SaveEdit"  Grid.Row="2" Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Background="#52C69D" >
                <TextBlock Text="Save" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="15"/>
            </Button>
        </Grid>
    </Border>

</Window>