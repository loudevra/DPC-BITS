<UserControl x:Class="DPC.Views.Components.Forms.QuotePopout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="130" Height="220">
    <Border CornerRadius="24"
            Background="White"
            Padding="0"
            Effect="{DynamicResource DropShadowEffect}"
            SnapsToDevicePixels="True" Margin="0,80,0,0">
        <StackPanel VerticalAlignment="Center" Margin="0,8,0,8" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="0,0,0,12"/>
                </Style>
            </StackPanel.Resources>
            <Button Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand" HorizontalAlignment="Center" Focusable="False" Margin="-30,0,0,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="EyeOutline" Width="26" Height="26" Foreground="#86BCD5" VerticalAlignment="Center"/>
                    <TextBlock Text="View" FontSize="13" FontFamily="Lexend" Foreground="#86BCD5" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
            <Button Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand" HorizontalAlignment="Center" Focusable="False" Margin="-20,0,0,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Export" Width="26" Height="26" Foreground="#D6AEED" VerticalAlignment="Center"/>
                    <TextBlock Text="Export" FontSize="13" FontFamily="Lexend" Foreground="#D6AEED" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
            <Button Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand" HorizontalAlignment="Center" Focusable="False" Margin="-25,0,0,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="TrashCanOutline" Width="26" Height="26" Foreground="#C75757" VerticalAlignment="Center"/>
                    <TextBlock Text="Delete" FontSize="13" FontFamily="Lexend" Foreground="#C75757" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</UserControl>