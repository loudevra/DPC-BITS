<UserControl x:Class="DPC.Components.Forms.VariationModal103"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="500" Width="480"
             Background="Transparent">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Resources>
    <Border Background="#FDFDFD" CornerRadius="15" Padding="20" Width="480" Height="Auto"
         Effect="{StaticResource ShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="FormatListGroupPlus" Foreground="#555555" Margin="5,0,0,10" Width="28" Height="28"/>
                <TextBlock FontSize="18" Foreground="#AEAEAE" FontWeight="Bold" Text="Variation Details" Margin="7,0,0,10"/>
                <Button Background="Transparent" BorderThickness="0"
         HorizontalAlignment="Right" Click="ClosePopup" Margin="246,0,0,0">
                    <materialDesign:PackIcon Kind="ArrowULeftTop" Foreground="#555555" Width="20" Height="20" Margin="-8,0,0,16"/>
                </Button>
            </StackPanel>


            <!-- Variations Tabs -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="White" Foreground="#555555" FontWeight="Medium" FontSize="14"/>
                <TextBlock Text=" Pink" Foreground="#AEAEAE" FontSize="14" Margin="30,0,0,0"/>
            </StackPanel>


            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="CheckboxMarked" Foreground="#555555" Margin="5,0,0,10" Width="28" Height="28"/>
                <TextBlock FontSize="18" Foreground="#555555" FontWeight="Medium" Text="White" Margin="7,0,0,10" Height="45"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="CheckboxBlank" Foreground="#AEAEAE" Margin="5,0,0,10" Width="28" Height="28"/>
                <TextBlock FontSize="18" Foreground="#555555" FontWeight="Medium" Text="White ?" Margin="7,0,0,10"/>

            </StackPanel>

            <StackPanel Grid.Row="18" Orientation="Horizontal" Margin="3,169,-3,-207">
                <materialDesign:PackIcon Kind="CheckboxBlank" Foreground="#AEAEAE" Margin="5,0,0,10" Width="28" Height="28"/>
                <TextBlock FontSize="18" Foreground="#555555" FontWeight="Medium" Text="Select All" Margin="7,0,0,10"/>

            </StackPanel>

            <!-- Add Button -->
            <Button Grid.Row="3" Content="Batch Edit" Width="440" Height="45" Background="#2E466B" 
                 Foreground="#FDFDFD" FontWeight="SemiBold" HorizontalAlignment="Center"
                 Margin="0,328,0,-312" Click="ModifiedVariation">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>


</UserControl>
