<UserControl x:Class="DPC.Components.Forms.AddVariation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="Auto" MaxHeight="600"
             Background="Transparent"
             FontFamily="{StaticResource Lexend}">

    <materialDesign:Card Width="480" Padding="0" Background="White"
                             HorizontalAlignment="Center" VerticalAlignment="Top"
                             UniformCornerRadius="20">
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Style="{StaticResource ModernScrollViewerStyle}">
            <Grid Margin="15,10,15,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="FormatListGroupPlus" Foreground="#555555" Margin="5,0,0,0" Width="30" Height="30" VerticalAlignment="Center"/>
                        <TextBlock FontSize="18" Foreground="#AEAEAE" FontWeight="SemiBold" Text="Add Variation" Margin="0,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" Click="ClosePopup">
                            <materialDesign:PackIcon Kind="ArrowULeftTop" Foreground="#555555" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1" x:Name="MainVariationContainer" Orientation="Vertical"> 
                </StackPanel>

                <!-- Footer Buttons -->
                <StackPanel Grid.Row="2" Margin="0,10">
                    <Border BorderBrush="#AEAEAE" BorderThickness=".5" Margin="-5,0,-5,20"/>
                    <Button  x:Name="BtnAddVariation"  Background="#555555" Style="{StaticResource RoundedButtonStyle}" BorderBrush="Transparent" BorderThickness="0" Margin="0,0,0,20" Click="BtnAddVariation_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Background="Transparent" Margin="0,5">
                            <materialDesign:PackIcon Kind="PlusCircleOutline" Foreground="#FDFDFD" VerticalAlignment="Center" Margin="0,0,5,0" Width="20" Height="20"/>
                            <TextBlock Text="Add Variation" Foreground="#FDFDFD" VerticalAlignment="Center" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button Background="#2E466B" Style="{StaticResource RoundedButtonStyle}" BorderBrush="Transparent" BorderThickness="0" Click="BtnVariationDetails">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Background="Transparent" Margin="0,5">
                            <materialDesign:PackIcon Kind="ChevronRight" Foreground="#FDFDFD" VerticalAlignment="Center" Margin="0,0,5,0" Width="25" Height="25"/>
                            <TextBlock Text="Variation Details" Foreground="#FDFDFD" VerticalAlignment="Center" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </materialDesign:Card>
</UserControl>
