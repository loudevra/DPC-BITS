<UserControl x:Class="DPC.Components.Forms.AddCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto" Width="450"
             FontFamily="{StaticResource Lexend}"
             Foreground="#555555"
             Background="Transparent">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Resources>

        <Border Background="#FDFDFD" CornerRadius="15" Padding="20" Width="450" Height="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="TextBoxOutline" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock FontSize="20" FontWeight="Bold" Text="Add Category" Margin="0,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="No. of Categories:" FontSize="14" FontWeight="SemiBold" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <Button VerticalAlignment="Center" Padding="0" BorderThickness="0" Background="#D9D9D9" Click="decreaseBtn">
                        <materialDesign:PackIcon Kind="Minus" Width="10" Foreground="#555555" Margin="7.5,-3"/>
                    </Button>
                    <TextBlock x:Name="CategoryNumber" Text="1" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center" Margin="7.5,0"/>
                    <Button VerticalAlignment="Center" Padding="0" BorderThickness="0" Background="#D9D9D9" Click="increaseBtn">
                        <materialDesign:PackIcon Kind="Plus" Width="10" Foreground="#555555" Margin="7.5,-3"/>
                    </Button>
                </StackPanel>
            </StackPanel>

                <StackPanel Grid.Row="2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="300">
                        <StackPanel x:Name="MainContent">
                        </StackPanel>
                    </ScrollViewer>
                    <Button Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Background="#52C69D" Margin="0,10,0,10" Click="insertBtn">
                        <TextBlock Text="Add" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="15"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
</UserControl>
