<UserControl x:Class="DPC.Components.Forms.AddNewProductsNextForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto" Width="450"
             Background="Transparent">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="#FDFDFD" CornerRadius="15" Padding="20" Width="450" Height="832"
                Effect="{StaticResource ShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,49,0">
                    <materialDesign:PackIcon Kind="PackageVariantClosedPlus" Foreground="#555555" Margin="5,0,0,10" Width="28" Height="28"/>
                    <TextBlock FontSize="18" Foreground="#555555" FontWeight="Bold" Text="Add New Product" Margin="7,0,0,10"/>
                </StackPanel>

                <!-- Fields -->
                <TextBlock Grid.Row="1" Text="Measurement Unit:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
                <Border Grid.Row="2" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10" Text="None" FontSize="10" Foreground="#474747"/>
                </Border>

                <TextBlock Grid.Row="3" Text="Bar Code:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,10,0,70" Grid.RowSpan="3"/>
                <ComboBox Background="White" BorderThickness="2" Padding="10" FontSize="10" Foreground="#474747" 
          Margin="0,23,258,43" BorderBrush="Gray" Grid.Row="5">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="18" Padding="5">
                                            <Grid>
                                                <ToggleButton Name="ToggleButton" Grid.Column="2" Focusable="False"
                                              Background="Transparent" BorderThickness="0">
                                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </ToggleButton>
                                                <ContentPresenter Name="ContentSite" IsHitTestVisible="False"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="Center" HorizontalAlignment="Left"
                                                  Margin="10,0,0,0"/>
                                                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True">
                                                    <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="18">
                                                        <ScrollViewer>
                                                            <StackPanel>
                                                                <ItemsPresenter/>
                                                            </StackPanel>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Resources>

                    <ComboBoxItem Content="EAN13 - Default"/>
                    <ComboBoxItem Content="UPC"/>
                    <ComboBoxItem Content="EAN8"/>
                    <ComboBoxItem Content="ISSN"/>
                    <ComboBoxItem Content="ISBN"/>
                    <ComboBoxItem Content="C128A"/>
                    <ComboBoxItem Content="C39"/>
                </ComboBox>




                <Border Grid.Row="5" Height="35" Margin="157,1,0,23" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10" Margin="0,-2,0,2" Text="BarCode" FontSize="10" Foreground="#474747" />
                </Border>
                <TextBlock Grid.Row="5" Text="Description:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,66,0,60" Grid.RowSpan="4"/>
                <Border Grid.Row="8" Height="70" Margin="0,2,0,3" BorderBrush="#555555" BorderThickness="2" CornerRadius="10">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10" RenderTransformOrigin="0.5,0.5" Margin="0,-1,0,1">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0.434"/>
                                <RotateTransform/>
                                <TranslateTransform X="0.117"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>
                </Border>

                <TextBlock Grid.Row="9" Text="Valid (To Date):" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,6,0,39" Grid.RowSpan="2"/>
                <Border Grid.Row="10" Height="35" Margin="0,23,0,3" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <DatePicker Background="Transparent" BorderThickness="0" Padding="10" Margin="0,-4,0,0"/>
                </Border>
                <TextBlock Grid.Row="16" Text="Do not change if not applicable." Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Light" FontSize="8" Margin="11,1,-11,423"/>

                <TextBlock Grid.Row="16" Text="Upload Product Image:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,18,0,404"/>
                <TextBlock Grid.Row="16" Text="Allowed: .gif, .jpeg, .png (Use light small weight images for fast loading - 200x200)" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Light" FontSize="8" Margin="7,36,-7,385"/>


                <Button Grid.Row="16" Width="110" Height="35" Background="#52C69D" 
        Foreground="#FDFDFD" FontWeight="Regular" HorizontalAlignment="Left"
        Margin="300,191,0,197" Click="AddNewProduct">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CartPlus" Width="18" Height="18" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="Add Product" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button Grid.Row="16" Width="110" Height="35" Background="#DF67C5" 
        Foreground="#FDFDFD" FontWeight="Regular" HorizontalAlignment="Left"
        Margin="185,191,0,197" Click="Cancel">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="PlaylistPlus" Width="18" Height="18" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="Serial Row" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button Grid.Row="16" Width="90" Height="25" Background="#828282" 
        Foreground="#FDFDFD" FontWeight="Regular" HorizontalAlignment="Left"
        Margin="8,201,0,206" Click="Cancel">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CloudUploadOutline" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="Upload" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button Grid.Row="16" Width="410" Background="#474747" 
        Foreground="#FDFDFD" FontWeight="Regular" HorizontalAlignment="Center"
        Margin="0,249,0,143" Click="Cancel">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10">
                                <Grid>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <materialDesign:PackIcon Kind="PlusCircleOutline" Width="20" Height="20" Foreground="White" Margin="0,0,10,0"/>
                                        <TextBlock Text="Products Variation" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>



                <Button Grid.Row="16" Width="67" Height="25" Background="#2E466B" 
        Foreground="#FDFDFD" FontWeight="Regular" HorizontalAlignment="Left"
        Margin="8,293,0,114" Click="Cancel">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="PlaylistPlus" Width="14" Height="14" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="Row" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button Grid.Row="16" Width="410" Background="#474747" 
        Foreground="#FDFDFD" FontWeight="Regular" HorizontalAlignment="Center"
        Margin="0,328,0,64" Click="Cancel">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10">
                                <Grid>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <materialDesign:PackIcon Kind="PlusCircleOutline" Width="20" Height="20" Foreground="White" Margin="0,0,10,0"/>
                                        <TextBlock Text="Stockroom to Reception" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>



                <Button Grid.Row="16" Width="67" Height="25" Background="#2E466B" 
   Foreground="#FDFDFD" FontWeight="Regular" HorizontalAlignment="Left"
   Margin="10,373,0,34" Click="Cancel">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="PlaylistPlus" Width="14" Height="14" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="Row" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>
