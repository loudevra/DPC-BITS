<UserControl x:Class="DPC.Components.Forms.UpdateCouponsPopoutError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="450" Background="Transparent">

    <Border Background="White"
            CornerRadius="18"
            BorderBrush="#D5D5D5"
            BorderThickness="2"
            Padding="0" Margin="0,0,-35,0" Height="344">
        <Grid HorizontalAlignment="Left" Width="483" Height="350">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="32,24,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Kind="CircleEditOutline" Width="36" Height="36" Foreground="#474747" VerticalAlignment="Center" Grid.Column="0"/>
                <TextBlock Text="Update Coupons"
                           FontFamily="Lexend"
                           FontWeight="SemiBold"
                           FontSize="24"
                           VerticalAlignment="Center"
                           Foreground="#474747"
                           Margin="14,0,0,0"
                           Grid.Column="1"/>
                <Button Width="32" Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,0,0,0"
                        Cursor="Hand"
                        Grid.Column="2">
                    <materialDesign:PackIcon Kind="Close" Width="25" Height="25" Foreground="#555555"/>
                </Button>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="40,16,40,10">
                <TextBlock Text="Select the number of coupons to be updated."
                           FontFamily="Lexend"
                           FontSize="17"
                           Foreground="#B3B3B3"
                           Margin="0,0,0,50"/>

                <!-- Number Picker -->
                <Grid Height="48">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="56"/>
                        <ColumnDefinition Width="56"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Height="48">
                        <TextBox Text="10"
                                 FontFamily="Lexend"
                                 FontSize="18"
                                 Foreground="#AEAEAE"
                                 Background="Transparent"
                                 BorderBrush="#D96A6C"
                                 BorderThickness="2,2,1,2"
                                 VerticalContentAlignment="Center"
                                 Padding="16,0,40,0"
                                 Height="48"
                                 IsReadOnly="True">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="24,0,0,24"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <materialDesign:PackIcon Kind="AlertCircle"
                                                 Width="24"
                                                 Height="24"
                                                 Foreground="#D96A6C"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Right"
                                                 Margin="0,0,10,0"
                                                 IsHitTestVisible="False"/>
                    </Grid>
                    <Button Content="−"
                            FontSize="22"
                            FontFamily="Lexend"
                            Foreground="#AEAEAE"
                            Background="Transparent"
                            BorderBrush="#D96A6C"
                            BorderThickness="1,2,1,2"
                            Grid.Column="1"
                            Margin="0"
                            Height="48"
                            Width="56"
                            Padding="0"
                            />
                    <Button Content="＋"
                            FontSize="22"
                            FontFamily="Lexend"
                            Foreground="#757575"
                            Background="Transparent"
                            BorderBrush="#D96A6C"
                            BorderThickness="1,2,2,2"
                            Grid.Column="2"
                            Margin="0"
                            Height="48"
                            Width="56"
                            Padding="0"
                            />
                </Grid>
                <TextBlock Text="The number is over the limit. (Maximum of 5)"
                           Margin="2,8,0,20"
                           FontFamily="Lexend"
                           FontSize="17"
                           Foreground="#D96A6C"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,32,0,0">
                    <Button Content="Cancel"
                            Width="120"
                            Height="40"
                            Margin="0,0,12,0"
                            FontSize="17"
                            FontFamily="Lexend"
                            Foreground="#B3B3B3"
                            Background="#F2F2F2"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Done"
                            Width="120"
                            Height="40"
                            FontSize="17"
                            FontFamily="Lexend"
                            Foreground="White"
                            Background="#474747"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>