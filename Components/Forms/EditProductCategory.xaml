<UserControl x:Class="DPC.Components.Forms.EditProductCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto"
             FontFamily="{StaticResource Lexend}"
             Background="Transparent">

    <materialDesign:Card Width="450" Padding="20" Background="White"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            UniformCornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="TextBoxOutline" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#555555"/>
                        <TextBlock FontSize="20" Foreground="#555555" FontWeight="Bold" Text="Edit Product Category" Margin="0,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Planning on adding a exit button -->
                </Grid>

            </StackPanel>

            <StackPanel Grid.Row="1">
                <!-- Category Name -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Category Name:" Foreground="#555555" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,20">
                    <!--Category Name Value is here!-->
                    <TextBox x:Name="TxtCategoryName" Style="{StaticResource RoundedTextboxStyle}"/>
                </Border>

                <!-- Category Description -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Description:" Foreground="#555555" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,20">
                    <!--Category Description Value is here!-->
                    <TextBox x:Name="TxtCategoryDescription" Style="{StaticResource RoundedTextboxStyle}"/>
                </Border>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="No. of Sub-Categories:" FontSize="14" FontWeight="SemiBold" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button VerticalAlignment="Center" Padding="0" BorderThickness="0" Background="#D9D9D9" Click="btnDecrease">
                        <materialDesign:PackIcon Kind="Minus" Width="10" Foreground="#555555" Margin="7.5,-3"/>
                    </Button>
                    <TextBlock x:Name="SubCategoryNumber" Text="0" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center" Margin="7.5,0"/>
                    <Button VerticalAlignment="Center" Padding="0" BorderThickness="0" Background="#D9D9D9" Click="btnIncrease">
                        <materialDesign:PackIcon Kind="Plus" Width="10" Foreground="#555555" Margin="7.5,-3"/>
                    </Button>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="2" Margin="0,5,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Scrollable area -->
                    <RowDefinition Height="Auto"/>
                    <!-- Fixed Save button -->
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="300">
                    <StackPanel x:Name="MainContent"/>
                </ScrollViewer>

                <Button Grid.Row="1" Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Background="#52C69D" Margin="0,10,0,0" x:Name="btnUpdateCategory" Click="btnUpdateCategory_Click">
                    <TextBlock Text="Update" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="15"/>
                </Button>
            </Grid>
        </Grid>
    </materialDesign:Card>
</UserControl>
