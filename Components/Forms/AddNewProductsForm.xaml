<UserControl x:Class="DPC.Components.Forms.AddNewProductsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto" Width="450"
             Background="Transparent">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="#FDFDFD" CornerRadius="15" Padding="20" Width="450" Height="832"
                Effect="{StaticResource ShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,49,0">
                    <materialDesign:PackIcon Kind="PackageVariantClosedPlus" Foreground="#555555" Margin="5,0,0,10" Width="28" Height="28"/>
                    <TextBlock FontSize="18" Foreground="#555555" FontWeight="Bold" Text="Add New Product" Margin="7,0,0,10"/>
                </StackPanel>

                <!-- Fields -->
                <TextBlock Grid.Row="1" Text="Product Name:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
                <Border Grid.Row="2" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10" Text="Enter product name..." FontSize="10" Foreground="#474747"/>
                </Border>

                <TextBlock Grid.Row="3" Text="Product Code:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
                <Border Grid.Row="4" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10" Text="Enter product code..." FontSize="10" Foreground="#474747"/>
                </Border>

                <TextBlock Grid.Row="5" Text="Product Category:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
                <Border Grid.Row="6" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>
                <TextBlock Grid.Row="7" Text="Sub-category::" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
                <Border Grid.Row="8" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <TextBlock Grid.Row="9" Text="Warehouse:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
                <Border Grid.Row="10" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <TextBlock Grid.Row="12" Text="Product Retail Price:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
                <Border Grid.Row="13" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <TextBlock Grid.Row="14" Text="Purchase Order Price:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,5,0,0"/>
                <Border Grid.Row="15" Height="35" Margin="0,5,0,0" BorderBrush="#555555" BorderThickness="2" CornerRadius="18">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10"/>
                </Border>

                <Separator Grid.Row="16" Margin="0,0,0,380" Background="#555555" Height="2"/>

                <TextBlock Grid.Row="16" Text="Default Tax Rate:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,18,0,-6" RenderTransformOrigin="0.5,0.178"/>
                <Border Grid.Row="16" Height="35" Margin="0,34,0,336" BorderBrush="#555555" BorderThickness="2" CornerRadius="18" RenderTransformOrigin="0.48,-3.251">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10" Margin="1,-151,-1,151"/>
                </Border>

                <TextBlock Grid.Row="16" Text="You can also change the Tax Rate during invoice creation " Foreground="#474747" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="ExtraLight" Margin="20,71,0,320" RenderTransformOrigin="0.5,0.178" FontSize="10"/>

                <TextBlock Grid.Row="16" Text="Default Discount Rate:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,90,0,295" RenderTransformOrigin="0.5,0.178"/>
                <Border Grid.Row="16" Height="35" Margin="0,107,0,263" BorderBrush="#555555" BorderThickness="2" CornerRadius="18" RenderTransformOrigin="0.48,-3.251">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10" Margin="1,-151,-1,151"/>
                </Border>

                <TextBlock Grid.Row="16" Text="You can also change the Tax Rate during invoice creation " Foreground="#474747" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="ExtraLight" Margin="11,147,9,242" RenderTransformOrigin="0.5,0.178" FontSize="10"/>

                <TextBlock Grid.Row="16" Text="Stock Units:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,164,0,223" RenderTransformOrigin="0.5,0.178"/>
                <Border Grid.Row="16" Height="35" Margin="0,184,0,186" BorderBrush="#555555" BorderThickness="2" CornerRadius="18" RenderTransformOrigin="0.48,-3.251">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10" Margin="1,-155,-1,155"/>
                </Border>

                <TextBlock Grid.Row="16" Text="Alert Quantity:" Foreground="#555555" FontFamily="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;700" FontWeight="Medium" Margin="0,226,0,161" RenderTransformOrigin="0.5,0.178"/>
                <Border Grid.Row="16" Height="35" Margin="0,245,0,125" BorderBrush="#555555" BorderThickness="2" CornerRadius="18" RenderTransformOrigin="0.48,-3.251">
                    <TextBox Background="Transparent" BorderThickness="0" Padding="10" Margin="1,-155,-1,155"/>
                </Border>

                <Button Grid.Row="16" Content="Next" Width="100" Height="35" Background="#2E466B" 
            Foreground="#FDFDFD" FontWeight="SemiBold" HorizontalAlignment="Right"
            Margin="0,299,0,71" Click="AddNewProduct">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Row="16" Content="Cancel" Width="100" Height="35" Background="#D23636" 
            Foreground="#FDFDFD" FontWeight="SemiBold" HorizontalAlignment="Right"
            Margin="0,299,105,71" Click="Cancel">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>
