<UserControl x:Class="DPC.Components.UI.PopUpMenuCRM"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="Auto"
    Background="Transparent">

    <UserControl.Resources>
        <!-- Hyperlink Styling -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Submenu Item Style -->
        <Style x:Key="SubmenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d4d4d4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="25,3,0,3"/>
        </Style>

        <!-- Main Menu Item Style -->
        <Style x:Key="MainMenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Vertical Line Style -->
        <Style x:Key="VerticalLineStyle" TargetType="Border">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Grid to center the content -->
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- The Card is now in the center column/row -->
        <materialDesign:Card Grid.Column="1" Grid.Row="1" Background="#0F0F0F" UniformCornerRadius="0" Margin="0" Width="285">
            <StackPanel Orientation="Vertical" Margin="35,0,0,0">
                <!-- Clients -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="AccountMultipleOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Clients" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToResidentialClient">
                                    <TextBlock Text="New Residential Client" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
    <Hyperlink Click="NavigateToCorporationalClient">
        <TextBlock Text="New Corporational Client" Foreground="#d4d4d4" FontSize="13"/>
    </Hyperlink>
</TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToManageClients">
                                    <TextBlock Text="Manage Clients" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Client Groups -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="VectorCombine" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToClientGroups">
                            <TextBlock Text="Client Groups" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>

                <!-- Support Tickets -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="TicketConfirmation" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Support Tickets" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToUnsolvedTickets">
                                    <TextBlock Text="Unsolved" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToManageTickets">
                                    <TextBlock Text="Manage Tickets" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>