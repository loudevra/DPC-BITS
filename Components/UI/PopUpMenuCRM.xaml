<UserControl x:Class="DPC.Components.UI.PopUpMenuCRM"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="300" Background="#1E1E1E">

    <UserControl.Resources>
        <!-- Style for the Hyperlink -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#1E1E1E" CornerRadius="20" Padding="15">
        <StackPanel Orientation="Vertical">

            <!-- Clients Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountMultipleOutline" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Clients" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NewClient">New Client</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="ManageClients">Manage Clients</Hyperlink>
                    </TextBlock>

                </StackPanel>
            </StackPanel>

            <!-- Client Groups Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="VectorCombine" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Client Groups" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>

            </StackPanel>

            <!-- Support Tickets Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="TicketConfirmation" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Support Tickets" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click="Unsolved">Unsolved</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="ManageTickets">Manage Tickets</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
