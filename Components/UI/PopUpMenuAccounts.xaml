<UserControl x:Class="DPC.Components.UI.PopUpMenuAccounts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="300" Background="#1E1E1E">

    <UserControl.Resources>
        <!-- Style for the Hyperlink -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#1E1E1E" CornerRadius="20" Padding="15">
        <StackPanel Orientation="Vertical">

            <!-- Accounts Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountKeyOutline" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Accounts" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click=" NavigateToNewInvoice">Manage Accounts</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click=" NavigateToNewInvoice">Balance Sheets</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click=" NavigateToNewInvoice">Account Statement</Hyperlink>
                    </TextBlock>

                </StackPanel>
            </StackPanel>

            <!-- Transactions Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="VectorCombine" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Transactions" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click=" NavigateToNewInvoice">View Transactions</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click=" NavigateToNewInvoice">New Transaction</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click=" NavigateToNewInvoice">New Transfer</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click=" NavigateToNewInvoice">Clients Transaction</Hyperlink>
                    </TextBlock>

                </StackPanel>

            </StackPanel>

            <!-- Income Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CurrencyUsd" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Income" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Expense Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="TicketConfirmation" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Expense" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
