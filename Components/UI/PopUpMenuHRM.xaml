<UserControl x:Class="DPC.Components.UI.PopUpMenuHRM"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="Auto"
    Background="Transparent">

    <UserControl.Resources>
        <!-- Hyperlink Styling -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Submenu Item Style -->
        <Style x:Key="SubmenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d4d4d4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="25,3,0,3"/>
        </Style>

        <!-- Main Menu Item Style -->
        <Style x:Key="MainMenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Vertical Line Style -->
        <Style x:Key="VerticalLineStyle" TargetType="Border">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Grid to center the content -->
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- The Card is now in the center column/row -->
        <materialDesign:Card Grid.Column="1" Grid.Row="1" Background="#0F0F0F" UniformCornerRadius="0" Margin="0" Width="285">
            <StackPanel Orientation="Vertical" Margin="35,0,0,0">
                <!-- Employees Section -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="AccountGroupOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink Click="NavigateToEmployees">
                                <TextBlock Text="Employees" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                                                                                        <TextBlock.ToolTip>
<ToolTip Content=" View the financial position of your business over time." 
                Style="{StaticResource SpeechBubbleToolTip}"
                    Placement="Top"/>
                 </TextBlock.ToolTip>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <!-- Permissions -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="ShieldAccountOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToPermissions">
                            <TextBlock Text="Permissions" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                                                                                    <TextBlock.ToolTip>
<ToolTip Content=" View the financial position of your business over time." 
                Style="{StaticResource SpeechBubbleToolTip}"
                    Placement="Top"/>
                 </TextBlock.ToolTip>
                    </TextBlock>
                </Grid>

                <!-- Salaries -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="CashMultiple" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToSalaries">
                            <TextBlock Text="Salaries" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                                                                                    <TextBlock.ToolTip>
<ToolTip Content=" View the financial position of your business over time." 
                Style="{StaticResource SpeechBubbleToolTip}"
                    Placement="Top"/>
                 </TextBlock.ToolTip>
                    </TextBlock>
                </Grid>

                <!-- Attendance -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="CalendarClock" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToAttendance">
                            <TextBlock Text="Attendance" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                                                                                    <TextBlock.ToolTip>
<ToolTip Content=" View the financial position of your business over time." 
                Style="{StaticResource SpeechBubbleToolTip}"
                    Placement="Top"/>
                 </TextBlock.ToolTip>
                    </TextBlock>
                </Grid>

                <!-- Holidays -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="CalendarStar" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToHolidays">
                            <TextBlock Text="Holidays" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                                                                                    <TextBlock.ToolTip>
<ToolTip Content=" View the financial position of your business over time." 
                Style="{StaticResource SpeechBubbleToolTip}"
                    Placement="Top"/>
                 </TextBlock.ToolTip>
                    </TextBlock>
                </Grid>

                <!-- Departments -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="SourceBranch" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToDepartments">
                            <TextBlock Text="Departments" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                                                                                    <TextBlock.ToolTip>
<ToolTip Content=" View the financial position of your business over time." 
                Style="{StaticResource SpeechBubbleToolTip}"
                    Placement="Top"/>
                 </TextBlock.ToolTip>
                    </TextBlock>
                </Grid>

                <!-- Payroll -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="CashRegister" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToPayroll">
                            <TextBlock Text="Payroll" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                                                                                    <TextBlock.ToolTip>
<ToolTip Content=" View the financial position of your business over time." 
                Style="{StaticResource SpeechBubbleToolTip}"
                    Placement="Top"/>
                 </TextBlock.ToolTip>
                    </TextBlock>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>