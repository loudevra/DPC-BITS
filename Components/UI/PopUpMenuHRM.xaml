<UserControl x:Class="DPC.Components.UI.PopUpMenuHRM"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="300" Background="#1E1E1E">

    <UserControl.Resources>
        <!-- Style for the Hyperlink -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#1E1E1E" CornerRadius="20" Padding="15">
        <StackPanel Orientation="Vertical">

            <!-- Employees Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountGroupOutline" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Employees" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14" Margin="10,0,0,0">
                        <Hyperlink Click="NavigateToEmployees">Employees</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14" Margin="10,0,0,0">
                        <Hyperlink Click="NavigateToPermissions">Permissions</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14" Margin="10,0,0,0">
                        <Hyperlink Click="NavigateToSalaries">Salaries</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14" Margin="10,0,0,0">
                        <Hyperlink Click="NavigateToAttendance">Attendance</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14" Margin="10,0,0,0">
                        <Hyperlink Click="NavigateToHolidays">Holidays</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Departments Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="SourceBranch" Foreground="White" Width="20" Height="20"/>
                    <TextBlock FontSize="16" FontFamily="{StaticResource LexendBold}" Foreground="White" Margin="2,0,0,0">
                        <Hyperlink Click="NavigateToDepartments">
                            <Run Text="Departments" FontWeight="Bold" Foreground="White"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>


            <!-- Payroll Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="NotebookOutline" Foreground="White" Width="20" Height="20"/>
                    <TextBlock FontSize="16" FontFamily="{StaticResource LexendBold}" Foreground="White" Margin="4,0,0,0">
                        <Hyperlink Click="NavigateToPayroll">
                            <Run Text="Payroll" FontWeight="Bold" Foreground="White"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>


        </StackPanel>
    </Border>
</UserControl>
