<UserControl x:Class="DPC.Components.UI.PopUpMenuSales"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="300" Background="#1E1E1E">

    <UserControl.Resources>
        <!-- Style for the Hyperlink -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#1E1E1E" CornerRadius="20" Padding="15">
        <StackPanel Orientation="Vertical">

            <!-- POS Sales Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Send" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="POS Sales" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewInvoice">New Invoice</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewInvoiceV2">New Invoice V2 - Mobile</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToManageInvoices">Manage Invoices</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Sales Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Cart" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Sales" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewInvoice">New Invoice</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToManageInvoices">Manage Invoices</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Quotes Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Phone" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Quotes" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewQuote">New Quote</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToManageQuote">Manage Quote</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Subscription Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="SignalCellularOutline" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Subscription" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewSubscription">New Subscription</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToSubscriptions">Subscriptions</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Credit Notes Section -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <materialDesign:PackIcon Kind="ClipboardText" Foreground="White" Width="20" Height="20"/>
                <TextBlock Text="Credit Notes" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0" />
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
