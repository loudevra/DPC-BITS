<UserControl x:Class="DPC.Components.UI.PopUpMenuStocks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="Auto"
    Background="Transparent">

    <UserControl.Resources>
        <!-- Hyperlink Styling -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Submenu Item Style -->
        <Style x:Key="SubmenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d4d4d4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="25,3,0,3"/>
        </Style>

        <!-- Main Menu Item Style -->
        <Style x:Key="MainMenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Vertical Line Style -->
        <Style x:Key="VerticalLineStyle" TargetType="Border">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Grid to center the content -->
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- The Card is now in the center column/row -->
        <materialDesign:Card Grid.Column="1" Grid.Row="1" Background="#0F0F0F" UniformCornerRadius="0" Margin="0" Width="285">
            <StackPanel Orientation="Vertical" Margin="35,0,0,0">
                <!-- Items Manager -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="ViewList" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Items Manager" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToNewProduct">
                                    <TextBlock Text="New Product" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToProductManager">
                                    <TextBlock Text="Product Manager" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Product Categories -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="TagOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToProductCategories">
                            <TextBlock Text="Product Categories" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>

                <!-- Warehouses -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="Warehouse" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToWarehouses">
                            <TextBlock Text="Warehouses" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>

                <!-- Stocks Transfer -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="SwapHorizontal" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToStocksTransfer">
                            <TextBlock Text="Stocks Transfer" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>

                <!-- Purchase Order -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="ClipboardOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Purchase Order" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToNewOrder">
                                    <TextBlock Text="New Order" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToManageOrder">
                                    <TextBlock Text="Manage Orders" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Stocks Return -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Restore" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Stocks Return" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToSupplierRecords">
                                    <TextBlock Text="Suppliers Records" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToCustomerRecords">
                                    <TextBlock Text="Customers Records" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Suppliers -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="AccountMultipleOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Suppliers" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToNewSuppliers">
                                    <TextBlock Text="New Suppliers" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToManageSuppliers">
                                    <TextBlock Text="Manage Suppliers" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Products Label -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Barcode" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Products Label" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToCustomLabel">
                                    <TextBlock Text="Custom Label" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToStandardLabel">
                                    <TextBlock Text="Standard Label" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Brands -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="AccountOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink Click="NavigateToManageBrands">
                            <TextBlock Text="Brands" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>