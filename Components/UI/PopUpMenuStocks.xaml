<UserControl x:Class="DPC.Components.UI.PopUpMenuStocks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="300"
    Background="Transparent">
    <!-- Ensure blending with parent window -->

    <UserControl.Resources>
        <!-- Hyperlink Styling -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid ClipToBounds="True">
        <!-- Pop-up Background with Rounded Corners -->
        <Border Background="#1E1E1E"
                Padding="15">

            <StackPanel Orientation="Vertical" Margin="5">

                <!-- Section: Items Manager -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="PackageVariant" Foreground="White" Width="20" Height="20"/>
                        <TextBlock Text="Items Manager" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="20,5,0,0">
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">New Product</Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">Product Manager</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Section: Product Categories -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Label" Foreground="White" Width="20" Height="20"/>
                        <TextBlock Text="Product Categories" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Section: Warehouses -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Warehouse" Foreground="White" Width="20" Height="20"/>
                        <TextBlock Text="Warehouses" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Section: Stocks Transfer -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="SwapHorizontal" Foreground="White" Width="20" Height="20"/>
                        <TextBlock Text="Stocks Transfer" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Section: Purchase Order -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ClipboardList" Foreground="White" Width="20" Height="20"/>
                        <TextBlock Text="Purchase Order" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="20,5,0,0">
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">New Order</Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">Manage Order</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Section: Stocks Return -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Restore" Foreground="White" Width="20" Height="20"/>
                        <TextBlock Text="Stocks Return" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="20,5,0,0">
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">Suppliers Records</Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">Customers Records</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Section: Suppliers -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Store" Foreground="White" Width="20" Height="20"/>
                        <TextBlock Text="Suppliers" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="20,5,0,0">
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">New Suppliers</Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">Manage Suppliers</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Section: Products Label -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Barcode" Foreground="White" Width="20" Height="20"/>
                        <TextBlock Text="Products Label" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="20,5,0,0">
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">Custom Label</Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14">
                            <Hyperlink Click="NavigateToNewInvoice">Standard Label</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
