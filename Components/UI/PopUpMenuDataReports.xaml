<UserControl x:Class="DPC.Components.UI.PopUpMenuDataReports"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="Auto"
    Background="Transparent">

    <UserControl.Resources>
        <!-- Hyperlink Styling -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Submenu Item Style -->
        <Style x:Key="SubmenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d4d4d4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="25,3,0,3"/>
        </Style>

        <!-- Main Menu Item Style -->
        <Style x:Key="MainMenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Vertical Line Style -->
        <Style x:Key="VerticalLineStyle" TargetType="Border">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Grid to center the content -->
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- The Card is now in the center column/row -->
        <materialDesign:Card Grid.Column="1" Grid.Row="1" Background="#0F0F0F" UniformCornerRadius="0" Margin="0" Width="285">
            <StackPanel Orientation="Vertical" Margin="35,0,0,0">

                <!-- Business Registers Section -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="Glasses" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="1">
                        <Hyperlink>
                            <TextBlock Text="Business Registers" Style="{StaticResource MainMenuItemStyle}"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>

                <!-- Statements Section -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="ListBoxOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Statements" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToAccountStatements">
                                    <TextBlock Text="Account Statements" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToCustomerAccountStatements">
                                    <TextBlock Text="Customer Account Statements" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToSupplierAccountStatements">
                                    <TextBlock Text="Supplier Account Statements" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToTaxStatements">
                                    <TextBlock Text="TAX Statements" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToProductSalesReports">
                                    <TextBlock Text="Product Sales Reports" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Graphical Reports Section -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="SignalCellularOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Graphical Reports" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToProductCategoriesReport">
                                    <TextBlock Text="Product Categories" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToTrendingProductsReport">
                                    <TextBlock Text="Trending Products" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToProfitReport">
                                    <TextBlock Text="Profit" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToTopCustomersReport">
                                    <TextBlock Text="Top Customers" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToIncomeVsExpensesReport">
                                    <TextBlock Text="Income vs Expenses" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToIncomeReport">
                                    <TextBlock Text="Income" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToExpensesReport">
                                    <TextBlock Text="Expenses" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Summary & Report Section -->
                <StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="LightbulbVariantOutline" Foreground="White" Width="20" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1">
                            <Hyperlink>
                                <TextBlock Text="Summary and Report" Style="{StaticResource MainMenuItemStyle}"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <!-- Submenu items with vertical lines -->
                    <Grid Margin="24,3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vertical line -->
                        <Rectangle Width="1" Fill="#444444" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                        <!-- Submenu items -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToStatisticsReport">
                                    <TextBlock Text="Statistics" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToProfitReport">
                                    <TextBlock Text="Profit" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToCalculateIncomeReport">
                                    <TextBlock Text="Calculate Income" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToCalculateExpensesReport">
                                    <TextBlock Text="Calculate Expenses" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToSalesReport">
                                    <TextBlock Text="Sales" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToProductsReport">
                                    <TextBlock Text="Products" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="10,3,0,3">
                                <Hyperlink Click="NavigateToEmployeeCommissionReport">
                                    <TextBlock Text="Employee Commission" Foreground="#d4d4d4" FontSize="13"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>