<UserControl x:Class="DPC.Components.UI.PopUpMenuDataReports"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="300" Background="#1E1E1E">

    <UserControl.Resources>
        <!-- Style for the Hyperlink -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#1E1E1E" CornerRadius="20" Padding="15">
        <StackPanel Orientation="Vertical">

            <!-- Business Registers Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Send" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Business Registers" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>

            </StackPanel>

            <!-- Statements Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Cart" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Statements" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewInvoice">Account Statements</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToManageInvoices">Customer Account Statements</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewInvoice">Supplier Account Statements</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewInvoice">TAX Statements</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewInvoice">Product Sales Reports</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Graphical Reports Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Phone" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Graphical Reports" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewQuote">Product Categories</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToManageQuote">Trending Products</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewQuote">Profit</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToManageQuote">Top Customers</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewQuote">Income vs Expenses</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToManageQuote">Income</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToManageQuote">Expenses</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Summary & Report Section -->
            <StackPanel Orientation="Vertical" Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="SignalCellularOutline" Foreground="White" Width="20" Height="20"/>
                    <TextBlock Text="Summary and Report" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="20,5,0,0">
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToNewSubscription">Statistics</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToSubscriptions">Profit</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToSubscriptions">Calculate Income</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToSubscriptions">Calculate Expenses</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToSubscriptions">Sales</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToSubscriptions">Products</Hyperlink>
                    </TextBlock>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="NavigateToSubscriptions">Employee Commission</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>



        </StackPanel>
    </Border>
</UserControl>
