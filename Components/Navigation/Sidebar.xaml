<UserControl x:Class="DPC.Components.Navigation.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="260" Background="Transparent" Loaded="Sidebar_Loaded">

    <UserControl.Resources>
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" Padding="8" CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter />
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Material Design Sidebar Container -->
    <materialDesign:Card x:Name="SidebarContainer" Background="#090909" Width="260" UniformCornerRadius="15" Padding="15"
        materialDesign:ElevationAssist.Elevation="Dp3">

        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">

            
                <!-- Logo & Branding -->
                <StackPanel HorizontalAlignment="Stretch" Margin="0,10,0,20" Width="206">
                <Button x:Name="SidebarLogoButton" Style="{StaticResource SidebarButton}"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Padding="8,0"
            HorizontalAlignment="Stretch" Width="207" Margin="-15,0,0,0">
                        <Image Source="/Assets/images/logosidebar.png"
               Height="70"
               Stretch="Fill"
               HorizontalAlignment="Center" Width="212" Margin="-10,0,0,0"/>
                    </Button>
                </StackPanel>

           

            <!-- Scrollable Navigation Menu -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="SidebarMenu">
                    <Button x:Name="BtnDashboard" Style="{StaticResource SidebarButton}" Click="OpenDashboard">
    <Button.ToolTip>
        <ToolTip Content="Navigate to main dashboard" 
                 Style="{StaticResource SpeechBubbleToolTipLight}"
                 Placement="Right"/>
    </Button.ToolTip>
    <StackPanel Orientation="Horizontal">
        <materialDesign:PackIcon Kind="Speedometer" Width="24" Height="24"/>
        <TextBlock Text="Dashboard" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend"/>
    </StackPanel>
</Button>
                    <Button  x:Name="BtnSales" Style="{StaticResource SidebarButton}" Click="OpenSales">
                        <Button.ToolTip>
                            <ToolTip Content="Manage sales transactions and customer orders" 
              Style="{StaticResource SpeechBubbleToolTipLight}"
              Placement="Right"/>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cart" Width="24" Height="24"/>
                            <TextBlock Text="Sales" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend"/>
                        </StackPanel>
                    </Button>
                    <Button  x:Name="BtnStocks" Style="{StaticResource SidebarButton}" Click="OpenStocksPopup">
                        <Button.ToolTip>
                            <ToolTip Content="Monitor inventory levels and stock management" 
Style="{StaticResource SpeechBubbleToolTipLight}"
Placement="Right"/>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Layers" Width="24" Height="24"/>
                            <TextBlock Text="Stocks" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend"/>
                        </StackPanel>
                    </Button>
                    <Button  x:Name="BtnCRM" Style="{StaticResource SidebarButton}" Click="OpenCRM">
                        <Button.ToolTip>
                            <ToolTip Content="Customer relationship management and contacts" 
Style="{StaticResource SpeechBubbleToolTipLight}"
Placement="Right"/>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountMultiple" Width="24" Height="24"/>
                            <TextBlock Text="CRM" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend"/>
                        </StackPanel>
                    </Button>
                    <Button  x:Name="BtnProjects" Style="{StaticResource SidebarButton}" Click="OpenProject">
                        <Button.ToolTip>
                            <ToolTip Content="Manage projects, tasks and team collaboration" 
Style="{StaticResource SpeechBubbleToolTipLight}"
Placement="Right"/>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Briefcase" Width="24" Height="24"/>
                            <TextBlock Text="Project" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend"/>
                        </StackPanel>
                    </Button>
                    <Button  x:Name="BtnAccounts" Style="{StaticResource SidebarButton}" Click="OpenAccounts">
                        <Button.ToolTip>
                            <ToolTip Content="Financial accounts and transaction records" 
Style="{StaticResource SpeechBubbleToolTipLight}"
Placement="Right"/>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account" Width="24" Height="24"/>
                            <TextBlock Text="Accounts" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend"/>
                        </StackPanel>
                    </Button>
                    <Button  x:Name="BtnPromoCodes" Style="{StaticResource SidebarButton}" Click="OpenPromoCodes">
                        <Button.ToolTip>
                            <ToolTip Content="Create and manage promotional discount codes" 
Style="{StaticResource SpeechBubbleToolTipLight}"
Placement="Right"/>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TicketPercent" Width="24" Height="24"/>
                            <TextBlock Text="Promo Codes" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend"/>
                        </StackPanel>
                    </Button>
                    <Button  x:Name="BtnDataReports" Style="{StaticResource SidebarButton}" Click="OpenDataReports">
                        <Button.ToolTip>
                            <ToolTip Content="Generate analytical reports and business insights" 
Style="{StaticResource SpeechBubbleToolTipLight}"
Placement="Right"/>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartBar" Width="24" Height="24"/>
                            <TextBlock Text="Data &amp; Reports" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend" />
                        </StackPanel>
                    </Button>
                    <Button  x:Name="BtnMiscellaneous" Style="{StaticResource SidebarButton}" Click="OpenMiscellaneous">
                        <Button.ToolTip>
                            <ToolTip Content="Additional tools and utility functions" 
Style="{StaticResource SpeechBubbleToolTipLight}"
Placement="Right"/>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="DotsGrid" Width="24" Height="24"/>
                            <TextBlock Text="Miscellaneous" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend"/>
                        </StackPanel>
                    </Button>
                    <Button  x:Name="BtnHRM" Style="{StaticResource SidebarButton}" Click="OpenHRM">
                        <Button.ToolTip>
                            <ToolTip Content="Human resource management and employee records" 
Style="{StaticResource SpeechBubbleToolTipLight}"
Placement="Right"/>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountTie" Width="24" Height="24"/>
                            <TextBlock Text="HRM" Foreground="White" Margin="15,4,0,0" FontFamily="Lexend"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
            </ScrollViewer>

            <!-- Spacer -->
            <Grid Height="Auto"/>

            <!-- User Profile Section -->
            <StackPanel x:Name="UserProfile" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="5,20,0,10">
                <Ellipse Width="35" Height="35" Fill="White"/>
                <StackPanel Margin="10,0,0,0">
                    <TextBlock x:Name="UserName" Text="Username" Foreground="White" FontWeight="Bold" FontFamily="Lexend" />
                    <TextBlock x:Name="UserEmail" Text="name@mail.com" Foreground="#4CAF50" FontSize="12" FontFamily="Lexend" />
                </StackPanel>
                <materialDesign:PackIcon Kind="Cog" Width="24" Height="24" Foreground="White" Margin="50,5,0,0" FontFamily="Lexend"/>
            </StackPanel>

            <!-- Logout Button -->
            <Button x:Name="BtnLogout" Style="{StaticResource SidebarButton}" Click="Logout">
                <Button.ToolTip>
                    <ToolTip Content="Click to Logut" 
Style="{StaticResource SpeechBubbleToolTipLight}"
Placement="Right"/>
                </Button.ToolTip>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Logout" Width="24" Height="24" Foreground="Red" Margin="3,0,0,0"/>
                    <TextBlock Text="Logout" Foreground="Red" FontWeight="Bold" Margin="10,4,0,0" FontFamily="Lexend"/>
                </StackPanel>
            </Button>

        </StackPanel>
    </materialDesign:Card>
</UserControl>
