<UserControl x:Class="DPC.Views.Dashboard.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="namespace:DPC.Views.Stocks.ItemManager" 
             xmlns:local1="namespace:DPC.Components.Forms"
             mc:Ignorable="d"
             Background="#D9D9D9"
             FontFamily="{StaticResource Lexend}"
             Foreground="#474747">

    <Grid>
        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <!-- Sticky Header -->
                <RowDefinition Height="Auto"/>
                <!-- Scrollable Content -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Sticky Header -->
            <Border Grid.Row="0" Background="#D9D9D9" Padding="25,10,25,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Dashboard" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Main Form Content - Scrollable -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="25,0,25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Cards Row -->
                    <Grid Grid.Row="0" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Card 1: Today Invoices -->
                        <Border Background="White" CornerRadius="10" Margin="10" Grid.Column="0">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                <Grid Width="50" Height="50" Margin="0,0,0,10">
                                    <Ellipse Fill="#f0f0f0"/>
                                    <materialDesign:PackIcon Kind="InvoiceOutline"
                                                             Width="24" Height="24"
                                                             Foreground="Black"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Today Invoices" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Text="20" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 2: This Month Invoices -->
                        <Border Background="White" CornerRadius="10" Margin="10" Grid.Column="1">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                <Grid Width="50" Height="50" Margin="0,0,0,10">
                                    <Ellipse Fill="#f0f0f0"/>
                                    <materialDesign:PackIcon Kind="InvoicePlusOutline"
                                                             Width="24" Height="24"
                                                             Foreground="Black"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="This Month Invoices" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Text="20" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 3: Today Sales -->
                        <Border Background="White" CornerRadius="10" Margin="10" Grid.Column="2">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                <Grid Width="50" Height="50" Margin="0,0,0,10">
                                    <Ellipse Fill="#f0f0f0"/>
                                    <materialDesign:PackIcon Kind="SaleOutline"
                                                             Width="24" Height="24"
                                                             Foreground="Black"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Today Sales" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Text="+?0.00" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 4: This Month Sales -->
                        <Border Background="White" CornerRadius="10" Margin="10" Grid.Column="3">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                <Grid Width="50" Height="50" Margin="0,0,0,10">
                                    <Ellipse Fill="#f0f0f0"/>
                                    <materialDesign:PackIcon Kind="Finance"
                                                             Width="24" Height="24"
                                                             Foreground="Black"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="This Month Sales" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Text="+?0.00" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Overview Card -->
                    <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="10,0,10,0" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Overview"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"/>

                            <materialDesign:PackIcon Kind="ArrowExpand"
                                                     Width="16"
                                                     Height="16"
                                                     Foreground="Black"
                                                     Grid.Column="1"
                                                     VerticalAlignment="Top"
                                                     Margin="0,0,25,0"
                                                     Cursor="Hand"
                                                     ToolTip="Expand"/>

                            <materialDesign:PackIcon Kind="Reload"
                                                     Width="16"
                                                     Height="16"
                                                     Foreground="Black"
                                                     Grid.Column="1"
                                                     VerticalAlignment="Center"
                                                     Margin="25,0,0,0"
                                                     Cursor="Hand"
                                                     ToolTip="Reload"/>
                        </Grid>
                    </Border>

                    <!-- Buyers & Invoices Section -->
                    <Grid Grid.Row="2" Margin="10,10,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Recent Buyers -->
                        <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Recent Buyers" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>

                                <!-- Buyer 1 -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Avatar -->
                                    <Grid Width="40" Height="40" Margin="0,0,10,0">
                                        <Ellipse Fill="#f0f0f0" Stroke="Black"/>
                                        <materialDesign:PackIcon Kind="Account"
                                         Width="24" Height="24"
                                         Foreground="Black"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                    </Grid>
                                    <!-- Name and Status -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Eli Clark" Foreground="Black"/>
                                        <Border Background="Transparent" CornerRadius="5" Padding="5,2" HorizontalAlignment="Left" Margin="0,2,0,0" BorderBrush="#4caf50" BorderThickness="1">
                                            <TextBlock Text="PAID" Foreground="#4CAF50" FontSize="10" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                    <!-- Amount -->
                                    <TextBlock Text="?10,000.00" Grid.Column="2" VerticalAlignment="Center" Foreground="#4CAF50" FontWeight="Bold"/>
                                </Grid>

                                <!-- Buyer 2 -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Width="40" Height="40" Margin="0,0,10,0">
                                        <Ellipse Fill="#f0f0f0" Stroke="Black"/>
                                        <materialDesign:PackIcon Kind="Account"
                                         Width="24" Height="24"
                                         Foreground="Black"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                    </Grid>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Aesop Carl" Foreground="Black"/>
                                        <Border Background="Transparent" CornerRadius="5" Padding="5,2" HorizontalAlignment="Left" Margin="0,2,0,0" BorderBrush="#F44336" BorderThickness="1">
                                            <TextBlock Text="DUE" Foreground="#F44336" FontSize="10" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="?10,000.00" Grid.Column="2" VerticalAlignment="Center" Foreground="#F44336" FontWeight="Bold"/>
                                </Grid>

                                <!-- Buyer 3 -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Width="40" Height="40" Margin="0,0,10,0">
                                        <Ellipse Fill="#f0f0f0" Stroke="Black"/>
                                        <materialDesign:PackIcon Kind="Account"
                                         Width="24" Height="24"
                                         Foreground="Black"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                    </Grid>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Naib Subedar" Foreground="Black"/>
                                        <Border Background="Transparent" CornerRadius="5" Padding="5,2" HorizontalAlignment="Left" Margin="0,2,0,0" BorderBrush="#2196F3" BorderThickness="1">
                                            <TextBlock Text="PARTIAL" Foreground="#2196F3" FontSize="10" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="?10,000.00" Grid.Column="2" VerticalAlignment="Center" Foreground="#2196F3" FontWeight="Bold"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <!-- Recent Invoices -->
                        <Border Background="White" CornerRadius="10" Padding="10" Grid.Column="1">
                            <StackPanel>
                                <!-- Header -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Recent Invoices"
                       FontWeight="SemiBold"
                       FontSize="14"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"/>

                                    <materialDesign:PackIcon Kind="Import"
                                     Width="16"
                                     Height="16"
                                     Foreground="Black"
                                     VerticalAlignment="Top"
                                     Grid.Column="1"
                                     Margin="0,0,10,0"/>

                                    <materialDesign:PackIcon Kind="ArrowExpand"
                                     Width="16"
                                     Height="16"
                                     Foreground="Black"
                                     VerticalAlignment="Top"
                                     Grid.Column="2"
                                     Margin="0,0,10,0"/>

                                    <materialDesign:PackIcon Kind="Reload"
                                     Width="16"
                                     Height="16"
                                     Foreground="Black"
                                     VerticalAlignment="Top"
                                     Grid.Column="3"/>
                                </Grid>

                                <!-- DataGrid -->
                                <DataGrid Name="RecentInvoicesDataGrid"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="0"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date" Width="*" />
                                        <DataGridTextColumn Header="Debit" Width="*" />
                                        <DataGridTextColumn Header="Credit" Width="*" />
                                        <DataGridTextColumn Header="Account" Width="*" />
                                        <DataGridTextColumn Header="Payer" Width="*" />
                                        <DataGridTextColumn Header="Method" Width="*" />
                                        <DataGridTemplateColumn Header="Actions" Width="100">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <materialDesign:PackIcon Kind="Eye"
                                                         Foreground="#2196F3"
                                                         Width="20"
                                                         Height="20"
                                                         Margin="0,0,5,0"
                                                         Cursor="Hand" />
                                                        <materialDesign:PackIcon Kind="Delete"
                                                         Foreground="#F44336"
                                                         Width="20"
                                                         Height="20"
                                                         Cursor="Hand" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                        
                        

                    </Grid>
                    <Grid Grid.Row="3" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- February Income -->
                        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="5">
                            <StackPanel Margin="10" VerticalAlignment="Center">
                                <TextBlock Text="0%" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="10,000" />
                                <TextBlock Text="February Income"/>
                            </StackPanel>
                        </Border>

                        <!-- February Expenses -->
                        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="5">
                            <StackPanel Margin="10" VerticalAlignment="Center">
                                <TextBlock Text="0%" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="10,000" />
                                <TextBlock Text="February Expenses"/>
                            </StackPanel>
                        </Border>

                        <!-- February Sales -->
                        <Border Grid.Column="2" Background="White" CornerRadius="10" Margin="5">
                            <StackPanel Margin="10" VerticalAlignment="Center">
                                <TextBlock Text="0%" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="10,000" />
                                <TextBlock Text="February Sales"/>
                            </StackPanel>
                        </Border>

                        <!-- February Net Income -->
                        <Border Grid.Column="3" Background="White" CornerRadius="10" Margin="5">
                            <StackPanel Margin="10" VerticalAlignment="Center">
                                <TextBlock Text="0%" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="10,000" />
                                <TextBlock Text="February Net Income"/>
                            </StackPanel>
                        </Border>

                        <!-- Cashflow & Income/Expenses Charts -->
                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            
                            
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="4" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!-- Cashflow Section -->
                        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="5" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Cashflow"
                           FontWeight="SemiBold"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Grid.Column="0"/>

                                    <ComboBox x:Name="cmbCashflowType" Width="90" HorizontalAlignment="Right" Background="Transparent">
                                        <ComboBoxItem Content="Income" IsSelected="True" Background="Transparent"/>
                                    </ComboBox>
                                </Grid>

                                <!-- Placeholder for chart -->
                                <Rectangle Grid.Row="1"
                       Fill="#f5f5f5"
                       Height="100"
                       RadiusX="5"
                       RadiusY="5"
                       Margin="0,10,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Income/Expenses Gauge -->
                        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="5" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Income/Expenses"
                       FontWeight="SemiBold"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                </Grid>
                
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
