<UserControl x:Class="DPC.Views.Dashboard.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="namespace:DPC.Views.Stocks.ItemManager" 
             xmlns:local1="namespace:DPC.Components.Forms"
             mc:Ignorable="d"
             Background="#D9D9D9"
             FontFamily="{StaticResource Lexend}"
             Foreground="#474747">
    <UserControl.Resources>
        <Style x:Key="cmbCashFlow" TargetType="ComboBox">
            <Setter Property="Width" Value="100"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Foreground" Value="#474747"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Selected Item Content -->
                            <ContentPresenter Name="ContentSite"
                              IsHitTestVisible="False"
                              Content="{TemplateBinding SelectionBoxItem}"
                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                              VerticalAlignment="Center"
                              Margin="10,0,5,0"/>

                            <!-- Arrow Button (Right) -->
                            <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="Transparent" BorderThickness="0">
                                                        <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="Black"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                            <!-- Dropdown Items --><!--
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                            </Popup>-->
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <!-- Sticky Header -->
                <RowDefinition Height="Auto"/>
                <!-- Scrollable Content -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Sticky Header -->
            <Border Grid.Row="0" Background="#D9D9D9" Padding="25,10,25,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Dashboard" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Main Form Content - Scrollable -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="25,0,25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Cards Row -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Card 1: Today Invoices -->
                        <Border Background="White" CornerRadius="10" Margin="10" Width="170" Grid.Column="0">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                <Grid Width="50" Height="50" Margin="0,0,0,10">
                                    <Ellipse Fill="#f0f0f0"/>
                                    <materialDesign:PackIcon Kind="InvoiceOutline"
                                                             Width="24" Height="24"
                                                             Foreground="Black"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Today Invoices" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Text="20" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 2: This Month Invoices -->
                        <Border Background="White" CornerRadius="10" Margin="10" Width="170"  Grid.Column="1">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                <Grid Width="50" Height="50" Margin="0,0,0,10">
                                    <Ellipse Fill="#f0f0f0"/>
                                    <materialDesign:PackIcon Kind="InvoicePlusOutline"
                                                             Width="24" Height="24"
                                                             Foreground="Black"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="This Month Invoices" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Text="20" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 3: Today Sales -->
                        <Border Background="White" CornerRadius="10" Margin="10" Width="170" Grid.Column="2">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                <Grid Width="50" Height="50" Margin="0,0,0,10">
                                    <Ellipse Fill="#f0f0f0"/>
                                    <materialDesign:PackIcon Kind="SaleOutline"
                                                             Width="24" Height="24"
                                                             Foreground="Black"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Today Sales" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Text="+?0.00" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 4: This Month Sales -->
                        <Border Background="White" CornerRadius="10" Margin="10" Width="170" Grid.Column="3">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                <Grid Width="50" Height="50" Margin="0,0,0,10">
                                    <Ellipse Fill="#f0f0f0"/>
                                    <materialDesign:PackIcon Kind="Finance"
                                                             Width="24" Height="24"
                                                             Foreground="Black"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="This Month Sales" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Text="+?0.00" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <!-- Overview Card -->
                    <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="10" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Overview"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"/>

                            <materialDesign:PackIcon Kind="ArrowExpand"
                                                     Width="16"
                                                     Height="16"
                                                     Foreground="Black"
                                                     Grid.Column="1"
                                                     VerticalAlignment="Top"
                                                     Margin="0,0,25,0"
                                                     Cursor="Hand"
                                                     ToolTip="Expand"/>

                            <materialDesign:PackIcon Kind="Reload"
                                                     Width="16"
                                                     Height="16"
                                                     Foreground="Black"
                                                     Grid.Column="1"
                                                     VerticalAlignment="Center"
                                                     Margin="25,0,0,0"
                                                     Cursor="Hand"
                                                     ToolTip="Reload"/>
                        </Grid>
                    </Border>

                    <!-- Buyers & Invoices Section -->
                    <Grid Grid.Row="2" Margin="10,10,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!-- Recent Buyers -->
                        <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Recent Buyers" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                <!-- Buyer 1 -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Avatar -->
                                    <Grid Width="40" Height="40" Margin="0,0,10,0">
                                        <Ellipse Fill="#f0f0f0" Stroke="Black"/>
                                        <materialDesign:PackIcon Kind="Account"
                                         Width="24" Height="24"
                                         Foreground="Black"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                    </Grid>
                                    <!-- Name and Status -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Eli Clark" FontFamily="Lexend" Foreground="Black"/>
                                        <Border Background="Transparent" CornerRadius="5" Padding="5,2" HorizontalAlignment="Left" Margin="0,2,0,0" BorderBrush="#4caf50" BorderThickness="1">
                                            <TextBlock Text="PAID" FontFamily="Lexend" Foreground="#4CAF50" FontSize="10" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                    <!-- Amount -->
                                    <TextBlock Text="?10,000.00" Grid.Column="2" VerticalAlignment="Center" Foreground="#4CAF50" FontWeight="Bold"/>
                                </Grid>

                                <!-- Buyer 2 -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Width="40" Height="40" Margin="0,0,10,0">
                                        <Ellipse Fill="#f0f0f0" Stroke="Black"/>
                                        <materialDesign:PackIcon Kind="Account"
                                         Width="24" Height="24"
                                         Foreground="Black"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                    </Grid>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Aesop Carl" FontFamily="Lexend" Foreground="Black"/>
                                        <Border Background="Transparent" CornerRadius="5" Padding="5,2" HorizontalAlignment="Left" Margin="0,2,0,0" BorderBrush="#F44336" BorderThickness="1">
                                            <TextBlock Text="DUE" FontFamily="Lexend" Foreground="#F44336" FontSize="10" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="?10,000.00" Grid.Column="2" VerticalAlignment="Center" Foreground="#F44336" FontWeight="Bold"/>
                                </Grid>

                                <!-- Buyer 3 -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Width="40" Height="40" Margin="0,0,10,0">
                                        <Ellipse Fill="#f0f0f0" Stroke="Black"/>
                                        <materialDesign:PackIcon Kind="Account"
                                         Width="24" Height="24"
                                         Foreground="Black"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                    </Grid>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Naib Subedar" FontFamily="Lexend" Foreground="Black"/>
                                        <Border Background="Transparent" CornerRadius="5" Padding="5,2" HorizontalAlignment="Left" Margin="0,2,0,0" BorderBrush="#2196F3" BorderThickness="1">
                                            <TextBlock Text="PARTIAL" FontFamily="Lexend" Foreground="#2196F3" FontSize="10" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="?10,000.00" Grid.Column="2" VerticalAlignment="Center" Foreground="#2196F3" FontWeight="Bold"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <!-- Recent Invoices -->
                        <Border Background="White" CornerRadius="10" Padding="10" Grid.Column="1">
                            <StackPanel>
                                <!-- Header -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Recent Invoices"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"/>

                                    <materialDesign:PackIcon Kind="Import"
                                     Width="16"
                                     Height="16"
                                     Foreground="Black"
                                     VerticalAlignment="Top"
                                     Grid.Column="1"
                                     Margin="0,0,10,0"/>

                                    <materialDesign:PackIcon Kind="ArrowExpand"
                                     Width="16"
                                     Height="16"
                                     Foreground="Black"
                                     VerticalAlignment="Top"
                                     Grid.Column="2"
                                     Margin="0,0,10,0"/>

                                    <materialDesign:PackIcon Kind="Reload"
                                     Width="16"
                                     Height="16"
                                     Foreground="Black"
                                     VerticalAlignment="Top"
                                     Grid.Column="3"/>
                                </Grid>

                                <!-- DataGrid -->
                                <DataGrid Name="RecentInvoicesDataGrid"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Margin="0"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      CanUserResizeRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow">
                                    <!--DataGrid Header-->
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date" Width="*" />
                                        <DataGridTextColumn Header="Debit" Width="*" />
                                        <DataGridTextColumn Header="Credit" Width="*" />
                                        <DataGridTextColumn Header="Account" Width="*" />
                                        <DataGridTextColumn Header="Payer" Width="*" />
                                        <DataGridTextColumn Header="Method" Width="*" />
                                        <DataGridTemplateColumn Header="Actions" Width="100">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <materialDesign:PackIcon Kind="Eye"
                                                         Foreground="#2196F3"
                                                         Width="20"
                                                         Height="20"
                                                         Margin="0,0,5,0"
                                                         Cursor="Hand" />
                                                        <materialDesign:PackIcon Kind="Delete"
                                                         Foreground="#F44336"
                                                         Width="20"
                                                         Height="20"
                                                         Cursor="Hand" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                    <!--DataGrid Column Header Style-->
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="FontFamily" Value="Lexend"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#474747"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                        
                    </Grid>
                    <Grid Grid.Row="3" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- February Income -->
                        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="5">
                            <StackPanel Margin="10" VerticalAlignment="Center">
                                <TextBlock Text="0%" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="10,000" />
                                <TextBlock Text="February Income" FontFamily="Lexend" />
                            </StackPanel>
                        </Border>

                        <!-- February Expenses -->
                        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="5">
                            <StackPanel Margin="10" VerticalAlignment="Center">
                                <TextBlock Text="0%" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="10,000" />
                                <TextBlock Text="February Expenses" FontFamily="Lexend"/>
                            </StackPanel>
                        </Border>

                        <!-- February Sales -->
                        <Border Grid.Column="2" Background="White" CornerRadius="10" Margin="5">
                            <StackPanel Margin="10" VerticalAlignment="Center">
                                <TextBlock Text="0%" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="10,000" />
                                <TextBlock Text="February Sales"/>
                            </StackPanel>
                        </Border>

                        <!-- February Net Income -->
                        <Border Grid.Column="3" Background="White" CornerRadius="10" Margin="5">
                            <StackPanel Margin="10" VerticalAlignment="Center">
                                <TextBlock Text="0%" FontWeight="Bold" FontSize="20"/>
                                <TextBlock Text="10,000" />
                                <TextBlock Text="February Net Income"/>
                            </StackPanel>
                        </Border>

                        <!-- Cashflow & Income/Expenses Charts -->
                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="4" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!-- Cashflow Section -->
                        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="5" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Cashflow"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Grid.Column="0"/>
                                    <ComboBox Width="75" Style="{StaticResource cmbCashFlow}">
                                        <ComboBoxItem Content="Income" IsSelected="True"/>
                                        <ComboBoxItem Content="Expense"/>
                                    </ComboBox>
                                </Grid>

                                <!-- Placeholder for chart -->
                                <Rectangle Grid.Row="1"
                                   Fill="Transparent"
                                   Height="100"
                                   RadiusX="5"
                                   RadiusY="5"
                                   Margin="0,10,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Income/Expenses Gauge -->
                        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="5" Padding="10">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Income/Expenses"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                                <!--Gauge Chart-->
                                <StackPanel x:Name="GaugeChart" Width="160" Height="100" HorizontalAlignment="Center">
                                    <Canvas Width="160" Height="100">
                                        <!-- Background Arc -->
                                        <Path Stroke="#D9D9D9" StrokeThickness="20">
                                            <Path.Data>
                                                <PathGeometry>
                                                    <PathFigure StartPoint="10,100" IsFilled="False">
                                                        <ArcSegment Point="150,100" Size="70,70" SweepDirection="Clockwise" IsLargeArc="True"/>
                                                    </PathFigure>
                                                </PathGeometry>
                                            </Path.Data>
                                        </Path>
                                        <Path Stroke="#555555" StrokeThickness="20">
                                            <Path.Data>
                                                <PathGeometry>
                                                    <PathFigure StartPoint="10,100" IsFilled="False">
                                                        <ArcSegment Point="22.5,60" Size="70,70" SweepDirection="Clockwise" IsLargeArc="False"/>
                                                    </PathFigure>
                                                </PathGeometry>
                                            </Path.Data>
                                        </Path>
                                    </Canvas>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
