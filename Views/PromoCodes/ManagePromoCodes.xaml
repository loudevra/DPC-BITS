<Window x:Class="DPC.Views.PromoCodes.ManagePromoCodes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Components.Navigation"
        Title="Manage Promo Codes"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Sidebar -->
		<Border x:Name="SidebarContainer" Grid.Row="0" Grid.Column="0" Background="Black"/>

		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- Top Navigation Bar -->
			<Border x:Name="TopNavBarContainer" Grid.Row="0" Background="White" Height="Auto" MinHeight="50"/>

			<!-- Main Content with Scroll -->
			<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
				<StackPanel Margin="20">
					<!-- Promo Codes Title -->
					<TextBlock Text="Promo Codes" FontSize="28" FontWeight="Bold" Margin="0,0,0,15"/>
					<Button Content="+ Add New" Style="{StaticResource MaterialDesignRaisedButton}" Height="40" Width="120" Margin="-400,-50,0,20" Click="Button_Click"/>

					<!-- Stats Section -->
					<UniformGrid Columns="4" Margin="0,0,0,20" HorizontalAlignment="Stretch" VerticalAlignment="Top">
						<materialDesign:Card Background="#E0F2F1" Padding="15" Margin="10">
							<StackPanel>
								<TextBlock Text="0" FontSize="24" FontWeight="Bold"/>
								<TextBlock Text="Active" FontWeight="SemiBold"/>
							</StackPanel>
						</materialDesign:Card>

						<materialDesign:Card Background="#FFF3E0" Padding="15" Margin="10">
							<StackPanel>
								<TextBlock Text="0" FontSize="24" FontWeight="Bold"/>
								<TextBlock Text="Used" FontWeight="SemiBold"/>
							</StackPanel>
						</materialDesign:Card>

						<materialDesign:Card Background="#FFEBEE" Padding="15" Margin="10">
							<StackPanel>
								<TextBlock Text="0" FontSize="24" FontWeight="Bold"/>
								<TextBlock Text="Expired" FontWeight="SemiBold"/>
							</StackPanel>
						</materialDesign:Card>

						<materialDesign:Card Background="#EDE7F6" Padding="15" Margin="10">
							<StackPanel>
								<TextBlock Text="0" FontSize="24" FontWeight="Bold"/>
								<TextBlock Text="Total" FontWeight="SemiBold"/>
							</StackPanel>
						</materialDesign:Card>
					</UniformGrid>

                    <!-- Promo Codes Table -->
                    <DataGrid x:Name="dgPromoCodes" Margin="10" Height="400" AutoGenerateColumns="False" 
          IsReadOnly="True" IsHitTestVisible="False" SelectionMode="Single" SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Width="50" Binding="{Binding ID}"/>
                            <DataGridTextColumn Header="Promo Code" Width="*" Binding="{Binding Code}"/>
                            <DataGridTextColumn Header="Amount" Width="100" Binding="{Binding Amount}"/>
                            <DataGridTextColumn Header="Quantity" Width="100" Binding="{Binding Quantity}"/>
                            <DataGridTextColumn Header="Valid Until" Width="200" Binding="{Binding ValidUntil}"/>
                            <DataGridTextColumn Header="Status" Width="100" Binding="{Binding IsActive}"/>
                            <DataGridTemplateColumn Header="Action" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Edit" Padding="5" Margin="2"/>
                                            <Button Content="Delete" Padding="5" Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>
			</ScrollViewer>
		</Grid>
	</Grid>
</Window>
