<UserControl x:Class="DPC.Views.PromoCodes.ManagePromoCodes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto" Width="Auto"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Scrollable content -->
        </Grid.RowDefinitions>

        <!-- Static Title -->
        <TextBlock Text="Promo Codes"
                   FontSize="32"
                   Foreground="#555555"
                   FontWeight="Bold"
                   Margin="20,20,20,10"
                   Grid.Row="0"/>

        <!-- Scrollable Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Grid.Row="1">
            <StackPanel Margin="20,0,20,20">
                <!-- Add New Button -->
                <Grid>
                    <Button x:Name="btnAddNew" 
                            Content="+ Add New" 
                            Style="{StaticResource MaterialDesignRaisedButton}" 
                            Height="40" Width="120" 
                            HorizontalAlignment="Right" 
                            Margin="0,0,0,20" 
                            Click="Button_Click"/>
                </Grid>

                <!-- Stats Section -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Active Card -->
                    <Border Grid.Column="0" Background="#E0F2F1" CornerRadius="8" Padding="15" Margin="10" Height="100">
                        <StackPanel>
                            <TextBlock x:Name="txtActiveCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#000000"/>
                            <TextBlock Text="Active" FontWeight="SemiBold" Foreground="#000000"/>
                            <materialDesign:PackIcon Kind="Check" Foreground="#4CAF50" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-24,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Used Card -->
                    <Border Grid.Column="1" Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="10" Height="100">
                        <StackPanel>
                            <TextBlock x:Name="txtUsedCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#000000"/>
                            <TextBlock Text="Used" FontWeight="SemiBold" Foreground="#000000"/>
                            <materialDesign:PackIcon Kind="Close" Foreground="#FF9800" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-24,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Expired Card -->
                    <Border Grid.Column="2" Background="#FFEBEE" CornerRadius="8" Padding="15" Margin="10" Height="100">
                        <StackPanel>
                            <TextBlock x:Name="txtExpiredCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#000000"/>
                            <TextBlock Text="Expired" FontWeight="SemiBold" Foreground="#000000"/>
                            <materialDesign:PackIcon Kind="CalendarRemove" Foreground="#F44336" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-24,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Card -->
                    <Border Grid.Column="3" Background="#EDE7F6" CornerRadius="8" Padding="15" Margin="10" Height="100">
                        <StackPanel>
                            <TextBlock x:Name="txtTotalCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#000000"/>
                            <TextBlock Text="Total" FontWeight="SemiBold" Foreground="#000000"/>
                            <materialDesign:PackIcon Kind="Percent" Foreground="#673AB7" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-24,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Data Grid Section -->
                <Border Background="White" CornerRadius="8" Padding="0" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with filter options -->
                        <Grid Grid.Row="0" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnExport" 
                                    Grid.Column="0" 
                                    Content="Export" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Margin="0,0,10,0"
                                    Click="BtnExport_Click"/>

                            <TextBlock Grid.Column="1" Text="Show" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="cboPageSize" 
                                      Grid.Column="1" 
                                      Width="70" 
                                      SelectedIndex="0" 
                                      Margin="35,0,0,0"
                                      SelectionChanged="CboPageSize_SelectionChanged">
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="25"/>
                                <ComboBoxItem Content="50"/>
                                <ComboBoxItem Content="100"/>
                            </ComboBox>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,5,0">
                                    <materialDesign:PackIcon Kind="ViewGrid" />
                                </Button>
                                <Button Style="{StaticResource MaterialDesignFlatButton}">
                                    <materialDesign:PackIcon Kind="ViewList" />
                                </Button>
                            </StackPanel>

                            <Border Grid.Column="3" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtSearch" 
                                             Grid.Column="0" 
                                             BorderThickness="0" 
                                             Padding="8,5" 
                                             Width="200" 
                                             Text="" 
                                             Foreground="#555555"
                                             materialDesign:HintAssist.Hint="Search..."
                                             TextChanged="TxtSearch_TextChanged"/>
                                    <Button Grid.Column="1" Style="{StaticResource MaterialDesignFlatButton}" Padding="8,5">
                                        <materialDesign:PackIcon Kind="Magnify" />
                                    </Button>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Data Grid -->
                        <DataGrid x:Name="dgPromoCodes" 
                                  Grid.Row="1"
                                  Margin="10,0,10,10" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  SelectionMode="Single" 
                                  SelectionUnit="FullRow"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowBackground="Transparent"
                                  AlternatingRowBackground="Transparent">
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                    <Setter Property="Padding" Value="10,5" />
                                    <Setter Property="Foreground" Value="#555555" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Width="50" Binding="{Binding ID}"/>
                                <DataGridTextColumn Header="Subject" Width="*" Binding="{Binding Code}"/>
                                <DataGridTextColumn Header="Amount" Width="80" Binding="{Binding Amount}"/>
                                <DataGridTextColumn Header="Quantity" Width="80" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="Added" Width="120" Binding="{Binding CreatedAt, StringFormat=\{0:MM/dd/yyyy\}}"/>
                                <DataGridTextColumn Header="Valid Until" Width="120" Binding="{Binding ValidUntil, StringFormat=\{0:MM/dd/yyyy\}}"/>
                                <DataGridTextColumn Header="Status" Width="100" Binding="{Binding Status}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="Active">
                                                    <Setter Property="Foreground" Value="#4CAF50" />
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Trigger>
                                                <Trigger Property="Text" Value="Used">
                                                    <Setter Property="Foreground" Value="#FF9800" />
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Trigger>
                                                <Trigger Property="Text" Value="Expired">
                                                    <Setter Property="Foreground" Value="#F44336" />
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Action" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                                        Padding="2" 
                                                        Margin="2"
                                                        Click="BtnView_Click">
                                                    <materialDesign:PackIcon Kind="Eye" Foreground="#2196F3"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                                        Padding="2" 
                                                        Margin="2"
                                                        Click="BtnEdit_Click">
                                                    <materialDesign:PackIcon Kind="PencilOutline" Foreground="#4CAF50"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                                        Padding="2" 
                                                        Margin="2"
                                                        Click="BtnDelete_Click">
                                                    <materialDesign:PackIcon Kind="DeleteOutline" Foreground="#F44336"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>