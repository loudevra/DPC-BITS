<Window x:Class="DPC.Views.PromoCodes.AddPromoCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DPC.Views.PromoCodes"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Promo Code"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">


	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Sidebar -->
		<Border x:Name="SidebarContainer" Grid.Row="0" Grid.Column="0" Background="Black"/>

		<!-- Content Wrapper -->
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- Top Navigation Bar -->
			<Border x:Name="TopNavBarContainer" Grid.Row="0" Background="White" Height="Auto" MinHeight="50"/>

			<!-- Main Content -->
			<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
				<StackPanel Margin="40" Width="600">

					<!-- Title -->
					<TextBlock Text="Add New Promo Code" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

					<!-- Promo Code -->
					<TextBlock Text="Promo Code" FontWeight="Bold"/>
					<TextBox x:Name="txtCode" Height="30" Margin="0,5,0,15"/>

					<!-- Amount -->
					<TextBlock Text="Amount" FontWeight="Bold"/>
					<TextBox x:Name="txtAmount" Height="30" Margin="0,5,0,15"/>

					<!-- Quantity -->
					<TextBlock Text="Quantity" FontWeight="Bold"/>
					<TextBox x:Name="txtQuantity" Height="30" Margin="0,5,0,15"/>

					<!-- Valid Until -->
					<TextBlock Text="Valid Until" FontWeight="Bold"/>
					<DatePicker x:Name="dpValidUntil" Height="30" Margin="0,5,0,15"/>

					<!-- Link to Account -->
					<TextBlock Text="Link to Account" FontWeight="Bold"/>
					<CheckBox x:Name="chkLinkToAccount" Content="Link this promo to an account" Margin="0,5,0,5"/>
					<ComboBox x:Name="cmbAccount" Height="30" Margin="0,5,0,15" IsEnabled="{Binding IsChecked, ElementName=chkLinkToAccount}"/>


					<!-- Note -->
					<TextBlock Text="Note" FontWeight="Bold"/>
					<TextBox x:Name="txtNote" Height="100" TextWrapping="Wrap" Margin="0,5,0,15"/>

					<!-- Submit Button -->
					<Button x:Name="btnAddPromoCode" Content="Add Promo Code" Background="#0078D7" Foreground="White" Padding="10" FontWeight="Bold" Click="BtnAddPromoCode_Click"/>
				</StackPanel>
			</ScrollViewer>
		</Grid>
	</Grid>
</Window>
