<UserControl x:Class="DPC.Views.CRM.CRMEditResidentialClientShippingAddress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers.ManageSuppliers"
        mc:Ignorable="d"
        Background="#D9D9D9">

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header Section -->
            <RowDefinition Height="Auto"/>
            <!-- Options Bar -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid Section -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination Section -->
        </Grid.RowDefinitions>

        <!-- Main Content for Personal Information -->
        <StackPanel Grid.Row="2" Margin="20,20,20,20" Width="800">

            <CheckBox x:Name="billingCheckBox" Content="Same As Billing" Margin="0,0,0,5" FontFamily="Lexend" Foreground="#474747" FontWeight="Bold"/>
            <TextBlock Text="Please leave Shipping Address blank if you do not want to print it on the invoice"  FontFamily="Lexend" Foreground="#474747" TextWrapping="Wrap" Width="240" HorizontalAlignment="Left"/>
            <!-- Form Content -->
            <StackPanel>


                <TextBlock Text="Address:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                <Border Style="{StaticResource RoundedBorderStyle}" Width="772">
                    <TextBox x:Name="txtAddress" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"  FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                </Border>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                        <!-- Spacing -->
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                        <!-- Spacing -->
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- City -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="City:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                        <Border Style="{StaticResource RoundedBorderStyle}" Width="245" Height="40">
                            <TextBox x:Name="txtCity" Width="210" Height="25" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                        </Border>
                    </StackPanel>

                    <!-- Region -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Region:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                        <Border Style="{StaticResource RoundedBorderStyle}" Width="245" Height="40">
                            <TextBox x:Name="txtRegion" Width="210" Height="25" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                        </Border>
                    </StackPanel>

                    <!-- Country -->
                    <StackPanel Grid.Column="3" Grid.ColumnSpan="2" Margin="0,0,19,0">
                        <TextBlock Text="Country:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                        <Border Style="{StaticResource RoundedBorderStyle}" Width="245" Height="40">
                            <TextBox x:Name="txtCountry" Width="210" Height="25" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Zip Code -->
                <TextBlock Text="ZIP Code:" Margin="0,5,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                <Border Style="{StaticResource RoundedBorderStyle}" Width="772">
                    <TextBox x:Name="txtZipCode" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"  FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                </Border>
            </StackPanel>

            <!-- Submit Button -->
            <StackPanel Margin="20">
                <Button Click="UpdateCRMClient" x:Name="btnAddUpdate" Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center">
                    <Border CornerRadius="20" Background="#52C69D" Height="40" Width="150">
                        <TextBlock Text="Update" FontFamily="{StaticResource Lexend}" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>