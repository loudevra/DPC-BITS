 <UserControl x:Class="DPC.Views.CRM.CRMClients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="DPC.Views.CRM.CRMClients"
        mc:Ignorable="d"
        Background="#D9D9D9" Width="955">

    <Grid>
        <StackPanel>
            <!-- Existing Main Grid -->
            <Grid x:Name="mainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header Section -->
                    <RowDefinition Height="Auto"/>
                    <!-- Options Bar -->
                    <RowDefinition Height="*"/>
                    <!-- DataGrid Section -->
                    <RowDefinition Height="Auto"/>
                    <!-- Pagination Section -->
                </Grid.RowDefinitions>

                <!-- Title and Add Button - Static at top -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,10">
                    <TextBlock Text="Clients"
                               FontWeight="SemiBold"
                               FontFamily="Lexend"
                               FontSize="35"
                               Foreground="#474747"
                               VerticalAlignment="Center" Width="133"/>
                    <Button x:Name="btnAddNew" Style="{StaticResource RoundedButtonStyle}" Background="Transparent" Margin="2,0,0,0">
                        <Grid Margin="15,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="75"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Text="Add New" FontSize="14" FontWeight="SemiBold" Foreground="#474747" Grid.Column="1" Margin="5,0" VerticalAlignment="Center"/>
                        </Grid>
                    </Button>
                    <Button x:Name="btnDue" Style="{StaticResource RoundedButtonStyle}" Background="#555555" Margin="20,0,0,0" Width="111">
                        <Grid Margin="15,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="105"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="CalendarMonth" Width="22" Height="22" Grid.Column="0" VerticalAlignment="Center" Foreground="#FDFDFD" Margin="10"/>
                            <TextBlock Text="Due" FontSize="17" Foreground="#FDFDFD" Margin="37,2,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                        </Grid>
                    </Button>
                </StackPanel>

                <!-- Options Bar - Static with controls -->
                <StackPanel VerticalAlignment="Center" Grid.Row="1" Margin="20,10">
                    <Border Style="{StaticResource RoundedBorderStyle}" BorderThickness="0" Background="white" Padding="10" CornerRadius="10,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Excel button -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Show text -->
                                <ColumnDefinition Width="75"/>
                                <!-- ComboBox fixed width -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Icon buttons -->
                                <ColumnDefinition Width="*"/>
                                <!-- Spacer -->
                                <ColumnDefinition Width="250"/>
                                <!-- Search box fixed width -->
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Style="{StaticResource RoundedButtonStyle}" Background="#456B2E" BorderThickness="0" Margin="0" >
                                    <materialDesign:PackIcon Kind="MicrosoftExcel" Width="25" Height="25" Foreground="White" Margin="25,0"/>
                                </Button>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                                <TextBlock Text="Show"
                                           FontFamily="Lexend"
                                           FontWeight="Medium"
                                           FontSize="13"
                                           Foreground="#474747"
                                           VerticalAlignment="Center"
                                           LineHeight="13"/>
                            </StackPanel>
                            <ComboBox x:Name="cboPageSize" Style="{StaticResource RoundedComboBoxStyle}" Grid.Column="2" VerticalAlignment="Center" Margin="0" Width="75">
                                <ComboBoxItem Content="10" IsSelected="true"/>
                                <ComboBoxItem Content="25"/>
                                <ComboBoxItem Content="50"/>
                                <ComboBoxItem Content="100"/>
                            </ComboBox>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Button Style="{StaticResource IconButton}" >
                                    <materialDesign:PackIcon Kind="ViewGridOutline" Width="21" Height="24"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}"  Margin="10,0,0,0">
                                    <materialDesign:PackIcon Kind="FormatListBulleted" Width="32" Height="24" RenderTransformOrigin="3.342,0.539"/>
                                </Button>
                            </StackPanel>
                            <!-- Spacer in Grid.Column="4" -->
                            <Border Grid.Column="5" Style="{StaticResource RoundedBorderStyle}" Width="250" Height="34" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="25"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Margin="20,0,0,0">
                                        <TextBox
                                            Name="txtSearch"
                                            Style="{StaticResource RoundedTextboxStyle}"
                                            VerticalAlignment="Center"
                                            FontFamily="Lexend"
                                            FontSize="12"
                                            FontWeight="Normal"
                                            Foreground="#474747"
                                        />
                                        <TextBlock
                                            Text="Search"
                                            IsHitTestVisible="False"
                                            Foreground="#AEAEAE"
                                            FontFamily="Lexend"
                                            FontSize="12"
                                            FontWeight="Normal"
                                            VerticalAlignment="Center"
                                            Margin="4,0,17,0"
                                            Padding="2,0,0,0"
                                            Visibility="{Binding Text.IsEmpty, ElementName=txtSearch, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        />
                                    </Grid>
                                    <materialDesign:PackIcon Kind="Magnify" Width="25" Height="20" Foreground="#AEAEAE" VerticalAlignment="Center" Margin="211,0,0,0" Grid.ColumnSpan="2"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- DataGrid Section - Scrollable Content -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="20,0">
                    <DataGrid Name="dataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowBackground="White"
                              AlternatingRowBackground="WhiteSmoke"
                              BorderThickness="0">
                        <DataGrid.Resources>
                            <Style TargetType="DataGrid">
                                <Setter Property="FontFamily" Value="Lexend"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="ColumnWidth" Value="*"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Margin" Value="0,5,0,5"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Height" Value="Auto"/>
                                <Setter Property="MinHeight" Value="40"/>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontFamily" Value="Lexend"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#474747"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="10,10"/>
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding SupplierID}" Width="120">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="#" Padding="25,0,0,0" />
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="120">
                                <DataGridTextColumn.Header>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-30,0,0,0">
                                        <TextBlock Text="Name" />
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="18" Height="18" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.Binding>
                                    <Binding Path="SupplierName"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding SupplierName}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="200">
                                <DataGridTextColumn.Header>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <TextBlock Text="Address" />
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="18" Height="18" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.Binding>
                                    <Binding Path="OfficeAddress"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding OfficeAddress}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="150">
                                <DataGridTextColumn.Header>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-10,0,0,0">
                                        <TextBlock Text="Email" />
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="18" Height="18" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.Binding>
                                    <Binding Path="SupplierEmail"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding SupplierEmail}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="120">
                                <DataGridTextColumn.Header>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-10,0,0,0">
                                        <TextBlock Text="Phone" />
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="18" Height="18" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.Binding>
                                    <Binding Path="SupplierPhone"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Width="120">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Settings" Margin="40,0,0,0"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="âš™" Width="30" Height="30" Background="Transparent" Margin="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>

                <!-- Pagination Section - Fixed at bottom -->
                <StackPanel x:Name="paginationPanel" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,20">
                    <!-- Pagination controls will be added here programmatically -->
                </StackPanel>
            </Grid>

            <!-- New Grid Section (placed below mainGrid) -->
            <Grid Margin="20,-30,20,0" Height="60" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Extra column for buttons and popup -->
                </Grid.ColumnDefinitions>
                <!-- # Column -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Border Width="15" Height="15" Background="white"  BorderBrush="black" BorderThickness="1" Margin="20,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <TextBlock Text="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Foreground="#474747" Margin="10,0,0,0"/>
                </StackPanel>
                <!-- Name Column -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <materialDesign:PackIcon Kind="AccountCircle" Width="32" Height="32" Foreground="black" Margin="-30,0,0,0"/>
                    <TextBlock Text="Eli Clark" FontWeight="SemiBold" FontSize="15" VerticalAlignment="Center" Foreground="#474747" Margin="5,0,0,0"/>
                </StackPanel>
                <!-- Address Column -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="OLatus, Manor" FontWeight="SemiBold" FontSize="13" Foreground="#474747" Margin="10,0,0,0"/>
                    <TextBlock Text="Brgy something" FontSize="13" FontWeight="SemiBold" Foreground="#474747" TextWrapping="Wrap" Margin="10,-3,0,0"/>
                </StackPanel>
                <!-- Email Column -->
                <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="example@gmail.com" FontSize="14" Foreground="#474747" Margin="-10,0,0,0"/>
                </StackPanel>
                <!-- Phone Column -->
                <StackPanel Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="+64xxxxxxxxx" FontSize="14" Foreground="#474747" Margin="-10,0,0,0"/>
                </StackPanel>
                <!-- Settings Column -->
                <StackPanel Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Left" >
                    <!-- Empty or add icon if needed -->
                </StackPanel>
                <!-- Button bar and pop-out inside the grid -->
                <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-30,0,0,0">
                    <Button Style="{StaticResource IconButton}" Margin="0,0,5,0">
                        <materialDesign:PackIcon Kind="Eye" Width="24" Height="24" Foreground="#33ABE4"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Margin="0,0,5,0">
                        <materialDesign:PackIcon Kind="SquareEditOutline" Width="24" Height="24" Foreground="#E5AD52"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Margin="0,0,5,0">
                        <materialDesign:PackIcon Kind="Delete" Width="24" Height="24" Foreground="#C72727"/>
                    </Button>
                    <Button x:Name="BtnPopout" Style="{StaticResource IconButton}" Margin="0,0,5,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Rectangle Width="2" Height="24" Fill="#D9D9D9" VerticalAlignment="Center"/>
                            <materialDesign:PackIcon Kind="ChevronDown" Width="24" Height="24" Foreground="#D9D9D9" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Add 5 new empty grids below, matching the same size and columns -->
            <Grid Margin="20,5,20,0" Height="60" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid Margin="20,5,20,0" Height="60" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid Margin="20,5,20,0" Height="60" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid Margin="20,5,20,0" Height="60" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid Margin="20,5,20,0" Height="60" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <!-- Add this new grid at the bottom of your StackPanel, after the last existing grid -->
            <Border Margin="20,5,20,20" Height="40" Background="White" CornerRadius="0,0,15,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- You can add content here as needed -->
                </Grid>
            </Border>
        </StackPanel>

        <!-- Overlay pop-out absolutely, so it does not push content down -->
        <Border
            Width="123"
            Height="98"
            CornerRadius="10"
            Background="White"
            BorderBrush="#D9D9D9"
            BorderThickness="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="0,240,-30,0"
            Panel.ZIndex="100">
            <Border.Effect>
                <DropShadowEffect Color="#40000000" BlurRadius="16" ShadowDepth="4" Opacity="1"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center" Margin="10,8,10,8">
                <StackPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Margin" Value="0,0,0,6"/>
                    </Style>
                </StackPanel.Resources>
                <!-- Email -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                    <materialDesign:PackIcon Kind="EmailMultipleOutline" Width="20" Height="20" Foreground="#555555" VerticalAlignment="Center"/>
                    <TextBlock Text="Email"
                               FontFamily="Lexend"
                               FontWeight="Normal"
                               FontSize="14"
                               Foreground="#555555"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"
                               LineHeight="14"
                               />
                </StackPanel>
                <!-- Message -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                    <materialDesign:PackIcon Kind="MessageOutline" Width="20" Height="20" Foreground="#555555" VerticalAlignment="Center"/>
                    <TextBlock Text="Message"
                               FontFamily="Lexend"
                               FontWeight="Normal"
                               FontSize="14"
                               Foreground="#555555"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"
                               LineHeight="14"
                               />
                </StackPanel>
                <!-- User Group / Delete All -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="AccountMultipleOutline" Width="20" Height="20" Foreground="#555555" VerticalAlignment="Center"/>
                    <TextBlock Text="Delete All"
                               FontFamily="Lexend"
                               FontWeight="Normal"
                               FontSize="14"
                               Foreground="#555555"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"
                               LineHeight="14"
                               />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- New Canvas for absolute positioning -->
        <Canvas/>
    </Grid>
</UserControl>