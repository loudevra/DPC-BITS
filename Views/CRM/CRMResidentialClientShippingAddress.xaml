<UserControl x:Class="DPC.Views.CRM.CRMResidentialShippingAddress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers.ManageSuppliers"
        mc:Ignorable="d"
        Background="#D9D9D9">

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header Section -->
            <RowDefinition Height="Auto"/>
            <!-- Options Bar -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid Section -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination Section -->
        </Grid.RowDefinitions>

        <!-- Main Content for Personal Information -->
        <StackPanel Grid.Row="2" Margin="20,20,20,20" Width="800">

            <CheckBox Content="Same As Billing" Margin="0,0,0,5" FontFamily="Lexend" Foreground="#474747" FontWeight="Bold"/>
            <TextBlock Text="Please leave Shipping Address blank if you do not want to print it on the invoice"  FontFamily="Lexend" Foreground="#474747" TextWrapping="Wrap" Width="240" HorizontalAlignment="Left"/>
            <!-- Form Content -->
            <StackPanel>
                

                <TextBlock Text="Address:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                <Border Style="{StaticResource RoundedBorderStyle}" Width="772">
                    <TextBox x:Name="txtAddress" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"/>
                </Border>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                        <!-- Spacing -->
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                        <!-- Spacing -->
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- City -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="City:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                        <ComboBox x:Name="cmbCity" Style="{StaticResource RoundedComboBoxStyle}" Width="245" Height="40" SelectedIndex="0" Margin="0">
                        </ComboBox>
                    </StackPanel>

                    <!-- Region -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Region:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                        <ComboBox x:Name="cmbRegion" Style="{StaticResource RoundedComboBoxStyle}" Width="245" Height="40" SelectedIndex="0" Margin="0">
                        </ComboBox>
                    </StackPanel>

                    <!-- Country -->
                    <StackPanel Grid.Column="3" Grid.ColumnSpan="2" Margin="0,0,19,0">
                        <TextBlock Text="Country:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                        <ComboBox x:Name="cmbCountry" Style="{StaticResource RoundedComboBoxStyle}" Width="245" Height="40" SelectedIndex="0" Margin="0">
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Zip Code -->
                <TextBlock Text="ZIP Code:" Margin="0,5,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                <Border Style="{StaticResource RoundedBorderStyle}" Width="772">
                    <TextBox x:Name="txtZipCode" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"/>
                </Border>
            </StackPanel>

            <!-- Submit Button -->
            <Button x:Name="btnAddEmployee" Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center"  Margin="0,10,0,15">
                <Border CornerRadius="10" Background="#52C69D">
                    <Button Width="Auto" HorizontalContentAlignment="Right" BorderThickness="0" Background="Transparent" >
                        <StackPanel Width="Auto"  Orientation="Horizontal">
                            <TextBlock Text="Add" FontFamily="{StaticResource Lexend}" Foreground="White" VerticalAlignment="Center" Margin="30,1"/>
                        </StackPanel>
                    </Button>
                </Border>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>