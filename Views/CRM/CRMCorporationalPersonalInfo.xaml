<UserControl x:Class="DPC.Views.CRM.CRMCorporationalPersonalInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers.ManageSuppliers"
        mc:Ignorable="d"
        Background="#D9D9D9">

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header Section -->
            <RowDefinition Height="Auto"/>
            <!-- Options Bar -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid Section -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination Section -->
        </Grid.RowDefinitions>

        <!-- Main Content for Personal Information -->
        <StackPanel Grid.Row="2" Margin="20,20,20,20" Width="800">
            <!-- Form Content -->
            <StackPanel>
                <!-- Company Name -->
                <TextBlock Text="Company Name:" Margin="0,5,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                <Border Style="{StaticResource RoundedBorderStyle}" Width="772">
                    <TextBox x:Name="txtCompanyName" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"  FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                </Border>

                <!-- Representative -->
                <TextBlock Text="Representative:" Margin="0,5,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                <Border Style="{StaticResource RoundedBorderStyle}" Width="772">
                    <TextBox x:Name="txtRepresentative" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"  FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                </Border>

                <!-- Phone -->
                <TextBlock Text="Phone:" Margin="0,5,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                <Border Style="{StaticResource RoundedBorderStyle}" Width="772">
                    <TextBox x:Name="txtPhone" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"  FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                </Border>

                <!-- Landline -->
                <TextBlock Text="Landline:" Margin="0,5,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                <Border Style="{StaticResource RoundedBorderStyle}" Width="772">
                    <TextBox x:Name="txtLandline" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"  FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                </Border>

                <!-- Email -->
                <TextBlock Text="Email:" Margin="0,5,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                <Border Style="{StaticResource RoundedBorderStyle}" Width="772">
                    <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"  FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                </Border>

            </StackPanel>

            <!-- Submit Button -->
            <StackPanel Margin="20">
                <Button Click="AddClient" x:Name="btnAdd" Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center">
                    <Border CornerRadius="20" Background="#52C69D" Height="40" Width="150">
                        <TextBlock Text="Add" FontFamily="{StaticResource Lexend}" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>