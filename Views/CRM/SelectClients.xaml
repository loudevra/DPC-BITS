<UserControl x:Class="DPC.Views.CRM.SelectClients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="Auto" Background="Transparent">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="24,16,0,0" VerticalAlignment="Top">
            <!-- AccountPlus Icon -->
            <materialDesign:PackIcon Kind="AccountPlus" Width="28" Height="28" Foreground="#474747" Margin="0,0,6,0"/>
            <TextBlock Text="Select Client" FontWeight="SemiBold" FontSize="22" Foreground="#474747"/>
        </StackPanel>

        <!-- Subheader -->
        <TextBlock Grid.Row="1" Text="Select what type of client you want to add." FontSize="14" Margin="24,8,0,0" FontWeight="SemiBold" Foreground="#474747"/>

        <!-- Client Types -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0" >
            <!-- Residential as Button -->
            <Button x:Name="ResidentialButton" Width="230" Height="230" Margin="0,0,20,0"
                    Background="White"
                    BorderBrush="#AEAEAE"
                    BorderThickness="2"
                    Cursor="Hand"
                    Padding="0"
                    Style="{x:Null}"
                    Click="ResidentialCard_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Viewbox Width="70" Height="70" Margin="0,32,0,0">
                                    <materialDesign:PackIcon Kind="Home" Width="64" Height="64" Foreground="#AEAEAE"/>
                                </Viewbox>
                                <TextBlock Text="Residential" FontSize="20" Foreground="#AEAEAE" FontWeight="SemiBold" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Corporational as Button (Selected) -->
            <Button x:Name="CorporationalButton" Width="230" Height="230" Margin="0"
                    Background="White"
                    BorderBrush="#333"
                    BorderThickness="3"
                    Cursor="Hand"
                    Padding="0"
                    Style="{x:Null}"
                    Click="CorporationalCard_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="12">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Viewbox Width="70" Height="70" Margin="0,32,0,0">
                                        <materialDesign:PackIcon Kind="OfficeBuilding" Width="64" Height="64" Foreground="#555555"/>
                                    </Viewbox>
                                    <TextBlock Text="Corporate" FontSize="20" Foreground="#555555" FontWeight="SemiBold" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <!-- Checkmark -->
                            <Ellipse Width="53" Height="54" Fill="#444" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,-15"/>
                            <Path Width="40" Height="40"
                                  Stroke="White"
                                  StrokeThickness="5"
                                  StrokeEndLineCap="Round"
                                  StrokeStartLineCap="Round"
                                  Data="M10,22 L18,30 L30,12"
                                  VerticalAlignment="Bottom"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,-10"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- Continue Button -->
        <Button Grid.Row="3"
        Click="ContinueButton_Click"
        Content="Continue"
        Width="140" Height="38" Margin="0,24,0,0"
        HorizontalAlignment="Center"
        FontSize="16"
        Background="#444"
        Foreground="White"
        BorderBrush="Transparent">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    CornerRadius="20"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="10,0"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <!-- Link to POS -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,14,0,16">
            <TextBlock Text="Want to add a walk-in Client? " VerticalAlignment="Center" Foreground="#474747" FontWeight="SemiBold" FontSize="13"/>
            <TextBlock VerticalAlignment="Center" FontSize="13">
                <Hyperlink Foreground="#2B96CF" FontWeight="SemiBold" Click="NavigateToWalkInNewOrder">
                    Go to POS
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>