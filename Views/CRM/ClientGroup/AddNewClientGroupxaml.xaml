<UserControl x:Class="DPC.Views.CRM.ClientGroup.AddNewClientGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto"
             FontFamily="{StaticResource Lexend}"
             Background="Transparent">

    <materialDesign:Card Width="450" Padding="20" Background="White"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            UniformCornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="AccountPlus" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#474747"/>
                <TextBlock FontSize="22" Foreground="#474747" FontWeight="Bold" Text="Add New Client Group" Margin="0,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <!--Group Name-->
            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Group Name:" Foreground="#555555" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,20">
                    <TextBox x:Name="txtGroupName" Style="{StaticResource RoundedTextboxStyle}"/>
                </Border>
            </StackPanel>

            <!--Description-->
            <StackPanel Grid.Row="2">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Description:" Foreground="#555555" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,20">
                    <TextBox x:Name="txtDescription" Style="{StaticResource RoundedTextboxStyle}"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="3" HorizontalAlignment="Right">
                <Button Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Background="#52C69D" Width="120">
                    <TextBlock Text="Add Group" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FDFDFD" FontSize="15"/>
                </Button>
            </StackPanel>

        </Grid>
    </materialDesign:Card>
</UserControl>
