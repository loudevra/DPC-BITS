<UserControl x:Class="DPC.Views.Stocks.PurchaseOrder.NewOrder.BillingStatement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#D9D9D9">

    <UserControl.Resources>
        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

        <Style x:Key="ConvertButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="385*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Main Content -->
                    <StackPanel Grid.Row="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
                        <!-- Header Section -->
                        <StackPanel x:Name="BackBtn" Cursor="Hand" Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10">
                            <materialDesign:PackIcon Kind="ChevronLeft" Width="15" Height="20" Foreground="#555555" Margin="0,0,10,0"/>
                            <TextBlock Text="Invoice" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Background="White" CornerRadius="10,10, 0, 0">
                            <Grid Grid.Row="1"  Margin="0,0,0,0"  >

                                <!--view-->
                                <Border HorizontalAlignment="Right" CornerRadius="10,10,10, 0 " Background="White" >
                                    <Button Click="PrintPreview" Style="{StaticResource IconButton}">
                                        <StackPanel>
                                            <materialDesign:PackIcon Kind="FolderEyeOutline" Width="30" Height="30" Margin="10,10,10,0" Foreground="#555555"/>
                                            <TextBlock Text="View" FontSize="8" HorizontalAlignment="Center" Foreground="#555555"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                            </Grid>
                        </Border>
                        <StackPanel Grid.Row="1" Margin="0,0,0,0" >
                            <Border Height="1121.28" Background="White" CornerRadius="0,0,10,10"  BorderThickness="0" Padding="10">
                                <Grid>

                                    <Grid.Background>
                                        <ImageBrush ImageSource="/Assets/images/watermark.png" Opacity="0.1" Stretch="UniformToFill"/>
                                    </Grid.Background>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>

                                    </Grid.RowDefinitions>

                                    <!--Rectangle as line-->
                                    <Rectangle Grid.Row="0"
                                       Width="auto"
                                       Height="1" 
                                       Stroke="#AEAEAE"
                                       StrokeThickness="1"
                                       Fill="Transparent"
                                       VerticalAlignment="Top"
                                       Margin="10,0"/>

                                    <!--DPC Logo Side Bar-->
                                    <StackPanel Grid.Row="0" Height="Auto" Width="232" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,10,0,17" Background="White" Grid.RowSpan="2">
                                        <Image Source="/Assets/images/logosidebarBlack.png" Stretch="Fill" Width="234" Height="75"/>
                                    </StackPanel>
                                    <!--Billing Statement Label-->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                                        <TextBlock Text="PURCHASE ORDER" FontWeight="SemiBold" FontFamily="Lexend" FontSize="15" Foreground="#090909" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!--Invoice and Date-->
                                    <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="PO #:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <Border Background="White" BorderThickness="0.5,0.5,0.5,0.25"  BorderBrush="#090909" Padding="5,0" Width="130" Margin="10,0,0,0">
                                                <TextBlock x:Name="InvoiceNumber" FontSize="12"/>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <Border Background="White" BorderThickness="0.5,0.25,0.5,0.5" BorderBrush="#090909" Padding="5,0" Width="130" Margin="10,0,0,0">
                                                <TextBlock x:Name="InvoiceDate" FontSize="12"/>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Due Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <Border Background="White" BorderThickness="0.5,0.25,0.5,0.5" BorderBrush="#090909" Padding="5,0" Width="130" Margin="10,0,0,0">
                                                <TextBlock x:Name="DueDate" FontSize="12"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--DreamPC's Info-->
                                    <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,5">
                                            <TextBlock Text="Bill from:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <!--Info-->
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                                            <TextBlock Text="Dream PC Build and I.T Solutions Inc" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock Text="Unit 2A and 2B Legenda Building " FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock Text="Circumferential RD Antipolo, Philippines" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock Text="Phone No: +63 917 187 3722" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock  Text="information@dreampcbuild.com" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock  Text="dreampcbuild.com" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock  Text="Tel No: 02 880 14252" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--Customers' Info-->
                                    <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,5">
                                            <TextBlock Text="Bill to:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <!--Info-->
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                                            <TextBlock x:Name="SupplierNameBox" Text="Eli Clark" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="AddressLineOne" Text="Wales, Swansea" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="AddressLineTwo" Text="United Kingdom" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="PhoneBox" Text="+63966634982" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="EmailBox" Text="brookerose@gmail.com" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>


                                    <Border BorderThickness="1,0" BorderBrush="Black" Grid.Row="4" Margin="5,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <!-- Column Header-->
                                        <Border Grid.Row="0" Grid.Column="0" Height="20" VerticalAlignment="Center" Background="Black" Padding="10,0,0,0">
                                            <TextBlock Height="10" Text="Prepared by:" Foreground="#FDFDFD" FontSize="10" FontWeight="SemiBold" FontFamily="{StaticResource Lexend}"/>
                                        </Border>
                                        <Border Grid.Row="0" Grid.Column="1" Height="20" VerticalAlignment="Center" Background="Black" Padding="10,0,0,0">
                                            <TextBlock Height="10" Text="Approved by:" Foreground="#FDFDFD" FontSize="10" FontWeight="SemiBold" FontFamily="{StaticResource Lexend}"/>
                                        </Border>
                                        <Border Grid.Row="0" Grid.Column="2" Height="20" VerticalAlignment="Center" Background="Black" Padding="10,0,0,0">
                                            <TextBlock Height="10" Text="Payment Terms:" Foreground="#FDFDFD" FontSize="10" FontWeight="SemiBold" FontFamily="{StaticResource Lexend}"/>
                                        </Border>

                                        <!-- Row Items -->
                                        <Border Grid.Row="1" Grid.Column="0" Height="20" VerticalAlignment="Center" Padding="10,0,0,0">
                                            <TextBlock x:Name="SalesRep" Height="10" Text="Prepared by:" Foreground="#090909" FontSize="10" FontFamily="{StaticResource Lexend}"/>
                                        </Border>
                                        <Border Grid.Row="1" Grid.Column="1" Height="20" VerticalAlignment="Center" >
                                                <ComboBox x:Name="cmbApproved" FontSize="10">
                                                    <ComboBoxItem Content="Alecksandra Balingit"/>
                                                    <ComboBoxItem Content="Parvit Kumar"/>
                                                </ComboBox>
                                            </Border>
                                        <Border Grid.Row="1" Grid.Column="2" Height="20" VerticalAlignment="Center" >
                                                <ComboBox x:Name="cmbTerms" FontSize="10">
                                                <ComboBoxItem Content="Cash"/>
                                                <ComboBoxItem Content="7 Days PDC"/>
                                                <ComboBoxItem Content="14 Days PDC"/>
                                                <ComboBoxItem Content="30 Days PDC"/>
                                                <ComboBoxItem>
                                                    <Grid Width="230">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Custom:" Margin="5,0"/>
                                                        <TextBox Grid.Column="1" x:Name="CustomTerms"/>
                                                    </Grid>
                                                </ComboBoxItem>
                                            </ComboBox>
                                        </Border>



                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                    </Border>

                                    <!--Bill Info-->
                                    <DataGrid Grid.Row="5" Margin="5,0"
                                                  x:Name="dataGrid"
                                                  IsReadOnly="True"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  HeadersVisibility="Column"
                                                  GridLinesVisibility="None"
                                                  Background="Transparent"
                                                  RowBackground="Transparent"
                                                 BorderThickness="1, 1, 1, 0"
                                                    BorderBrush="Black">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                            <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="100"/>
                                            <DataGridTextColumn Header="Line Price" Binding="{Binding LinePrice}" Width="100"/>
                                        </DataGrid.Columns>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Setter Property="FontFamily" Value="Lexend"/>
                                                <Setter Property="FontSize" Value="8"/>
                                                <Setter Property="Margin" Value="0,2,0,2"/>
                                                <Setter Property="Padding" Value="2"/>
                                                <Setter Property="Height" Value="Auto"/>
                                                <Setter Property="MinHeight" Value="15"/>
                                            </Style>
                                        </DataGrid.RowStyle>

                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="FontFamily" Value="Lexend"/>
                                                <Setter Property="FontSize" Value="10"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="Foreground" Value="#FDFDFD"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                <Setter Property="Padding" Value="10,5"/>
                                                <Setter Property="Background" Value="#090909"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>

                                        <DataGrid.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Padding" Value="5,2"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="DataGridCell">
                                                            <Border Padding="{TemplateBinding Padding}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                                    Background="{TemplateBinding Background}">
                                                                <ContentPresenter VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                                <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                            </Style>
                                        </DataGrid.CellStyle>
                                    </DataGrid>


                                    <StackPanel Grid.Row="6">
                                        <!--Customer Confirmation -->
                                        <Border Height="70" BorderBrush="#090909" BorderThickness="1" Margin="5,0,5,0" Padding="0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--Signature-->
                                                <Border Grid.Column="0" BorderBrush="#090909" Background="White" BorderThickness="0,0,1,0">
                                                    <TextBlock FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="4">
            PRINTED NAME AND SIGNATURE
                                                    </TextBlock>
                                                </Border>

                                                <!--Upload Signature-->
                                                <Border x:Name="BrowseFile" Cursor="Hand" Background="White" Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                            <materialDesign:PackIcon Kind="TrayUpload" Width="12" Height="12" Foreground="#555555" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                            <TextBlock Text="Upload Signature (.png, .jpeg) " FontWeight="Bold" FontFamily="Lexend" FontSize="8" Foreground="#AEAEAE" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                                            <Border  BorderBrush="#AEAEAE" BorderThickness="1" Padding="1" Width="50" CornerRadius="5">
                                                                <TextBlock Text="Browse" FontWeight="Bold" FontFamily="Lexend" FontSize="8" Foreground="#AEAEAE" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>

                                                <!--Total Cost Section-->
                                                <Border Grid.Column="2">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>

                                                        <Border Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                                            <StackPanel>
                                                                <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                    <TextBlock Text="DELIVERY" FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                                </Border>
                                                                <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                    <TextBlock Text="SUBTOTAL VAT EX." FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                                </Border>
                                                                <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                                    <TextBlock Text="TOTAL COST" FontWeight="Bold" FontFamily="Lexend" FontSize="14" Foreground="#C75757" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                                </Border>
                                                            </StackPanel>
                                                        </Border>
                                                        <StackPanel Grid.Column="1">
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBox  x:Name="Delivery" Text="₱ 0.00" FontWeight="SemiBold" BorderThickness="0" FontFamily="Lexend" FontSize="11" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Tax" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                                <TextBlock x:Name="TotalCost" Text="₱ 0.00" FontWeight="Bold" FontFamily="Lexend" FontSize="14" Foreground="#C75757" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!--Notes-->
                                        <Border BorderBrush="#090909" Height="50" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0,3">
                                            <DockPanel>
                                                <TextBlock Text="Notes:" Margin="2,0,5,0" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" />
                                                <TextBlock x:Name="noteBox" MouseLeftButtonUp="TextEditorPopOut" FontSize="8" Foreground="Black" TextWrapping="Wrap"/>
                                            </DockPanel>
                                        </Border>
                                        <!--Remarks-->
                                        <StackPanel Visibility="Collapsed">
                                            <Border BorderBrush="#090909" Height="20" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0,3">
                                                <DockPanel>
                                                    <TextBlock Text="Remarks:" Margin="2,0,5,0" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909"  />
                                                    <TextBlock x:Name="remarksBox"  MouseLeftButtonUp="TextEditorPopOut" FontSize="8" Foreground="Black" TextWrapping="Wrap"/>
                                                </DockPanel>
                                            </Border>

                                            <Border BorderBrush="#090909" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0,1">
                                                <TextBlock Text="TERMS" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909"/>
                                            </Border>

                                            <Border BorderBrush="#090909"  BorderThickness="1, 0, 1, 1" Margin="5,0,5,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>

                                                    <Border Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                                        <StackPanel>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock Text="For CASH payments:" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term1" MouseLeftButtonUp="TextEditorPopOut" Text="50% upon ordering" TextAlignment="Center"  FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term2" MouseLeftButtonUp="TextEditorPopOut"  Text="30% upon delivery" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term3" MouseLeftButtonUp="TextEditorPopOut" Text="20% upon completion" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                                <TextBlock x:Name="Term4" MouseLeftButtonUp="TextEditorPopOut" Text="Progress billing remaining balance (for bulk orders)" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </Border>
                                                    <Border Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                                        <StackPanel>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock Text="For CHEQUES payment:" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term5" MouseLeftButtonUp="TextEditorPopOut" Text="Order will process upon clearance of cheque" TextAlignment="Center"  FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term6" MouseLeftButtonUp="TextEditorPopOut" Text="Any additional orders will be charged seperately" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term7" MouseLeftButtonUp="TextEditorPopOut" Text="No return after installation" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                                <TextBlock x:Name="Term8" MouseLeftButtonUp="TextEditorPopOut" Text="" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </Border>
                                                    <Border Grid.Column="2" BorderBrush="#090909" BorderThickness="0,0,0,0">
                                                        <StackPanel>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock Text="For out of town projects:" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term9" MouseLeftButtonUp="TextEditorPopOut" Text="Additional delivery charges" TextAlignment="Center"  FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
