<UserControl x:Class="DPC.Views.Stocks.PurchaseOrder.NewOrder.NewOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="namespace:DPC.Views.Stocks.PurchaseOrder"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#D9D9D9" FontFamily="Lexend">

    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sticky Header - Bill From -->
        <StackPanel Grid.Row="0" Background="#D9D9D9" Orientation="Horizontal" Margin="25,10,0,0">
            <TextBlock Text="Bill From" FontWeight="SemiBold" FontFamily="Lexend" FontSize="25" Margin="0,0,10,0" Foreground="#474747" VerticalAlignment="Center"/>
            <Button x:Name="BtnAddSupplier" Style="{StaticResource RoundedButtonStyle}" Background="Transparent" Margin="0">
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <materialDesign:PackIcon Kind="AccountAdd" Foreground="#474747" Width="25" Height="25" Margin="0,0,5,0"/>
                    <TextBlock Text="Supplier" FontFamily="Lexend" Foreground="#474747" VerticalAlignment="Center" FontSize="17"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Style="{StaticResource ModernScrollViewerStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="25,10,25,10" Orientation="Vertical" Width="Auto">
                    <StackPanel Margin="0,50,0,5">
                        <TextBlock Text="Search Supplier:" FontFamily="Lexend" FontSize="14" Foreground="#474747"/>
                    </StackPanel>

                    <StackPanel>
                        <!-- TextBox + Popup -->
                        <Grid>
                            <!-- Text Input -->
                            <Border Style="{StaticResource RoundedBorderStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtSupplier" Grid.Column="0"
                                             Style="{StaticResource RoundedTextboxStyle}" Margin="20,0,0,0"
                                             VerticalAlignment="Top" />
                                    <materialDesign:PackIcon Grid.Column="1" Kind="Search" Foreground="Black" Width="24" Height="24" Margin="0,0,5,0" VerticalAlignment="Center"/>

                                </Grid>
                            </Border>

                            <!-- Popup with ListBox -->
                            <Popup x:Name="AutoCompletePopup"
                               PlacementTarget="{Binding ElementName=TxtSupplier}"
                               Placement="Bottom"
                               StaysOpen="False"
                               IsOpen="False"
                               AllowsTransparency="True"
                               PopupAnimation="Fade">
                                <Border Background="White"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        MaxHeight="150"
                                        Width="{Binding ElementName=TxtItem, Path=ActualWidth}">
                                    <ListBox x:Name="LstItems">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SupplierName}" FontWeight="SemiBold" Padding="0,0,5,0"/>
                                                        <TextBlock Text="-" Padding="0,0,5,0"/>
                                                        <TextBlock Text="{Binding SupplierEmail}" Foreground="#0066CC" FontStyle="Italic"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding SupplierCompany}" Foreground="Gray" FontSize="12" Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                            </Popup>
                        </Grid>
                    </StackPanel>


                    <StackPanel Margin="0,5,0,5">
                        <TextBlock Text="Supplier Details:"  FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,0,5"/>
                        <Grid Width="Auto" HorizontalAlignment="Stretch">
                            <!-- Border with lower ZIndex -->
                            <Border Style="{StaticResource RoundedBorderStyle}"/>

                            <!-- TextBox on top -->
                            <TextBox x:Name="TxtSupplierDetails" Style="{StaticResource RoundedTextboxStyle}" Width="Auto" Height="130" Margin="10,5" VerticalContentAlignment="Top" IsReadOnly="True"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel  Margin="0,5,0,0">
                        <TextBlock Text="Warehouse:" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,0,5"/>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Stretch" Width="Auto">
                        <ComboBox SelectedIndex="0" Style="{StaticResource RoundedComboBoxStyle}" Width="Auto" x:Name="ComboBoxWarehouse">
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1"  Margin="25,10,0,10" Orientation="Vertical">
                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="20" Background="White"
                Padding="20,15,10,15" Margin="10,10,40,10" Height="360">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Style="{StaticResource ModernScrollViewerStyle}">
                            <StackPanel Background="#FDFDFD">
                                <StackPanel>
                                    <TextBlock Text="Purchase Order" FontFamily="Lexend" FontSize="25" Foreground="#474747" Margin="0,0,0,25"/>

                                    <TextBlock Text="Invoice Number:" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,0,5"/>
                                    <Border Style="{StaticResource RoundedBorderStyle}" Width="Auto" Margin="0,0,10,10" Padding="0,1">
                                        <TextBox x:Name="InvoiceNumber" IsReadOnly="True" Style="{StaticResource RoundedTextboxStyle}"/>
                                    </Border>

                                    <TextBlock Text="Order Date:" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,0,5"/>
                                    <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,10,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width=".15*"/>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Order Date -->
                                            <DatePicker x:Name="OrderDatePicker"
                                                        Style="{StaticResource SingleDatePickerStyle}"
                                                        SelectedDate="{Binding OrderDate.SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                            <materialDesign:PackIcon Grid.Column="0" Kind="Calendar" Width="25" Height="25" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>

                                            <Button Grid.Column="1"
                                                        Style="{StaticResource DateButtonStyle}"
                                                        Click="OrderDate_Click"
                                                        Width="Auto"
                                                        Margin="10,0,25,0">
                                                <TextBlock Text="{Binding OrderDate.SelectedDate, StringFormat='MMM dd, yyyy'}"
                                                           Margin="0,0,5,0"
                                                           Foreground="#474747"
                                                           Height="14"/>
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <TextBlock Text="Order Due Date:" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,0,5"/>
                                    <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,10,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width=".15*"/>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Due Date -->
                                            <DatePicker x:Name="OrderDueDatePicker"
                                                        Style="{StaticResource SingleDatePickerStyle}"
                                                        SelectedDate="{Binding OrderDueDate.SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                            <materialDesign:PackIcon Grid.Column="0" Kind="Calendar" Width="25" Height="25" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>

                                            <Button Grid.Column="1"
                                                        Style="{StaticResource DateButtonStyle}"
                                                        Click="OrderDueDate_Click"
                                                        Width="Auto"
                                                        Margin="10,0,25,0">
                                                <TextBlock Text="{Binding OrderDueDate.SelectedDate, StringFormat='MMM dd, yyyy'}"
                                                           Margin="0,0,5,0"
                                                           Foreground="#474747"
                                                           Height="14"/>
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <TextBlock Text="Tax:" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,0,5"/>
                                    <StackPanel HorizontalAlignment="Stretch" Width="Auto" Margin="0,0,10,10">
                                        <ComboBox x:Name="Tax" SelectedIndex="0" Style="{StaticResource RoundedComboBoxStyle}" Width="Auto">
                                            <ComboBoxItem Content="Inclusive"/>
                                            <ComboBoxItem Content="Exclusive"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <TextBlock Text="Discount:" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,0,5"/>
                                    <StackPanel HorizontalAlignment="Stretch" Width="Auto" Margin="0,0,10,10">
                                        <ComboBox x:Name="Discount" SelectedIndex="0" Style="{StaticResource RoundedComboBoxStyle}" Width="Auto">
                                            <ComboBoxItem Content="% Discount After"/>
                                            <ComboBoxItem Content="Flat Discount After"/>
                                            <ComboBoxItem Content=" % Discount Before"/>
                                            <ComboBoxItem Content=" Flat Discount Before"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <TextBlock Text="Order Note:" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,0,0"/>

                                    <Border Style="{StaticResource RoundedBorderStyle}" Width="Auto" Margin="0,0,10,10" Padding="0,10,0,10" HorizontalAlignment="Stretch">
                                        <TextBox Style="{StaticResource RoundedTextboxStyle}" Height="130" VerticalContentAlignment="Top" TextWrapping="Wrap"/>

                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <StackPanel x:Name="TableGridPanel" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid Margin="25,10,40,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".3*"/>
                            <ColumnDefinition Width=".1*"/>
                            <ColumnDefinition Width=".1*"/>
                            <ColumnDefinition Width=".1*"/>
                            <ColumnDefinition Width=".1*"/>
                            <ColumnDefinition Width=".1*"/>
                            <ColumnDefinition Width=".1*"/>
                            <ColumnDefinition Width=".1*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.ColumnSpan="8" Background="#555555" Padding="15" CornerRadius="10,10,0,0" Margin="0,0,0,5" />

                        <TextBlock Text="Item Name" Grid.Row="0" Grid.Column="0" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="Quantity" Grid.Row="0" Grid.Column="1" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="Rate" Grid.Row="0" Grid.Column="2" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="Tax(%)" Grid.Row="0" Grid.Column="3" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="Tax" Grid.Row="0" Grid.Column="4" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="Discount" Grid.Row="0" Grid.Column="5" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="Amount" Grid.Row="0" Grid.Column="6" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="Action" Grid.Row="0" Grid.Column="7" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>

                </StackPanel>


                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Vertical">

                    <Button x:Name="btnAddRow" Cursor="Hand" Width="120" Height="35" HorizontalAlignment="Left" Margin="25,5,0,10" Background="#2E466B">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="PlaylistAdd" Foreground="white" Width="24" Height="24" Margin="0,0,5,0"/>
                                        <TextBlock Text="Row" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Vertical"  Margin="25,10,0,10">
                    <TextBlock Text="Payment Terms:"  FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,0,5"/>
                    <StackPanel HorizontalAlignment="Stretch" Width="Auto">
                        <ComboBox SelectedIndex="0" Style="{StaticResource RoundedComboBoxStyle}" Width="Auto">
                            <ComboBoxItem Content="Payment on Receipt"/>
                        </ComboBox>
                    </StackPanel>

                    <TextBlock Text="Update Stock:" FontFamily="Lexend" FontSize="14" Foreground="#474747"  Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Yes" IsChecked="True" GroupName="Choices" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,5,0"/>
                        <RadioButton Content="No" GroupName="Choices" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical"  Margin="25,10,0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Total Tax: " FontFamily="Lexend" FontSize="14" Foreground="#474747"/>
                        <TextBlock x:Name="TotalTax" Text="0" FontFamily="Lexend" FontSize="14" Foreground="#474747"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Total Discount: " FontFamily="Lexend" FontSize="14" Foreground="#474747"/>
                        <TextBlock x:Name="TotalDiscount" Text="0" FontFamily="Lexend" FontSize="14" Foreground="#474747"/>
                    </StackPanel>

                    <Grid>

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Vertical" Margin="30,20,20,10">
                    <Grid Width="Auto">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!--Payment Terms-->
                        <StackPanel Grid.Column="0" Orientation="Vertical" Width="350">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                <Button x:Name="btnAddRow"
 Style="{StaticResource ButtonStyle}" Background="#2E466B">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <materialDesign:PackIcon Kind="PlaylistAdd" Width="30" Height="30" Foreground="#FFFFFF" Margin="-15,0,5,0"/>
                                        <TextBlock Text="Row" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,5,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <!--Payment Terms Combo Box-->
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Payment Terms:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,20,5,10"/>
                                <ComboBox Style="{StaticResource RoundedComboBoxStyle}" Height="40" Width="Auto">
                                    <ComboBoxItem Content="" IsSelected="True"/>
                                    <ComboBoxItem Content=""/>
                                    <ComboBoxItem Content=""/>
                                    <ComboBoxItem Content=""/>
                                </ComboBox>
                            </StackPanel>
                            <TextBlock Text="Update Stock:" FontFamily="Lexend" FontSize="16" Foreground="#474747" FontWeight="SemiBold" Margin="0,20,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="Yes" IsChecked="True" GroupName="Choices" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="0,0,5,0"/>
                                <RadioButton Content="No" GroupName="Choices" FontFamily="Lexend" FontSize="14" Foreground="#474747" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>


                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Grand Total: " FontFamily="Lexend" FontSize="14" Foreground="#474747"/>
                        <TextBlock x:Name="TotalPrice" Text="0" FontFamily="Lexend" FontSize="14" Foreground="#474747"/>
                    </StackPanel>

                    <StackPanel>
                        <Button x:Name="btnGenerateOrder" Cursor="Hand" Width="90" Height="25" HorizontalAlignment="Left" Margin="0,0,0,0" Background="#1D5642">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="Proceed" VerticalAlignment="Center" FontFamily="Lexend" FontSize="12" Foreground="white"/>
                                        </StackPanel>

                        <!--Generate Invoice-->
                        <StackPanel Grid.Column="1" Orientation="Vertical" Width="Auto" HorizontalAlignment="Right" Margin="40,0,0,0">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="Total Tax:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                    <TextBlock Text="₱ 0" FontSize="16" VerticalAlignment="Center" FontWeight="Bold" Foreground="#090909" Margin="20,10,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="Total Discount:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                    <TextBlock Text="₱ 0" FontSize="16" VerticalAlignment="Center" FontWeight="Bold" Foreground="#090909"  Margin="20,10,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="Auto">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="Shipping:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                    <Border Background="White" BorderBrush="#474747" BorderThickness="1" Padding="1" Width="240" CornerRadius="20" Margin="20,10,0,0" Height="40">
                                        <TextBlock x:Name="txtShipping" Text="" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    </Border>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="Extra Discount:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                    <Border Background="White" BorderBrush="#474747" BorderThickness="1" Padding="1" Width="240" CornerRadius="20" Margin="20,10,0,0" Height="40">
                                        <TextBlock x:Name="txtExtraDiscount" Text="" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="Grand Total(₱):" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                    <Border Background="White" BorderBrush="#474747" BorderThickness="1" Padding="1" Width="240" CornerRadius="20" Margin="20,10,0,0" Height="40">
                                        <TextBlock x:Name="txtGrandTotal" Text="" FontWeight="SemiBold" FontFamily="Lexend" FontSize="10" Foreground="#474747" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button x:Name="btnGenerateOrder"
                                     Width="240"
                                     Style="{StaticResource ButtonStyle}" Background="#1D5642">
                                        <TextBlock Text="Generate Order" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,5,0"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>