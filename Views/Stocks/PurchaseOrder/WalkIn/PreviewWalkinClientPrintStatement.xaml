<UserControl x:Class="DPC.Views.Stocks.PurchaseOrder.WalkIn.PreviewWalkinClientPrintStatement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#D9D9D9"
        Loaded="PreviewWalkInPrintStatement_Loaded"
             >

    <UserControl.Resources>
        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

        <Style x:Key="ConvertButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="385*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Main Content -->
                    <StackPanel Grid.Row="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
                        <DockPanel LastChildFill="False" Margin="0,10,0,10">
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="0,0,10,0">
                                <Button Click="CancelButton" Content="Cancel"
                                        Margin="0,0,5,0"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        materialDesign:ButtonAssist.CornerRadius="20"
                                        Foreground="#AEAEAE"
                                        BorderBrush="#AEAEAE"
                                        FontWeight="SemiBold"   
                                        FontSize="16px"
                                        Width="90"
                                        Height="39"/>
                                <Button x:Name="SaveDb" Content="Save"
                                        Margin="0,0,5,0"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        materialDesign:ButtonAssist.CornerRadius="20"
                                        Foreground="White"
                                        FontWeight="SemiBold"   
                                        FontSize="16px"
                                        Width="80"
                                        Height="39"
                                        Background="#2E466B"/>

                                <Button Click="SavePrint" Content="Print"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        materialDesign:ButtonAssist.CornerRadius="20"
                                        Foreground="White"
                                        FontWeight="SemiBold"   
                                        FontSize="16px"
                                        Width="90"
                                        Height="39"
                                        Background="#2E466B"/>
                            </StackPanel>
                        </DockPanel>


                        <StackPanel x:Name="PrintPreview" Grid.Row="1">
                            <Border Height="1123" Background="White" CornerRadius="0,0,10,10" BorderThickness="0" Padding="10">
                                <Grid>
                                    <Image Source="/Assets/images/DREAMPCBUILD WATERMARK SLANTED SPACED.png" 
                                           Stretch="UniformToFill" 
                                           Opacity="0.1" 
                                           HorizontalAlignment="Stretch" 
                                           VerticalAlignment="Stretch" />
                                    <Grid Margin="40">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>

                                        </Grid.RowDefinitions>

                                        <!--DPC Logo Side Bar-->
                                        <StackPanel Grid.Row="0" Height="Auto" Width="232" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,10,0,17" Background="Transparent" Grid.RowSpan="2">
                                            <Image Source="/Assets/images/logosidebarBlack.png" Stretch="Fill" Width="234" Height="75"/>
                                        </StackPanel>
                                        <!--Billing Statement Label-->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                                            <TextBlock Text="BILLING STATEMENT" FontWeight="SemiBold" FontFamily="Lexend" FontSize="15" Foreground="#090909" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <!--Invoice and Date-->
                                        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="BL# :" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                <Border Background="Transparent" BorderThickness="0" Padding="5,0" Width="130" Margin="10,0,0,0">
                                                    <TextBlock x:Name="BillingNumber" />
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="Billing Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                <Border Background="Transparent" BorderThickness="0" Padding="5,0" Width="130" Margin="10,0,0,0">
                                                    <TextBlock x:Name="BillingDate" />
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="DR# :" FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                <Border Background="Transparent" BorderThickness="0" Padding="5,0" Width="130" Margin="10,0,0,0">
                                                    <TextBlock x:Name="txtDRNo" Text="" Foreground="Black" FontFamily="{StaticResource Lexend}"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>

                                        <!--Customers' Info-->
                                        <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                                            <!--Info-->
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="CLIENT NAME/COMPANY NAME: " FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                    <TextBlock x:Name="ClientNameBox" Text="" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock Text="CLIENT ADDRESS: " FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                    <TextBlock x:Name="ClientAddress" Text=""  FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock Text="CONTACT NUMBER: " FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                    <TextBlock x:Name="ClientContact" Text=""  FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock Text="COMPANY REPRESENTATIVE: " FontWeight="SemiBold" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                    <TextBox x:Name="CompanyRep" Text="" BorderThickness="0" Background="Transparent" MinWidth="100" FontFamily="Lexend" FontSize="12" Foreground="#090909" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>


                                        <!--DataGrid 1: Seller Info-->
                                        <Border BorderThickness="1,0" BorderBrush="Black" Grid.Row="4" Margin="5,0">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>

                                                <!-- Column Header-->
                                                <Border Grid.Row="0" Grid.Column="0" Height="20" VerticalAlignment="Center" Background="Black" Padding="10,0,0,0">
                                                    <TextBlock Height="10" Text="Sales Representative:" TextAlignment="Center" Foreground="#FDFDFD" FontSize="10" FontWeight="SemiBold" FontFamily="{StaticResource Lexend}"/>
                                                </Border>
                                                <Border Grid.Row="0" Grid.Column="1" Height="20" VerticalAlignment="Center" Background="Black" Padding="10,0,0,0">
                                                    <TextBlock Height="10" Text="Prepared by:" TextAlignment="Center" Foreground="#FDFDFD" FontSize="10" FontWeight="SemiBold" FontFamily="{StaticResource Lexend}"/>
                                                </Border>
                                                <Border Grid.Row="0" Grid.Column="2" Height="20" VerticalAlignment="Center" Background="Black" Padding="10,0,0,0">
                                                    <TextBlock Height="10" Text="Approved by:" TextAlignment="Center" Foreground="#FDFDFD" FontSize="10" FontWeight="SemiBold" FontFamily="{StaticResource Lexend}"/>
                                                </Border>
                                                <Border Grid.Row="0" Grid.Column="3" Height="20" VerticalAlignment="Center" Background="Black" Padding="10,0,0,0">
                                                    <TextBlock Height="10" Text="Payment Terms:"  TextAlignment="Center" Foreground="#FDFDFD" FontSize="10" FontWeight="SemiBold" FontFamily="{StaticResource Lexend}"/>
                                                </Border>

                                                <!-- Row Items -->
                                                <Border Grid.Row="1" Grid.Column="0" Height="25" VerticalAlignment="Center" Padding="10,0,0,0" >
                                                    <TextBlock x:Name="SalesRep" TextAlignment="Center" FontWeight="Bold" Height="11" Text="" Foreground="#090909" FontSize="11" FontFamily="{StaticResource Lexend}"/>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="1" Height="25" VerticalAlignment="Center" Padding="10,0,0,0"  BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBlock x:Name="PreparedBy" TextAlignment="Center" FontWeight="Bold" Height="11" Text="" Foreground="#090909" FontSize="11" FontFamily="{StaticResource Lexend}"/>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="2" Height="25" VerticalAlignment="Center"  BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBlock x:Name="cmbApproved" TextAlignment="Center" FontWeight="Bold" Height="11" Text="" Foreground="#090909" FontSize="11" FontFamily="{StaticResource Lexend}"/>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="3" Height="25" VerticalAlignment="Center" Background="Red"  BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBlock x:Name="cmbTerms" TextAlignment="Center" FontWeight="Bold" Height="11" Text="" Foreground="White" FontSize="11" FontFamily="{StaticResource Lexend}"/>
                                                </Border>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                            </Grid>
                                        </Border>


                                        <!--Bill Info-->
                                        <Border Grid.Row="5" BorderBrush="Black" BorderThickness="1" Margin="5,0,5,0">
                                            <StackPanel>
                                                <DataGrid Grid.Row="5"
                              x:Name="dataGrid"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="Transparent"
                              RowBackground="Transparent"
                              BorderThickness="0, 1, 0, 0"
                              BorderBrush="Black">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                                        <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="100"/>
                                                        <DataGridTextColumn Header="Line Price" Binding="{Binding LinePrice}" Width="100"/>
                                                    </DataGrid.Columns>
                                                    <DataGrid.RowStyle>
                                                        <Style TargetType="DataGridRow">
                                                            <Setter Property="FontFamily" Value="Lexend"/>
                                                            <Setter Property="FontSize" Value="8"/>
                                                            <Setter Property="Margin" Value="0,2,0,2"/>
                                                            <Setter Property="Padding" Value="2"/>
                                                            <Setter Property="Height" Value="Auto"/>
                                                            <Setter Property="MinHeight" Value="15"/>
                                                        </Style>
                                                    </DataGrid.RowStyle>

                                                    <DataGrid.ColumnHeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="FontFamily" Value="Lexend"/>
                                                            <Setter Property="FontSize" Value="10"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                            <Setter Property="Foreground" Value="#FDFDFD"/>
                                                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                            <Setter Property="Padding" Value="10,5"/>
                                                            <Setter Property="Background" Value="#090909"/>
                                                        </Style>
                                                    </DataGrid.ColumnHeaderStyle>

                                                    <DataGrid.CellStyle>
                                                        <Style TargetType="DataGridCell">
                                                            <Setter Property="Padding" Value="5,2"/>
                                                            <Setter Property="FontSize" Value="12"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="DataGridCell">
                                                                        <Border Padding="{TemplateBinding Padding}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    Background="{TemplateBinding Background}">
                                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                                            <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                                        </Style>
                                                    </DataGrid.CellStyle>


                                                </DataGrid>
                                                <StackPanel Margin="5,0,5,0" Orientation="Vertical" HorizontalAlignment="Center">
                                                    <Border Background="Transparent" Padding="10" CornerRadius="5">
                                                        <TextBlock Text="*............................................... Nothing to follow ...............................................*"
       FontFamily="Lexend"
       FontSize="10"
       FontWeight="Bold"
       Foreground="Black"
       HorizontalAlignment="Center"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>




                                        <StackPanel Grid.Row="6">
                                            <!--Customer Confirmation -->
                                            <Border Grid.Row="6" BorderBrush="#090909" BorderThickness="1" Margin="5,0,5,0" Padding="0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <!--Signature-->
                                                    <Border Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                                        <TextBlock FontWeight="SemiBold" FontFamily="Lexend" Text="CLIENT PRINTED NAME AND SIGNATURE" FontSize="12" Foreground="#090909" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" TextWrapping="Wrap" TextAlignment="Center"/>
                                                    </Border>

                                                    <!--Upload Signature-->
                                                    <Border x:Name="BrowseFile" Background="Transparent" Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                <materialDesign:PackIcon Kind="TrayUpload" Width="12" Height="12" Foreground="#555555" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                <TextBlock Text="Upload Signature (.png, .jpeg) " FontWeight="Bold" FontFamily="Lexend" FontSize="8" Foreground="#AEAEAE" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                                                <Border  BorderBrush="#AEAEAE" BorderThickness="1" Padding="1" Width="50" CornerRadius="5">
                                                                    <TextBlock Text="Browse" FontWeight="Bold" FontFamily="Lexend" FontSize="8" Foreground="#AEAEAE" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                <TextBlock Text="By signing the document, you confirm that the billing amount is&#x0a;accurate and corresponds to your additional terms or services"  FontWeight="Bold" FontFamily="Lexend" FontSize="8" TextAlignment="Center" Foreground="Red" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Border>

                                                    <!--Total Cost Section-->
                                                    <Border Grid.Column="2">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <!-- Row 0 -->
                                                            <Border Grid.Row="0" Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                                <TextBlock Text="SUBTOTAL VAT EX." FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border Grid.Row="0" Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Subtotal" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" Margin="5,0,5,0"/>
                                                            </Border>

                                                            <!-- Row 1 -->
                                                            <Border Grid.Row="1" Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                                <TextBlock Text="DELIVERY CHARGE" FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border Grid.Row="1" Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1" Background="Transparent">
                                                                <TextBox x:Name="Delivery" IsReadOnly="True" BorderThickness="0" FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" Margin="5,0,5,0"/>
                                                            </Border>

                                                            <!-- Row 2 -->
                                                            <Border Grid.Row="2" Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                                <TextBlock Text="INSTALLATION FEE" FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border Grid.Row="2" Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1"  Background="Transparent">
                                                                <TextBox x:Name="Installation" IsReadOnly="True" BorderThickness="0" FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" Margin="5,0,5,0"/>
                                                            </Border>

                                                            <!-- Row 3 -->
                                                            <Border Grid.Row="3" Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                                <TextBlock Text="VAT 12%" FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border Grid.Row="3" Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1"  Background="Transparent">
                                                                <TextBox x:Name="VAT12" Text="₱ 0.00" IsReadOnly="True" BorderThickness="0" FontWeight="SemiBold" FontFamily="Lexend" FontSize="11" Foreground="#090909" Margin="5,0,5,0"/>
                                                            </Border>

                                                            <!-- Row 4 -->
                                                            <Border Grid.Row="4" Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,0" Padding="1" Height="30">
                                                                <TextBlock Text="TOTAL COST" FontWeight="Bold" FontFamily="Lexend" Foreground="#C75757" Margin="5,0,5,0" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <Border Grid.Row="4" Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                                <TextBlock x:Name="TotalCost" Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#C75757" Margin="5,0,5,0"  VerticalAlignment="Center"/>
                                                            </Border>
                                                        </Grid>
                                                    </Border>

                                                </Grid>
                                            </Border>

                                            <!--Notes-->
                                            <Border BorderBrush="#090909" Height="50" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0,3">
                                                <DockPanel>
                                                    <TextBlock Text="Notes:" Margin="2,0,5,0" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909" />
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock Text="Bank Detail: " FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="Green" Width="Auto"/>
                                                        <TextBlock Text="Acc. Name: " FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="Green" Width="Auto"/>
                                                        <TextBlock Text="Acc. No: " FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="Green" Width="Auto"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock x:Name="BankDetailBox" FontSize="8" Foreground="Green" Margin="0,-1,0,0"/>
                                                        <TextBlock x:Name="AccNameBox" FontSize="8" Foreground="Green" Margin="0,-1,0,0"/>
                                                        <TextBlock x:Name="AccNoBox" FontSize="8" Foreground="Green" Margin="0,-1,0,0"/>
                                                    </StackPanel>
                                                </DockPanel>
                                            </Border>
                                            <!--Remarks-->
                                            <Border BorderBrush="#090909" Height="20" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0,3">
                                                <DockPanel>
                                                    <TextBlock Text="Remarks:" Margin="2,0,5,0" FontWeight="SemiBold" FontFamily="Lexend" FontSize="8" Foreground="#090909"  />
                                                    <TextBlock x:Name="remarksBox"   FontSize="8" Foreground="Black" TextWrapping="Wrap"/>
                                                </DockPanel>
                                            </Border>

                                            <Border BorderBrush="#090909" BorderThickness="1,0,1,1" Margin="5,0,5,0" Padding="0,1">
                                                <TextBlock Text="TERMS" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909"/>
                                            </Border>

                                            <Border BorderBrush="#090909"  BorderThickness="1, 0, 1, 1" Margin="5,0,5,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>

                                                    <Border Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,0">
                                                        <StackPanel>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock Text="For CASH payments:" TextAlignment="Center" FontWeight="Bold" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term1"  Text="50% upon ordering" TextAlignment="Center"  FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term2"   Text="30% upon delivery" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                                <TextBlock x:Name="Term3"  Text="20% upon completion" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                            <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                                <TextBlock x:Name="Term4"  Text="Progress billing remaining balance (for bulk orders)" TextAlignment="Center" FontFamily="Lexend" FontSize="6" Foreground="#090909" HorizontalAlignment="Stretch" Margin="5,0,5,0"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </Border>
                                                    <Border Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,1,0">
