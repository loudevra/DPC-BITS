<UserControl x:Class="DPC.Views.Stocks.ProductCategories.AddNewCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="400" Width="480"
             Background="Transparent">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Resources>
    <Border Background="#FDFDFD" CornerRadius="15" Padding="20" Width="480" Height="Auto"
         Effect="{StaticResource ShadowEffect}" Margin="0,0,0,-23">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="PlaylistPlus" Foreground="#555555" Margin="5,0,0,10" Width="28" Height="28"/>
                <TextBlock FontSize="20" Foreground="#AEAEAE" FontWeight="Bold" Text="New Category" Margin="7,0,0,10"/>
                <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Right"  Margin="246,0,0,0">
                    <materialDesign:PackIcon Kind="Close" Foreground="#555555" Width="20" Height="20" Margin="-8,0,0,16"/>
                </Button>
            </StackPanel>

            <Separator Grid.Row="2" Background="#E0E0E0" Height="1"/>

            <!-- Category Counter -->
            <StackPanel Orientation="Horizontal" Grid.Row="3" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="No. of Categories:" FontSize="14" VerticalAlignment="Center" Foreground="#555555" FontWeight="Regular"/>
                <Button Content="−" Width="30" Height="25" FontSize="14" Margin="10,0,5,0"/>
                <TextBlock Text="1" FontSize="14" VerticalAlignment="Center" Foreground="#555555"/>
                <Button Content="+" Width="30" Height="25" FontSize="14" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Category Name -->
            <TextBlock Grid.Row="7" Text="Category Name:" Foreground="#555555" FontWeight="Medium" Margin="0,7,0,3"/>
            <Border Grid.Row="8" Style="{StaticResource RoundedBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Background="Transparent" BorderThickness="0" Padding="12" Height="40" Grid.Column="1"/>
                </Grid>
            </Border>

            <!-- Description -->
            <TextBlock Grid.Row="9" Text="Description:" Foreground="#555555" FontWeight="Medium" Margin="0,5,0,5"/>
            <Border Grid.Row="10" Style="{StaticResource RoundedBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Background="Transparent" BorderThickness="0" Padding="12" Height="40" Grid.Column="1"/>
                </Grid>
            </Border>

            <!-- Add Sub-Category -->
            <StackPanel Orientation="Horizontal" Grid.Row="12" Margin="3,10,0,0">
                <CheckBox x:Name="chkSubCategory"/>
                <TextBlock Text="Add Sub-Category (Optional)" FontSize="12" Foreground="#555555" FontWeight="Medium" Margin="7,0,0,0"/>
            </StackPanel>



            <!-- Save Button -->
            <Button Grid.Row="18" Content="Add" Width="440" Height="45" Background="#52C69D" 
                Foreground="#FDFDFD" FontWeight="SemiBold" HorizontalAlignment="Left"
                Margin="-2,86,0,-76" >
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>


</UserControl>
