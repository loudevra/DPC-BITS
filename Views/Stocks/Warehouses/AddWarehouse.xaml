<Window x:Class="DPC.Views.Warehouse.AddWarehouse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Warehouse"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
	AllowsTransparency="True"
	WindowStartupLocation="CenterScreen"
	Width="450"
	Height="400">

	<Grid>
		<!-- PopUp Card -->
		<materialDesign:Card Width="420" Padding="20" Background="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             >
			<StackPanel>
				<!-- Header -->
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<TextBlock Text="New Product Warehouse" FontSize="20" FontWeight="Bold" Foreground="Black" />

					<Button Grid.Column="1" Style="{StaticResource MaterialDesignFlatButton}"
                            Click="ClosePopup"
                            Background="Transparent" Foreground="Black">
						<materialDesign:PackIcon Kind="Close" />
					</Button>
				</Grid>

				<Separator Margin="0,10,0,10"/>

				<!-- Name Input -->
				<TextBlock Text="Name:" FontSize="14" />
				<Border Background="white" CornerRadius="20" Padding="5" Margin="0,5,0,0" BorderBrush="#090909" BorderThickness="1">

					<!-- ✅ Rounded -->
					<TextBox x:Name="txtName" Height="35"
                             Background="Transparent" BorderThickness="0"
							 FontSize="16"
                             materialDesign:HintAssist.Hint="Warehouse Name" />
				</Border>

				<!-- Description Input -->
				<TextBlock Text="Description:" FontSize="14" Margin="0,10,0,0" />
				<Border Background="white" CornerRadius="20" Padding="5" Margin="0,5,0,0" BorderBrush="#090909" BorderThickness="1">

					<!-- ✅ Rounded -->
					<TextBox x:Name="txtDescription" Height="41"
                             Background="Transparent" BorderThickness="0"
							 FontSize="16"
                             materialDesign:HintAssist.Hint="Warehouse Description" Width="364" />
				</Border>

				<!-- Business Location Dropdown -->
				<TextBlock Text="Business Location:" FontSize="14" Margin="0,10,0,0" />
				<Border Background="White" CornerRadius="20" Padding="0" Margin="0,5,0,0"
						BorderBrush="#090909" BorderThickness="1">
					<ComboBox x:Name="cmbBusinessLocation" Height="40"
							  Background="Transparent" BorderThickness="0"
							  DisplayMemberPath="Value" SelectedValuePath="Key"
							  Padding="10,5,35,5">
						<ComboBox.Resources>
							<Style TargetType="ComboBox">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="ComboBox">
											<Grid>
												<!-- Rounded Border -->
												<Border Background="Transparent"
														BorderBrush="{TemplateBinding BorderBrush}"
														BorderThickness="{TemplateBinding BorderThickness}"
														CornerRadius="20"
														Padding="5">
													<Grid>
														<!-- Content -->
														<ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"
																		  Margin="10,0,0,0"/>
														<!-- Dropdown Button -->
														<ToggleButton Grid.Column="1" Focusable="False"
																	  IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
																	  ClickMode="Press"
																	  HorizontalAlignment="Right"
																	  VerticalAlignment="Center"
																	  Margin="0,0,10,0"
																	  Background="Transparent"
																	  BorderThickness="0">
															<Path Data="M 0 0 L 4 4 L 8 0 Z"
																  Fill="Black"
																  HorizontalAlignment="Center"
																  VerticalAlignment="Center"/>
														</ToggleButton>
													</Grid>
												</Border>

												<!-- Dropdown Items -->
												<Popup IsOpen="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
													   Placement="Bottom"
													   AllowsTransparency="True"
													   Focusable="False">
													<Border Background="White"
															CornerRadius="10"
															BorderBrush="#090909"
															BorderThickness="1">
														<ScrollViewer>
															<ItemsPresenter />
														</ScrollViewer>
													</Border>
												</Popup>
											</Grid>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>
						</ComboBox.Resources>
					</ComboBox>
				</Border>




				<!-- Add Button -->
				<Button x:Name="btnAdd" Content="Add" Click="AddWarehouse"
						Height="45" Background="#58D68D" Foreground="White"
						Margin="0,20,0,0" FontSize="16">
					<Button.Template>
						<ControlTemplate TargetType="Button">
							<Border Background="{TemplateBinding Background}"
									CornerRadius="20"
									BorderBrush="{TemplateBinding BorderBrush}"
									BorderThickness="{TemplateBinding BorderThickness}">
								<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</Border>
						</ControlTemplate>
					</Button.Template>
				</Button>

			</StackPanel>
		</materialDesign:Card>
	</Grid>
</Window>
