<Window x:Class="DPC.Views.Warehouse.AddWarehouse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Warehouse"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
		AllowsTransparency="True"
		WindowStartupLocation="CenterScreen"
		Width="450"
		Height="Auto">

	<Grid>
		<!-- PopUp Card -->
		<materialDesign:Card Width="420" Padding="20" Background="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             >
			<StackPanel>
				<!-- Header -->
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<TextBlock Text="New Product Warehouse" FontSize="20" FontWeight="Bold" Foreground="Black" />

					<Button Grid.Column="1" Style="{StaticResource MaterialDesignFlatButton}"
                            Click="ClosePopup"
                            Background="Transparent" Foreground="Black">
						<materialDesign:PackIcon Kind="Close" />
					</Button>
				</Grid>

				<Separator Margin="0,10,0,10"/>

				<!-- Name Input -->
				<TextBlock Text="Name:" FontSize="14" />
                <Border Style="{StaticResource RoundedBorderStyle}">
                    <TextBox x:Name="txtName" Style="{StaticResource RoundedTextboxStyle}" />
                </Border>

				<!-- Description Input -->
                <TextBlock Text="Description:" FontSize="14" Margin="0,10,0,0" />
                <Border Style="{StaticResource RoundedBorderStyle}">
                    <TextBox x:Name="txtDescription" Style="{StaticResource RoundedTextboxStyle}" materialDesign:HintAssist.Hint="Warehouse Description" Width="364" Height="100" />
                </Border>

				<!-- Business Location Dropdown -->
                <TextBlock Text="Business Location:" FontSize="14" Margin="0,10,0,0" />
                <ComboBox x:Name="cmbBusinessLocation" Style="{StaticResource RoundedComboBoxStyle}"/>




                <!-- Add Button -->
				<Button x:Name="btnAdd" Content="Add" Click="AddWarehouse"
						Height="45" Background="#58D68D" Foreground="White"
						Margin="0,20,0,0" FontSize="16">
					<Button.Template>
						<ControlTemplate TargetType="Button">
							<Border Background="{TemplateBinding Background}"
									CornerRadius="20"
									BorderBrush="{TemplateBinding BorderBrush}"
									BorderThickness="{TemplateBinding BorderThickness}">
								<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</Border>
						</ControlTemplate>
					</Button.Template>
				</Button>

			</StackPanel>
		</materialDesign:Card>
	</Grid>
</Window>
