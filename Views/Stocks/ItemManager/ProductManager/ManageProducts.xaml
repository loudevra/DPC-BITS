<Window x:Class="DPC.Views.Stocks.ItemManager.ProductManager.ManageProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPC"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ManageProducts" Height="800" Width="1200"
        Background="#D9D9D9"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="157" Margin="81,119,0,0" Stroke="#456B2E" VerticalAlignment="Top" Width="322" RadiusX="15" RadiusY="15" StrokeThickness="3"/>
        <Rectangle HorizontalAlignment="Left" Height="162" Margin="434,119,0,0" Stroke="#D23636" VerticalAlignment="Top" Width="326" RadiusX="15" RadiusY="15" StrokeThickness="3"/>
        <Rectangle HorizontalAlignment="Left" Height="166" Margin="784,116,0,0" Stroke="#7154A4" VerticalAlignment="Top" Width="343" RadiusX="15" RadiusY="15" StrokeThickness="3"/>


        <Label Content="0" HorizontalAlignment="Left" Margin="108,135,0,0" VerticalAlignment="Top" FontSize="48" Height="65" Width="40" FontWeight="Bold"  Foreground="#456B2E"/>
        <Label Content="In Stock" HorizontalAlignment="Left" Margin="92,214,0,0" VerticalAlignment="Top" Height="44" Width="138" Foreground="#456B2E" FontWeight="SemiBold" FontFamily="Lexend" FontSize="24" />
        <Label Content="Out Stock" HorizontalAlignment="Left" Margin="450,215,0,0" VerticalAlignment="Top" Height="44" Width="154" Foreground="#D23636" FontWeight="SemiBold" FontFamily="Lexend" FontSize="24"/>
        <Label Content="Total" HorizontalAlignment="Left" Margin="808,227,0,0" VerticalAlignment="Top" Height="46" Width="82" Foreground="#7154A4" FontWeight="SemiBold" FontFamily="Lexend" FontSize="24"  />
        <Button Content="Choices" HorizontalAlignment="Left" Margin="327,301,0,0" VerticalAlignment="Top"/>
        <Button Content="List" HorizontalAlignment="Left" Margin="379,301,0,0" VerticalAlignment="Top" Width="62"/>
        <Label Content="Show" HorizontalAlignment="Left" Margin="187,298,0,0" VerticalAlignment="Top"/>
        <ListBox HorizontalAlignment="Left" Height="20" Margin="225,301,0,0" VerticalAlignment="Top" Width="94" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <DataGrid HorizontalAlignment="Left" Height="390" Margin="81,342,0,0" VerticalAlignment="Top" Width="1046" d:ItemsSource="{d:SampleData ItemCount=15}"/>

        <Label VerticalAlignment="Top" Margin="72,65,0,0" HorizontalAlignment="Left" FontSize="36" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Content="Add New Products"/>


        <materialDesign:PackIcon Kind="PackageVariantClosedPlus" Foreground="#474747" Width="48" Height="42" Margin="19,62,0,0" />
        <materialDesign:PackIcon Kind="CartOutline" Foreground="Black" Width="22" Height="17" Margin="19,15,0,0"/>
        <materialDesign:PackIcon Kind="LocationOnOutline" Foreground="Black" Width="23" Height="17" Margin="47,15,0,0"/>
        <materialDesign:PackIcon Kind="BellOutline" Foreground="Black" Width="22" Height="16" Margin="1106,22,0,0"/>
        <materialDesign:PackIcon Kind="EmailOutline" Foreground="Black" Width="22" Height="16" Margin="1133,22,0,0"/>
        <materialDesign:PackIcon Kind="ClockOutline" Foreground="Black" Width="22" Height="16" Margin="1161,22,0,0"/>
        <TextBox HorizontalAlignment="Left" Margin="882,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213" Height="26"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <materialDesign:PackIcon  Kind="Magnify " Foreground="#D9D9D9" Width="22" Height="16" Margin="1060,24,0,0"/>
        <Button x:Name="btnAddRow" Background="#D9D9D9" Margin="434,79,646,670">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                    BorderBrush="#474747" BorderThickness="2" 
                    CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="PackageVariantPlus" Foreground="#474747" Width="24" Height="24" Margin="0,0,5,0"/>
                            <TextBlock Text="Add Product" Foreground="#474747" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="0" HorizontalAlignment="Left" Margin="450,132,0,0" VerticalAlignment="Top" FontSize="48" Height="66" Width="40" FontWeight="Bold"  Foreground="#D23636"/>
        <Label Content="0" HorizontalAlignment="Left" Margin="799,133,0,0" VerticalAlignment="Top" FontSize="48" Height="66" Width="40" FontWeight="Bold"  Foreground="#7154A4"/>
        <TextBox HorizontalAlignment="Left" Margin="820,293,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="303" Height="26"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <materialDesign:PackIcon  Kind="Magnify " Foreground="#D9D9D9" Width="36" Height="16" Margin="1066,299,0,0"/>
        <Button x:Name="btnAddRow_Copy" Background="#D9D9D9" Margin="64,294,1016,455">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="#474747" BorderThickness="2" 
                        CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="FileExcelBox" Foreground="#FFFFFF" Width="24" Height="24" Margin="0,0,5,0"/>
                            <TextBlock Text="" Foreground="#474747" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>


    </Grid>
</Window>
