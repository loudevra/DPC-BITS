<Window x:Class="DPC.Views.Stocks.ItemManager.NewProduct.ProductVariationDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.ItemManager" 
        xmlns:local1="namespace:DPC.Components.Forms"
        mc:Ignorable="d"
        Background="#D9D9D9"
        Title="Add New Products"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource Lexend}"
        Foreground="#474747">

    <Grid>
        <!-- Define Column Structure -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar Width -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
        Background="White"
        BorderBrush="#E0E0E0"
        BorderThickness="0,0,1,0">
            <ContentControl x:Name="SidebarContainer"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Top Navigation Bar -->
                <RowDefinition Height="*"/>
                <!-- Form Content -->
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border Grid.Row="0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
                <ContentControl x:Name="TopNavBarContainer"/>
            </Border>

            <!-- Main Form Content -->
            <Grid Grid.Row="1" Margin="25,10,25,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".75*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Column="0">
                            <materialDesign:PackIcon Kind="FormatListBulleted" Width="40" Height="40" Margin="0,0,15,0"/>
                            <TextBlock Text="Variation Details" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#555555"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" >
                            <Button Style="{StaticResource RoundedButtonStyle}" Margin="0" HorizontalAlignment="Right" BorderThickness="0" Background="Transparent" Padding="0" Click="BtnBack">
                                <materialDesign:PackIcon Kind="ArrowLeftTop" Width="20" Height="20" Margin="0,0,0,20"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Border BorderBrush="#AEAEAE" BorderThickness="0,1,0,0" Height="1" Margin="-10,0,-10,0"/>

                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Set same details for all variations" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0" VerticalAlignment="Center"/>

                        <Button Grid.Column="1" Style="{StaticResource RoundedButtonStyle}" Width="Auto" Height="Auto" Background="Transparent" HorizontalAlignment="Left" BorderThickness="0" VerticalAlignment="Center" Margin="20,0,0,0" Click="BtnBatchEdit">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="PencilAddOutline" Foreground="#AEAEAE" Width="20" Height="20" Margin="0,0,0,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Batch Edit" Foreground="#AEAEAE" FontSize="14" FontWeight="SemiBold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </Grid>

                    <Border BorderBrush="#AEAEAE" BorderThickness="0,1,0,0" Height="1" Margin="-10,0,-10,0"/>
                </StackPanel>

                <!-- Variation Tabs Section -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
                    <StackPanel x:Name="VariationsPanel" Orientation="Horizontal">
                        <!-- Dynamic variation buttons will be added here -->
                    </StackPanel>

                    <!-- Selected variation title -->
                    <TextBlock x:Name="SelectedVariationTitle" 
                               Margin="0,10,0,0" 
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#555555"/>
                </StackPanel>

                <Border Grid.Row="2" 
                        Grid.RowSpan="2" 
                        Grid.Column="1" 
                        BorderBrush="#AEAEAE" 
                        BorderThickness="1,0,0,0"  
                        Width="1" 
                        Height="Auto" 
                        VerticalAlignment="Stretch"
                        Margin="10,0,0,0"/>

                <ContentControl x:Name="DynamicFormContainer" Grid.Row="3" Grid.Column="0" Margin="0,10,10,0">
                </ContentControl>

                <!-- Serial Number Data -->
                <ContentControl x:Name="SerialNumberContainer" Grid.Row="2" Grid.RowSpan="2" Grid.Column="2" Margin="15,0,5,0">
                </ContentControl>

                <!-- Save Button -->
                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                    <Button x:Name="BtnSave" Style="{StaticResource RoundedButtonStyle}" Background="#52C69D" BorderThickness="0">
                        <TextBlock Text="Save"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>