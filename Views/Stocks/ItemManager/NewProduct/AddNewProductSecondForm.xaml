        <Button x:Name="btnAddRow" Background="#52C69D" Margin="1018,528,59,235">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CartPlus" Foreground="white" Width="24" Height="24" Margin="0,0,5,0"/>
                            <TextBlock Text="Add Product" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnAddRow_Copy" Background="#DF67C5" Margin="888,528,194,235">
            <Button.Template>
