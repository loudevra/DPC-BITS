                        <Grid>
                            <!-- Define 2 columns: Icon (fixed width) + Text (fills remaining space) -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Text -->
                                <!-- Icon -->
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon on the left -->
                            <materialDesign:PackIcon Kind="PlusCircleOutline" Foreground="White" Width="24" Height="24"
                                Margin="10,0,10,0" VerticalAlignment="Center" Grid.Column="0"/>

                            <!-- Text aligned to the left -->
                            <TextBlock Text="Stockroom to Reception" Foreground="White" FontFamily="Lexend" FontSize="13"
