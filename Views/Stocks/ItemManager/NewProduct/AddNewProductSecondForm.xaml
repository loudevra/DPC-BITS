        <materialDesign:PackIcon Kind="PackageVariantClosedPlus" Foreground="#474747" Width="48" Height="42" Margin="18,26,0,0"/>
        <Label Content="Default Tax Rate:" HorizontalAlignment="Left" Margin="53,70,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="122"/>
