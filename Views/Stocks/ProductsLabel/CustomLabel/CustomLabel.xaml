                                        CornerRadius="10"
                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                                    <ScrollViewer>
                                                                        <StackPanel>
                                                                            <ItemsPresenter/>
                                                                        </StackPanel>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Popup>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Resources>

