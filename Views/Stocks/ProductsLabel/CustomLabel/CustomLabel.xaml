<UserControl x:Class="DPC.Views.Stocks.ProductsLabel.CustomLabel.CustomLabel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.ProductsLabel"
        mc:Ignorable="d"
        Background="#D9D9D9">

    <UserControl.Resources>
        <!-- Default Border Style -->
        <Style x:Key="DefaultBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <!-- Default Black -->
        </Style>

        <!-- Default PackIcon Style -->
        <Style x:Key="DefaultPackIconStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Foreground" Value="#474747"/>
            <!-- Default Gray -->
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
        </Style>

        <!-- Custom RadioButton Style -->
        <Style x:Key="CustomRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#474747"/>
            <!-- Default Text Color -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <!-- Outer Circle -->
                            <Border Width="16" Height="16" CornerRadius="8" 
                                BorderThickness="2" Margin="5"
                                x:Name="OuterCircle"
                                BorderBrush="#474747">
                                <!-- Inner Circle -->
                                <Ellipse Width="8" Height="8" Fill="Transparent" 
                                     x:Name="InnerCircle" Visibility="Collapsed"/>
                            </Border>

                            <!-- TextBlock for Content -->
                            <TextBlock x:Name="RadioText" VerticalAlignment="Center"
                                   Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"/>
                        </StackPanel>

                        <ControlTemplate.Triggers>
                            <!-- When Checked (Only the selected button changes) -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="InnerCircle" Property="Fill" Value="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <Setter TargetName="OuterCircle" Property="BorderBrush" Value="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <Setter TargetName="RadioText" Property="Foreground" Value="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <Setter Property="Foreground" Value="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Trigger>

                            <!-- When Unchecked (Stays in default black/gray) -->
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="InnerCircle" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="OuterCircle" Property="BorderBrush" Value="#474747"/>
                                <Setter TargetName="RadioText" Property="Foreground" Value="#474747"/>
                                <Setter Property="Foreground" Value="#474747"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Printer Button Style -->
        <Style x:Key="PrinterButton" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#244270"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="PrinterPosPlus" Width="20" Height="20" Foreground="White" Margin="0,0,5,0"/>
                                <TextBlock Text="{TemplateBinding Content}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style x:Key="TextBoxBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Focusable" Value="True"/>
        </Style>

        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          VerticalAlignment="Center"
                                          Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                      Grid.Column="1"
                                      Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      BorderThickness="0"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="Black"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                               Placement="Bottom"
                               IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               AllowsTransparency="True"
                               Focusable="False"
                               MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                    Background="White" 
                                    BorderBrush="Black"
                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

    </UserControl.Resources>

    <Grid>
    

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Form Content -->
            </Grid.RowDefinitions>

     
            <!-- Main Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Product Label-->
                        <RowDefinition Height="Auto"/>
                        <!--Print Settings-->
                        <RowDefinition Height="Auto"/>
                        <!--Print Details-->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="ProductLabelRow" Grid.Row="0" Margin="0,0,0,30">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height=".2*"/>
                                <RowDefinition Height=".4*"/>
                                <RowDefinition Height=".4*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="25,25,0,30">
                                <TextBlock Text="Product Label" FontWeight="SemiBold" FontFamily="Lexend" FontSize="25" Foreground="#474747" VerticalAlignment="Top"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Margin="0,0,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width=".5*"/>
                                        <ColumnDefinition Width=".5*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Yes Button with Border -->
                                    <Border Grid.Column="0" Background="#AEAEAE" CornerRadius="20" Padding="10" Margin="25,0,25,25">
                                        <RadioButton Content="Custom" IsChecked="True" GroupName="Custom_Standard" FontFamily="Lexend" FontSize="14" Foreground="White" x:Name="BtnCustomLabel" >
                                            <RadioButton.Style>
                                                <Style TargetType="RadioButton">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="RadioButton">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Border Width="16" Height="16" CornerRadius="8" BorderBrush="White" BorderThickness="2" Margin="5">
                                                                        <Ellipse Width="8" Height="8" Fill="White" Visibility="Collapsed" x:Name="Dot"/>
                                                                    </Border>
                                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsChecked" Value="True">
                                                                        <Setter TargetName="Dot" Property="Visibility" Value="Visible"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </RadioButton.Style>
                                        </RadioButton>
                                    </Border>

                                    <!-- No Button with Border -->
                                    <Border Grid.Column="1" Background="#AEAEAE" CornerRadius="20" Padding="10" Margin="25,0,25,25">
                                        <RadioButton Content="Standard" GroupName="Custom_Standard" FontFamily="Lexend" FontSize="14" Foreground="White" x:Name="BtnStandardLabel" >
                                            <RadioButton.Style>
                                                <Style TargetType="RadioButton">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="RadioButton">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Border Width="16" Height="16" CornerRadius="8" BorderBrush="White" BorderThickness="2" Margin="5">
                                                                        <Ellipse Width="8" Height="8" Fill="White" Visibility="Collapsed" x:Name="Dot"/>
                                                                    </Border>
                                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsChecked" Value="True">
                                                                        <Setter TargetName="Dot" Property="Visibility" Value="Visible"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </RadioButton.Style>
                                        </RadioButton>
                                    </Border>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Margin="25,0,25,0">
                                <TextBlock Text="Warehouse:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,5"/>
                                <StackPanel Width="Auto" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                                    <ComboBox x:Name="cmbWarehouses" FontFamily="Lexend" FontSize="14" Foreground="#474747"
    Padding="10" Width="Auto" Height="40" Background="White" BorderBrush="black"
    BorderThickness="1" HorizontalContentAlignment="Left" Margin="0,0,0,10" SelectionChanged="ItemsFromWarehouse">
                                        <ComboBox.Resources>
                                            <!-- Custom ComboBox Toggle Button -->
                                            <Style x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
                                                <Setter Property="Focusable" Value="False"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="Transparent" Padding="5">
                                                                <Grid>
                                                                    <Path x:Name="Arrow" Data="M 0 0 L 4 4 L 8 0 Z"
              HorizontalAlignment="Right" VerticalAlignment="Center"
              Fill="Black" Width="8" Height="8" 
              Margin="0,5,10,0"/>
                                                                </Grid>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>

                                            <!-- Custom ComboBox Style -->
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ComboBox">
                                                            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20" Padding="5">
                                                                <Grid>
                                                                    <!-- Toggle Button for Dropdown -->
                                                                    <ToggleButton Name="ToggleButton" 
                                      Style="{StaticResource ComboBoxToggleButton}"
                                      Grid.Column="2" Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" 
                                      ClickMode="Press"/>

                                                                    <!-- Selected Content -->
                                                                    <ContentPresenter Name="ContentSite" IsHitTestVisible="False"
                  Content="{Binding SelectedItem.Value, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue='Select Warehouse'}"
                  Margin="10,0,40,0" VerticalAlignment="Center"/>

                                                                    <!-- Dropdown List -->
                                                                    <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                       AllowsTransparency="True" Focusable="False"
                                       PopupAnimation="Slide"
                                       MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                                        <Border Background="White" BorderBrush="Gray" BorderThickness="1" 
                                        CornerRadius="10"
                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                                            <ScrollViewer>
                                                                                <StackPanel>
                                                                                    <ItemsPresenter/>
                                                                                </StackPanel>
                                                                            </ScrollViewer>
                                                                        </Border>
                                                                    </Popup>
                                                                </Grid>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>
                                <TextBlock Text="Products:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,5"/>
                                <Border BorderThickness="1" BorderBrush="black" CornerRadius="20" 
        Background="White" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <!-- Makes the TextBox fill the width -->
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 x:Name="txtProducts"
                                                 TextChanged="searchProducts"
                 Height="35"
                 Margin="20,0,0,0"
                 VerticalAlignment="Center"
                 VerticalContentAlignment="Center"
                 BorderThickness="0"
                 FontFamily="Lexend"
                 Background="Transparent"
                 HorizontalAlignment="Stretch"
                 Focusable="True"/>

                                        <!-- Popup with ListBox -->
                                        <Popup x:Name="AutoCompletePopup"
    PlacementTarget="{Binding ElementName=txtProducts}"
    Placement="Bottom"
    StaysOpen="False"
    IsOpen="False"
    AllowsTransparency="True"
    PopupAnimation="Fade">
                                            <Border Background="White"
             BorderBrush="LightGray"
             BorderThickness="1"
             MaxHeight="150"
             Width="{Binding ElementName=TxtItem, Path=ActualWidth}">
                                                <ListBox x:Name="LstItems" SelectionChanged="LstItems_SelectionChanged">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding ProductName}" FontWeight="SemiBold" Padding="0,0,5,0"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel x:Name="PrintSettings" Grid.Row="1" Margin="25,0,25,30">
                        <Border BorderThickness="0,2,0,0" BorderBrush="#AEAEAE" Margin="-10,0,-10,25" Width="Auto" HorizontalAlignment="Stretch"/>

                        <TextBlock Text="Print Settings" FontWeight="Regular" FontFamily="Lexend" FontSize="20" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".25*"/>
                                <ColumnDefinition Width=".25*"/>
                                <ColumnDefinition Width=".25*"/>
                                <ColumnDefinition Width=".25*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Barcode Type:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,5"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0"  Margin="10,0,25,10">
                                <ComboBox x:Name="barcodeType" SelectedIndex="0" FontFamily="Lexend" FontSize="14" Foreground="#474747"
    Padding="10" Width="Auto" Height="40" Background="White" BorderBrush="black"
    BorderThickness="1" HorizontalContentAlignment="Left">
                                    <ComboBox.Resources>
                                        <!-- Custom ComboBox Toggle Button -->
                                        <Style x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
                                            <Setter Property="Focusable" Value="False"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" Padding="5">
                                                            <Grid>
                                                                <Path x:Name="Arrow" Data="M 0 0 L 4 4 L 8 0 Z"
              HorizontalAlignment="Right" VerticalAlignment="Center"
              Fill="Black" Width="8" Height="8" 
              Margin="0,5,10,0"/>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>

                                        <!-- Custom ComboBox Style -->
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20" Padding="5">
                                                            <Grid>
                                                                <!-- Toggle Button for Dropdown -->
                                                                <ToggleButton Name="ToggleButton" 
                                      Style="{StaticResource ComboBoxToggleButton}"
                                      Grid.Column="2" Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" 
                                      ClickMode="Press"/>

                                                                <!-- Selected Content -->
                                                                <ContentPresenter Name="ContentSite" IsHitTestVisible="False" 
                                      Content="{TemplateBinding SelectionBoxItem}" 
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      Margin="10,0,40,0" VerticalAlignment="Center"/>

                                                                <!-- Dropdown List -->
                                                                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                       AllowsTransparency="True" Focusable="False"
                                       PopupAnimation="Slide"
                                                              
                                       MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                                    <Border Background="White" BorderBrush="Gray" BorderThickness="1" 
                                        CornerRadius="10"
                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                                        <ScrollViewer>
                                                                            <StackPanel>
                                                                                <ItemsPresenter/>
                                                                            </StackPanel>
                                                                        </ScrollViewer>
                                                                    </Border>
                                                                </Popup>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.Resources>

                                    <!-- ComboBox Items -->
                                    <ComboBoxItem Content="EAN-13"/>
                                    <ComboBoxItem Content="CODE-128"/>
                                    <ComboBoxItem Content="CODE-39"/>
                                    <ComboBoxItem Content="EAN-8"/>
                                    <ComboBoxItem Content="UPC-A"/>
                                    <ComboBoxItem Content="UPC-E"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock Text="Barcode Width:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,5"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,25,10">
                                <Border BorderThickness="1" BorderBrush="black" CornerRadius="20" 
        Background="White" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <!-- Makes the TextBox fill the width -->
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="barcodeWidth" Grid.Column="0"
                                                 Text="50"
                 Height="35"
                 Margin="20,0,0,0"
                 VerticalAlignment="Center"
                 VerticalContentAlignment="Center"
                 BorderThickness="0"
                 FontFamily="Lexend"
                 Background="Transparent"
                 HorizontalAlignment="Stretch"
                 Focusable="True"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Barcode Height:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,5"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,25,10">
                                <Border BorderThickness="1" BorderBrush="black" CornerRadius="20" 
Background="White" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <!-- Makes the TextBox fill the width -->
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="barcodeHeight" Grid.Column="0"
                                                 Text="30"
         Height="35"
         Margin="20,0,0,0"
         VerticalAlignment="Center"
         VerticalContentAlignment="Center"
         BorderThickness="0"
         FontFamily="Lexend"
         Background="Transparent"
         HorizontalAlignment="Stretch"
         Focusable="True"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="3">
                                <TextBlock Text="Font Size:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,5"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="3"  Margin="10,0,25,10">
                                <ComboBox x:Name="cmbFontSize" SelectedIndex="3" FontFamily="Lexend" FontSize="14" Foreground="#474747"
Padding="10" Width="Auto" Height="40" Background="White" BorderBrush="black"
BorderThickness="1" HorizontalContentAlignment="Left">
                                    <ComboBox.Resources>
                                        <!-- Custom ComboBox Toggle Button -->
                                        <Style  x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
                                            <Setter Property="Focusable" Value="False"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" Padding="5">
                                                            <Grid>
                                                                <Path x:Name="Arrow" Data="M 0 0 L 4 4 L 8 0 Z"
          HorizontalAlignment="Right" VerticalAlignment="Center"
          Fill="Black" Width="8" Height="8" 
          Margin="0,5,10,0"/>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>

                                        <!-- Custom ComboBox Style -->
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="20" Padding="5">
                                                            <Grid>
                                                                <!-- Toggle Button for Dropdown -->
                                                                <ToggleButton Name="ToggleButton" 
                                  Style="{StaticResource ComboBoxToggleButton}"
                                  Grid.Column="2" Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" 
                                  ClickMode="Press"/>

                                                                <!-- Selected Content -->
                                                                <ContentPresenter Name="ContentSite" IsHitTestVisible="False" 
                                  Content="{TemplateBinding SelectionBoxItem}" 
                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                  Margin="10,0,40,0" VerticalAlignment="Center"/>

                                                                <!-- Dropdown List -->
                                                                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True" Focusable="False"
                                   PopupAnimation="Slide"
                                                          
                                   MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                                    <Border Background="White" BorderBrush="Gray" BorderThickness="1" 
                                    CornerRadius="10"
                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                                        <ScrollViewer>
                                                                            <StackPanel>
                                                                                <ItemsPresenter/>
                                                                            </StackPanel>
                                                                        </ScrollViewer>
                                                                    </Border>
                                                                </Popup>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.Resources>

                                    <!-- ComboBox Items -->
                                    <ComboBoxItem Content="8pt"/>
                                    <ComboBoxItem Content="9pt"/>
                                    <ComboBoxItem Content="10pt"/>
                                    <ComboBoxItem Content="11pt"/>
                                    <ComboBoxItem Content="12pt"/>
                                    <ComboBoxItem Content="13pt"/>
                                    <ComboBoxItem Content="14pt"/>
                                    <ComboBoxItem Content="15pt"/>
                                    <ComboBoxItem Content="16pt"/>
                                    <ComboBoxItem Content="17pt"/>
                                    <ComboBoxItem Content="18pt"/>
                                    <ComboBoxItem Content="19pt"/>
                                    <ComboBoxItem Content="20pt"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <Border BorderThickness="0,2,0,0" BorderBrush="#AEAEAE" Margin="-10,10,-10,15" Width="Auto" HorizontalAlignment="Stretch"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height=".5*"/>
                                <RowDefinition Height=".5*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".5*"/>
                                <ColumnDefinition Width=".5*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Label Width:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,5"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,0,25,10">
                                <Border Style="{StaticResource TextBoxBorderStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="lblWidth" Text="80" Grid.Column="0" Style="{StaticResource CustomTextBoxStyle}"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock Text="Label Height:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,5"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,25,10">
                                <Border Style="{StaticResource TextBoxBorderStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="lblHeight"  Text="80" Grid.Column="0" Style="{StaticResource CustomTextBoxStyle}"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <Border BorderThickness="0,2,0,0" BorderBrush="#AEAEAE" Margin="-10,10,-10,15" Width="Auto" HorizontalAlignment="Stretch"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height=".5*"/>
                                <RowDefinition Height=".5*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="No. of Copies:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top" Margin="0,0,0,5"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,0,25,10">
                                <Border Style="{StaticResource TextBoxBorderStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox Text="1" x:Name="copies" Grid.Column="0" Style="{StaticResource CustomTextBoxStyle}"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                       
                        </Grid>

                        <Border BorderThickness="0,2,0,0" BorderBrush="#AEAEAE" Margin="-10,10,-10,15" Width="Auto" HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <StackPanel x:Name="PrintDetail" Grid.Row="2" Margin="25,-20,25,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Margin="0,0,0,25" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1">
                                <TextBlock Text="Print Details" FontWeight="Regular" FontFamily="Lexend" FontSize="20" Foreground="#474747" VerticalAlignment="Top"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" >
                                <TextBlock Text="Product Name:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top"/>
                            </StackPanel>
                            <ToggleButton x:Name="includeProductName" IsChecked="True" Grid.Row="2" Margin="0,0,0,10" Grid.Column="0" Style="{StaticResource ToggleSwitchStyle}"/>
                            
                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" >
                                <TextBlock Text="Business Location:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top"/>
                            </StackPanel>
                            <ToggleButton x:Name="includeBusinessLocation" Grid.Row="4" Margin="0,0,0,10" Grid.Column="0" Style="{StaticResource ToggleSwitchStyle}"/>


                            <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                                <TextBlock Text="Warehouse:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top"/>
                            </StackPanel>
                            <ToggleButton x:Name="includeWarehouse" Margin="0,0,0,10" Grid.Row="6" Grid.Column="0" Style="{StaticResource ToggleSwitchStyle}"/>


                            <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" >
                                <TextBlock Text="Price:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top"/>
                            </StackPanel>
                            <ToggleButton x:Name="includePrice" Grid.Row="8" IsChecked="True" Grid.Column="0" Margin="0,0,0,10" Style="{StaticResource ToggleSwitchStyle}" />

                            
                            <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2">
                                <TextBlock Text="Product Code:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top"/>
                            </StackPanel>
                            <ToggleButton x:Name="includeProductCode" IsChecked="True" Grid.Row="10" Margin="0,0,0,10" Grid.Column="0" Style="{StaticResource ToggleSwitchStyle}" />

                            
                            <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" >
                                <TextBlock Text="Products:" FontWeight="Regular" FontFamily="Lexend" FontSize="14" Foreground="#474747" VerticalAlignment="Top"/>
                            </StackPanel>
                            <ToggleButton x:Name="includeProduct" Grid.Row="12" Margin="0,0,0,10" Grid.Column="0" Style="{StaticResource ToggleSwitchStyle}"/>
                            

                            <StackPanel Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Margin="25,25,25,40" HorizontalAlignment="Right">
                                <Button Click="PrintBarcodes" Content="Print" Style="{StaticResource PrinterButton}"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel x:Name="BarcodeImagePanel" Width="auto" Height="auto"></StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
