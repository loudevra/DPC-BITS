<Window x:Class="DPC.Views.Stocks.Suppliers.ManageBrands.ManageBrands"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers.ManageBrands"
        mc:Ignorable="d"
       Background="#D9D9D9"
       Title="Manage Brands" Height="800" Width="1200"
       WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Define Column Structure -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar Width -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,1,0">
            <ContentControl x:Name="SidebarContainer"/>
        </Border>
        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <!-- Define Rows for TopNavBar and Content -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- TopNavBar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
                <ContentControl x:Name="TopNavBarContainer"/>
            </Border>

            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title and Add Button -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,20">
                        <TextBlock Text="Brands"
                                   FontWeight="SemiBold"
                                   FontFamily="Lexend"
                                   FontSize="25"
                                   Foreground="#474747"
                                   VerticalAlignment="Center"/>
                        <Button Style="{StaticResource RoundedButtonStyle}" Margin="20,0,0,0" Background="Transparent" Click="OpenAddBrand">
                            <Grid Margin="15,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" Grid.Column="0" VerticalAlignment="Center"/>
                                <TextBlock Text="Add" FontSize="14" FontWeight="SemiBold" Foreground="#474747" Grid.Column="1" Margin="5,0" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </StackPanel>

                    <StackPanel VerticalAlignment="Center" Grid.Row="1">
                        <Border Style="{StaticResource RoundedBorderStyle}" BorderThickness="0" Background="white" Padding="10" CornerRadius="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width=".20*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width=".5*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="#456B2E" BorderThickness="0" Margin="0" Click="ExportToExcel" >
                                        <materialDesign:PackIcon Kind="FileExcel" Width="25" Height="25" Foreground="White" Margin="25,0"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                                    <TextBlock Text="Show" FontSize="14" FontWeight="SemiBold" Foreground="#474747" Grid.Column="1" VerticalAlignment="Center"/>
                                </StackPanel>
                                <ComboBox Style="{StaticResource RoundedComboBoxStyle}" Grid.Column="2" VerticalAlignment="Center" Margin="0">
                                    <ComboBoxItem Content="10" IsSelected="True"/>
                                    <ComboBoxItem Content="25"/>
                                    <ComboBoxItem Content="50"/>
                                    <ComboBoxItem Content="100"/>
                                </ComboBox>
                                <StackPanel Grid.Column="4">
                                    <Border Style="{StaticResource RoundedBorderStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width=".25*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" Style="{StaticResource RoundedTextboxStyle}" Margin="20,0,0,0"  Name="txtSearch" />
                                            <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" Foreground="Black" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>

                        </Border>
                    </StackPanel>


                    <!-- DataGrid Section -->
                    <StackPanel Grid.Row="2" Margin="0,10">
                        <DataGrid Name="dataGrid"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  RowBackground="White"
                                  AlternatingRowBackground="WhiteSmoke"
                                  BorderThickness="0">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Margin" Value="0,5,0,5"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="FontFamily" Value="Lexend"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#474747"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding ID}" Width=".25*" FontFamily="Lexend" Foreground="#474747" />
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" FontFamily="Lexend" Foreground="#474747" />
                                <DataGridTextColumn Header="Total Suppliers" Binding="{Binding TotalSupplier}" Width="*" FontFamily="Lexend" Foreground="#474747" />
                                <DataGridTemplateColumn Header="Settings" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="?" Width="30" Height="30" Background="Transparent"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>