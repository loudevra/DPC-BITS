<UserControl x:Class="DPC.Views.Stocks.Supplier.NewSuppliers.NewSuppliers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.ItemManager" 
        xmlns:local1="namespace:DPC.Components.Forms"
        mc:Ignorable="d"
        Background="Transparent"
        FontFamily="{StaticResource Lexend}"
        Foreground="#474747"
        Unloaded="NewSupplierUserControl_Unloaded"
        Loaded="NewSupplierUserControl_Loaded">

    <Grid>
        <!-- Title Header - Now outside of ScrollViewer and static -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20">
            <materialDesign:PackIcon Kind="Bullseye" Foreground="#474747" Width="40" Height="40"/>
            <Label Content="Add New Supplier" FontWeight="SemiBold" FontSize="30" FontFamily="Lexend" Foreground="#474747" VerticalAlignment="Center" Margin="0,-3,0,0"/>
        </StackPanel>

        <!-- Main Form Content -->
        <ScrollViewer Style="{StaticResource ModernScrollViewerStyle}" 
              VerticalScrollBarVisibility="Auto" 
              HorizontalScrollBarVisibility="Disabled"
              Grid.Row="1">
            <Grid Background="Transparent" Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="25,10,25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Company Representative:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <!--Representative Name Value is here!-->
                            <TextBox x:Name="TxtRepresentative" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Company Name:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <!--Representative Name Value is here!-->
                            <TextBox x:Name="TxtCompany" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Phone Number:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <!--Phone Number Value is here!-->
                            <TextBox x:Name="TxtPhone" PreviewTextInput="TxtPhone_PreviewTextInput" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Margin="0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Email:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <!--Email Value is here!-->
                            <TextBox x:Name="TxtEmail" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Margin="0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Brand/s:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        </StackPanel>

                        <StackPanel>
                            <!-- TextBox + Popup -->
                            <Grid>
                                <!-- Text Input -->
                                <Border Style="{StaticResource RoundedBorderStyle}">
                                    <TextBox x:Name="TxtItem"
                                         Style="{StaticResource RoundedTextboxStyle}"
                                         VerticalAlignment="Top" FontFamily="Lexend" FontWeight="SemiBold" />
                                </Border>

                                <!-- Popup with ListBox -->
                                <Popup x:Name="AutoCompletePopup"
                                       PlacementTarget="{Binding ElementName=TxtItem}"
                                       Placement="Bottom"
                                       StaysOpen="False"
                                       IsOpen="False"
                                       AllowsTransparency="True"
                                       PopupAnimation="Fade">
                                    <Border Background="White"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        MaxHeight="150"
                                        Width="{Binding ElementName=TxtItem, Path=ActualWidth}">
                                        <ListBox x:Name="LstItems">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}" Padding="8"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Border>
                                </Popup>
                            </Grid>

                            <!-- Chips -->
                            <WrapPanel x:Name="ChipPanel" Margin="0,5,0,5" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Margin="0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Address:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <!--Email Value is here!-->
                            <TextBox x:Name="TxtAddress" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="6" Margin="0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="City:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                </StackPanel>
                                <Border Style="{StaticResource RoundedBorderStyle}">
                                    <!--City Value is here!-->
                                    <TextBox x:Name="TxtCity" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Grid.Column="1"  Margin="5,0,5,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Region:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                </StackPanel>
                                <Border Style="{StaticResource RoundedBorderStyle}">
                                    <!--Region Value is here!-->
                                    <TextBox x:Name="TxtRegion" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Country:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                </StackPanel>
                                <Border Style="{StaticResource RoundedBorderStyle}">
                                    <!--Country Value is here!-->
                                    <TextBox x:Name="TxtCountry" PreviewTextInput="TxtCountry_PreviewTextInput" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Row="7" Margin="0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Postal Code:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <!--Postal Code Value is here!-->
                            <TextBox x:Name="TxtPostalCode" PreviewTextInput="TxtPostalCode_PreviewTextInput" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="8" Margin="0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="TIN ID:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <!--TINID Value is here!-->
                            <TextBox x:Name="TxtTINID" PreviewTextInput="TxtTINID_PreviewTextInput" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="9" Margin="0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="2">
                                <Button Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center" Click="BtnAddSupplier">
                                    <Border Style="{StaticResource RoundedBorderStyle}" Padding="1" Background="#52C69D" BorderBrush="#52C69D">
                                        <StackPanel Orientation="Horizontal" Background="#52C69D" Margin="10,0,10,0">
                                            <TextBlock Text="Add" Foreground="White" VerticalAlignment="Center" Margin="50,5"/>
                                        </StackPanel>
                                    </Border>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>