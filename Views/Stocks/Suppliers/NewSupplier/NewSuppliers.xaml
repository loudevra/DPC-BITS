<Window x:Class="DPC.Views.Stocks.Supplier.NewSuppliers.NewSuppliers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.ItemManager" 
        xmlns:local1="namespace:DPC.Components.Forms"
        mc:Ignorable="d"
        Background="#D9D9D9"
        Title="Add New Suppliers"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource Lexend}"
        Foreground="#474747">

    <Grid>
        <!-- Define Column Structure -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar Width -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
        Background="White"
        BorderBrush="#E0E0E0"
        BorderThickness="0,0,1,0">
            <ContentControl x:Name="SidebarContainer"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Top Navigation Bar -->
                <RowDefinition Height="*"/>
                <!-- Form Content -->
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border Grid.Row="0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
                <ContentControl x:Name="TopNavBarContainer"/>
            </Border>

            <!-- Main Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Background="#D3D3D3" Margin="2" Height="907">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20">
                        <materialDesign:PackIcon Kind="Bullseye" Foreground="#474747" Width="64" Height="55"/>
                        <Label Content="Add New Supplier" FontWeight="SemiBold" FontSize="30" FontFamily="Lexend" Foreground="#474747"/>
                    </StackPanel>

                    <UniformGrid Grid.Row="1" Columns="1" Margin="20" HorizontalAlignment="Center" Width="950">
                        <StackPanel>
                            <Label Content="Company Representative:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="862"/>
                            <TextBox x:Name="CompanyRepresentative" Height="42" BorderThickness="2" BorderBrush="#474747" Width="858">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>


                        <StackPanel>
                            <Label Content="Company:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="856"/>
                            <TextBox x:Name="Company" Height="42" BorderThickness="2" BorderBrush="#474747" Width="856">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">


                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>


                        <StackPanel>
                            <Label Content="Phone" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="857"/>
                            <TextBox x:Name="Phone" Height="42" BorderThickness="2" BorderBrush="#474747" Width="860">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">


                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>



                        <StackPanel>
                            <Label Content="Email" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="856"/>
                            <TextBox x:Name="Email" Height="42" BorderThickness="2" BorderBrush="#474747" Width="858">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">


                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>


                        <StackPanel>
                            <Label Content="Company Address:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="862"/>
                            <TextBox x:Name="CompanyAddress" Height="42" BorderThickness="2" BorderBrush="#474747" Width="863">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">


                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>


                        <StackPanel Orientation="Horizontal">
                            <!-- City Field -->
                            <StackPanel Width="310">
                                <Label Content="City:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="225"/>
                                <TextBox x:Name="City" Height="42" BorderThickness="2" BorderBrush="#474747" Width="225">
                                    <TextBox.Style>
                                        <Style TargetType="{x:Type TextBox}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                            <!-- 'PART_ContentHost' is the correct name required by WPF -->
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>


                            <!-- Region Field -->
                            <StackPanel Width="310" Margin="10,0,0,0">
                                <Label Content="Region:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="260"/>
                                <TextBox x:Name="Region" Height="42" BorderThickness="2" BorderBrush="#474747" Width="258">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">

                                            <Setter Property="Control.Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <!-- Country Field -->
                            <StackPanel Width="310" Margin="10,0,0,0">
                                <Label Content="Country:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="235"/>
                                <TextBox  x:Name="Country" Height="42" BorderThickness="2" BorderBrush="#474747" Width="226">
                                    <TextBox.Style>
                                        <Style TargetType="{x:Type TextBox}">

                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                        </StackPanel>


                        <StackPanel>
                            <Label Content="Postal Code}:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="865"/>
                            <TextBox x:Name="PostalCode" Height="42" BorderThickness="2" BorderBrush="#474747" Width="868">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="TIN ID:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Width="865"/>
                            <TextBox x:Name="TinId" Height="42" BorderThickness="2" BorderBrush="#474747" Width="869">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </UniformGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                        <Button x:Name="btnNext" Background="#52C69D" Width="161" Height="40" Margin="5,0,110,0" BorderThickness="0"  Click="BtnNext_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="18" Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="Add" Foreground="White" FontFamily="Lexend" FontSize="10"/>
                        </Button>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
