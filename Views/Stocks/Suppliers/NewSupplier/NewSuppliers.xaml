<Window x:Class="NewSuppliers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DPC"
        mc:Ignorable="d"
        Background="#D9D9D9"
        Title="NewSuppliers" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#D3D3D3" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20">
            <materialDesign:PackIcon Kind="Bullseye" Foreground="#474747" Width="64" Height="55"/>
            <Label Content="Add New Supplier" FontWeight="SemiBold" FontSize="24" FontFamily="Lexend" Foreground="#474747"/>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="1" Margin="20" HorizontalAlignment="Center" Width="950">
            <StackPanel>
                <Label Content="Company Representative:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                <TextBox x:Name="CompanyRepresentative" Height="42" BorderThickness="2" BorderBrush="#474747">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>


            <StackPanel>
                <Label Content="Company:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                <TextBox x:Name="Company" Height="42" BorderThickness="2" BorderBrush="#474747">
                    <TextBox.Style>
                        <Style TargetType="TextBox">


                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>


            <StackPanel>
                <Label Content="Phone" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                <TextBox x:Name="Phone" Height="42" BorderThickness="2" BorderBrush="#474747">
                    <TextBox.Style>
                        <Style TargetType="TextBox">


                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>



            <StackPanel>
                <Label Content="Email" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                <TextBox x:Name="Email" Height="42" BorderThickness="2" BorderBrush="#474747">
                    <TextBox.Style>
                        <Style TargetType="TextBox">


                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>


            <StackPanel>
                <Label Content="Company Address:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                <TextBox x:Name="CompanyAddress" Height="42" BorderThickness="2" BorderBrush="#474747">
                    <TextBox.Style>
                        <Style TargetType="TextBox">


                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <!-- City Field -->
                <StackPanel Width="310">
                    <Label Content="City:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                    <TextBox x:Name="City" Height="42" BorderThickness="2" BorderBrush="#474747">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Control.Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                <!-- 'PART_ContentHost' is the correct name required by WPF -->
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>


                <!-- Region Field -->
                <StackPanel Width="310" Margin="10,0,0,0">
                    <Label Content="Region:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                    <TextBox x:Name="Region" Height="42" BorderThickness="2" BorderBrush="#474747">
                        <TextBox.Style>
                            <Style TargetType="TextBox">

                                <Setter Property="Control.Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <!-- Country Field -->
                <StackPanel Width="310" Margin="10,0,0,0">
                    <Label Content="Country:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                    <TextBox  x:Name="Country" Height="42" BorderThickness="2" BorderBrush="#474747">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>
            </StackPanel>


            <StackPanel>
                <Label Content="Postal Code}:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                <TextBox x:Name="PostalCode" Height="42" BorderThickness="2" BorderBrush="#474747">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>

            <StackPanel>
                <Label Content="TIN ID:" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
                <TextBox x:Name="TinId" Height="42" BorderThickness="2" BorderBrush="#474747">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border CornerRadius="18" BorderThickness="2" BorderBrush="#474747" Background="White">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>
        </UniformGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="btnNext" Background="#52C69D" Width="100" Height="40" Margin="5,0,110,0" BorderThickness="0"  Click="btnNext_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="18" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <TextBlock Text="Add" Foreground="White" FontFamily="Lexend" FontSize="10"/>
            </Button>
        </StackPanel>

    </Grid>
</Window>
