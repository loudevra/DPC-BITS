<UserControl x:Class="DPC.Views.Stocks.Suppliers.NewSupplier.EditSuppliers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers" 
        xmlns:local1="namespace:DPC.Components.Forms"
        mc:Ignorable="d"
        Background="Transparent"
        FontFamily="{StaticResource Lexend}"
        Foreground="#474747">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Sticky Header -->
            <RowDefinition Height="*"/>
            <!-- Scrollable Content -->
        </Grid.RowDefinitions>

        <!-- Sticky Header -->
        <Border Grid.Row="0" Padding="25,10,25,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="Bullseye" Width="40" Height="40" Margin="0,0,15,0"/>
                <TextBlock Text="Update Supplier" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Form Content - Scrollable -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="25,0,25,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Company Representative -->
                    <RowDefinition Height="Auto"/>
                    <!-- Company Name -->
                    <RowDefinition Height="Auto"/>
                    <!-- Phone Number -->
                    <RowDefinition Height="Auto"/>
                    <!-- Email -->
                    <RowDefinition Height="Auto"/>
                    <!-- Brand/s -->
                    <RowDefinition Height="Auto"/>
                    <!-- Address -->
                    <RowDefinition Height="Auto"/>
                    <!-- City, Region, Country -->
                    <RowDefinition Height="Auto"/>
                    <!-- Postal Code -->
                    <RowDefinition Height="Auto"/>
                    <!-- TIN ID -->
                    <RowDefinition Height="Auto"/>
                    <!-- Save Button -->
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Company Representative:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    </StackPanel>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <TextBox x:Name="TxtRepresentative" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Company Name:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        <TextBlock Text="*" FontSize="14" Foreground="#D23636" FontWeight="Bold"/>
                    </StackPanel>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <TextBox x:Name="TxtCompany" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Phone Number:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        <TextBlock Text="*" FontSize="14" Foreground="#D23636" FontWeight="Bold"/>
                    </StackPanel>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <TextBox x:Name="TxtPhone" PreviewTextInput="TxtPhone_PreviewTextInput" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="3" Margin="0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Email:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    </StackPanel>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <TextBox x:Name="TxtEmail" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="4" Margin="0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Brand/s:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    </StackPanel>
                    <StackPanel>
                        <Grid>
                            <Border Style="{StaticResource RoundedBorderStyle}">
                                <TextBox x:Name="TxtItem" Style="{StaticResource RoundedTextboxStyle}" VerticalAlignment="Top" FontFamily="Lexend" FontWeight="SemiBold"/>
                            </Border>
                            <Popup x:Name="AutoCompletePopup" PlacementTarget="{Binding ElementName=TxtItem}" Placement="Bottom" StaysOpen="False" IsOpen="False" AllowsTransparency="True" PopupAnimation="Fade">
                                <Border Background="White" BorderBrush="LightGray" BorderThickness="1" MaxHeight="150" Width="{Binding ElementName=TxtItem, Path=ActualWidth}">
                                    <ListBox x:Name="LstItems">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" Padding="8"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                            </Popup>
                        </Grid>
                        <WrapPanel x:Name="ChipPanel" Margin="0,5,0,5"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="5" Margin="0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Address:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    </StackPanel>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <TextBox x:Name="TxtAddress" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="6" Margin="0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="City:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                            </StackPanel>
                            <Border Style="{StaticResource RoundedBorderStyle}">
                                <TextBox x:Name="TxtCity" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,5,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Region:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                            </StackPanel>
                            <Border Style="{StaticResource RoundedBorderStyle}">
                                <TextBox x:Name="TxtRegion" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Country:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                            </StackPanel>
                            <Border Style="{StaticResource RoundedBorderStyle}">
                                <TextBox x:Name="TxtCountry" PreviewTextInput="TxtCountry_PreviewTextInput" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="7" Margin="0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Postal Code:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    </StackPanel>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <TextBox x:Name="TxtPostalCode" PreviewTextInput="TxtPostalCode_PreviewTextInput" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="8" Margin="0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="TIN ID:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    </StackPanel>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <TextBox x:Name="TxtTINID" PreviewTextInput="TxtTINID_PreviewTextInput" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="9" HorizontalAlignment="Right">
                    <Button Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" Margin="0,15,110,0" x:Name="BtnCancelSupUpdate" Click="BtnCancelSupUpdate_click">
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="5" Background="#52C69D" BorderBrush="#52C69D" Width="51">
                            <StackPanel Orientation="Horizontal" Background="transparent" Width="80">
                                <TextBlock Text="Cancel" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </Button>
                </StackPanel>  
                
                <StackPanel Grid.Row="9" HorizontalAlignment="Right">
                    <Button Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" Margin="0,15,0,0" x:Name="BtnUpdateSupplier" Click="BtnUpdateSupplier_click">
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="5" Background="#52C69D" BorderBrush="#52C69D">
                            <StackPanel Orientation="Horizontal" Background="transparent" Margin="10,0,0,0">
                                <TextBlock Text="Save Update" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            </StackPanel>
                        </Border>
                    </Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>