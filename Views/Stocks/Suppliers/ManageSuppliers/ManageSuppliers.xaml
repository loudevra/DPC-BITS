<Window x:Class="DPC.Views.Stocks.Suppliers.ManageSuppliers.ManageSuppliers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers.ManageSuppliers"
        mc:Ignorable="d"
       Background="#D9D9D9"
       Title="NewSuppliers" Height="800" Width="1200"
       WindowStartupLocation="CenterScreen">
    
    
       <Window.Resources>
           
       <Style x:Key="AddNewButtonStyle" TargetType="Button">
           <Setter Property="Width" Value="120"/>
           <Setter Property="Height" Value="30"/>
           <Setter Property="Background" Value="#D9D9D9"/>
           <Setter Property="BorderThickness" Value="2"/>
           <Setter Property="BorderBrush" Value="#474747"/>
           <Setter Property="Template">
               <Setter.Value>
                   <ControlTemplate TargetType="{x:Type Button}">
                       <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                           <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                       </Border>
                   </ControlTemplate>
               </Setter.Value>
           </Setter>
       </Style>

       <!-- Border Style -->
       <Style x:Key="RoundedBorderStyle" TargetType="Border">
           <Setter Property="CornerRadius" Value="15"/>
       </Style>

       <!-- Button Style -->
       <Style x:Key="RoundedButtonStyle" TargetType="Button">
           <Setter Property="Template">
               <Setter.Value>
                   <ControlTemplate TargetType="Button">
                       <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                           <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                       </Border>
                   </ControlTemplate>
               </Setter.Value>
           </Setter>
       </Style>
    </Window.Resources>

    <Grid>
        <!-- Define Sidebar and Main Content Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                x:Name="SidebarContainer"
                Width="250"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,1,0"/>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <!-- Define Rows for TopNavBar and Content -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- TopNavBar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border x:Name="TopNavBarContainer"
                    Grid.Row="0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,0,1"/>

            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title and Add Button -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,20">
                        <TextBlock Text="Suppliers"
                                   FontWeight="SemiBold"
                                   FontFamily="Lexend"
                                   FontSize="25"
                                   Foreground="#474747"
                                   VerticalAlignment="Center"/>
                        <Button x:Name="btnAddNew"
                                Style="{StaticResource AddNewButtonStyle}"
                                Margin="20,0,0,0"  >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Width="25" Height="25" Foreground="#474747"/>
                                <TextBlock Text="Add New" FontSize="17" Foreground="#474747"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Filters and Controls -->
                    <Border Grid.Row="1" Padding="10" Background="White" CornerRadius="10" BorderBrush="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Controls -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <!-- Excel Button -->
                                <Button Style="{StaticResource RoundedButtonStyle}" Background="#456B2E" Foreground="White" Width="94" Click="ExportToExcel" Height="30"  Margin="10,0,0,0" >
                                    <materialDesign:PackIcon Kind="MicrosoftExcel" Width="60" Height="25" VerticalAlignment="Center"/>
                                </Button>

                                <TextBlock Text="Show" FontSize="14" Margin="10,0,5,0" Height="18" FontWeight="Regular" FontFamily="Lexend" Foreground="#474747"/>
                                <ComboBox Width="100" Style="{StaticResource RoundedComboBoxStyle}" Height="36">
                                    <ComboBoxItem Content="10" IsSelected="True"/>
                                    <ComboBoxItem Content="25"/>
                                    <ComboBoxItem Content="50"/>
                                    <ComboBoxItem Content="100"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Right Controls -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Border BorderBrush="#555555" BorderThickness="2" CornerRadius="20" MinWidth="200" Width="211" Height="34">
                                    <Grid>
                                        <TextBox BorderThickness="0" Background="Transparent" FontFamily="Lexend"  Name="txtSearch" Style="{StaticResource RoundedTextboxStyle}" Height="23" Margin="20,0,20,0" VerticalAlignment="Center" />
                                        <materialDesign:PackIcon Kind="Magnify" Width="25" Height="25" Foreground="Black" Margin="159,0,0,0" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <!-- DataGrid Section -->
                    <StackPanel Grid.Row="2" Margin="0,10" >
                        <DataGrid Name="dataGrid"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            HeadersVisibility="Column"
                            GridLinesVisibility="None"
                            RowBackground="White"
                            AlternatingRowBackground="WhiteSmoke"
                            BorderThickness="0">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Margin" Value="0,5,0,5"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="FontFamily" Value="Lexend"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#474747"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding SupplierID}" Width="Auto" FontFamily="Lexend" Foreground="#474747" />
                                <DataGridTextColumn Header="Name" Binding="{Binding SupplierName}" Width="Auto" FontFamily="Lexend" Foreground="#474747" />
                                <DataGridTextColumn Header="Company" Binding="{Binding SupplierCompany}" Width="Auto" FontFamily="Lexend" Foreground="#474747" />
                                <DataGridTextColumn Header="Address" Binding="{Binding OfficeAddress}" Width="Auto" FontFamily="Lexend" Foreground="#474747" />
                                <DataGridTextColumn Header="Email" Binding="{Binding SupplierEmail}" Width="Auto" FontFamily="Lexend" Foreground="#474747" />
                                <DataGridTextColumn Header="Phone" Binding="{Binding SupplierPhone}" Width="Auto" FontFamily="Lexend" Foreground="#474747" />

                                <!-- Brands Column Without Converter -->
                                <DataGridTextColumn Header="Brands" Binding="{Binding BrandNames}" Width="Auto"/>

                                <DataGridTemplateColumn Header="Settings" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="⚙" Width="30" Height="30" Background="Transparent"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>