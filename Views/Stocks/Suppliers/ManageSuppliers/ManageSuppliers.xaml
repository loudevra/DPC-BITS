<UserControl x:Class="DPC.Views.Stocks.Suppliers.ManageSuppliers.ManageSuppliers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers.ManageSuppliers"
        mc:Ignorable="d"
        Background="#D9D9D9">

    <!-- Main Content Area -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title and Add Button -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,20">
                <TextBlock Text="Suppliers"
                           FontWeight="SemiBold"
                           FontFamily="Lexend"
                           FontSize="25"
                           Foreground="#474747"
                           VerticalAlignment="Center"/>
                <Button x:Name="btnAddNew"
                        Margin="20,0,0,0"
                         Style="{StaticResource RoundedButtonStyle}" Width="116"
                        >
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" Width="25" Height="25" Foreground="#474747"/>
                        <TextBlock Text="Add New" FontSize="17" Foreground="#474747" Margin="0,3,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Filters and Controls -->
            <Border Grid.Row="1" Padding="10" Background="White" CornerRadius="10" BorderBrush="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <!-- Excel Button -->
                        <Button Style="{StaticResource RoundedButtonStyle}" Background="#456B2E" Foreground="White" Width="75" Click="ExportToExcel" >
                            <materialDesign:PackIcon Kind="MicrosoftExcel" Width="25" Height="25"/>
                        </Button>

                        <TextBlock Text="Show" FontSize="14" Margin="10,0,5,0"/>
                        <ComboBox Width="75" Style="{StaticResource RoundedComboBoxStyle}">
                            <ComboBoxItem Content="10" IsSelected="True"/>
                            <ComboBoxItem Content="25"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Right Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border  MinWidth="200">
                            <Grid>
                                <TextBox BorderThickness="0" Background="Transparent" FontFamily="Lexend" Name="txtSearch"  />
                                <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" Foreground="Black" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- DataGrid Section -->
            <StackPanel Grid.Row="2">
                <DataGrid Name="dataGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"
                    GridLinesVisibility="None"
                    RowBackground="White"
                    AlternatingRowBackground="WhiteSmoke"
                    BorderThickness="0">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Margin" Value="0,5,0,5"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontFamily" Value="Lexend"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#474747"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding SupplierID}" Width="Auto"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding SupplierName}" Width="Auto"/>
                        <DataGridTextColumn Header="Company" Binding="{Binding SupplierCompany}" Width="Auto"/>
                        <DataGridTextColumn Header="Address" Binding="{Binding OfficeAddress}" Width="Auto"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding SupplierEmail}" Width="Auto"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding SupplierPhone}" Width="Auto"/>

                        <!-- Brands Column Without Converter -->
                        <DataGridTextColumn Header="Brands" Binding="{Binding BrandNames}" Width="Auto"/>

                        <DataGridTemplateColumn Header="Settings" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="⚙" Width="30" Height="30" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>