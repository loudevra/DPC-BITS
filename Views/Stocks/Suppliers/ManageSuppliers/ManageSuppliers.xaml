<Window x:Class="ManageSuppliers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DPC"
        mc:Ignorable="d"
       Background="#D9D9D9"
       Title="NewSuppliers" Height="800" Width="1200"
       WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="AddNewButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#474747"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      VerticalAlignment="Center"
                                      Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="Black"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           Focusable="False"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                Background="White" 
                                BorderBrush="Black"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title and Add Button -->
            <StackPanel Grid.Row="0" Margin="25,25,25,30" Orientation="Horizontal">
                <TextBlock Text="Suppliers" 
                       Margin="0,0,25,0" 
                       FontWeight="SemiBold" 
                       FontFamily="Lexend" 
                       FontSize="25" 
                       Foreground="#474747"
                       VerticalAlignment="Top"
                       TextWrapping="Wrap"/>

                <Button x:Name="btnAddNew" Style="{StaticResource AddNewButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Plus" Foreground="#474747" Width="25" Height="25" Margin="0,0,5,0"/>
                        <TextBlock Text="Add New" FontFamily="Lexend" Foreground="#474747" VerticalAlignment="Center" FontSize="17"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Filters and Controls -->
            <Border Grid.Row="1" BorderThickness="1" BorderBrush="White" CornerRadius="10" Background="white" Padding="5" Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Excel Button -->
                        <Button Style="{StaticResource RoundedButtonStyle}" Width="75" Height="30" Background="#456B2E" Foreground="White">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="MicrosoftExcel" Foreground="White" Width="25" Height="25"/>
                            </StackPanel>
                        </Button>

                        <!-- Show Label -->
                        <TextBlock Text="Show" FontFamily="Lexend" FontSize="14" VerticalAlignment="Center" Margin="10,0,5,0"/>

                        <!-- Dropdown for Number of Entries -->
                        <ComboBox Width="75" Height="30" VerticalAlignment="Center" Margin="0,0,10,0" Style="{StaticResource RoundedComboBoxStyle}">
                            <ComboBoxItem Content="10" IsSelected="True"/>
                            <ComboBoxItem Content="25"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>

                        <!-- View Mode Buttons -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Style="{StaticResource RoundedButtonStyle}" Width="35" Height="35" BorderThickness="1" BorderBrush="Black" Padding="5" Background="Transparent" Margin="0,0,5,0">
                                <materialDesign:PackIcon Kind="Grid" Width="20" Height="20" Foreground="Black"/>
                            </Button>
                            <Button Style="{StaticResource RoundedButtonStyle}" Width="35" Height="35" BorderThickness="1" BorderBrush="Black" Padding="5" Background="Transparent">
                                <materialDesign:PackIcon Kind="ViewList" Width="25" Height="25" Foreground="Black"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Right Controls (Date Range & Search) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <!-- Date Range Picker -->
                        <Border Style="{StaticResource RoundedGridStyle}" HorizontalAlignment="Right" Margin="10" MinWidth="250">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Start Date Picker (Hidden Control) -->
                                <DatePicker x:Name="StartDatePicker"
                                        SelectedDate="{Binding StartDate, Mode=TwoWay}"
                                        Visibility="Hidden"/>

                                <!-- Start Date Display (Clickable) -->
                                <Button Grid.Column="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Stretch"
                                    Click="StartDate_Click">
                                    <TextBlock Text="{Binding StartDate, StringFormat='MMM dd, yyyy'}"
                                           FontFamily="Lexend"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           Margin="10,0,5,0"/>
                                </Button>

                                <!-- Separator -->
                                <TextBlock Text=" - "
                                       FontFamily="Lexend"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Grid.Column="1"/>

                                <!-- End Date Picker (Hidden Control) -->
                                <DatePicker x:Name="EndDatePicker"
                                        SelectedDate="{Binding EndDate, Mode=TwoWay}"
                                        Visibility="Hidden"/>

                                <!-- End Date Display (Clickable) -->
                                <Button Grid.Column="2"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    HorizontalAlignment="Stretch"
                                    Click="EndDate_Click">
                                    <TextBlock Text="{Binding EndDate, StringFormat='MMM dd, yyyy'}"
                                           FontFamily="Lexend"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           Margin="5,0,10,0"/>
                                </Button>

                                <!-- Calendar Icon (Rightmost) -->
                                <materialDesign:PackIcon Kind="Calendar"
                                                     Width="20"
                                                     Height="20"
                                                     Foreground="Black"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Grid.Column="3"
                                                     Margin="0,0,5,0"/>
                            </Grid>
                        </Border>

                        <!-- Search Box -->
                        <Border Style="{StaticResource RoundedGridStyle}" HorizontalAlignment="Right" Margin="10" MinWidth="200">
                            <Grid>
                                <TextBox Height="Auto" Margin="10,0,30,0" VerticalAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0"
                                     FontFamily="Lexend" Background="Transparent" HorizontalAlignment="Stretch" Focusable="True"/>
                                <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" Foreground="Black" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Row="2" Margin="10,5">
                <Border BorderThickness="1" BorderBrush="White" CornerRadius="10,10,0,0" Background="White" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.05*"/>
                            <!-- Small width for index (#) -->
                            <ColumnDefinition Width="0.15*"/>
                            <!-- Order# (Moderate length) -->
                            <ColumnDefinition Width="0.25*"/>
                            <!-- Supplier (Longer names) -->
                            <ColumnDefinition Width="0.15*"/>
                            <!-- Date (MMM dd, yyyy) -->
                            <ColumnDefinition Width="0.15*"/>
                            <!-- Amount (Currency) -->
                            <ColumnDefinition Width="0.25*"/>
                            <!-- Status (Short text like 'Pending', 'Completed') -->
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Column Headers -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Grid.Column="0" Text="#" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" VerticalAlignment="Center" Foreground="#474747"/>
                            <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="15" Height="15" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Name#" FontWeight="SemiBold" FontFamily="Lexend" FontSize="13" Foreground="#474747"/>
                            <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="15" Height="15" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Address" FontWeight="SemiBold" FontFamily="Lexend" FontSize="13" Foreground="#474747"/>
                            <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="15" Height="15" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Email" FontWeight="SemiBold" FontFamily="Lexend" FontSize="13" Foreground="#474747"/>
                            <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="15" Height="15" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Phone" FontWeight="SemiBold" FontFamily="Lexend" FontSize="13" Foreground="#474747"/>
                            <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="15" Height="15" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Settings" FontWeight="SemiBold" FontFamily="Lexend" FontSize="13" Foreground="#474747"/>
                            <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="15" Height="15" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                   
                    
                    


                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
