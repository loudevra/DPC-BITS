<Window x:Class="ManageSuppliers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DPC"
        mc:Ignorable="d"
       Background="#D9D9D9"
       Title="NewSuppliers" Height="800" Width="1200"
       WindowStartupLocation="CenterScreen">
    <Grid Background="#D3D3D3" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20">
            <Label Content="Suppliers" FontWeight="SemiBold" FontSize="24" FontFamily="Lexend" Foreground="#474747"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20">
            <Button Content="Add Supplier" Margin="160,28,904,21" Padding="10,5" FontSize="14" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
