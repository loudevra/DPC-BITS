<UserControl x:Class="DPC.Views.DataReports.Statements.StatementsTabs.DTRAccounts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers.ManageSuppliers"
        mc:Ignorable="d"
        Background="#D9D9D9">

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header Section -->
            <RowDefinition Height="Auto"/>
            <!-- Options Bar -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid Section -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination Section -->
        </Grid.RowDefinitions>

        <!-- Main Content for Personal Information -->
        <StackPanel Grid.Row="2" Margin="20,20,20,10" Width="800">
            <!-- Form Content -->
            <StackPanel>
                <!-- Account -->
                <TextBlock Text="Account:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                <ComboBox x:Name="cmbAccount" Style="{StaticResource RoundedComboBoxStyle}" Height="40" SelectedIndex="0" Margin="0">
                </ComboBox>

                <!-- Transaction Type -->
                <TextBlock Text="Type:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                <ComboBox x:Name="cmbType" Style="{StaticResource RoundedComboBoxStyle}" Height="40" SelectedIndex="0" Margin="0">
                </ComboBox>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="From Date:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <!-- Single Date Picker -->
                                <DatePicker x:Name="dtpFromDate" 
                                    Style="{StaticResource SingleDatePickerStyle}" 
                                    SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                                    DisplayDateStart="{Binding MinimumDate}"/>
                                <!-- Calendar Icon -->
                                <materialDesign:PackIcon Grid.Column="0" Kind="Calendar" Width="25" Height="25" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                <!-- Date Display - Now uses FormattedDate property -->
                                <Button x:Name="btnDTPFromDate" Grid.Column="1" Style="{StaticResource DateButtonStyle}" Width="Auto" Margin="10,0,25,0">
                                    <TextBlock Text="{Binding FormattedDate}" Margin="0,0,5,0" Foreground="#474747" Height="14"/>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="To Date:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <!-- Single Date Picker -->
                                <DatePicker x:Name="dtpToDate" 
                                    Style="{StaticResource SingleDatePickerStyle}" 
                                    SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                                    DisplayDateStart="{Binding MinimumDate}"/>
                                <!-- Calendar Icon -->
                                <materialDesign:PackIcon Grid.Column="0" Kind="Calendar" Width="25" Height="25" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                <!-- Date Display - Now uses FormattedDate property -->
                                <Button x:Name="btnDTPToDate" Grid.Column="1" Style="{StaticResource DateButtonStyle}" Width="Auto" Margin="10,0,25,0">
                                    <TextBlock Text="{Binding FormattedDate}" Margin="0,0,5,0" Foreground="#474747" Height="14"/>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Export Button -->
            <Button x:Name="btnExportData" Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" Margin="0,10,0,5" Width="800">
                <Border Style="{StaticResource RoundedBorderStyle}" Padding="1" Background="#FF92B77C" BorderBrush="#FF92B77C" Width="800" Height="30">
                    <StackPanel Orientation="Horizontal" Background="#FF92B77C" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Export" Width="20" Height="20" Foreground="#FFFDFDFD" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,5,0"/>
                        <TextBlock Text="Export Data" Foreground="#FFFDFDFD" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Lexend"/>
                    </StackPanel>
                </Border>
            </Button>

            <Button x:Name="btnViewData" Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" Margin="0,5,0,15" Width="800">
                <Border Style="{StaticResource RoundedBorderStyle}" Padding="1" Background="#FF6A7F9E" BorderBrush="#FF6A7F9E" Width="800" Height="30">
                    <StackPanel Orientation="Horizontal" Background="#FF6A7F9E" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="EyeOutline" Width="20" Height="20" Foreground="#FFFDFDFD" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,5,0"/>
                        <TextBlock Text="View Data" Foreground="#FFFDFDFD" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Lexend"/>
                    </StackPanel>
                </Border>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>