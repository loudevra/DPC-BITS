<UserControl x:Class="DPC.Views.DataReports.DTRTabStructured"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers.ManageSuppliers"
        mc:Ignorable="d"
        Background="#D9D9D9">

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header Section -->
            <RowDefinition Height="Auto"/>
            <!-- Options Bar -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid Section -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination Section -->
        </Grid.RowDefinitions>

        <!-- Title and Add Button - Static at top -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,10">
            <TextBlock Text="Generate Statement"
                       FontWeight="SemiBold"
                       FontFamily="Lexend"
                       FontSize="25"
                       Foreground="#474747"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel 
            Grid.Row="1" 
            Margin="20,0,20,10" 
            Width="800">
            <Border 
                Height="38" 
                Background="#FFFDFDFD"
                CornerRadius="10,10,10,10"
                Padding="5,5,5,5">
                <StackPanel Orientation="Horizontal">
                    <Border
                        CornerRadius="10"
                        BorderBrush="Gray"
                        BorderThickness="0"
                        Background="#FFE9E9E9"
                        Width="194"
                        Margin="2,0,2,0">
                        <Button Width="175" Background="Transparent" BorderThickness="0" FontSize="14" Padding="5" FontFamily="Lexend">
                            <TextBlock Text="Account" Foreground="#FF555555" />
                        </Button>
                    </Border>
                    <Border
                        CornerRadius="10"
                        BorderBrush="Gray"
                        BorderThickness="0"
                        Background="Transparent"
                        Width="194"
                        Margin="2,0,2,0">
                        <Button Width="175" Background="Transparent" BorderThickness="0" FontSize="14" Padding="5" FontFamily="Lexend">
                            <TextBlock Text="Customer Account" Foreground="#FF555555" />
                        </Button>
                    </Border>
                    <Border
                        CornerRadius="10"
                        BorderBrush="Gray"
                        BorderThickness="0"
                        Background="Transparent"
                        Width="194"
                        Margin="2,0,2,0">
                        <Button Width="175" Background="Transparent" BorderThickness="0" FontSize="14" Padding="5" FontFamily="Lexend">
                            <TextBlock Text="Supplier Account" Foreground="#FF555555" />
                        </Button>
                    </Border>
                    <Border
                        CornerRadius="10"
                        BorderBrush="Gray"
                        BorderThickness="0"
                        Background="Transparent"
                        Width="194"
                        Margin="2,0,2,0">
                        <Button Width="175" Background="Transparent" BorderThickness="0" FontSize="14" Padding="5" FontFamily="Lexend">
                            <TextBlock Text="Supplier Account" Foreground="#FF555555" />
                        </Button>
                    </Border>

                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2" Height="500">

        </StackPanel>
    </Grid>
</UserControl>