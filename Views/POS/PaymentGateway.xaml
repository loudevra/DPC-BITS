<UserControl x:Class="DPC.Views.POS.PaymentGateway"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="White">

    <UserControl.Resources>
        <Style x:Key="CustomRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#AEAEAE"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,6,0">
                                <Ellipse Stroke="#AEAEAE" StrokeThickness="2" Fill="Transparent"/>
                                <Ellipse x:Name="CheckedEllipse" Fill="#AEAEAE" Width="10" Height="10" Visibility="Collapsed"/>
                                <Ellipse x:Name="BlackEllipse" Fill="Black" Width="10" Height="10" Visibility="Collapsed"/>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0" Margin="0,0,0,25">
            <Button Width="30" Height="30" Background="Transparent" BorderThickness="0" Margin="0,0,8,0">
                <materialDesign:PackIcon Kind="ArrowLeftTop" Width="23" Height="23" Foreground="#D9D9D9" VerticalAlignment="Center"/>
            </Button>
            <materialDesign:PackIcon Kind="InvoiceTextOutline" Width="26" Height="26" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock Text="Billing Statement" FontWeight="SemiBold" FontSize="20" VerticalAlignment="Center" FontFamily="Lexend" Foreground="#555555"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="40,0,0,0">
                <Ellipse Width="28" Height="28" Fill="#222" VerticalAlignment="Center"/>
                <TextBlock Text="1" Foreground="White" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="-28,0,0,0" HorizontalAlignment="Center" FontFamily="Lexend"/>
                <TextBlock Text="  Payment" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#555555" VerticalAlignment="Center" FontFamily="Lexend"/>
                <Rectangle Width="60" Height="2" Fill="#eee" Margin="10,0,10,0" VerticalAlignment="Center"/>
                <Ellipse Width="28" Height="28" Stroke="#ccc" StrokeThickness="2" Fill="#D9D9D9" VerticalAlignment="Center"/>
                <TextBlock Text="  Confirmation" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#555555" VerticalAlignment="Center" FontFamily="Lexend"/>
            </StackPanel>
        </StackPanel>

        <!-- Payment Terms -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Payment Terms" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,1" FontFamily="Lexend" Foreground="#555555"/>
            <TextBlock Text="Select a plan between Full Payment and Installment." Foreground="#555555" FontSize="14" Margin="0,0,0,10" FontFamily="Lexend"/>
            <Border BorderBrush="#AEAEAE" BorderThickness="1" CornerRadius="8" Padding="0" Background="White">
                <StackPanel>
                    <Border BorderBrush="#AEAEAE" BorderThickness="0,0,0,1" Margin="0" Padding="10,0,10,0" Background="Transparent">
                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Full Payment" GroupName="PaymentTerm" Margin="0,10,0,10"/>
                    </Border>
                    <Border BorderBrush="#AEAEAE" BorderThickness="0,0,0,1" Margin="0" Padding="10,0,10,0" Background="Transparent">
                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Installment" GroupName="PaymentTerm" Margin="0,10,0,10"/>
                    </Border>
                    <Border Padding="10,0,10,0" Background="Transparent">
                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Other" GroupName="PaymentTerm" Margin="0,10,0,10"/>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Payment Method -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Payment Method" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,8" FontFamily="Lexend" Foreground="#555555"/>
            <Border BorderBrush="#AEAEAE" BorderThickness="1" CornerRadius="8" Padding="0" Background="White">
                <StackPanel>
                    <Border BorderBrush="#AEAEAE" BorderThickness="0,0,0,1" Margin="0" Padding="10,0,10,0" Background="Transparent">
                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Cash" GroupName="PaymentMethod" Margin="0,10,0,10"/>
                    </Border>
                    <Border BorderBrush="#AEAEAE" BorderThickness="0,0,0,1" Margin="0" Padding="10,0,10,0" Background="Transparent">
                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Card" GroupName="PaymentMethod" Margin="0,10,0,10"/>
                    </Border>
                    <Border BorderBrush="#AEAEAE" BorderThickness="0,0,0,1" Margin="0" Padding="10,0,10,0" Background="Transparent">
                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="E-Wallet" GroupName="PaymentMethod" Margin="0,10,0,10"/>
                    </Border>
                    <Border BorderBrush="#AEAEAE" BorderThickness="0,0,0,1" Margin="0" Padding="10,0,10,0" Background="Transparent">
                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Bank" GroupName="PaymentMethod" Margin="0,10,0,10"/>
                    </Border>
                    <Border Padding="10,0,10,0" Background="Transparent">
                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Cheque" GroupName="PaymentMethod" Margin="0,10,0,10"/>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>