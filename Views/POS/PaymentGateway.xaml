<UserControl x:Class="DPC.Views.POS.PaymentGateway"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="White">

    <UserControl.Resources>
        <!--Radio Buttons Styles-->
        <Style x:Key="CustomRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#AEAEAE"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="19"/>
            <Setter Property="Margin" Value="10,5,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,6,0">
                                <Ellipse Stroke="#AEAEAE" StrokeThickness="2" Fill="Transparent"/>
                                <Ellipse x:Name="CheckedEllipse" Fill="#AEAEAE" Width="10" Height="10" Visibility="Collapsed"/>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Payment Buttons Styles-->
        <Style x:Key="CardPaymentButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <!--Ewallet Buttons Styles-->
        <Style x:Key="EwalletPaymentButton" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>

        <!--Edit Order Button Style-->
        <Style x:Key="EditOrderBtnStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" CornerRadius="20" Background="{TemplateBinding Background}" BorderThickness="2" BorderBrush="#555555">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Charge Button Style-->
        <Style x:Key="ChargeBtnStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" CornerRadius="20" Background="{TemplateBinding Background}" BorderThickness="0" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="385*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Main Content -->
                    <StackPanel  Grid.Column="0" Margin="40,30,40,30">
                        <!-- Header Section -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,20">
                            <materialDesign:PackIcon Kind="ArrowLeftTop" Width="30" Height="30" Foreground="#AEAEAE"/>
                            <materialDesign:PackIcon Kind="InvoiceTextOutline" Width="40" Height="30" Foreground="#555555"/>
                            <TextBlock Text="Billing Statement" FontWeight="SemiBold" FontFamily="Lexend" FontSize="25" Foreground="#555555" VerticalAlignment="Center"/>
                            <!-- Payment and Confirmation Display -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="40,0,0,0">
                                <Ellipse Width="28" Height="28" Fill="#222" VerticalAlignment="Center"/>
                                <TextBlock Text="1" Foreground="White" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="-28,0,0,0" HorizontalAlignment="Center" FontFamily="Lexend"/>
                                <TextBlock Text="Payment" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#555555" VerticalAlignment="Center" FontFamily="Lexend"/>
                                <Rectangle Width="60" Height="2" Fill="#AEAEAE" Margin="10,0,10,0" VerticalAlignment="Center"/>
                                <Ellipse Width="28" Height="28" Fill="#D9D9D9" VerticalAlignment="Center"/>
                                <TextBlock Text="Confirmation" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#555555" VerticalAlignment="Center" FontFamily="Lexend"/>
                            </StackPanel>
                        </StackPanel>

                        <!--Payment Terms-->
                        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,10,0,20">
                            <TextBlock Text="Payment Terms" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555"/>
                            <TextBlock Text="Select a plan between Full Payment and Installment." FontSize="14" Margin="0,0,5,0" FontFamily="Lexend" Foreground="#555555"/>
                        </StackPanel>

                        <!-- Payment Selection -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,20">
                            <Border Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#AEAEAE">
                                <StackPanel >
                                    <!-- Full Payment -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Full Payment"/>
                                    </Border>
                                    <!-- Installment -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Installment"/>
                                    </Border>
                                    <!-- Other -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Other"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Payment Method -->
                        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
                            <TextBlock Text="Payment Method" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555"/>
                        </StackPanel>

                        <!-- Payment Method RadioButtons -->
                        <StackPanel Grid.Row="2">
                            <Border Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#AEAEAE">
                                <StackPanel >
                                    <!-- Cash -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Cash"/>
                                    </Border>
                                    <!-- Card -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <StackPanel Orientation="Vertical">
                                            <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Card" Margin="10,5,0,5" />
                                        </StackPanel>
                                    </Border>
                                    <!-- E-Wallet -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <StackPanel Orientation="Vertical">
                                            <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="E-Wallet" Margin="10,5,0,5" />
                                        </StackPanel>
                                    </Border>
                                    <!-- Bank -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Bank"/>
                                    </Border>
                                    <!-- Cheque -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Cheque"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Height="700" Background="#D9D9D9" Width="400">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="250"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--Order Summary-->
                            <StackPanel Grid.Row="0" Margin="20,20,20,10" Orientation="Vertical">
                                <!--Order Summary-->
                                <Border Padding="20" BorderThickness="0,0,0,2" BorderBrush="#555555">
                                    <TextBlock Text="Order Summary" FontWeight="SemiBold" FontFamily="Lexend" FontSize="20" Foreground="#555555" VerticalAlignment="Center"/>
                                </Border>
                                <!--Items in Cart-->
                                <Border Padding="20" BorderThickness="0,0,0,2" BorderBrush="#C0C0C0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Kind="Cart" Width="30" Height="20" Foreground="#555555" VerticalAlignment="Center" Grid.Column="0"/>
                                        <TextBlock Text="1 Item(s) in Cart"
                                            FontWeight="SemiBold"
                                            FontFamily="Lexend"
                                            FontSize="16"
                                            Foreground="#555555"
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0"
                                            Grid.Column="1"/>
                                        <materialDesign:PackIcon Kind="ChevronDown"
                                          Width="30"
                                          Height="20"
                                          Foreground="#555555"
                                          VerticalAlignment="Center"
                                          Grid.Column="2"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                            
                            <!--Cart Content-->
                            <StackPanel Grid.Row="1">
                                
                            </StackPanel>

                            <!--Grand Total Description-->
                            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Margin="20,20,20,20">
                                <TextBlock Text="Total Tax" FontFamily="Lexend" FontSize="14" Foreground="#555555" Margin="0,0,0,10" />
                                <TextBlock Text="Total Discount" FontFamily="Lexend" FontSize="14" Foreground="#555555" Margin="0,0,0,10" />
                                <TextBlock Text="Grand Total" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555" />
                            </StackPanel>

                            <!--Grand Total Prices-->
                            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right" Margin="20,20,20,20">
                                <TextBlock Text="₱ 0.00" FontFamily="Lexend" FontSize="14" Foreground="#555555" Margin="0,0,0,10"  HorizontalAlignment="Right" />
                                <TextBlock Text="₱ 0.00" FontFamily="Lexend" FontSize="14" Foreground="#555555" Margin="0,0,0,10"  HorizontalAlignment="Right" />
                                <TextBlock FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" HorizontalAlignment="Right">
                                    <Run Text="₱ " Foreground="#555555"/>
                                    <Run Text="100.00" Foreground="#57B5E2"/>
                                </TextBlock>
                            </StackPanel>

                            <Border Grid.Row="3" BorderBrush="#FDFDFD" BorderThickness="0,3,0,0">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,30,0,0">
                                    <!--Edit Order Button-->
                                    <Button x:Name="BtnEditOrder" Style="{StaticResource EditOrderBtnStyle}" Height="45" Width="350" Margin="0,0,0,20">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Edit Order" FontSize="16" FontWeight="SemiBold" Foreground="#555555"/>
                                        </StackPanel>
                                    </Button>
                                    <!--Charge Button-->
                                    <Button x:Name="BtnCharge" Style="{StaticResource ChargeBtnStyle}" Height="45" Width="350" Background="#52C69D">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Cash" Width="25" Height="25" Foreground="#FDFDFD" Margin="0,0,10,0"/>
                                            <TextBlock Text="Charge ₱100" FontSize="16" FontWeight="SemiBold" Foreground="#FDFDFD"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>