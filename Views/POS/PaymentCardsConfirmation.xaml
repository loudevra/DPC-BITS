<UserControl x:Class="DPC.Views.POS.PaymentCardsConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#FDFDFD">

    <UserControl.Resources>
        <!--Radio Buttons Styles-->
        <Style x:Key="CustomRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#AEAEAE"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="19"/>
            <Setter Property="Margin" Value="10,5,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,6,0">
                                <Ellipse Stroke="#AEAEAE" StrokeThickness="2" Fill="Transparent"/>
                                <Ellipse x:Name="CheckedEllipse" Fill="#AEAEAE" Width="10" Height="10" Visibility="Collapsed"/>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Payment Buttons Styles-->
        <Style x:Key="CardPaymentButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <!--Ewallet Buttons Styles-->
        <Style x:Key="EwalletPaymentButton" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="385*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Main Content -->
                    <StackPanel Grid.Row="1" Margin="20,0,20,20" Grid.ColumnSpan="2">
                        <!-- Header Section -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,20">
                            <materialDesign:PackIcon Kind="ArrowLeftTop" Width="30" Height="30" Foreground="#AEAEAE"/>
                            <materialDesign:PackIcon Kind="InvoiceTextOutline" Width="40" Height="30" Foreground="#474747"/>
                            <TextBlock Text="Billing Statement" FontWeight="SemiBold" FontFamily="Lexend" FontSize="25" Foreground="#474747" VerticalAlignment="Center"/>
                            <!-- Payment and Confirmation Display -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="40,0,0,0">
                                <Ellipse Width="28" Height="28" Fill="#222" VerticalAlignment="Center"/>
                                <TextBlock Text="1" Foreground="White" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="-28,0,0,0" HorizontalAlignment="Center" FontFamily="Lexend"/>
                                <TextBlock Text="Payment" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#555555" VerticalAlignment="Center" FontFamily="Lexend"/>
                                <Rectangle Width="60" Height="2" Fill="#AEAEAE" Margin="10,0,10,0" VerticalAlignment="Center"/>
                                <Ellipse Width="28" Height="28" Fill="#D9D9D9" VerticalAlignment="Center"/>
                                <TextBlock Text="Confirmation" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#555555" VerticalAlignment="Center" FontFamily="Lexend"/>
                            </StackPanel>
                        </StackPanel>

                        <!--Payment Terms-->
                        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,10,0,20">
                            <TextBlock Text="Payment Terms" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747"/>
                            <TextBlock Text="Select a plan between Full Payment and Installment." FontSize="14" Margin="0,0,5,0" FontFamily="Lexend" Foreground="#555555"/>
                        </StackPanel>

                        <!-- Payment Selection -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,20">
                            <Border Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#AEAEAE">
                                <StackPanel >
                                    <!-- Full Payment -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Full Payment"/>
                                    </Border>
                                    <!-- Installment -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Installment"/>
                                    </Border>
                                    <!-- Other -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Other"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Payment Method -->
                        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
                            <TextBlock Text="Payment Method" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747"/>
                        </StackPanel>

                        <!-- Payment Method RadioButtons -->
                        <StackPanel Grid.Row="2">
                            <Border Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#AEAEAE">
                                <StackPanel >
                                    <!-- Cash -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Cash"/>
                                    </Border>
                                    <!-- Card -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <StackPanel Orientation="Vertical">
                                            <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Card" Margin="10,5,0,5" />
                                            <!-- card method buttons -->
                                            <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" Margin="20,0,2,5">
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/Visa.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/Amex.png" Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/Discover.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/Mastercard.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/Stripe.png" Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/PayPal.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/Authorize.net.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/PayU.png" Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/Razor.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource CardPaymentButtonStyle}">
                                                    <Image Source="/Assets/payments/Verifone.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <!-- E-Wallet -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <StackPanel Orientation="Vertical">
                                            <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Card" Margin="10,5,0,5" />
                                            <!-- e-wallet method buttons -->
                                            <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" Margin="20,0,20,5">
                                                <Button Style="{StaticResource EwalletPaymentButton}">
                                                    <Image Source="/Assets/payments/GCASH LOGO.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource EwalletPaymentButton}">
                                                    <Image Source="/Assets/payments/Maya_logo 1.png" Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource EwalletPaymentButton}">
                                                    <Image Source="/Assets/payments/ShopeePay 1.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                                <Button Style="{StaticResource EwalletPaymentButton}">
                                                    <Image Source="/Assets/payments/Vector.png" Stretch="fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <!-- Bank -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Bank"/>
                                    </Border>
                                    <!-- Cheque -->
                                    <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                                        <RadioButton Style="{StaticResource CustomRadioButtonStyle}" Content="Cheque"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>