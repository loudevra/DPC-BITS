<UserControl x:Class="DPC.Views.POS.POSForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="Auto" Width="300" Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" Padding="8" CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter />
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Material Design Sidebar Container -->
    <materialDesign:Card x:Name="SidebarContainer" Background="#FDFDFD" Width="300" UniformCornerRadius="15" Padding="15" BorderThickness="1" BorderBrush="#090909"
        materialDesign:ElevationAssist.Elevation="Dp3">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!--Top navbar-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                    <!--Button to go back to dashboard-->
                    <Button Style="{StaticResource ButtonStyle}" BorderBrush="Transparent" Background="Transparent">
                        <Image Source="/Assets/images/logo-black.png" Width="30" Height="40" Stretch="Uniform"/>
                    </Button>
                </StackPanel>

                <Grid Grid.Column="1" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Button to go back to dashboard-->
                    <Border Grid.Column="0" Style="{StaticResource RoundedBorderStyle}" VerticalAlignment="Center" BorderBrush="Transparent" Background="#090909">
                        <Button Style="{StaticResource ButtonStyle}" BorderBrush="Transparent" Background="Transparent" Margin="0"> 
                            <materialDesign:PackIcon Kind="Speedometer" Width="20" Height="20" Foreground="#FDFDFD" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </Border>

                    <!--Button to open register-->
                    <Border Grid.Column="1" Style="{StaticResource RoundedBorderStyle}" VerticalAlignment="Center" BorderBrush="Transparent" Background="#090909">
                        <Button Style="{StaticResource ButtonStyle}" BorderBrush="Transparent" Background="Transparent" Margin="0">
                            <materialDesign:PackIcon Kind="CashRegister" Width="20" Height="20" Foreground="#FDFDFD" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </Border>

                    <!--Button to close register-->
                    <Border Grid.Column="2" Style="{StaticResource RoundedBorderStyle}" VerticalAlignment="Center" BorderBrush="Transparent" Background="#090909">
                        <Button Style="{StaticResource ButtonStyle}" BorderBrush="Transparent" Background="Transparent" Margin="0">
                            <materialDesign:PackIcon Kind="Lock" Width="20" Height="20" Foreground="#FDFDFD" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </materialDesign:Card>
</UserControl>
