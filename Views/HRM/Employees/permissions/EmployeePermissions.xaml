<Window x:Class="DPC.Views.HRM.Employees.Permissions.EmployeePermissions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DPC.Views.HRM.Employees.Permissions"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Employee Permissions"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource LexendRegular}">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Sidebar -->
		<Border x:Name="SidebarContainer" Grid.Column="0"/>

		<!-- Main Content -->
		<Grid Grid.Column="1" Background="#E0E0E0">
			<StackPanel Margin="20">

				<!-- Top Bar -->
				<DockPanel Margin="0,0,0,20">
					<TextBlock Text="Permissions"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#333"
                               FontFamily="{StaticResource LexendBold}"
                               DockPanel.Dock="Left"/>

					<TextBox materialDesign:HintAssist.Hint="Search Employee..."
                             Width="200"
                             Margin="10,0,0,0"
                             HorizontalAlignment="Right"
                             x:Name="SearchBox"/>
				</DockPanel>

				<!-- Permissions Table -->
				<Border Background="White" Padding="10" CornerRadius="8">
					<DataGrid x:Name="PermissionsDataGrid"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          GridLinesVisibility="None"
          Background="White"
          BorderThickness="0"
          RowHeight="40"
          CanUserAddRows="False">

						<DataGrid.Columns>
							<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
							<DataGridTextColumn Header="Employee Name" Binding="{Binding Name}" Width="200"/>

							<DataGridTemplateColumn Header="Inventory Manager">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<CheckBox IsChecked="{Binding IsInventoryManager, Mode=TwoWay}"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>

							<DataGridTemplateColumn Header="Sales Person">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<CheckBox IsChecked="{Binding IsSalesPerson, Mode=TwoWay}"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>

							<DataGridTemplateColumn Header="Sales Manager">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<CheckBox IsChecked="{Binding IsSalesManager, Mode=TwoWay}"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>

							<DataGridTemplateColumn Header="Business Manager">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<CheckBox IsChecked="{Binding IsBusinessManager, Mode=TwoWay}"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>

							<DataGridTemplateColumn Header="Business Owner">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<CheckBox IsChecked="{Binding IsBusinessOwner, Mode=TwoWay}"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>

							<DataGridTemplateColumn Header="Project Manager">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<CheckBox IsChecked="{Binding IsProjectManager, Mode=TwoWay}"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>

						</DataGrid.Columns>
					</DataGrid>

				</Border>

				<!-- Pagination -->
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
					<Button Content="Prev" Click="PrevPage_Click" Padding="5"/>
					<TextBlock x:Name="PageInfoText" Text="1 / 1" Margin="10,0"/>
					<Button Content="Next" Click="NextPage_Click" Padding="5"/>
				</StackPanel>

				<!-- Update Button -->
				<Button Content="Update Permissions"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Background="#4CAF50"
                        Foreground="White"
                        Padding="10,5"
                        HorizontalAlignment="Right"
                        Click="UpdatePermissions_Click"/>

			</StackPanel>
		</Grid>
	</Grid>
</Window>
