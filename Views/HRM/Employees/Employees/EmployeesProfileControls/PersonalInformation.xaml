<UserControl x:Class="DPC.Views.HRM.Employees.Employees.EmployeesProfile.EmployeesProfileControls.PersonalInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:DPC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontFamily="{StaticResource Lexend}" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#474747" Margin="0,0,20,0">Personal Information</TextBlock>
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>

            <StackPanel Grid.Row="0" Grid.Column="0">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Name" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="Eli Clark"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Address" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="59 Tredegar St"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="City" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="New Port"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Country" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="Wales"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="2">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Postal Code" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="NP10"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Contact No." Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="+44 770156259"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="1">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Contact No.(Alt)" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="N/A"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="2">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Email" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="brookerose@gmail.com"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="0">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Business Location" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="DREAM PC BUILD"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="1">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Job Role" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="Business Manager"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="2">
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE" Text="Department" Margin="0,0,0,10"/>
                <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#555555" Text="Marketing Department"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
