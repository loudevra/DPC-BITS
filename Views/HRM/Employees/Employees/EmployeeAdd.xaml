<Window x:Class="DPC.Views.HRM.Employees.Employees.EmployeeAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Components.Navigation"
        Title="Add Employee"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource Lexend}"
        >

    <Window.Resources>
        <Style x:Key="RoundedComboboxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="20,0,18,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#474747"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="SidebarContainer" Grid.Column="0"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <Grid Margin="25,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0">
                    <materialDesign:PackIcon Kind="UserAdd" Foreground="#474747" Width="50" Height="50" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <!-- Title -->
                    <TextBlock Text="Employee Details" VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    FontSize="25"  
                    Foreground="#474747"
                    Margin="0,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,20,0,20">
                    <StackPanel Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Username:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="(Use only A-Z &amp; 0-9)" FontWeight="SemiBold" Foreground="#D23636" FontSize="11" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                            <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,10">
                        <StackPanel Margin="0,0,0,5">
                            <TextBlock Text="Business Location:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <StackPanel>
                            <Border Style="{StaticResource RoundedBorderStyle}">
                                <ComboBox Style="{StaticResource RoundedComboboxStyle}" SelectedIndex="0">
                                    <ComboBoxItem Content="Location 1"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0,10">
                        <StackPanel Margin="0,0,0,5">
                            <TextBlock Text="User Role:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <StackPanel>
                            <Border Style="{StaticResource RoundedBorderStyle}">
                                <ComboBox Style="{StaticResource RoundedComboboxStyle}" SelectedIndex="0">
                                    <ComboBoxItem Content="Role 1"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0, 10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Email:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                            <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Password:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                            <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                        </Border>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="✓ At least 6 Characters" FontWeight="Regular" FontSize="12" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,0,2"/>
                            <TextBlock Text="✓ Under 20 characters" FontWeight="Regular" FontSize="12" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,0,2"/>
                            <TextBlock Text="✓ 1 uppercase letter" FontWeight="Regular" FontSize="12" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,0,2"/>
                            <TextBlock Text="✓ 1 lowercase letter" FontWeight="Regular" FontSize="12" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,0,2"/>
                            <TextBlock Text="✓ 1 special character" FontWeight="Regular" FontSize="12" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,0,2"/>
                            <TextBlock Text="✓ 1 number" FontWeight="Regular" FontSize="12" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,0,2"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="-10,0">
                    <Border BorderThickness="1" BorderBrush="#AEAEAE"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,20,0,20">
                    <StackPanel Margin="0, 10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Name:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                            <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0, 10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Address:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                            <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0, 10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="City:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </StackPanel>
                            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource RoundedBorderStyle}" Padding="0,1" Margin="0,0,25,0">
                                <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                            </Border>

                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Region:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </StackPanel>
                            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource RoundedBorderStyle}" Padding="0,1" Margin="0,0,25,0">
                                <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                            </Border>

                            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Country:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </StackPanel>
                            <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource RoundedBorderStyle}" Padding="0,1" Margin="0,0,0,0">
                                <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="0, 10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Postal Code:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                            <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Phone:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                            <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="4" Margin="-10,10,-10,0">
                    <Border BorderThickness="1" BorderBrush="#AEAEAE"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Orientation="Vertical" Margin="0,10,0,20">
                    <StackPanel Margin="0, 10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Salary:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                            <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0, 10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Sales Commission %:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                            <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                        </Border>
                        <TextBlock Text="It will be based on each invoice amount - inclusive all taxes, shipping, discounts" FontSize="12" FontWeight="Regular" Foreground="#474747" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,10">
                        <StackPanel Margin="0,0,0,5">
                            <TextBlock Text="Department:" FontSize="14" FontWeight="SemiBold" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        </StackPanel>
                        <StackPanel>
                            <Border Style="{StaticResource RoundedBorderStyle}">
                                <ComboBox Style="{StaticResource RoundedComboboxStyle}" SelectedIndex="0">
                                    <ComboBoxItem Content="Department 1"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0,20,0,25" HorizontalAlignment="Right">
                        <Button Width="Auto" Height="35" Background="Transparent" BorderThickness="0">
                            <Border Style="{StaticResource RoundedBorderStyle}" Background="#1d5642" Padding="10,5" Width="250" BorderThickness="0">
                                <TextBlock Text="Add Employee" Foreground="White" FontSize="14" FontWeight="SemiBold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
