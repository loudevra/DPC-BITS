<Window x:Class="DPC.Views.HRM.Employees.Employees.EmployeeAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Components.Navigation"
        Title="Add Employee"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        FontFamily="Lexend">

    <Window.Resources>
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="20,0"/>
        </Style>

        <Style x:Key="RoundedComboboxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="20,0,18,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#474747"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="SidebarContainer" Grid.Column="0"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20">

                <Grid Margin="25,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0">
                        <materialDesign:PackIcon Kind="UserAdd" Foreground="#474747" Width="50" Height="50" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <!-- Title -->
                        <TextBlock Text="Employee Details" VerticalAlignment="Center"
                        FontSize="25" 
                        FontWeight="Regular" 
                        Foreground="#474747"
                        Margin="0,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,20">
                        <StackPanel Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Username:" FontSize="14" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="(Use only A-Z &amp; 0-9)" Foreground="#D23636" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                                <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Margin="0,10">
                            <StackPanel Margin="0,0,0,5">
                                <TextBlock Text="Business Location:" FontSize="14" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </StackPanel>
                            <StackPanel>
                                <Border Style="{StaticResource RoundedBorderStyle}">
                                    <ComboBox Style="{StaticResource RoundedComboboxStyle}" SelectedIndex="0">
                                        <ComboBoxItem Content="Location 1"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Margin="0,10">
                            <StackPanel Margin="0,0,0,5">
                                <TextBlock Text="User Role:" FontSize="14" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </StackPanel>
                            <StackPanel>
                                <Border Style="{StaticResource RoundedBorderStyle}">
                                    <ComboBox Style="{StaticResource RoundedComboboxStyle}" SelectedIndex="0">
                                        <ComboBoxItem Content="Role 1"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Email:" FontSize="14" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            </StackPanel>
                            <Border Style="{StaticResource RoundedBorderStyle}" Padding="0,1">
                                <TextBox Style="{StaticResource RoundedTextboxStyle}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>


                <!-- Form Card with Rounded Corners -->
                <Border CornerRadius="20" Background="White" Padding="0">
                    <materialDesign:Card Padding="20">

                        <StackPanel>

                            <!-- Username -->
                            

                            <!-- Business Location -->
                            <TextBlock Text="Business Location:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <ComboBox Margin="0,5,0,10">
                                <ComboBoxItem Content="Default" IsSelected="True"/>
                            </ComboBox>

                            <!-- User Role -->
                            <TextBlock Text="User Role:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <ComboBox Margin="0,5,0,10">
                                <ComboBoxItem Content="Inventory Manager"/>
                                <ComboBoxItem Content="Sales Person"/>
                                <ComboBoxItem Content="Sales Manager"/>
                                <ComboBoxItem Content="Business Manager" IsSelected="True"/>
                                <ComboBoxItem Content="Business Owner"/>
                            </ComboBox>

                            <!-- Email -->
                            <TextBlock Text="Email:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <TextBox materialDesign:HintAssist.Hint="Enter email..." Margin="0,5,0,10"/>

                            <!-- Password -->
                            <TextBlock Text="Password:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <PasswordBox materialDesign:HintAssist.Hint="Enter password..." Margin="0,5,0,10"/>

                            <!-- Validation Tips -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="✓ At least 6 characters" Foreground="Gray"/>
                                <TextBlock Text="✓ Under 20 characters" Foreground="Gray"/>
                                <TextBlock Text="✓ 1 uppercase letter" Foreground="Gray"/>
                                <TextBlock Text="✓ 1 lowercase letter" Foreground="Gray"/>
                                <TextBlock Text="✓ 1 special character" Foreground="Gray"/>
                                <TextBlock Text="✓ 1 number" Foreground="Gray"/>
                            </StackPanel>

                            <!-- Name -->
                            <TextBlock Text="Name:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <TextBox materialDesign:HintAssist.Hint="Enter name..." Margin="0,5,0,10"/>

                            <!-- Address -->
                            <TextBlock Text="Address:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <TextBox materialDesign:HintAssist.Hint="Enter address..." Margin="0,5,0,10"/>

                            <!-- City, Region, Country -->
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                                <StackPanel Margin="0,0,10,0">
                                    <TextBlock Text="City:" FontFamily="{StaticResource LexendSemiBold}"/>
                                    <TextBox materialDesign:HintAssist.Hint="Enter city..." Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,10,0">
                                    <TextBlock Text="Region:" FontFamily="{StaticResource LexendSemiBold}"/>
                                    <TextBox materialDesign:HintAssist.Hint="Enter region..." Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Country:" FontFamily="{StaticResource LexendSemiBold}"/>
                                    <TextBox materialDesign:HintAssist.Hint="Enter country..." Margin="0,5,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- PostBox -->
                            <TextBlock Text="PostBox:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <TextBox materialDesign:HintAssist.Hint="Enter PostBox..." Margin="0,5,0,10"/>

                            <!-- Phone -->
                            <TextBlock Text="Phone:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <TextBox materialDesign:HintAssist.Hint="Enter phone number..." Margin="0,5,0,10"/>

                            <!-- Salary -->
                            <TextBlock Text="Salary:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <TextBox materialDesign:HintAssist.Hint="Enter salary..." Margin="0,5,0,10"/>

                            <!-- Sales Commission -->
                            <TextBlock Text="Sales Commission %:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <TextBox materialDesign:HintAssist.Hint="Enter commission percentage..." Margin="0,5,0,5"/>
                            <TextBlock Text="It will be based on each invoice amount - inclusive of taxes, shipping, and discounts" Foreground="Gray" FontSize="12"/>

                            <!-- Department -->
                            <TextBlock Text="Department:" FontFamily="{StaticResource LexendSemiBold}"/>
                            <ComboBox Margin="0,5,0,15">
                                <ComboBoxItem Content="Default - No" IsSelected="True"/>
                            </ComboBox>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                <Button Content="Cancel" 
                                        Style="{StaticResource MaterialDesignFlatButton}" 
                                        Foreground="White" 
                                        Background="Gray"
                                        Padding="10,5" 
                                        Margin="0,0,10,0" 
                                        Click="CancelAddEmployee"/>
                                <Button Content="Add Employee" 
                                        Style="{StaticResource MaterialDesignRaisedButton}" 
                                        Background="{DynamicResource PrimaryHueDarkBrush}" 
                                        Foreground="White"
                                        Padding="10,5" 
                                        Click="SaveEmployee"/>
                            </StackPanel>

                        </StackPanel>
                    </materialDesign:Card>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
