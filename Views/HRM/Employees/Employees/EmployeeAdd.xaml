<Window x:Class="DPC.Views.HRM.Employees.Employees.EmployeeAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Components.Navigation"
        Title="Add Employee"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="SidebarContainer" Grid.Column="0"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Title -->
                <TextBlock Text="Employee Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- Form Fields -->
                <Border Background="White" Padding="20" CornerRadius="8">
                    <StackPanel>

                        <!-- Username -->
                        <TextBlock Text="Username:" FontWeight="Bold"/>
                        <TextBox Text="Enter username..." Margin="0,5,0,15"/>


                        <!-- Business Location -->
                        <TextBlock Text="Business Location:" FontWeight="Bold"/>
                        <ComboBox Margin="0,5,0,15">
                            <ComboBoxItem Content="Default" IsSelected="True"/>
                            <!-- Add more locations here -->
                        </ComboBox>

                        <!-- User Role -->
                        <TextBlock Text="User Role:" FontWeight="Bold"/>
                        <ComboBox Margin="0,5,0,15">
                            <ComboBoxItem Content="Inventory Manager" IsSelected="False"/>
                            <ComboBoxItem Content="Sales Person" IsSelected="False"/>
                            <ComboBoxItem Content="Sales Manager" IsSelected="False"/>
                            <ComboBoxItem Content="Business Manager" IsSelected="True"/>
                            <ComboBoxItem Content="Business Owner" IsSelected="False"/>
                            <ComboBoxItem Content="Business Manager" IsSelected="False"/>
                            <!-- Add more roles here -->
                        </ComboBox>

                        <!-- Email -->
                        <TextBlock Text="Email:" FontWeight="Bold"/>
                        <TextBox Text="Enter email..." Margin="0,5,0,15"/>

                        <!-- Password -->
                        <TextBlock Text="Password:" FontWeight="Bold"/>
                        <PasswordBox Margin="0,5,0,15"/>

                        <!-- Validation Tips -->
                        <TextBlock Text="✓ At least 6 characters" Foreground="Gray"/>
                        <TextBlock Text="✓ Under 20 characters" Foreground="Gray"/>
                        <TextBlock Text="✓ 1 uppercase letter" Foreground="Gray"/>
                        <TextBlock Text="✓ 1 lowercase letter" Foreground="Gray"/>
                        <TextBlock Text="✓ 1 special character" Foreground="Gray"/>
                        <TextBlock Text="✓ 1 number" Foreground="Gray"/>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Cancel" Background="Gray" Foreground="White" Padding="10,5" Margin="0,0,10,0" Click="CancelAddEmployee"/>
                            <Button Content="Save Employee" Background="Green" Foreground="White" Padding="10,5" Click="SaveEmployee"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
