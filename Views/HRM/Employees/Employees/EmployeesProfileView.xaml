<UserControl x:Class="DPC.Views.HRM.Employees.Employees.EmployeesProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#F5F5F5"
        >

    <UserControl.Resources>


        <Style x:Key="AddNewButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#474747"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      VerticalAlignment="Center"
                                      Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="Black"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           Focusable="False"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                Background="White" 
                                BorderBrush="Black"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled" Margin="0,1,0,-1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Main Content -->
                    <StackPanel Grid.Row="0" Margin="20">
                        <!-- Header Section -->
                        <DockPanel LastChildFill="False" VerticalAlignment="Center" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <materialDesign:PackIcon Margin="0,0 10, 0"  VerticalAlignment="Center" Height="25" Width="25" Kind="CartOutline"/>
                                <materialDesign:PackIcon Margin="0,0 10, 0"  VerticalAlignment="Center" Height="25" Width="25" Kind="MapMarkerOutline"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">

                                <Border Margin="0,0 10, 0" Style="{StaticResource RoundedBorderStyle}" Width="370" Background="#FDFDFD">
                                    <Grid >
                                        <TextBox Style="{StaticResource RoundedTextboxStyle}"  ></TextBox>
                                        <materialDesign:PackIcon Kind="Magnify" Margin="340,0,0,0" Foreground="#D9D9D9" Height="20" Width="20" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                <materialDesign:PackIcon Margin="0,0 10, 0"  VerticalAlignment="Center" Height="25" Width="25" Kind="BellOutline"/>
                                <materialDesign:PackIcon Margin="0,0 10, 0"  VerticalAlignment="Center" Height="25" Width="25" Kind="EmailOutline"/>
                                <materialDesign:PackIcon Margin="0,0 10, 0"  VerticalAlignment="Center" Height="25" Width="25" Kind="ClockTimeFourOutline"/>
                            </StackPanel>

                        </DockPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock FontWeight="Bold" Foreground="#474747" FontSize="24" FontFamily="{StaticResource Lexend}">Employee's Profile</TextBlock>
                    </StackPanel>

                    <Grid Grid.Row="2" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Padding="15, 25" Style="{StaticResource RoundedBorderStyle}" Background="#FDFDFD">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Height="102" HorizontalAlignment="Left" Width="102" Background="Black" CornerRadius="2000">

                                    </Border>
                                    <Border CornerRadius="12" Padding="8, 4" Grid.Column="1" VerticalAlignment="Top" Style="{StaticResource RoundedBorderStyle}" Background="#A7E183">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="CircleMedium" Foreground="#456B2E"/>
                                            <TextBlock VerticalAlignment="Center" Foreground="#456B2E" FontFamily="{StaticResource Lexend}" FontSize="10" FontWeight="DemiBold" >ACTIVE</TextBlock>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <StackPanel Margin="5,10, 5, 15">
                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="20" FontWeight="Bold" Foreground="#474747">Employee Name</TextBlock>
                                    <TextBlock Margin="0, 5, 0,0" FontFamily="{StaticResource Lexend}"  FontSize="14" FontWeight="SemiBold" Foreground="#AEAEAE">Position</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="14" FontWeight="SemiBold" Foreground="#AEAEAE">Department</TextBlock>
                                </StackPanel>
                                <Rectangle Fill="#D9D9D9" Height="1"></Rectangle>

                                <StackPanel Margin="15, 20, 0, 20">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="0, 10"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="12"  Foreground="#AEAEAE">Personal Information</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="12"  Foreground="#AEAEAE">Salary</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="12"  Foreground="#AEAEAE">Sales &amp; Income</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="12"  Foreground="#AEAEAE">Documents</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="12"  Foreground="#AEAEAE">Projects</TextBlock>
                                </StackPanel>

                                <Rectangle Fill="#D9D9D9" Height="1"></Rectangle>
                                <StackPanel Margin="15, 20, 0, 20">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="0, 10"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="12"  Foreground="#AEAEAE">Invoices</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="12"  Foreground="#AEAEAE">Quotes</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}"  FontSize="12"  Foreground="#AEAEAE">Transactions</TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border x:Name="ProfileTab" Margin="10,0,0,0" Padding="30, 25" Grid.Column="1" Width="600" Style="{StaticResource RoundedBorderStyle}" Background="#FDFDFD">

                        </Border>
                    </Grid>


                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>