<UserControl x:Class="DPC.Views.HRM.Employees.Employees.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        FontFamily="{StaticResource Lexend}"
        Background="#D9D9D9">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header Row - Fixed at top -->
            <RowDefinition Height="Auto"/>
            <!-- Content Row - Scrollable -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sticky Header -->
        <Border Grid.Row="0" Background="#D9D9D9" Padding="20,10" Panel.ZIndex="1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="AccountPlus" Width="70" Height="60" Margin="0,0,15,0" Foreground="#474747" />
                <TextBlock Text="Employee Details" FontSize="35" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Lexend" Foreground="#474747" />
            </StackPanel>
        </Border>

        <!-- Main Content - Scrollable -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20,10,20,20" Width="800">
                <!-- Form Content -->
                <StackPanel>
                    <!-- Username -->
                    <TextBlock Text="Username:" Margin="0,0,0,5" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="773">
                        <TextBox x:Name="txtUsername" Height="30" Margin="20,5,20,5" Style="{StaticResource RoundedTextboxStyle}" TextChanged="TxtUsername_TextChanged" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                    </Border>
                    <TextBlock x:Name="txtInvalidChars" Text="Username must be 6–20 chars, include upper/lowercase, number, and special character." Foreground="Red" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" Margin="5,0,0,5"/>
                    <TextBlock x:Name="txtValidUsername" Text="Username is valid and correct." Foreground="Green" FontWeight="SemiBold" FontFamily="Lexend" Margin="5,0,0,5" Visibility="Collapsed"/>

                    <!-- Business Location -->
                    <TextBlock Text="Business Location:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <ComboBox x:Name="cmbBusinessLocation" Style="{StaticResource RoundedComboBoxStyle}" Width="773" Height="40" SelectedIndex="0" Margin="0" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747">
                    </ComboBox>

                    <!-- Role -->
                    <TextBlock Text="User Role:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <ComboBox x:Name="cmbUserRole" Style="{StaticResource RoundedComboBoxStyle}" Width="773" Height="40" SelectedIndex="0" Margin="0" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747">
                    </ComboBox>
                    <!-- Email -->
                    <TextBlock Text="Email:" Margin="0,5,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="773">
                        <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747" />
                    </Border>

                    <!-- Password -->
                    <TextBlock Text="Password:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="773">
                        <TextBox x:Name="txtPassword" Height="30" Margin="0,5,0,5"
                        Style="{StaticResource RoundedTextboxStyle}" Width="736"
                        TextChanged="TxtPassword_TextChanged" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                    </Border>
                    <StackPanel x:Name="PasswordCriteriaPanel" Margin="10,0,0,0">
                        <TextBlock x:Name="chkLength" Text="✓ At least 6 characters" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                        <TextBlock x:Name="chkMaxLength" Text="✓ Under 20 characters" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                        <TextBlock x:Name="chkUpper" Text="✓ 1 uppercase letter" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                        <TextBlock x:Name="chkLower" Text="✓ 1 lowercase letter" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                        <TextBlock x:Name="chkSpecial" Text="✓ 1 special character" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                        <TextBlock x:Name="chkNumber" Text="✓ 1 number" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                    </StackPanel>

                    <Separator Margin="0,20,0,10" Height="1" Background="#474747"/>

                    <!-- Full Name -->
                    <TextBlock Text="Full Name:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="773">
                        <TextBox x:Name="txtName" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="735" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                    </Border>

                    <!-- Address Fields -->
                    <TextBlock Text="Street Address:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="773">
                        <TextBox x:Name="txtStreetAddress" Height="30" Margin="0,5,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="729" FontFamily="Lexend" FontWeight="SemiBold"/>
                    </Border>

                    <Grid Margin="10,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30"/>
                            <!-- Spacing -->
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30"/>
                            <!-- Spacing -->
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- City -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="City:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                            <Border Style="{StaticResource RoundedBorderStyle}" Width="225">
                                <TextBox x:Name="txtCity" Height="30" Margin="17,5,17,5" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" />
                            </Border>
                        </StackPanel>

                        <!-- Region -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Region:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                            <Border Style="{StaticResource RoundedBorderStyle}" Width="228">
                                <TextBox x:Name="txtRegion" Height="30" Margin="20,5,20,5" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" />
                            </Border>
                        </StackPanel>

                        <!-- Country -->
                        <StackPanel Grid.Column="3" Grid.ColumnSpan="2" Margin="30,0,0,0">
                            <TextBlock Text="Country:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                            <Border Style="{StaticResource RoundedBorderStyle}" Width="228">
                                <TextBox x:Name="txtCountry" Height="30" Margin="16,5,16,5" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" />
                            </Border>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Postal Code:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="773">
                        <TextBox x:Name="txtPostalCode" Height="30" Margin="16,0,16,0" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                    </Border>

                    <!-- Phone Number -->
                    <TextBlock Text="Phone Number:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="773">
                        <TextBox x:Name="txtPhone" Height="30" Margin="18,0,18,0" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                    </Border>
                    <Separator Margin="0,30,0,10" Height="1" Background="#474747"/>
                    <!-- Salary -->
                    <TextBlock Text="Salary:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="773">
                        <TextBox x:Name="txtSalary" Height="30" Margin="18,0,18,0" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                    </Border>

                    <!-- Sales Commission -->
                    <TextBlock Text="Sales Commission (%):" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="773">
                        <TextBox x:Name="txtSalesCommission" Height="30" Margin="18,0,18,0" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747"/>
                    </Border>

                    <StackPanel x:Name="SalesCommissionPanel" Margin="15,5,0,0">
                        <TextBlock x:Name="chkSalesCommission" Text="It will base on each invoice amount - inclusive all taxes, shipping, discounts" Foreground="#474747"  FontWeight="Regular" FontFamily="Lexend"  />
                    </StackPanel>

                    <!-- Department -->
                    <TextBlock Text="Department:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
