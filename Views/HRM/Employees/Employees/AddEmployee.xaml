<Window x:Class="DPC.Views.HRM.Employees.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.HRM.Employees.AddEmployee" 
        xmlns:local1="namespace:DPC.Components.Forms"
        Title="Add Employee"
        Height="800" Width="1200"
        Background="#D9D9D9"
        FontFamily="{StaticResource Lexend}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Define Column Structure -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar Width -->
            <ColumnDefinition Width="382*"/>
            <ColumnDefinition Width="93*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
        Background="White"
        BorderBrush="#E0E0E0"
        BorderThickness="0,0,1,0">
            <ContentControl x:Name="SidebarContainer"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Top Navigation Bar -->
                <RowDefinition Height="*"/>
                <!-- Form Content -->
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border Grid.Row="0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
                <ContentControl x:Name="TopNavBarContainer"/>
            </Border>

            <!-- Main Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="20" Width="800">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="AccountPlus" Width="70" Height="60" Margin="0,0,15,0"  Foreground="#474747" />
                        <TextBlock Text="Employee Details" FontSize="35" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Lexend" Foreground="#474747" />
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <!-- Username -->
                        <TextBlock Text="Username:" Margin="0,0,0,5" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="744" TextChanged="txtUsername_TextChanged" />
                        </Border>
                        <TextBlock x:Name="txtInvalidChars" Text="Username must be 6–20 chars, include upper/lowercase, number, and special character." Foreground="Red" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" Margin="5,0,0,5"/>
                        <TextBlock x:Name="txtValidUsername" Text="Username is valid and correct." Foreground="Green" FontWeight="SemiBold" FontFamily="Lexend" Margin="5,0,0,5" Visibility="Collapsed"/>

                        <!-- Business Location -->
                        <TextBlock Text="Business Location:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <ComboBox x:Name="cmbBusinessLocation" Style="{StaticResource RoundedComboBoxStyle}" Width="Auto" Height="40" SelectedIndex="0" Margin="0">
                        </ComboBox>

                        <!-- Role -->
                        <TextBlock Text="User Role:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <ComboBox x:Name="cmbUserRole" Style="{StaticResource RoundedComboBoxStyle}" Width="Auto" Height="40" SelectedIndex="0" Margin="0">
                        </ComboBox>
                        <!-- Email -->
                        <TextBlock Text="Email:" Margin="0,5,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="734"/>
                        </Border>

                        <!-- Password -->
                        <TextBlock Text="Password:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtPassword" Height="30" Margin="0,0,0,5"
         Style="{StaticResource RoundedTextboxStyle}" Width="736"
         TextChanged="txtPassword_TextChanged"/>

                        </Border>
                        <StackPanel x:Name="PasswordCriteriaPanel" Margin="10,0,0,0">
                            <TextBlock x:Name="chkLength" Text="✓ At least 6 characters" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                            <TextBlock x:Name="chkMaxLength" Text="✓ Under 20 characters" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                            <TextBlock x:Name="chkUpper" Text="✓ 1 uppercase letter" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                            <TextBlock x:Name="chkLower" Text="✓ 1 lowercase letter" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                            <TextBlock x:Name="chkSpecial" Text="✓ 1 special character" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                            <TextBlock x:Name="chkNumber" Text="✓ 1 number" Foreground="Green" Visibility="Collapsed" FontWeight="SemiBold" FontFamily="Lexend" />
                        </StackPanel>

                        <Separator Margin="0,20,0,10" Height="1" Background="#474747"/>


                        <!-- Full Name -->
                        <TextBlock Text="Full Name:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtName" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="735"/>
                        </Border>

                        <!-- Address Fields -->
                        <TextBlock Text="Street Address:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtStreetAddress" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="729"/>
                        </Border>

                        <Grid Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="30"/>
                                <!-- Spacing -->
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="30"/>
                                <!-- Spacing -->
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- City -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="City:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                                <Border Style="{StaticResource RoundedBorderStyle}">
                                    <TextBox x:Name="txtCity" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="210" />
                                </Border>
                            </StackPanel>

                            <!-- Region -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Region:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                                <Border Style="{StaticResource RoundedBorderStyle}">
                                    <TextBox x:Name="txtRegion" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="204" />
                                </Border>
                            </StackPanel>

                            <!-- Country -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Country:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                                <Border Style="{StaticResource RoundedBorderStyle}">
                                    <TextBox x:Name="txtCountry" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="205" />
                                </Border>
                            </StackPanel>
                        </Grid>


                        <TextBlock Text="Postal Code:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtPostalCode" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="730"/>
                        </Border>


                        <!-- Phone Number -->
                        <TextBlock Text="Phone Number:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtPhone" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="729"/>
                        </Border>
                        <Separator Margin="0,30,0,10" Height="1" Background="#474747"/>
                        <!-- Salary -->
                        <TextBlock Text="Salary:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtSalary" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="732"/>
                        </Border>

                        <!-- Sales Commission -->
                        <TextBlock Text="Sales Commission (%):" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtSalesCommission" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="735"/>
                        </Border>

                        <StackPanel x:Name="SalesCommissionPanel" Margin="15,5,0,0">
                            <TextBlock x:Name="chkSalesCommission" Text="It will base on each invoice amount - inclusive all taxes, shipping, discounts" Foreground="#474747"  FontWeight="Regular" FontFamily="Lexend"  />
                        </StackPanel>

                        <!-- Department -->
                        <TextBlock Text="Department:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                        <Border Style="{StaticResource RoundedBorderStyle}">
                            <TextBox x:Name="txtDepartment" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="740"/>
                        </Border>

                    </StackPanel>

                    <!-- Submit Button -->
                    <Button x:Name="btnAddEmployee" Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center" Click="BtnAddEmployee_Click" Margin="0,10,0,15">
                        <Border Style="{StaticResource RoundedBorderStyle}" Padding="1" Background="#1D5642" BorderBrush="#1D5642" Width="330">
                            <StackPanel Orientation="Horizontal" Background="#1D5642" Margin="18,0,37,0">
                                <TextBlock Text="Add Employee" Foreground="White" VerticalAlignment="Center" Margin="100,5" FontWeight="Bold" FontFamily="Lexend" />
                            </StackPanel>
                        </Border>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
