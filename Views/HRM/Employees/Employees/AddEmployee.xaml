<Window x:Class="DPC.Views.HRM.Employees.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Employee"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Sidebar and Main Content Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="SidebarContainer" Grid.Row="0" Grid.Column="0" Background="Black"/>

        <!-- Wrapper for TopNavBar + Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border x:Name="TopNavBarContainer" Grid.Row="0" Background="White" Height="Auto" MinHeight="50"/>

            <!-- Main Content (Employee Form) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40" Width="600">

                    <!-- Title -->
                    <TextBlock Text="Add New Employee" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                    <!-- Username -->
                    <TextBlock Text="Username" FontWeight="Bold"/>
                    <TextBox x:Name="txtUsername" Height="30" Margin="0,5,0,15"/>

                    <!-- Email -->
                    <TextBlock Text="Email" FontWeight="Bold"/>
                    <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,15"/>

                    <!-- Password -->
                    <TextBlock Text="Password" FontWeight="Bold"/>
                    <PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,15"/>

                    <!-- Full Name -->
                    <TextBlock Text="Full Name" FontWeight="Bold"/>
                    <TextBox x:Name="txtName" Height="30" Margin="0,5,0,15"/>

                    <!-- Address Fields -->
                    <TextBlock Text="Street Address" FontWeight="Bold"/>
                    <TextBox x:Name="txtStreetAddress" Height="30" Margin="0,5,0,15"/>

                    <TextBlock Text="City" FontWeight="Bold"/>
                    <TextBox x:Name="txtCity" Height="30" Margin="0,5,0,15"/>

                    <TextBlock Text="Region" FontWeight="Bold"/>
                    <TextBox x:Name="txtRegion" Height="30" Margin="0,5,0,15"/>

                    <TextBlock Text="Country" FontWeight="Bold"/>
                    <TextBox x:Name="txtCountry" Height="30" Margin="0,5,0,15"/>

                    <TextBlock Text="Postal Code" FontWeight="Bold"/>
                    <TextBox x:Name="txtPostalCode" Height="30" Margin="0,5,0,15"/>

                    <!-- Phone Number -->
                    <TextBlock Text="Phone Number" FontWeight="Bold"/>
                    <TextBox x:Name="txtPhone" Height="30" Margin="0,5,0,15"/>

                    <!-- Role -->
                    <TextBlock Text="User Role" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbUserRole" Height="30" Margin="0,5,0,15"/>

                    <!-- Business Location -->
                    <TextBlock Text="Business Location" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbBusinessLocation" Height="30" Margin="0,5,0,15"/>

                    <!-- Salary -->
                    <TextBlock Text="Salary" FontWeight="Bold"/>
                    <TextBox x:Name="txtSalary" Height="30" Margin="0,5,0,15"/>

                    <!-- Sales Commission -->
                    <TextBlock Text="Sales Commission (%)" FontWeight="Bold"/>
                    <TextBox x:Name="txtSalesCommission" Height="30" Margin="0,5,0,15"/>

                    <!-- Department -->
                    <TextBlock Text="Department" FontWeight="Bold"/>
                    <TextBox x:Name="txtDepartment" Height="30" Margin="0,5,0,20"/>

                    <!-- Submit Button -->
                    <Button x:Name="btnAddEmployee"
                            Content="Add Employee"
                            Background="#0078D7" Foreground="White"
                            Padding="10"
                            FontWeight="Bold"
                            Click="BtnAddEmployee_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
