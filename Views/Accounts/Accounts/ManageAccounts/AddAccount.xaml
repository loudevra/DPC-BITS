<UserControl x:Class="DPC.Views.Accounts.Accounts.ManageAccount.AddAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="Transparent">

	<Grid>
		<!-- PopUp Card -->
		<materialDesign:Card Width="420" Padding="20" Background="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center">
			<StackPanel>
				<!-- Header -->
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<TextBlock Text="Add New Account" FontSize="20" FontWeight="Bold" Foreground="Black" />

					<Button Grid.Column="1" Style="{StaticResource MaterialDesignFlatButton}"
                            Click="ClosePopup"
                            Background="Transparent" Foreground="Black">
						<materialDesign:PackIcon Kind="Close" />
					</Button>
				</Grid>

				<Separator Margin="0,10,0,10"/>

				<!-- Account No. -->
				<TextBlock Text="Account No.:" FontSize="14" />
				<Border Style="{StaticResource RoundedBorderStyle}">
					<TextBox x:Name="txtAccountNo" Style="{StaticResource RoundedTextboxStyle}" />
				</Border>

				<!-- Name -->
				<TextBlock Text="Name:" FontSize="14" Margin="0,10,0,0" />
				<Border Style="{StaticResource RoundedBorderStyle}">
					<TextBox x:Name="txtName" Style="{StaticResource RoundedTextboxStyle}" />
				</Border>

				<!-- Initial Balance -->
				<TextBlock Text="Initial Balance:" FontSize="14" Margin="0,10,0,0" />
				<Border Style="{StaticResource RoundedBorderStyle}">
					<TextBox x:Name="txtInitialBalance" Style="{StaticResource RoundedTextboxStyle}" />
				</Border>

				<!-- Note -->
				<TextBlock Text="Note:" FontSize="14" Margin="0,10,0,0" />
				<Border Style="{StaticResource RoundedBorderStyle}">
					<TextBox x:Name="txtNote" Style="{StaticResource RoundedTextboxStyle}" Height="100" />
				</Border>

				<!-- Business Locations Dropdown -->
				<TextBlock Text="Business Location:" FontSize="14" Margin="0,10,0,0" />
				<ComboBox x:Name="cmbBusinessLocation" Style="{StaticResource RoundedComboBoxStyle}" />

				<!-- Account Type Dropdown -->
				<TextBlock Text="Account Type:" FontSize="14" Margin="0,10,0,0" />
				<ComboBox x:Name="cmbAccountType" Style="{StaticResource RoundedComboBoxStyle}">
					<ComboBoxItem Content="Basic" />
					<ComboBoxItem Content="Assets" />
					<ComboBoxItem Content="Expenses" />
					<ComboBoxItem Content="Income" />
					<ComboBoxItem Content="Liabilities" />
					<ComboBoxItem Content="Equity" />
				</ComboBox>

				<!-- Add Button -->
				<Button x:Name="btnAdd" Content="Add" Click="AddAccount"
                        Height="45" Background="#58D68D" Foreground="White"
                        Margin="0,20,0,0" FontSize="16">
					<Button.Template>
						<ControlTemplate TargetType="Button">
							<Border Background="{TemplateBinding Background}"
                                    CornerRadius="20"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
								<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</Border>
						</ControlTemplate>
					</Button.Template>
				</Button>
			</StackPanel>
		</materialDesign:Card>
	</Grid>
</UserControl>
