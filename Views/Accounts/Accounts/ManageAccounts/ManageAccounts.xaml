<Window x:Class="DPC.Views.Accounts.Accounts.ManageAccounts.ManageAccounts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Manage Accounts"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Define Columns for Sidebar and Main Content Wrapper -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="SidebarContainer" Grid.Row="0" Grid.Column="0" Background="Black"/>

        <!-- Wrapper for TopNavBar + Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border x:Name="TopNavBarContainer" Grid.Row="0" Background="White" Height="Auto" MinHeight="50"/>

            <!-- Main Content with Scroll -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Title -->
                    <TextBlock Text="Manage Accounts" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
					<Button Content="+ Account" Style="{StaticResource MaterialDesignRaisedButton}" Height="40" Width="120" Margin="-400,-50,0,20" Click="Button_Click"/>


					<!-- Balance and Accounts Cards -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Balance Card -->
                        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="10" Height="100" BorderBrush="DodgerBlue" BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="Balance" FontWeight="Bold" Foreground="DodgerBlue" FontSize="20"/>
                                <TextBlock Text="₱ 0.00" FontSize="28" FontWeight="Bold" Foreground="Green"/>
                                <TextBlock Text="Total" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </Border>

                        <!-- Accounts Card -->
                        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="10" Height="100" BorderBrush="Crimson" BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="Accounts" FontWeight="Bold" Foreground="Crimson" FontSize="20"/>
                                <TextBlock Text="₱ 0.00" FontSize="28" FontWeight="Bold" Foreground="Green"/>
                                <TextBlock Text="Total" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Data Table -->
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,10,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                <materialDesign:PackIcon Kind="MicrosoftExcel" Width="30" Height="30" Margin="0,0,10,0"/>
                                <ComboBox Width="60" Height="30" Margin="5">
                                    <ComboBoxItem Content="10"/>
                                    <ComboBoxItem Content="20"/>
                                    <ComboBoxItem Content="50"/>
                                </ComboBox>
                                <TextBox Width="200" Height="30" Margin="10,0,0,0" Text="Search..."/>
                            </StackPanel>
							<DataGrid x:Name="AccountsDataGrid"
          AutoGenerateColumns="False"
          ItemsSource="{Binding AccountsList}"
          IsReadOnly="True"
          Margin="10">
								<DataGrid.Columns>
									<DataGridTextColumn Header="Account ID" Binding="{Binding AccountID}" Width="200"/>
									<DataGridTextColumn Header="Account Name" Binding="{Binding AccountName}" Width="300"/>
									<DataGridTextColumn Header="Account Type" Binding="{Binding AccountType}" Width="200"/>
									<DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="200"/>
									<DataGridTextColumn Header="Updated At" Binding="{Binding UpdatedAt}" Width="200"/>
								</DataGrid.Columns>
							</DataGrid>

						</StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
