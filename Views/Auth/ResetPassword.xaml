<UserControl x:Class="DPC.Views.Auth.ResetPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto" Width="Auto"
             FontFamily="{StaticResource Lexend}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" Margin="0,30,0,10">

        <!-- Title -->
        <TextBlock Text="Set New Password" FontSize="24" FontWeight="Bold"
                   Foreground="Black" TextAlignment="Left" Margin="0,0,0,20"/>

        <!-- New Password -->
        <Grid Width="300" Margin="5,20,0,0">
            <!-- Label for New Password -->
            <TextBlock x:Name="LblNewPassword" 
               Text="Enter Password" 
               FontSize="14" Foreground="Gray"
               Margin="5,0,0,30"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.0, 0.5">
                <TextBlock.RenderTransform>
                    <TranslateTransform Y="20"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- PasswordBox -->
            <PasswordBox x:Name="TxtNewPassword"
                 Width="260" Padding="5,10"
                 FontSize="14" Background="Transparent"
                 BorderThickness="0"
                 PasswordChanged="TxtNewPassword_PasswordChanged"
                 GotFocus="TxtNewPassword_GotFocus"
                 LostFocus="TxtNewPassword_LostFocus"
                 Margin="-35,0,0,0"/>

            <!-- Underline Border (Default Gray) -->
            <Border x:Name="NewPasswordUnderline" Height="2"
            Background="Gray"
            VerticalAlignment="Bottom"
            Margin="0,0,40,0">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1.1"/>
                </Border.RenderTransform>
            </Border>

            <!-- Focused Underline Animation (Black) -->
            <Border x:Name="NewPasswordActiveUnderline" Height="2"
            Background="Black"
            VerticalAlignment="Bottom"
            Margin="0,0,40,0"
            Opacity="0">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="0"/>
                </Border.RenderTransform>
            </Border>

            <!-- Eye Icon Button -->
            <Button x:Name="BtnToggleNewPassword" Width="40" Height="40"
            Click="BtnToggleNewPassword_Click" Background="Transparent"
            BorderThickness="0" HorizontalAlignment="Right">
                <md:PackIcon x:Name="IconToggleNewPassword" Kind="EyeOff" Width="24" Height="24"/>
            </Button>
        </Grid>


        <Grid Width="300" Margin="5,20,0,0">
            <!-- Label for Confirm Password -->
            <TextBlock x:Name="LblConfirmPassword" 
               Text="Confirm Password" 
               FontSize="14" Foreground="Gray"
               Margin="5,0,0,30"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.0, 0.5">
                <TextBlock.RenderTransform>
                    <TranslateTransform Y="20"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Confirm PasswordBox -->
            <PasswordBox x:Name="TxtConfirmPassword"
                 Width="260" Padding="5,10"
                 FontSize="14" Background="Transparent"
                 BorderThickness="0"
                 PasswordChanged="ValidateForm"
                 GotFocus="TxtConfirmPassword_GotFocus"
                 LostFocus="TxtConfirmPassword_LostFocus"
                 Margin="-35,0,0,0"/>

            <!-- Underline Border (Default Gray) -->
            <Border x:Name="ConfirmUnderline" Height="2"
            Background="Gray"
            VerticalAlignment="Bottom"
            Margin="0,0,40,0">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1.1"/>
                </Border.RenderTransform>
            </Border>

            <!-- Focused Underline Animation (Black) -->
            <Border x:Name="ConfirmActiveUnderline" Height="2"
            Background="Black"
            VerticalAlignment="Bottom"
            Margin="0,0,40,0"
            Opacity="0">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="0"/>
                </Border.RenderTransform>
            </Border>

            <!-- Eye Icon Button -->
            <Button x:Name="BtnToggleConfirmPassword" Width="40" Height="40"
            Click="BtnToggleConfirmPassword_Click" Background="Transparent"
            BorderThickness="0" HorizontalAlignment="Right">
                <md:PackIcon x:Name="IconToggleConfirmPassword" Kind="EyeOff" Width="24" Height="24"/>
            </Button>
        </Grid>


        <!-- Password Strength Label -->
        <TextBlock x:Name="LblPasswordStrength" Text="Password Strength: " 
                   Foreground="Gray" FontSize="12" FontWeight="SemiBold"
                   Margin="13,18,0,10"/>

        <!-- Reset Password Button with Rounded Corners -->
        <Border CornerRadius="20" Background="Black" Width="300" Height="48">
            <Button x:Name="BtnResetPassword" Content="Reset Password"
            Click="BtnResetPassword_Click"
            Width="300" Height="48" Background="Transparent"
            Foreground="White" FontSize="16" FontWeight="Bold"
            Cursor="Hand" BorderThickness="0"/>
        </Border>


    </StackPanel>
</UserControl>
