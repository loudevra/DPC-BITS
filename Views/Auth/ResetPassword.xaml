<UserControl x:Class="DPC.Views.Auth.ResetPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto" Width="Auto"
             FontFamily="{StaticResource Lexend}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" Margin="0,30,0,10">

        <!-- Title -->
        <TextBlock Text="Set New Password" FontSize="24" FontWeight="Bold"
                   Foreground="Black" TextAlignment="Left" Margin="0,0,0,20"/>

        <!-- Password Visibility Toggle for New Password -->
        <StackPanel Orientation="Horizontal" Width="300">
            <PasswordBox x:Name="TxtNewPassword" Width="260"
                 md:HintAssist.Hint="Enter Password"
                 md:HintAssist.HintOpacity="0.5"
                 Padding="5,10" FontSize="14"
                 PasswordChanged="TxtNewPassword_PasswordChanged"/>
            <Button x:Name="BtnToggleNewPassword" Width="40" Height="40"
                    Click="BtnToggleNewPassword_Click" Background="Transparent"
                    BorderThickness="0">
                <md:PackIcon x:Name="IconToggleNewPassword" Kind="EyeOff" Width="24" Height="24"/>
            </Button>
        </StackPanel>

        <!-- Password Visibility Toggle for Confirm Password -->
        <StackPanel Orientation="Horizontal" Width="300">
            <PasswordBox x:Name="TxtConfirmPassword" Width="260"
                 md:HintAssist.Hint="Confirm Password"
                 md:HintAssist.HintOpacity="0.5"
                 Padding="5,10" FontSize="14"
                 PasswordChanged="ValidateForm"/>
            <Button x:Name="BtnToggleConfirmPassword" Width="40" Height="40"
                    Click="BtnToggleConfirmPassword_Click" Background="Transparent"
                    BorderThickness="0">
                <md:PackIcon x:Name="IconToggleConfirmPassword" Kind="EyeOff" Width="24" Height="24"/>
            </Button>
        </StackPanel>

        <!-- Password Strength Label -->
        <TextBlock x:Name="LblPasswordStrength" Text="Password Strength: " 
                   Foreground="Gray" FontSize="12" FontWeight="SemiBold"
                   Margin="0,5,0,10"/>

        <!-- Reset Password Button -->
        <Button x:Name="BtnResetPassword" Content="Reset Password" Click="BtnResetPassword_Click"
                Width="300" Height="48" Background="Black" Foreground="White"
                FontSize="16" FontWeight="Bold" Cursor="Hand"
                md:ButtonAssist.CornerRadius="25"/>

    </StackPanel>
</UserControl>
