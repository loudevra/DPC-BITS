<Window x:Class="DPC.Views.Auth.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password"
        WindowStartupLocation="CenterScreen"
        Height="320" Width="400"
        ResizeMode="NoResize"
        Background="#FAFAFA">

	<Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
			<TextBlock Text="Reset Your Password"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

			<PasswordBox x:Name="TxtNewPassword"
                         Width="250"
                         Height="40"
                         FontSize="16"
                         Margin="0,10,0,5"
                         PasswordChanged="TxtNewPassword_PasswordChanged"/>

			<PasswordBox x:Name="TxtConfirmPassword"
                         Width="250"
                         Height="40"
                         FontSize="16"
                         Margin="0,5,0,10"/>

			<TextBlock x:Name="LblPasswordStrength"
                       Text=""
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="Gray"/>

			<Button x:Name="BtnResetPassword"
                    Content="Reset Password"
                    Width="250"
                    Height="40"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnResetPassword_Click"/>
		</StackPanel>
	</Grid>
</Window>
