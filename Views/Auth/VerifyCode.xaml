<Window x:Class="DPC.Views.Auth.VerifyCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verify Code" 
        WindowStartupLocation="CenterScreen"
        Height="300" Width="400"
        ResizeMode="NoResize" 
        Background="#FAFAFA">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Enter Verification Code" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>

            <TextBlock x:Name="EmailDisplay" 
                       Text="A code was sent to your email." 
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,10"/>

            <TextBox x:Name="TxtVerificationCode"
                     Width="250"
                     Height="40"
                     FontSize="16"
                     HorizontalContentAlignment="Center"
                     MaxLength="6"
                     TextAlignment="Center"/>

            <TextBlock x:Name="LblCountdown" 
                       Text="Code expires in: 05:00" 
                       Foreground="Red"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,5"/>

            <Button x:Name="BtnVerify" 
                    Content="Verify" 
                    Width="250" 
                    Height="40" 
                    Background="#0078D7" 
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnVerify_Click"/>

            <Button x:Name="BtnResendCode"
                    Content="Resend Code"
                    Width="250"
                    Height="30"
                    Foreground="#0078D7"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="0,10,0,0"
                    Click="BtnResendCode_Click"/>
        </StackPanel>
    </Grid>
</Window>
