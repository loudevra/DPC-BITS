<UserControl x:Class="DPC.Views.Auth.VerifyCode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">

	<Grid Background="White">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">

			<!-- Title -->
			<TextBlock Text="Password Reset" FontSize="24" FontWeight="Bold" 
                       FontFamily="Lexend" Margin="0,10,0,5"/>

			<!-- Subtitle -->
			<TextBlock x:Name="EmailDisplay" FontSize="14" Foreground="Gray"
                       FontFamily="{StaticResource Lexend}" TextAlignment="Center"/>

			<!-- OTP Boxes -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
				<TextBox x:Name="OtpBox1" Style="{StaticResource OtpBoxStyle}"
         PreviewTextInput="OtpBox_PreviewTextInput"
         KeyDown="OtpBox_KeyDown"
         MaxLength="1"
         TextWrapping="NoWrap"
         VerticalScrollBarVisibility="Hidden"
         HorizontalScrollBarVisibility="Hidden"/>
				<TextBox x:Name="OtpBox2" Style="{StaticResource OtpBoxStyle}"
						 PreviewTextInput="OtpBox_PreviewTextInput"
						 KeyDown="OtpBox_KeyDown"
						 MaxLength="1"
						 TextWrapping="NoWrap"
						 VerticalScrollBarVisibility="Hidden"
						 HorizontalScrollBarVisibility="Hidden"/>
				<TextBox x:Name="OtpBox3" Style="{StaticResource OtpBoxStyle}"
						 PreviewTextInput="OtpBox_PreviewTextInput"
						 KeyDown="OtpBox_KeyDown"
						 MaxLength="1"
						 TextWrapping="NoWrap"
						 VerticalScrollBarVisibility="Hidden"
						 HorizontalScrollBarVisibility="Hidden"/>
				<TextBox x:Name="OtpBox4" Style="{StaticResource OtpBoxStyle}"
						 PreviewTextInput="OtpBox_PreviewTextInput"
						 KeyDown="OtpBox_KeyDown"
						 MaxLength="1"
						 TextWrapping="NoWrap"
						 VerticalScrollBarVisibility="Hidden"
						 HorizontalScrollBarVisibility="Hidden"/>
				<TextBox x:Name="OtpBox5" Style="{StaticResource OtpBoxStyle}"
						 PreviewTextInput="OtpBox_PreviewTextInput"
						 KeyDown="OtpBox_KeyDown"
						 MaxLength="1"
						 TextWrapping="NoWrap"
						 VerticalScrollBarVisibility="Hidden"
						 HorizontalScrollBarVisibility="Hidden"/>
				<TextBox x:Name="OtpBox6" Style="{StaticResource OtpBoxStyle}"
						 PreviewTextInput="OtpBox_PreviewTextInput"
						 KeyDown="OtpBox_KeyDown"
						 MaxLength="1"
						 TextWrapping="NoWrap"
						 VerticalScrollBarVisibility="Hidden"
						 HorizontalScrollBarVisibility="Hidden"/>
			</StackPanel>

			<!-- Timer -->
			<TextBlock x:Name="LblCountdown" FontSize="14" Foreground="Gray"
                       FontFamily="{StaticResource Lexend}" TextAlignment="Center"/>

			<!-- Confirm Button -->
			<Button x:Name="BtnVerify" Content="Confirm" Width="250" Height="50"
                    Background="Black" Foreground="White" FontSize="16" FontWeight="Bold"
                    FontFamily="Lexend"
                    Click="BtnVerify_Click">
				<Button.Resources>
					<Style TargetType="Button">
						<Setter Property="Control.Template">
							<Setter.Value>
								<ControlTemplate TargetType="Button">
									<Border Background="{TemplateBinding Background}"
                                            CornerRadius="25">
										<ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
					</Style>
				</Button.Resources>
			</Button>

			<!-- Resend Code -->
			<Button Content="Resend Code" x:Name="BtnResendCode"
                    HorizontalAlignment="Center"
                    Foreground="Gray" FontSize="14" FontFamily="Lexend"
                    Background="Transparent" BorderThickness="0"
                    Click="BtnResendCode_Click" Margin="5,20,0,0"/>

		</StackPanel>
	</Grid>
</UserControl>
