<UserControl x:Class="DPC.Views.Auth.SignIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:modals="namespace:DPC.Components.ConfirmationModals"
             mc:Ignorable="d" 
             Width="450">
    <Grid x:Name="MainGrid">
        <Grid Grid.Column="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Grid.Row="1">
                <TextBlock Text="Sign In" FontSize="26" FontWeight="Bold" FontFamily="Lexend"
                           TextAlignment="Center" Margin="0,0,0,15"/>
                <!-- Username Input -->
                <TextBox x:Name="txtUsername"
                         md:HintAssist.Hint="Username"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,10"
                         FontFamily="Lexend"/>
                <StackPanel>
                    <!-- Password Input with Eye Icon -->
                    <Grid>
                        <TextBox x:Name="txtPassword"
                         md:HintAssist.Hint="Password"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,10"
                                 FontFamily="Lexend"
                         VerticalContentAlignment="Center"
                         PreviewTextInput="TxtPassword_PreviewTextInput"
                         KeyDown="TxtPassword_KeyDown"
                         TextChanged="TxtPassword_TextChanged"/>
                        <Button x:Name="btnTogglePassword"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Padding="0"
                            Margin="0,0,10,0"
                            Click="BtnTogglePassword_Click"
                            Width="Auto"
                            Height="Auto"
                            Focusable="False">
                            <md:PackIcon x:Name="iconPasswordToggle" Kind="EyeOffOutline" Width="20" Height="20"/>
                        </Button>
                    </Grid>
                </StackPanel>
                <!-- Forgot Password -->
                <TextBlock Text="Forgot Password?" 
               Foreground="Gray"
               FontFamily="Lexend"
               FontSize="12" 
               HorizontalAlignment="Right"
               Cursor="Hand" 
               Margin="0,5,0,0"
               MouseLeftButtonDown="ForgotPassword_Click"/>
                <!-- Sign In Button -->
                <Button Content="Sign In"
                        FontFamily="Lexend"
                        FontWeight="Bold"
                        Background="#090909" Foreground="White"
                        Height="45" Margin="0,20,0,0"
                        Click="BtnSignIn_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="30">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- The confirmation modal will be added programmatically in the code-behind -->
    </Grid>
</UserControl>