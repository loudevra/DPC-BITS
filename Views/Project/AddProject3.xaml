<UserControl x:Class="DPC.Views.Project.AddProject3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FontFamily="{StaticResource Lexend}"
             Background="#D9D9D9">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sticky Header -->
        <Border Grid.Row="0" Background="#D9D9D9" Padding="20,10" Panel.ZIndex="1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="FilePlusOutline" Width="40" Height="40" Margin="0,0,15,0" Foreground="#474747" />
                <TextBlock Text="Add Project" FontSize="35" FontWeight="Bold" VerticalAlignment="Center" Foreground="#474747" />
            </StackPanel>
        </Border>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20,10,20,20" Width="800">
                <TextBlock Text="Note:" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#474747"/>
                <Grid>
                    <DockPanel Background="#D9D9D9" Margin="0,0,0,10">
                        <!-- Toolbar using UniformGrid -->
                        <Border DockPanel.Dock="Top"
            Background="#A9A9A9"
            Padding="4"
            CornerRadius="4"
                                BorderThickness="1"
                                BorderBrush="#545454">
                            <UniformGrid Columns="24" HorizontalAlignment="Stretch">

                                <!-- Style is removed since UniformGrid handles sizing -->
                                <Button ToolTip="Bold">
                                    <materialDesign:PackIcon Kind="FormatBold" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Italic">
                                    <materialDesign:PackIcon Kind="FormatItalic" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Underline">
                                    <materialDesign:PackIcon Kind="FormatUnderline" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Strikethrough">
                                    <materialDesign:PackIcon Kind="FormatStrikethroughVariant" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Subscript">
                                    <materialDesign:PackIcon Kind="FormatSubscript" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Superscript">
                                    <materialDesign:PackIcon Kind="FormatSuperscript" Width="20" Height="20" Foreground="#474747"/>
                                </Button>

                                <!-- Font Size -->
                                <ComboBox Height="25" VerticalContentAlignment="Center" Padding="0" SelectedIndex="0">
                                    <ComboBoxItem Content="14"/>
                                    <ComboBoxItem Content="16"/>
                                    <ComboBoxItem Content="18"/>
                                </ComboBox>

                                <!-- Font Color -->
                                <Button ToolTip="Font Color">
                                    <materialDesign:PackIcon Kind="Palette" Width="20" Height="20" Foreground="#A070C0"/>
                                </Button>

                                <!-- Highlight -->
                                <Button ToolTip="Highlight">
                                    <materialDesign:PackIcon Kind="Marker" Width="20" Height="20" Foreground="#474747"/>
                                </Button>

                                <!-- Erase -->
                                <Button ToolTip="Clear Formatting">
                                    <materialDesign:PackIcon Kind="Eraser" Width="20" Height="20" Foreground="#474747"/>
                                </Button>

                                <!-- Undo / Redo -->
                                <Button ToolTip="Undo">
                                    <materialDesign:PackIcon Kind="Undo" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Redo">
                                    <materialDesign:PackIcon Kind="Redo" Width="20" Height="20" Foreground="#474747"/>
                                </Button>

                                <!-- Alignment -->
                                <Button ToolTip="Bullet List">
                                    <materialDesign:PackIcon Kind="FormatListBulleted" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Align Left">
                                    <materialDesign:PackIcon Kind="FormatAlignLeft" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Align Center">
                                    <materialDesign:PackIcon Kind="FormatAlignCenter" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Align Right">
                                    <materialDesign:PackIcon Kind="FormatAlignRight" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Justify">
                                    <materialDesign:PackIcon Kind="FormatAlignJustify" Width="20" Height="20" Foreground="#474747"/>
                                </Button>

                                <!-- Indent / Outdent -->
                                <Button ToolTip="Indent">
                                    <materialDesign:PackIcon Kind="FormatIndentIncrease" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Outdent">
                                    <materialDesign:PackIcon Kind="FormatIndentDecrease" Width="20" Height="20" Foreground="#474747"/>
                                </Button>

                                <!-- Quote -->
                                <Button ToolTip="Block Quote">
                                    <materialDesign:PackIcon Kind="FormatQuoteClose" Width="20" Height="20" Foreground="#474747"/>
                                </Button>

                                <!-- Link / Image / Code -->
                                <Button ToolTip="Insert Link">
                                    <materialDesign:PackIcon Kind="LinkVariant" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Insert Image">
                                    <materialDesign:PackIcon Kind="ImageOutline" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                                <Button ToolTip="Insert Code">
                                    <materialDesign:PackIcon Kind="CodeBraces" Width="20" Height="20" Foreground="#474747"/>
                                </Button>

                                <!-- Fullscreen -->
                                <Button ToolTip="Full Screen">
                                    <materialDesign:PackIcon Kind="Fullscreen" Width="20" Height="20" Foreground="#474747"/>
                                </Button>
                            </UniformGrid>
                        </Border>

                        <!-- Editor -->
                        <Border Background="White" CornerRadius="6" Margin="0" Padding="0" BorderBrush="#CCC" BorderThickness="1">
                            <RichTextBox x:Name="EditorBox"
                     Background="White"
                     BorderThickness="1"
                     Padding="10"
                     FontSize="14"
                     Height="200"
                     Width="Auto"
                                         BorderBrush="#545454"
                                        />
                        </Border>
                    </DockPanel>
                </Grid>


                <!-- Tags -->
                <TextBlock Text="Tags:" Margin="0,10,0,5" FontWeight="SemiBold" Foreground="#474747"/>
                <ComboBox x:Name="cmbTags" Style="{StaticResource RoundedComboBoxStyle}" Width="773" Height="40" SelectedIndex="0"/>

                <!-- Task -->
                <TextBlock Text="Task Communication:" Margin="0,10,0,5" FontWeight="SemiBold" Foreground="#474747"/>
                <ComboBox x:Name="cmbTask" Style="{StaticResource RoundedComboBoxStyle}" Width="773" Height="40" SelectedIndex="0"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Finish Button -->
                    <Button
Content="Finish  &gt;"
Width="140" Height="38" Margin="0,24,0,0"
HorizontalAlignment="right"
FontSize="16"
Background="#444"
Foreground="White"
BorderBrush="Transparent"
                        Grid.Column="1"
                        HorizontalContentAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
            CornerRadius="20"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="10,0"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Next Button -->
                    <Button
Content="&lt;  Back"
Width="140" Height="38" Margin="0,24,0,0"
HorizontalAlignment="left"
FontSize="16"
Background="#8a8a8a"
Foreground="White"
BorderBrush="Transparent"
                        Grid.Column="0"
                        HorizontalContentAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
            CornerRadius="20"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="10,0"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>

        </ScrollViewer>
    </Grid>
</UserControl>
