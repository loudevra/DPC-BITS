<UserControl x:Class="DPC.Views.Project.ManageProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="AddNewButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#474747"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      VerticalAlignment="Center"
                                      Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="#AEAEAE"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           Focusable="False"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                Background="White" 
                                BorderBrush="#AEAEAE"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Main Content -->
                    <StackPanel Grid.Row="1" Margin="20">
                        <!-- Header Section -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="Projects" FontSize="32" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#555555" Width="287" Height="44"/>
                        </StackPanel>

                        <!-- Stats Section -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Cards -->
                            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15,5,15,5" Width="Auto" Margin="0,0,5,0" Height="80">
                                <Grid>
                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                                        <TextBlock x:Name="tbWaiting" Text="0" FontSize="32" FontWeight="Bold" Foreground="#E5D18E"/>
                                        <TextBlock Text="Waiting" FontSize="14" FontWeight="SemiBold" Foreground="#E5D18E"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <Ellipse Width="55" Height="55" Fill="#FFF6D8" VerticalAlignment="Center"/>
                                        <materialDesign:PackIcon Kind="ClockOutline" Width="40" Height="40" Foreground="#E5D18E" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-54,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15,5,15,5" Width="Auto" Margin="5,0,5,0" Height="80">
                                <Grid>
                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                                        <TextBlock x:Name="tbProcessing" Text="0" FontSize="32" FontWeight="Bold" Foreground="#86BCD5"/>
                                        <TextBlock Text="Processing" FontSize="14" FontWeight="SemiBold" Foreground="#86BCD5"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <Ellipse Width="55" Height="55" Fill="#BEE4F7" VerticalAlignment="Center"/>
                                        <materialDesign:PackIcon Kind="Cached" Width="40" Height="40" Foreground="#68B8DF" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-54,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15,5,15,5" Width="Auto" Margin="5,0,5,0" Height="80">
                                <Grid>
                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                                        <TextBlock x:Name="tbSolved" Text="0" FontSize="32" FontWeight="Bold" Foreground="#89AC74"/>
                                        <TextBlock Text="Solved " FontSize="14" FontWeight="SemiBold" Foreground="#89AC74"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <Ellipse Width="55" Height="55" Fill="#DEF9CE" VerticalAlignment="Center"/>
                                        <materialDesign:PackIcon Kind="CheckboxMarkedOutline" Width="40" Height="40" Foreground="#89AC74" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-54,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <Border Grid.Column="3" Background="White" CornerRadius="8" Padding="15,5,15,5" Width="Auto" Margin="5,0,5,0" Height="80">
                                <Grid>
                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                                        <TextBlock x:Name="tbTotal" Text="0" FontSize="32" FontWeight="Bold" Foreground="#D6AEED"/>
                                        <TextBlock Text="Total" FontSize="14" FontWeight="SemiBold" Foreground="#D6AEED"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <Ellipse Width="55" Height="55" Fill="#EDD7FA" VerticalAlignment="Center"/>
                                        <materialDesign:PackIcon Kind="ChartPieOutline" Width="40" Height="40" Foreground="#D6AEED" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-54,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                        <!-- Filters and Controls -->
                        <Border Grid.Row="1" Padding="5" Background="White" CornerRadius="10" BorderBrush="White" Margin="0,0,0,15" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Controls -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <!-- Excel Button -->
                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="#456B2E" Foreground="White" Width="75" Height="29" Margin="10,0,10,0">
                                        <materialDesign:PackIcon Kind="MicrosoftExcel" Width="25" Height="25"/>
                                    </Button>

                                    <ComboBox Width="75" Style="{StaticResource RoundedComboBoxStyle}" Height="28" Foreground="#AEAEAE" Margin="0,0,10,0">
                                        <ComboBoxItem Content="10" IsSelected="True"/>
                                        <ComboBoxItem Content="25"/>
                                        <ComboBoxItem Content="50"/>
                                        <ComboBoxItem Content="100"/>
                                    </ComboBox>

                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" Foreground="#474747" Width="29" Height="29" Margin="0,0,10,0">
                                        <materialDesign:PackIcon Kind="ViewGridOutline" Width="25" Height="25"/>
                                    </Button>
                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" Foreground="#474747" Width="29" Height="29" Margin="0,0,10,0">
                                        <materialDesign:PackIcon Kind="FormatListBulleted" Width="30" Height="30"/>
                                    </Button>
                                </StackPanel>

                                <!-- Right Controls -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Width="250" Height="36">
                                        <Grid>
                                            <TextBox BorderThickness="0" Background="Transparent" FontFamily="Lexend"  Name="txtSearch" Style="{StaticResource RoundedTextboxStyle}" Height="23" Margin="20,0,20,0" VerticalAlignment="Center"/>
                                            <TextBox Text="Search" Foreground="#AEAEAE" FontSize="16" VerticalAlignment="Center" Margin="7,0,0,0" FontWeight="SemiBold" BorderThickness="0"/>
                                            <materialDesign:PackIcon Kind="Magnify" Width="25" Height="26" Foreground="#AEAEAE" Margin="210,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Add this grid directly after the filters and controls border -->
                        <Border Background="White" CornerRadius="8" Padding="5">
                            <StackPanel>
                                <!-- Data Grid -->
                                <DataGrid x:Name="ProjectDataGrid"
                                   AutoGenerateColumns="False"
                                   CanUserAddRows="False"
                                   HeadersVisibility="Column"
                                   GridLinesVisibility="None"
                                   RowBackground="White"
                                   AlternatingRowBackground="WhiteSmoke"
                                   BorderThickness="0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="#" Binding="{Binding ProjectID}" Width="150"/>
                                        <DataGridTextColumn Header="Subject" Binding="{Binding Task}" Width="200"/>
                                        <DataGridTextColumn Header="Added" Binding="{Binding DueDate}" Width="200"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="200"/>
                                    </DataGrid.Columns>
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="FontFamily" Value="Lexend"/>
                                            <Setter Property="Margin" Value="0,5,0,5"/>
                                            <Setter Property="Padding" Value="5"/>
                                            <Setter Property="Height" Value="Auto"/>
                                            <Setter Property="MinHeight" Value="40"/>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="FontFamily" Value="Lexend"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#474747"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="10,5"/>
                                            <Setter Property="Background" Value="White"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Padding" Value="10,5"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DataGridCell">
                                                        <Border Padding="{TemplateBinding Padding}" 
                                     BorderBrush="{TemplateBinding BorderBrush}" 
                                     BorderThickness="{TemplateBinding BorderThickness}" 
                                     Background="{TemplateBinding Background}">
                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                            <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGrid.CellStyle>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Table and Controls -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,15"/>

                        <!-- Pagination Controls -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Background="White" CornerRadius="30" Padding="10,5" BorderThickness="2" BorderBrush="#adadad">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >

                                    <!-- Previous Page -->
                                    <Button Content="&lt;" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" FontFamily="Lexend" Foreground="#adadad">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Page Numbers -->
                                    <Button Content="1" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" FontFamily="Lexend" Foreground="#555555">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Content="2" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" Margin="5" FontFamily="Lexend" Foreground="#555555">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Current Page -->

                                    <Button Content="3" FontSize="14" Width="30" Height="30" Foreground="White" Background="#555555" Margin="5" FontFamily="Lexend">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Content="4" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" Margin="5" FontFamily="Lexend" Foreground="#555555">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Content="5" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" Margin="5" FontFamily="Lexend" Foreground="#555555">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                    CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Ellipsis -->
                                    <TextBlock Text="..." VerticalAlignment="Center" FontSize="16" Margin="10,0" Foreground="#555555"/>

                                    <!-- Next Arrow -->
                                    <Button Content="&gt;" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" FontFamily="Lexend" Foreground="#555555" FontWeight="Bold">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                    CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>


                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>