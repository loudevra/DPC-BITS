<UserControl x:Class="DPC.Views.Project.ManageProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#F5F5F5">

    <UserControl.Resources>
        <Style x:Key="AddNewButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#474747"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      VerticalAlignment="Center"
                                      Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="#AEAEAE"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           Focusable="False"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                Background="White" 
                                BorderBrush="#AEAEAE"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Main Content -->
                    <StackPanel Grid.Row="1" Margin="20">
                        <!-- Header Section -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="Projects" FontSize="32" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#555555" Width="287" Height="44"/>
                        </StackPanel>

                        <!-- Stats Section -->
                        <Grid Margin="0,0,0,20" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Active Card -->
                            <Border Grid.Column="0" CornerRadius="10" BorderThickness="0" Background="White" Width="237" Height="75" Margin="5">
                                <Grid>
                                    <Border CornerRadius="10" Background="Transparent">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#40E5D18E" Direction="270" Opacity="0.7"/>
                                        </Border.Effect>
                                    </Border>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <TextBlock x:Name="txtActiveCount" Text="0" FontSize="32" Foreground="#E5D18E" FontFamily="Lexend" Margin="10,0,0,0" FontWeight="Bold" HorizontalAlignment="Center" Height="40" Width="42"/>
                                            <TextBlock Text="Waiting" FontSize="14" Foreground="#E5D18E" FontFamily="Lexend" Margin="10,0,0,0"/>
                                        </StackPanel>
                                        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,0" Width="70" Height="60">
                                            <Ellipse Fill="#FFF6D8" Width="57" Height="57"/>
                                            <materialDesign:PackIcon Kind="ClockOutline" Width="27.5" Height="27.5" Foreground="#E5D18E" 
                                                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Used Card -->
                            <Border Grid.Column="1" CornerRadius="10" BorderThickness="0" Background="White" Margin="5">
                                <Grid>
                                    <Border CornerRadius="10" Background="Transparent">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#4086BCD5" Direction="270" Opacity="0.7"/>
                                        </Border.Effect>
                                    </Border>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <TextBlock x:Name="txtUsedCount" Text="0" FontSize="32" Foreground="#86BCD5" FontFamily="Lexend" Margin="-10,0,0,0" FontWeight="Bold" HorizontalAlignment="Center" Height="40" Width="42"/>
                                            <TextBlock Text="Processing" FontSize="14" Foreground="#86BCD5" FontFamily="Lexend" Margin="10,0,0,0"/>
                                        </StackPanel>
                                        <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="149,0,0,0" Width="70" Height="60">
                                            <Ellipse Fill="#BEE4F7" Width="57" Height="57"/>
                                            <materialDesign:PackIcon Kind="Cached" Width="27.5" Height="27.5" Foreground="#68B8DF"
                                                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Expired Card -->
                            <Border Grid.Column="2" CornerRadius="10" BorderThickness="0" Background="White" Width="237" Height="75" Margin="5">
                                <Grid>
                                    <Border CornerRadius="10" Background="Transparent">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#4089AC74" Direction="270" Opacity="0.7"/>
                                        </Border.Effect>
                                    </Border>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <TextBlock x:Name="txtExpiredCount" Text="0" FontSize="32" Foreground="#89AC74" FontFamily="Lexend" Margin="10,0,0,0" FontWeight="Bold" HorizontalAlignment="Center" Height="40" Width="42"/>
                                            <TextBlock Text="Solved" FontSize="14" Foreground="#89AC74" FontFamily="Lexend" Margin="10,0,0,0"/>
                                        </StackPanel>
                                        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,0" Width="70" Height="60">
                                            <Ellipse Fill="#DEF9CE" Width="57" Height="57"/>
                                            <materialDesign:PackIcon Kind="CheckboxMarkedOutline" Width="27.5" Height="27.5" Foreground="#89AC74"
                                                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Total Card -->
                            <Border Grid.Column="3" CornerRadius="10" BorderThickness="0" Background="White" Width="237" Height="75" Margin="5">
                                <Grid>
                                    <Border CornerRadius="10" Background="Transparent">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#40D6AEED" Direction="270" Opacity="0.7"/>
                                        </Border.Effect>
                                    </Border>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <TextBlock x:Name="txtTotalCount" Text="0" FontSize="32" Foreground="#D6AEED" FontFamily="Lexend" Margin="10,0,0,0" FontWeight="Bold" HorizontalAlignment="Center" Height="40" Width="42"/>
                                            <TextBlock Text="Total" FontSize="14" Foreground="#D6AEED" FontFamily="Lexend" Margin="10,1,0,0"/>
                                        </StackPanel>
                                        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,0" Width="70" Height="60">
                                            <Ellipse Fill="#EDD7FA" Width="57" Height="57"/>
                                            <materialDesign:PackIcon Kind="ChartPieOutline" Width="27.5" Height="27.5" Foreground="#D6AEED"
                                                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Filters and Controls -->
                        <Border Grid.Row="1" Padding="5" Background="White" CornerRadius="10" BorderBrush="White" Margin="0,0,0,15" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Controls -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <!-- Excel Button -->
                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="#456B2E" Foreground="White" Width="75" Height="29" Margin="10,0,10,0">
                                        <materialDesign:PackIcon Kind="MicrosoftExcel" Width="25" Height="25"/>
                                    </Button>
                                    
                                    <ComboBox Width="75" Style="{StaticResource RoundedComboBoxStyle}" Height="28" Foreground="#AEAEAE" Margin="0,0,10,0">
                                        <ComboBoxItem Content="10" IsSelected="True"/>
                                        <ComboBoxItem Content="25"/>
                                        <ComboBoxItem Content="50"/>
                                        <ComboBoxItem Content="100"/>
                                    </ComboBox>

                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" Foreground="#474747" Width="29" Height="29" Margin="0,0,10,0">
                                        <materialDesign:PackIcon Kind="ViewGridOutline" Width="25" Height="25"/>
                                    </Button>
                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" Foreground="#474747" Width="29" Height="29" Margin="0,0,10,0">
                                        <materialDesign:PackIcon Kind="FormatListBulleted" Width="30" Height="30"/>
                                    </Button>
                                </StackPanel>

                                <!-- Right Controls -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Width="250" Height="36">
                                        <Grid>
                                            <TextBox BorderThickness="0" Background="Transparent" FontFamily="Lexend"  Name="txtSearch" Style="{StaticResource RoundedTextboxStyle}" Height="23" Margin="20,0,20,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Search" Foreground="#AEAEAE" FontSize="16" VerticalAlignment="Center" Margin="7,0,0,0" FontWeight="SemiBold"/>
                                            <materialDesign:PackIcon Kind="Magnify" Width="25" Height="26" Foreground="#AEAEAE" Margin="210,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Add this grid directly after the filters and controls border -->
                        <Grid Background="#e0e0e0" Margin="0">
                            <Border Background="White" CornerRadius="0" Margin="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>
                                    <!-- # -->
                                    <TextBlock Grid.Column="0"
                                               Text="#"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontWeight="SemiBold"
                                               Foreground="#555555"
                                               FontSize="13"
                                               FontFamily="lexend"/>
                                    
                                    <!-- Subject with sort icon -->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="95,0,0,0">
                                        <TextBlock Text="Subject" 
                                                   FontWeight="Normal"
                                                   Foreground="#555555"
                                                   FontSize="13"
                                                   FontFamily="lexend"/>
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="20" Height="20" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!-- Added with sort icon -->
                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="12,0,0,0">
                                        <TextBlock Text="Added" 
                                                   FontWeight="Normal"
                                                   Foreground="#555555"
                                                   FontSize="13"
                                                   FontFamily="lexend"/>
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="20" Height="20" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!-- Status with sort icon -->
                                    <StackPanel Grid.Column="3"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="12,0,0,0">
                                        <TextBlock Text="Status" 
                                                   FontWeight="Normal"
                                                   Foreground="#555555"
                                                   FontSize="13"
                                                   FontFamily="lexend"/>
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="20" Height="20" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <!-- Divider line -->
                            <Border Grid.Row="1" Background="#ddd" Height="1" VerticalAlignment="Bottom" Margin="4,34,4,0"/>
                        </Grid>

                        <!-- Table and Controls -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,15"/>

                        <!-- Pagination Controls -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Background="White" CornerRadius="30" Padding="10,5" BorderThickness="2" BorderBrush="#adadad">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >

                                    <!-- Previous Page -->
                                    <Button Content="&lt;" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" FontFamily="Lexend" Foreground="#adadad">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Page Numbers -->
                                    <Button Content="1" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" FontFamily="Lexend" Foreground="#555555">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Content="2" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" Margin="5" FontFamily="Lexend" Foreground="#555555">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Current Page -->

                                    <Button Content="3" FontSize="14" Width="30" Height="30" Foreground="White" Background="#555555" Margin="5" FontFamily="Lexend">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Content="4" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" Margin="5" FontFamily="Lexend" Foreground="#555555">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Content="5" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" Margin="5" FontFamily="Lexend" Foreground="#555555">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                    CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Ellipsis -->
                                    <TextBlock Text="..." VerticalAlignment="Center" FontSize="16" Margin="10,0" Foreground="#555555"/>

                                    <!-- Next Arrow -->
                                    <Button Content="&gt;" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" FontFamily="Lexend" Foreground="#555555" FontWeight="Bold">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                    CornerRadius="15">
                                                    <!-- Half of Width/Height for full circle -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>


                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>