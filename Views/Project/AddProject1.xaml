<UserControl x:Class="DPC.Views.Project.AddProject1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        FontFamily="{StaticResource Lexend}"
        Background="#D9D9D9">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header Row - Fixed at top -->
            <RowDefinition Height="Auto"/>
            <!-- Content Row - Scrollable -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sticky Header -->
        <Border Grid.Row="0" Background="#D9D9D9" Padding="20,10" Panel.ZIndex="1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="FilePlusOutline" Width="40" Height="40" Margin="0,0,15,0" Foreground="#474747" />
                <TextBlock Text="Add Project" FontSize="35" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Lexend" Foreground="#474747" />
            </StackPanel>
        </Border>

        <!-- Main Content - Scrollable -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20,10,20,20" Width="800">
                <!-- Form Content -->
                <StackPanel>

                    <!-- Project Name -->
                    <TextBlock Text="Project Name:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="768">
                        <TextBox x:Name="txtName" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="735"/>
                    </Border>

                    <!-- Status -->
                    <TextBlock Text="Status:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <ComboBox x:Name="cmbStatus" Style="{StaticResource RoundedComboBoxStyle}" Width="773" Height="40" SelectedIndex="0" Margin="0">
                    </ComboBox>

                    <!-- Slider -->
                    <TextBlock Text="Progress:" Margin="0,10,0,5" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>

                    <Slider x:Name="ProgressSlider"
                            Minimum="0" Maximum="100"
                            Value="45"
                            Height="40"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center"
                            Margin="0,0,0,4"
                            Width="773">
                        <Slider.Resources>
                            <!-- Custom Thumb with Tooltip -->
                            <Style TargetType="Thumb">
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="Width" Value="20"/>
                                <Setter Property="Height" Value="20"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Thumb">
                                            <Grid>
                                                <Border Background="#333"
                                                        CornerRadius="2"
                                                        Padding="2"
                                                        Margin="0,0,0,5"
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding Value, ElementName=ProgressSlider, StringFormat={}{0}%}"
                                                               Foreground="White" FontSize="10"/>
                                                </Border>
                                                <Ellipse Fill="White"
                                                         Stroke="#444"
                                                         StrokeThickness="1">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Slider.Resources>

                        <Slider.Template>
                            <ControlTemplate TargetType="Slider">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Full Track Background -->
                                    <Border Height="20"
                                            CornerRadius="10"
                                            Background="White"
                                            VerticalAlignment="Center"/>

                                    <!-- Filled Portion -->
                                    <Rectangle x:Name="PART_SelectionRange"
                                               Height="10"
                                               Fill="#555"
                                               RadiusX="5" RadiusY="5"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>

                                    <!-- Thumb -->
                                    <Thumb x:Name="PART_Thumb"
                                           VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Slider.Template>
                    </Slider>

                    <!-- 0% and 100% Labels -->
                    <Grid Margin="0,0,0,20" Width="773">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="0%" FontSize="15" HorizontalAlignment="Left" Foreground="#474747" FontFamily="{StaticResource Lexend}"/>
                        <TextBlock Text="100%" FontSize="15" HorizontalAlignment="Right" Grid.Column="1" Foreground="#474747" FontFamily="{StaticResource Lexend}"/>
                    </Grid>

                    <TextBlock Text="Priority:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <!-- Cards Row -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Low -->
                        <Border Background="White" CornerRadius="10" Margin="10" Width="170" Grid.Column="0" BorderBrush="#afafaf" BorderThickness="2">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">

                                <materialDesign:PackIcon Kind="ClipboardTextOutline"
                                          Width="80" Height="80"
                                          Foreground="#afafaf"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>

                                <TextBlock Text="Low" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,0" Foreground="#afafaf"/>

                            </StackPanel>
                        </Border>

                        <!-- Medium -->
                        <Border Background="White" CornerRadius="10" Margin="10" Width="170" Grid.Column="1" BorderBrush="#afafaf" BorderThickness="2">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">

                                <materialDesign:PackIcon Kind="ClipboardTextOutline"
                  Width="80" Height="80"
                  Foreground="#afafaf"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>

                                <TextBlock Text="Medium" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,0" Foreground="#afafaf"/>

                            </StackPanel>
                        </Border>

                        <!-- High -->
                        <Border Background="White" CornerRadius="10" Margin="10" Width="170" Grid.Column="2" BorderBrush="#afafaf" BorderThickness="2">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">

                                <materialDesign:PackIcon Kind="ClipboardTextOutline"
                  Width="80" Height="80"
                  Foreground="#afafaf"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>

                                <TextBlock Text="High" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,0" Foreground="#afafaf"/>

                            </StackPanel>
                        </Border>

                        <!-- Urgent -->
                        <Border Background="White" CornerRadius="10" Margin="10" Width="170" Grid.Column="3" BorderBrush="#afafaf" BorderThickness="2">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">

                                <materialDesign:PackIcon Kind="ClipboardTextOutline"
                  Width="80" Height="80"
                  Foreground="#afafaf"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>

                                <TextBlock Text="Urgent" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,0" Foreground="#afafaf"/>

                            </StackPanel>
                        </Border>

                    </Grid>

                    <!-- Next Button -->
                    <Button
Content="Next   &gt;"
Width="140" Height="38" Margin="0,24,0,0"
HorizontalAlignment="right"
FontSize="16"
Background="#444"
Foreground="White"
BorderBrush="Transparent">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
            CornerRadius="20"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="10,0"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
