<UserControl x:Class="DPC.Views.Project.SupportTickets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DPC"
             mc:Ignorable="d" Height="760" Width="1013">
    <Grid Background="#dddddd" Height="726" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Projects"
                   FontFamily="Lexend"
                   Foreground="#555555"
                   FontWeight="SemiBold"
                   FontSize="36"
                   Margin="-670,8,0,12"
                   VerticalAlignment="Top"
                   TextAlignment="Left"
                   Width="287"
                   Height="44"/>

        <!-- Project Card -->
        <Border Grid.Row="1"
                Margin="16,0,16,16"
                Background="White"
                CornerRadius="24"
                Height="179">
            <StackPanel Margin="24,16,24,24">
                <TextBlock Text="Example Project Name"
                           FontFamily="Lexend"
                           Foreground="#555555"
                           FontWeight="SemiBold"
                           FontSize="24"
                           Margin="0,0,0,8"/>
                <TextBlock
                           FontFamily="Lexend"
                           Foreground="#555555"
                           FontWeight="SemiBold"
                           FontSize="13"
                           TextWrapping="Wrap"><Run Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna "/><LineBreak/><Run Text="aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/></TextBlock>
            </StackPanel>
        </Border>

        <!-- Large Content Area -->
        <Border Grid.Row="2"
                Margin="16,0,16,16"
                Background="White"
                CornerRadius="24"
                Height="459"
                Width="977"/>
    </Grid>
</UserControl>