<UserControl x:Class="DPC.Views.Project.SupportTickets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DPC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Height="671" Width="928">
    <Grid Background="#dddddd" HorizontalAlignment="Left" Width="1010">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Lexend"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="Lexend"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="Lexend"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#dddddd" Padding="32,12" Margin="0,0,0,0">
            <TextBlock Text="Projects"
                       FontFamily="Lexend"
                       FontWeight="SemiBold"
                       FontSize="36"
                       Foreground="#555555"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Project Card with attributes and actions -->
        <Border Grid.Row="1"
                Margin="16,16,104,0"
                Background="White"
                CornerRadius="16"
                SnapsToDevicePixels="True">
            <Grid>
                <!-- Edit/Delete -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,8,0">
                    <Button Width="28" Height="28" Margin="0,0,8,0" Padding="0" Background="Transparent" BorderThickness="0" ToolTip="Edit">
                        <materialDesign:PackIcon Kind="FileDocumentEditOutline" Width="20" Height="20" Foreground="#555555" Margin="10,0,0,0"/>
                    </Button>
                    <Button Width="28" Height="28" Padding="0" Background="Transparent" BorderThickness="0" ToolTip="Delete">
                        <materialDesign:PackIcon Kind="TrashCanOutline" Width="20" Height="20" Foreground="#C75757"/>
                    </Button>
                </StackPanel>
                <StackPanel Margin="24,16,24,16">
                    <!-- Project Title -->
                    <TextBlock Text="Example Project Name"
                               FontFamily="Lexend"
                               FontWeight="SemiBold"
                               FontSize="24"
                               Foreground="#555555"
                               Margin="0,0,0,2" Width="920"/>
                    <!-- Tags -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Border Background="#C7E8F9" CornerRadius="12" Margin="0,0,8,0" Padding="10,3">
                            <TextBlock Text="Inspection" FontSize="12" Foreground="#86BCD5"/>
                        </Border>
                        <Border Background="#F2DBFF" CornerRadius="12" Margin="0,0,0,0" Padding="10,2" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="CCTV" FontSize="12" Foreground="#D6AEED" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                        </Border>
                        <Border Background="#F2F2F2" CornerRadius="5" Padding="5,2" Margin="10,0,0,0">
                            <TextBlock Text="+1" FontSize="12" Foreground="#AEAEAE"/>
                        </Border>
                    </StackPanel>
                    <!-- Description -->
                    <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna
                                                                 aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                               FontFamily="Lexend"
                               FontSize="13"
                               Foreground="#AEAEAE"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                    <!-- Attribute Cards -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <StackPanel.Resources>
                            <Style TargetType="FrameworkElement">
                                <Setter Property="Margin" Value="0,0,0,0"/>
                            </Style>
                        </StackPanel.Resources>
                        <!-- Status -->
                        <Border Background="#F2F2F2" CornerRadius="8" Padding="12,8" Width="104" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Status" FontWeight="Bold" FontSize="12" Foreground="#555555"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Ellipse Width="8" Height="8" Fill="#86BCD5" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="In Progress" Foreground="#86BCD5" FontWeight="SemiBold" FontSize="13"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <!-- Priority -->
                        <Border Background="#F2F2F2" CornerRadius="8" Padding="12,8" Width="100" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Priority" FontWeight="Bold" FontSize="12" Foreground="#555555"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="SignalCellular1" Width="18" Height="18" Margin="0,0,4,0" Foreground="#89AC73" VerticalAlignment="Center"/>
                                    <TextBlock Text="Low" Foreground="#89AC73" FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <!-- Assigned to -->
                        <Border Background="#F2F2F2" CornerRadius="8" Padding="12,8" Width="102" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Assigned to" FontWeight="Bold" FontSize="12" Foreground="#555555"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <!-- Rounded profile images using Ellipse -->
                                    <Ellipse Width="22" Height="22" Stroke="Transparent" StrokeThickness="2" Margin="0,0,0,0">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="/Assets/images/profile1.png"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Width="22" Height="22" Stroke="Transparent" StrokeThickness="2" Margin="-8,0,0,0">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="/Assets/images/profile2.png"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <!-- Customers -->
                        <Border Background="#F2F2F2" CornerRadius="8" Padding="12,8" Width="94">
                            <StackPanel>
                                <TextBlock Text="Customers" FontWeight="Bold" FontSize="12" Foreground="#555555"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <!-- Single rounded customer profile -->
                                    <Ellipse Width="22" Height="22" Stroke="Transparent" StrokeThickness="2">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="/Assets/images/profile3.png"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Large Content Area (with tab row as in image 6) -->
        <Border Grid.Row="2"
                Margin="18,16,104,0"
                Background="White"
                CornerRadius="24" Height="357" VerticalAlignment="Top">
            <StackPanel>
                <!-- Custom Tab Row: Evenly spaced tabs using UniformGrid -->
                <StackPanel>
                    <UniformGrid Rows="1" Columns="10" Margin="16,16,0,0" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border Background="#F2F2F2" CornerRadius="10" Padding="12,6" Margin="0,0,0,0" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FormatListBulletedSquare" Width="18" Height="18" Margin="0,0,4,0"/>
                                    <TextBlock Text="Summary" FontWeight="Bold" Foreground="#222" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="FormatListChecks" Width="18" Height="18" Margin="0,0,4,0"/>
                            <TextBlock Text="Tasks" Foreground="#555" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ForumOutline" Width="18" Height="18" Margin="0,0,4,0"/>
                            <TextBlock Text="Thread" Foreground="#555" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="BullseyeArrow " Width="18" Height="18" Margin="0,0,4,0"/>
                            <TextBlock Text="Milestones" Foreground="#555" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="BlockChain" Width="18" Height="18" Margin="0,0,4,0"/>
                            <TextBlock Text="Activities" Foreground="#555" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="FolderOutline" Width="18" Height="18" Margin="0,0,4,0"/>
                            <TextBlock Text="Files" Foreground="#555" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="NoteTextOutline" Width="18" Height="18" Margin="0,0,4,0"/>
                            <TextBlock Text="Notes" Foreground="#555" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="InvoiceOutline" Width="18" Height="18" Margin="0,0,4,0"/>
                            <TextBlock Text="Invoices" Foreground="#555" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CommentOutline" Width="18" Height="18" Margin="0,0,4,0"/>
                            <TextBlock Text="Comments" Foreground="#555" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ClockOutline" Width="18" Height="18" Margin="0,0,4,0"/>
                            <TextBlock Text="Clock" Foreground="#555" VerticalAlignment="Center"/>
                        </StackPanel>
                    </UniformGrid>

                    <!-- Summary UI after the tab row -->
                    <StackPanel Margin="0,24,0,0">
                        <!-- Progress Bar -->
                        <TextBlock Text="Progress" FontWeight="SemiBold" FontSize="13" Foreground="#AEAEAE" Margin="20,0,0,4"/>
                        <Grid Margin="0,0,0,20">
                            <Border Background="#D9D9D9" CornerRadius="18" Height="34" Width="500" HorizontalAlignment="Left" Margin="20,0,0,0">
                                <Grid>
                                    <ProgressBar Value="45" Maximum="100" Height="34" BorderThickness="0"
                                                 Background="Transparent" Foreground="#555" Width="580">
                                        <ProgressBar.Resources>
                                            <Style TargetType="ProgressBar">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ProgressBar">
                                                            <Grid x:Name="Root" SnapsToDevicePixels="true">
                                                                <Border x:Name="PART_Track" Background="{TemplateBinding Background}" CornerRadius="18"/>
                                                                <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" CornerRadius="18"
                                                                        HorizontalAlignment="Left" Width="0"/>
                                                            </Grid>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsIndeterminate" Value="True">
                                                                    <Setter TargetName="PART_Indicator" Property="Visibility" Value="Collapsed"/>
                                                                </Trigger>
                                                                <Trigger Property="Orientation" Value="Vertical">
                                                                    <Setter TargetName="PART_Track" Property="Height" Value="Auto"/>
                                                                    <Setter TargetName="PART_Indicator" Property="Height" Value="Auto"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ProgressBar.Resources>
                                    </ProgressBar>
                                    <TextBlock Text="45%" Foreground="White" FontWeight="Bold"
                                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="220,0,0,0" />
                                </Grid>
                            </Border>
                        </Grid>
                        <!-- Info Grid -->
                        <Grid Margin="24,0,24,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Start Date" FontWeight="SemiBold" Foreground="#AEAEAE" FontSize="11" Grid.Column="0" Grid.Row="0" Margin="0,0,24,2"/>
                            <TextBlock Text="Due Date" FontWeight="SemiBold" Foreground="#AEAEAE" FontSize="11" Grid.Column="1" Grid.Row="0" Margin="0,0,24,2"/>
                            <TextBlock Text="Phase" FontWeight="SemiBold" Foreground="#AEAEAE" FontSize="11" Grid.Column="2" Grid.Row="0" Margin="0,0,24,2"/>
                            <TextBlock Text="Communication" FontWeight="SemiBold" Foreground="#AEAEAE" FontSize="11" Grid.Column="3" Grid.Row="0" Margin="0,0,0,2"/>

                            <!-- DatePickers -->
                            <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}" Width="120" FontSize="13" FontWeight="SemiBold" Foreground="#555"
                                        Grid.Column="0" Grid.Row="1">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DatePickerTextBox">
                                                    <TextBox x:Name="PART_TextBox"
                                                             Text="{Binding Path=SelectedDate, RelativeSource={RelativeSource AncestorType=DatePicker}, StringFormat='dd-MM-yyyy', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Background="{TemplateBinding Background}"
                                                             Foreground="{TemplateBinding Foreground}"
                                                             BorderThickness="0"
                                                             FontSize="13"
                                                             FontWeight="SemiBold"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    <Style TargetType="DatePicker">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DatePicker">
                                                    <Grid>
                                                        <DatePickerTextBox x:Name="PART_TextBox"
                                                                           HorizontalAlignment="Stretch"
                                                                           VerticalAlignment="Stretch"
                                                                           Background="{TemplateBinding Background}"
                                                                           Foreground="{TemplateBinding Foreground}" />
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>

                            <DatePicker SelectedDate="{Binding DueDate, Mode=TwoWay}" Width="120" FontSize="13" FontWeight="SemiBold" Foreground="#555"
                                        Grid.Column="1" Grid.Row="1">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DatePickerTextBox">
                                                    <TextBox x:Name="PART_TextBox"
                                                             Text="{Binding Path=SelectedDate, RelativeSource={RelativeSource AncestorType=DatePicker}, StringFormat='dd-MM-yyyy', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Background="{TemplateBinding Background}"
                                                             Foreground="{TemplateBinding Foreground}"
                                                             BorderThickness="0"
                                                             FontSize="13"
                                                             FontWeight="SemiBold"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    <Style TargetType="DatePicker">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DatePicker">
                                                    <Grid>
                                                        <DatePickerTextBox x:Name="PART_TextBox"
                                                                           HorizontalAlignment="Stretch"
                                                                           VerticalAlignment="Stretch"
                                                                           Background="{TemplateBinding Background}"
                                                                           Foreground="{TemplateBinding Foreground}" />
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>

                            <!-- Time TextBoxes below DatePickers -->

                            <!-- Phase and Communication values -->
                            <TextBlock Text="1" Foreground="#555555" FontSize="13" FontWeight="SemiBold" Grid.Column="2" Grid.Row="1" Margin="0,0,115,0"/>
                            <TextBlock Text="None" Foreground="#555555" FontSize="13" FontWeight="SemiBold" Grid.Column="3" Grid.Row="1"/>
                        </Grid>
                        <Border BorderBrush="#E5E5E5" BorderThickness="0,1,0,0" Margin="16,0,16,16"/>
                        <!-- Budget -->
                        <TextBlock Text="Budget" FontWeight="SemiBold" FontSize="12" Foreground="#AEAEAE" Margin="24,0,0,4"/>
                        <TextBlock Text="₱10,000" FontWeight="SemiBold" FontSize="28" Foreground="#555555" Margin="24,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>