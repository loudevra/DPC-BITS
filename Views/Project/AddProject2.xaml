<UserControl x:Class="DPC.Views.Project.AddProject2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        FontFamily="{StaticResource Lexend}"
        Background="#D9D9D9">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header Row - Fixed at top -->
            <RowDefinition Height="Auto"/>
            <!-- Content Row - Scrollable -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sticky Header -->
        <Border Grid.Row="0" Background="#D9D9D9" Padding="20,10" Panel.ZIndex="1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="FilePlusOutline" Width="40" Height="40" Margin="0,0,15,0" Foreground="#474747" />
                <TextBlock Text="Add Project" FontSize="35" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Lexend" Foreground="#474747" />
            </StackPanel>
        </Border>

        <!-- Main Content - Scrollable -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20,10,20,20" Width="800">
                <!-- Form Content -->
                <StackPanel>

                    <!-- Customer Name -->
                    <TextBlock Text="Customer:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="768">
                        <TextBox x:Name="txtCustomer" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="735"/>
                    </Border>

                    <!-- Status -->
                    <TextBlock Text="Budget:" Margin="0,10,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <ComboBox x:Name="cmbBudget" Style="{StaticResource RoundedComboBoxStyle}" Width="773" Height="40" SelectedIndex="0" Margin="0,0,0,10">
                    </ComboBox>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Start Date:" Margin="0,0,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Grid.Column="0" Grid.Row="0"/>
                        <Border Style="{StaticResource RoundedBorderStyle}" Margin="10,20,10,-16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".15*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width=".15*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Order Date -->
                                <DatePicker x:Name="StartDatePicker"
                    Style="{StaticResource SingleDatePickerStyle}"
                    SelectedDate="{Binding OrderDate.SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <materialDesign:PackIcon Grid.Column="2" Kind="Calendar" Width="25" Height="25" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>

                                <Button Grid.Column="1"
                    Style="{StaticResource DateButtonStyle}"
                    Click="OrderDate_Click"
                    Width="Auto"
                    Margin="10,0,25,0">
                                    <TextBlock Text="{Binding OrderDate.SelectedDate, StringFormat='MMM dd, yyyy'}"
                       Margin="0,0,5,0"
                       Foreground="#474747"
                       Height="14"/>
                                </Button>
                            </Grid>
                        </Border>

                        <TextBlock Text="Due Date:" Margin="0,0,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Grid.Column="1" Grid.Row="0"/>
                        <Border Style="{StaticResource RoundedBorderStyle}" Margin="10,20,10,-16" Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".15*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width=".15*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Order Date -->
                                <DatePicker x:Name="DueDatePicker"
Style="{StaticResource SingleDatePickerStyle}"
SelectedDate="{Binding OrderDate.SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <materialDesign:PackIcon Grid.Column="2" Kind="Calendar" Width="25" Height="25" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>

                                <Button Grid.Column="1"
Style="{StaticResource DateButtonStyle}"
Click="OrderDate_Click"
Width="Auto"
Margin="10,0,25,0">
                                    <TextBlock Text="{Binding OrderDate.SelectedDate, StringFormat='MMM dd, yyyy'}"
   Margin="0,0,5,0"
   Foreground="#474747"
   Height="14"/>
                                </Button>
                            </Grid>
                        </Border>

                        <Button Style="{StaticResource RoundedButtonStyle}" Grid.Column="0" Margin="10,30,10,-16" Grid.Row="1">
                            <RadioButton x:Name="RadBtnDueDateOnly" Margin="10" BorderBrush="#474747" BorderThickness="1.5" 
GroupName="CalculationMode" IsChecked="True" Checked="RadioButton_Checked">
                                <TextBlock Text="Due Date Only" FontSize="14" FontWeight="SemiBold" FontFamily="{StaticResource Lexend}" Foreground="#474747"/>
                            </RadioButton>
                        </Button>
                        <Button Style="{StaticResource RoundedButtonStyle}" Grid.Column="1" Margin="10,30,10,-16" Grid.Row="1">
                            <RadioButton x:Name="RadBtnStartDueDate" Margin="10" BorderBrush="#474747" BorderThickness="1.5"
GroupName="CalculationMode" Checked="RadioButton_Checked">
                                <TextBlock Text="Start to Due Date" FontSize="14" FontWeight="SemiBold" FontFamily="{StaticResource Lexend}" Foreground="#474747"/>
                            </RadioButton>
                        </Button>

                        <CheckBox Content="Link to Calendar" Margin="0,30,0,0" FontFamily="Lexend" Foreground="#474747" FontWeight="SemiBold" Grid.Row="2" VerticalContentAlignment="Center"/>

                    </Grid>
                    
                    <!-- Assign -->
                    <TextBlock Text="Assign to:" Margin="0,20,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <ComboBox x:Name="cmbAssign" Style="{StaticResource RoundedComboBoxStyle}" Width="773" Height="40" SelectedIndex="0" Margin="0,0,0,10">
                    </ComboBox>

                    <!-- Phase -->
                    <TextBlock Text="Phase:" Margin="0,0,0,10" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" Width="768">
                        <TextBox x:Name="txtPhase" Height="30" Margin="0,0,0,5" Style="{StaticResource RoundedTextboxStyle}" Width="735"/>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    <!-- Next Button -->
                    <Button
Content="Next  &gt;"
Width="140" Height="38" Margin="0,24,0,0"
HorizontalAlignment="right"
FontSize="16"
Background="#444"
Foreground="White"
BorderBrush="Transparent"
                        Grid.Column="1"
                        HorizontalContentAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
            CornerRadius="20"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="10,0"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Next Button -->
                    <Button
Content="&lt;  Back"
Width="140" Height="38" Margin="0,24,0,0"
HorizontalAlignment="left"
FontSize="16"
Background="#8a8a8a"
Foreground="White"
BorderBrush="Transparent"
                        Grid.Column="0"
                        HorizontalContentAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
            CornerRadius="20"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="10,0"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    </Grid>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
