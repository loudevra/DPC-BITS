<UserControl x:Class="DPC.Views.Misc.Documents.PullOutForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            FontFamily="{StaticResource Lexend}"
            Background="#D9D9D9">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <!-- Header Row - Fixed at top -->
                <RowDefinition Height="Auto"/>
                <!-- Content Row - Scrollable -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Sticky Header -->
            <Border Grid.Row="0" Background="#D9D9D9" Padding="20,10" Panel.ZIndex="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="Cube" Width="70" Height="60" Margin="0,0,15,0" Foreground="#474747" />
                    <TextBlock Text="Pull Out Form" FontSize="35" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Lexend" Foreground="#474747" />
                </StackPanel>
            </Border>

            <!-- Main Content - Scrollable -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="20,10,20,20" Width="Auto">
                    <!-- Form Content -->
                    <StackPanel>
                        <Grid Margin="10,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="500" />
                                <ColumnDefinition Width="30"/>
                                <!-- Spacing -->
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- City -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Pull Out To:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                                <Border Style="{StaticResource RoundedBorderStyle}" Width="Auto">
                                    <TextBox x:Name="txtPORto" Height="120" Margin="17,5,17,5" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" AcceptsReturn="True" TextWrapping="Wrap" VerticalContentAlignment="Top" 
    HorizontalContentAlignment="Left"/>
                                </Border>
                            </StackPanel>

                            <!-- Country -->
                            <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Margin="30,0,0,0">
                                <TextBlock Text="POR Number:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                                <Border Style="{StaticResource RoundedBorderStyle}" Width="Auto">
                                    <TextBox x:Name="txtPOR" IsReadOnly="True" Height="30" Margin="16,5,16,5" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontWeight="SemiBold" />
                                </Border>
                            </StackPanel>

                        </Grid>

                        <!-- City -->
                        <StackPanel Margin="10,0,0,10" >
                            <TextBlock Text="Warehouse" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                            <ComboBox SelectedIndex="0" Style="{StaticResource RoundedComboBoxStyle}" Width="Auto" x:Name="ComboBoxWarehouse" FontFamily="Lexend" Foreground="#474747" FontWeight="SemiBold" SelectionChanged="ItemsFromWarehouse">
                            </ComboBox>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Pull out Items:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                            <Border Grid.Row="0"  Background="#555555"  CornerRadius="10">
                                <StackPanel x:Name="TableGridPanel" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid Margin="10,10,0,10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width=".1*"/>
                                            <ColumnDefinition Width=".3*"/>
                                            <ColumnDefinition Width=".2*"/>
                                            <ColumnDefinition Width=".1*"/>
                                            <ColumnDefinition Width=".1*"/>
                                        </Grid.ColumnDefinitions>



                                        <TextBlock Text="Quantity" Grid.Row="0" Grid.Column="0" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Product Name" Grid.Row="0" Grid.Column="1" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Notes" Grid.Row="0" Grid.Column="2" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Stock" Grid.Row="0" Grid.Column="3" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Action" Grid.Row="0" Grid.Column="4" FontFamily="Lexend" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                    </Grid>

                                </StackPanel>
                            </Border>
                        </StackPanel>

                    </StackPanel>
                    <!-- Submit Button -->
                    <Button x:Name="btnAddRow" Click="AddNewRow" Cursor="Hand" Width="120" Height="35" HorizontalAlignment="Left" Margin="0,10,0,0" Background="#2E466B">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="PlaylistAdd" Foreground="white" Width="24" Height="24" Margin="0,0,5,0"/>
                                        <TextBlock Text="Row" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Margin="20,0,0,20">
                        <Button x:Name="btnProceedPullout" Click="ProceedButton" Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center">
                            <Border Style="{StaticResource RoundedBorderStyle}" Padding="1" Background="#1D5642" BorderThickness="0" Width="150" Height="40">
                                <TextBlock Text="Proceed" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"  FontWeight="SemiBold" FontFamily="Lexend" />
                            </Border>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
