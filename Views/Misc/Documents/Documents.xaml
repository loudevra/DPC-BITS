<Window x:Class="DPC.Views.Misc.Documents.Documents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Documents"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Define Columns for Sidebar and Main Content Wrapper -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content Wrapper -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="SidebarContainer" Grid.Row="0" Grid.Column="0" Background="Black"/>

        <!-- Wrapper for TopNavBar + Content -->
        <Grid Grid.Column="1">
            <!-- Define Rows for Top Navigation and Main Content -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top Navigation -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border x:Name="TopNavBarContainer" Grid.Row="0" Background="White" Height="Auto" MinHeight="50"/>

            <!-- Main Content with Scroll -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Documents Header with Add Button -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Documents" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>

                        <Button x:Name="BtnAddNew" Grid.Column="1" Content="Add new" Background="#26a69a" Foreground="White" 
                                Padding="10,5" Click="BtnAddNew_Click"/>
                    </Grid>

                    <!-- Export Button -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BtnExcel" Grid.Column="0" Content="Excel" Background="#4CAF50" Foreground="White" 
                                Padding="10,5" Click="BtnExcel_Click"/>

                        <!-- Search Field -->
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="TxtSearch" Grid.Column="1" TextChanged="TxtSearch_TextChanged"/>
                        </Grid>
                    </Grid>

                    <!-- Entries Selector -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Show " VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbEntriesCount" Grid.Column="1" SelectedIndex="0" SelectionChanged="CmbEntriesCount_SelectionChanged">
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="25"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>
                        <TextBlock Grid.Column="2" Text=" entries" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Documents Table -->
                    <Border Background="White" CornerRadius="8" Padding="0" Margin="0,0,0,10">
                        <DataGrid x:Name="DocumentsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                                  HeadersVisibility="Column" BorderThickness="0" 
                                  RowBackground="White" AlternatingRowBackground="#F5F5F5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding DocumentID}" Width="50"/>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="Added" Binding="{Binding UploadDate, StringFormat=\{0:dd-MM-yyyy\}}" Width="120"/>
                                <DataGridTemplateColumn Header="Action" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button x:Name="BtnView" Style="{StaticResource MaterialDesignFlatButton}" 
                                                        Foreground="#26a69a" Margin="0" Padding="5"
                                                        Click="BtnView_Click" Tag="{Binding DocumentID}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Eye" VerticalAlignment="Center"/>
                                                        <TextBlock Text="View" Margin="3,0,0,0"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button x:Name="BtnDelete" Style="{StaticResource MaterialDesignFlatButton}" 
                                                        Foreground="Red" Margin="0" Padding="5"
                                                        Click="BtnDelete_Click" Tag="{Binding DocumentID}">
                                                    <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Pagination -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="TxtPaginationInfo" Grid.Column="0" 
                                   Text="Showing 1 to 5 of 5 entries" VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button x:Name="BtnPrevious" Content="Previous" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Click="BtnPrevious_Click"/>
                            <Border Background="#26a69a" CornerRadius="0" 
                                    Width="30" Height="30" Margin="5,0">
                                <TextBlock Text="1" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                            <Button x:Name="BtnNext" Content="Next" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Click="BtnNext_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>