<UserControl x:Class="DPC.Views.Misc.CashAdvance.PreviewPrintCashAdvanceRequestForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#D9D9D9"
             >

    <UserControl.Resources>
        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

        <Style x:Key="ConvertButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="385*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Main Content -->
                    <StackPanel Grid.Row="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
                        <DockPanel LastChildFill="False" Margin="0,10,0,10">
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="0,0,10,0">
                                <Button  Content="Cancel"
                                        Margin="0,0,5,0"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        materialDesign:ButtonAssist.CornerRadius="20"
                                        Foreground="Gray"
                                        BorderBrush="Gray"
                                        FontWeight="SemiBold"   
                                        FontSize="16px"
                                        Width="90"
                                        Height="39"/>

                                <Button  Content="Print"
                                        Click="SavePrint"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        materialDesign:ButtonAssist.CornerRadius="20"
                                        Foreground="White"
                                        FontWeight="SemiBold"   
                                        FontSize="16px"
                                        Width="90"
                                        Height="39"
                                        Background="#2E466B"/>
                            </StackPanel>
                        </DockPanel>


                        <StackPanel x:Name="PrintPreview" Grid.Row="1">
                            <Border Height="1123" Background="White" CornerRadius="0,0,10,10" BorderThickness="0" Padding="10">
                                <Grid>
                                    <Image Source="/Assets/images/DREAMPCBUILD WATERMARK SLANTED SPACED.png" 
                                           Stretch="UniformToFill" 
                                           Opacity="0.05" 
                                           HorizontalAlignment="Stretch" 
                                           VerticalAlignment="Stretch" />
                                    <Grid Margin="40">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>


                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!--DPC Logo Side Bar-->
                                        <StackPanel Grid.Row="0" Height="Auto" Width="Auto" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,10,0,17" Background="Transparent" Grid.RowSpan="3">
                                            <Border Width="100" Height="100" Background="Black">
                                                <Border.OpacityMask>
                                                    <ImageBrush ImageSource="/Assets/images/logo.png"/>
                                                </Border.OpacityMask>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                            <TextBlock Text="CASH ADVANCE REQUEST FORM" FontWeight="Bold" FontFamily="{StaticResource Lexend}" FontSize="25" Foreground="#090909" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="EMPLOYEE NAME" FontWeight="Bold" FontFamily="{StaticResource Lexend}" Margin="3,0,0,3"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="JOB TITLE" FontWeight="Bold" FontFamily="{StaticResource Lexend}"  Margin="3,0,0,3"/>
                                        <TextBlock Grid.Row="4" Grid.Column="2" Text="EMPLOYEE ID" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="{StaticResource Lexend}"/>
                                        <TextBlock Grid.Row="4" Grid.Column="3" Text="DATE" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="{StaticResource Lexend}"/>

                                        <Border Grid.Row="5" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Height="30">
                                            <TextBlock x:Name="EmployeeName" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Row="5" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Height="30" Margin="-1,0,0,0">
                                            <TextBlock x:Name="Jobtitle" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Row="5" Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Height="30" Margin="-1,0,0,0">
                                            <TextBlock x:Name="EmployeeID" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Row="5" Grid.Column="3" BorderBrush="Gray" BorderThickness="1" Height="30" Margin="-1,0,0,0">
                                            <TextBlock x:Name="CashAdvanceDate" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                      

                                        <StackPanel Orientation="Horizontal"  Grid.Row="6" Grid.Column="0" Margin="3,10,0,3">
                                            <TextBlock  Text="SUPERVISOR" FontWeight="Bold" FontFamily="{StaticResource Lexend}" Margin="0,0,3,0"/>
                                            <TextBlock  Text="(If Applicable)" FontWeight="Bold" FontFamily="{StaticResource Lexend}" FontSize="10"/>
                                        </StackPanel>
                                        <TextBlock Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Text="DEPARTMENT" FontWeight="Bold" FontFamily="{StaticResource Lexend}"  Margin="3,10,0,3"/>
                                        <TextBlock Grid.Row="6" Grid.Column="3" Text="HOURLY RATE OF PAY" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="{StaticResource Lexend}" Margin="3,10,0,3"/>

                                        <Border Grid.Row="7" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Height="30">
                                            <TextBlock x:Name="SupervisorName" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="-1,0,0,0" Height="30">
                                            <TextBlock x:Name="Department" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Row="7" Grid.Column="3" BorderBrush="Gray" BorderThickness="1" Margin="-1,0,0,0" Height="30">
                                            <TextBlock x:Name="Rate" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        
                                        <TextBlock Grid.Row="8" Grid.Column="0" Text="REQUEST AMOUNT" FontWeight="Bold" FontFamily="{StaticResource Lexend}" Margin="3,10,0,3"/>
                                        <TextBlock Grid.Row="8" Grid.Column="1" Text="DATE NEEDED" FontWeight="Bold" FontFamily="{StaticResource Lexend}"  Margin="3,10,0,3"/>
                                        <TextBlock Grid.Row="8" Grid.Column="2" Text="REASON FOR CASH ADVANCE" FontWeight="Bold" FontFamily="{StaticResource Lexend}"  Margin="3,10,0,3"/>
                                        
                                        <StackPanel x:Name="SPRequestAmountContainer" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="4">
                                                <!--<Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1"  Height="30">
                                                    <TextBlock  Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="-1,0,0,0"  Height="30">
                                                    <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border Grid.Column="2" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="-1,0,0,0" Height="30" >
                                                        <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </Grid>-->
                                        </StackPanel>

                                        <TextBlock Grid.Row="10" Grid.Column="2" TextAlignment="Right" Text="TOTAL AMOUNT" FontWeight="Bold" FontFamily="{StaticResource Lexend}" Padding="0,20,10,0"/>
                                        <Border Grid.Row="10" Grid.Column="3" BorderBrush="Gray" BorderThickness="1" Margin="0,12,0,0" Height="30">
                                            <TextBlock x:Name="TotalAmount" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Grid.Row="11" Grid.Column="0" Text="REMARKS: (APPROVER)" FontFamily="{StaticResource Lexend}" Margin="3,10,0,3"/>
                                        <Border Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="4" BorderBrush="Gray" BorderThickness="1" >
                                            <TextBlock x:Name="Remarks" Text="" HorizontalAlignment="Left" Height="200"/>
                                        </Border>

                                        <TextBlock Grid.Row="13" Grid.Column="0" Text="REQUESTED BY:" TextAlignment="Left" FontWeight="Bold" FontFamily="{StaticResource Lexend}" Margin="3,30,0,3"/>
                                        <TextBlock Grid.Row="13" Grid.Column="1" Text="DATE" TextAlignment="Center" FontWeight="Bold" FontFamily="{StaticResource Lexend}" Margin="3,30,0,3"/>
                                        <TextBlock Grid.Row="13" Grid.Column="2" Text="APPROVED BY:" TextAlignment="Left" FontWeight="Bold" FontFamily="{StaticResource Lexend}" Margin="3,30,0,3"/>
                                        <TextBlock Grid.Row="13" Grid.Column="3" Text="DATE OF APPROVAL" TextAlignment="Center" FontWeight="Bold" FontFamily="{StaticResource Lexend}" Margin="3,30,0,3"/>

                                        <Border Grid.Row="14" Grid.Column="0" BorderBrush="Gray" BorderThickness="1,1,0.2,1" Height="30">
                                            <TextBlock x:Name="RequestedBy" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Row="14" Grid.Column="1" BorderBrush="Gray" BorderThickness="0.2, 1,1,1" Height="30">
                                            <TextBlock x:Name="RequestedDate" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Row="14" Grid.Column="2" BorderBrush="Gray" BorderThickness="1,1,0.2,1" Margin="-1,0,0,0" Height="30">
                                            <TextBlock x:Name="ApprovedBy" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Row="14" Grid.Column="3" BorderBrush="Gray" BorderThickness="0.2,1,1,1" Height="30">
                                            <TextBlock x:Name="ApprovalDate" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>


                                        <TextBlock Grid.Row="15" Grid.Column="0"  Text="NOTES:" Margin="3,10,0,3" FontFamily="{StaticResource Lexend}"/>
                                        <TextBlock Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="4" TextWrapping="Wrap" Text="No Cash Advance will be released unless this form has been completed and duly signed. In the event of an emergency, Employees shall inform the management via respoctive online channels." Margin="3,3,0,3" FontFamily="{StaticResource Lexend}"/>
                                    </Grid>

                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
