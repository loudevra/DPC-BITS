<UserControl x:Class="DPC.Views.Sales.CreditNotes.CreditNotes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="Transparent">


    <UserControl.Resources>
        <!--Border Style-->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!--Combo Box Style-->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#AEAEAE"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      VerticalAlignment="Center"
                                      Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="#AEAEAE"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                        Background="White" 
                                        BorderBrush="Black"
                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Rounder Grid Style-->
        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="17"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="385*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Main Content -->
                    <StackPanel Grid.Row="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
                        <!-- Header Section -->
                        <Grid VerticalAlignment="Center" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Credit Notes" FontSize="35" FontWeight="Bold" FontFamily="Lexend" Foreground="#474747" VerticalAlignment="Center" Grid.Column="0" />
                            <StackPanel VerticalAlignment="Center">
                                <Button x:Name="BtnAddQuote" HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}" Margin="20,0,0,0" Height="35" Width="152" Background="#555555" Click="NavigateToNewQuote">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Plus" Width="25" Height="25" Foreground="#FDFDFD"/>
                                        <TextBlock Text="Add Quote" FontSize="17" Foreground="#FDFDFD"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <!-- Filters and Controls -->
                        <Border Grid.Row="1" Padding="5" Background="White" CornerRadius="10" BorderBrush="White" Margin="0,0,0,15" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Left Controls -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,5,5">
                                    <!-- Excel Button -->
                                    <Button Style="{StaticResource ButtonStyle}" Background="#456B2E" Foreground="White" Width="75" Height="29" Margin="10,0,0,0">
                                        <materialDesign:PackIcon Kind="MicrosoftExcel" Width="25" Height="25"/>
                                    </Button>

                                    <!--Border as Straight Line-->
                                    <Border Width="1.5" Height="Auto" Background="#D9D9D9" Margin="10,5,10,5"/>

                                    <!--Combo Box-->
                                    <ComboBox Width="75" Style="{StaticResource RoundedComboBoxStyle}" Height="30">
                                        <ComboBoxItem Content="10" IsSelected="True"/>
                                        <ComboBoxItem Content="25"/>
                                        <ComboBoxItem Content="50"/>
                                        <ComboBoxItem Content="100"/>
                                    </ComboBox>

                                    <!--Calendar Date Time-->
                                    <Border Style="{StaticResource RoundedGridStyle}" MinWidth="180" Width="200" Height="34" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <Grid>
                                            <TextBox BorderThickness="0" Background="Transparent" FontFamily="Lexend" Name="txtQuickSearch" Style="{StaticResource RoundedTextboxStyle}" Height="23" Margin="20,0,20,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="12-05-2025 - 11-06-2025" FontFamily="Lexend" Foreground="#AEAEAE" FontSize="12" VerticalAlignment="Center" Margin="7,0,0,0" FontWeight="SemiBold" IsHitTestVisible="False"/>
                                            <materialDesign:PackIcon Kind="CalendarToday" Width="22" Height="17" Foreground="#555555" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!--View Grid Button-->
                                    <Button x:Name="btnViewGrid" Style="{StaticResource IconButton}">
                                        <materialDesign:PackIcon Kind="ViewGridOutline" Width="24" Height="24" Margin="10" Foreground="#555555"/>
                                    </Button>
                                    
                                    <!--Menu Button/Filter-->
                                    <Button x:Name="btnMenuFilter" Style="{StaticResource IconButton}">
                                        <materialDesign:PackIcon Kind="FormatListBulleted" Width="24" Height="24" Margin="10" Foreground="#555555"/>
                                    </Button>
                                </StackPanel>

                                <!--Right Control/s-->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <!--Search Button-->
                                    <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Width="211" Height="34">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="3*"/>
                                                <RowDefinition Height="19*"/>
                                            </Grid.RowDefinitions>
                                            <TextBox x:Name="txtSearch"
                                                BorderThickness="0" Background="Transparent" FontFamily="Lexend"  Foreground="#AEAEAE" Style="{StaticResource RoundedTextboxStyle}"
                                                     Height="22" VerticalAlignment="Top" HorizontalAlignment="Center" Width="179" Grid.RowSpan="2" Text="Search" />
                                            <materialDesign:PackIcon Kind="Magnify" Width="25" Height="26" Foreground="#AEAEAE" Margin="159,0,0,0" VerticalAlignment="Center" Grid.RowSpan="2"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Table and Controls test-->
                        <Border Background="White" CornerRadius="8" Padding="5" Width="Auto">
                            <StackPanel>
                                <!-- Data Grid -->
                                <DataGrid x:Name="CreditNotesDataGrid"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  RowBackground="White"
                                  AlternatingRowBackground="WhiteSmoke"
                                  BorderThickness="0"
                                  Width="Auto">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="No" Binding="{Binding Number}" Width="100"/>
                                        <DataGridTextColumn Header="#" Binding="{Binding NumberID}" Width="100"/>
                                        <DataGridTextColumn Header="Customer" Binding="{Binding Customer}" Width="120"/>
                                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="120"/>
                                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="120"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                                    </DataGrid.Columns>
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="FontFamily" Value="Lexend"/>
                                            <Setter Property="Margin" Value="0,5,0,5"/>
                                            <Setter Property="Padding" Value="5"/>
                                            <Setter Property="Height" Value="Auto"/>
                                            <Setter Property="MinHeight" Value="40"/>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="FontFamily" Value="Lexend"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#474747"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="10,5"/>
                                            <Setter Property="Background" Value="White"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Padding" Value="10,5"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DataGridCell">
                                                        <Border Padding="{TemplateBinding Padding}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                                            Background="{TemplateBinding Background}">
                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                            <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGrid.CellStyle>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>