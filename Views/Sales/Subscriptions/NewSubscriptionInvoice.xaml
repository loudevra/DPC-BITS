<UserControl x:Class="DPC.Views.Sales.Subscriptions.NewSubscriptionInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#D9D9D9">

    <UserControl.Resources>
        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#D98CAB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Combo Box Style-->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="{StaticResource Lexend}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#474747"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#474747"/>

            <!-- Control Template with No Hover Effect and Scrollable Dropdown -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border x:Name="ComboBorder"
     Background="{TemplateBinding Background}"
     BorderBrush="{TemplateBinding BorderBrush}"
     BorderThickness="{TemplateBinding BorderThickness}"
     CornerRadius="20"
     Padding="0">
                            <Grid>
                                <!-- ComboBox Content -->
                                <ContentPresenter Margin="10,0,30,0"
                       VerticalAlignment="Center"
                       Content="{TemplateBinding SelectionBoxItem}"
                       ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>

                                <!-- Dropdown Toggle Button -->
                                <ToggleButton x:Name="ToggleButton"
                   IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                   Focusable="False"
                   Background="Transparent"
                   BorderThickness="0"
                   Style="{StaticResource ComboBoxToggleButton}"/>

                                <!-- Default Popup for Dropdown -->
                                <Popup x:Name="Popup"
            Placement="Bottom"
            IsOpen="{TemplateBinding IsDropDownOpen}"
            AllowsTransparency="True"
            PopupAnimation="Slide"
            Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Border Background="White"
                 CornerRadius="10"
                 BorderBrush="Gray"
                 BorderThickness="1"
                 MaxHeight="200">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <!-- Main Content -->
                <StackPanel Margin="10">
                    <StackPanel Background="Transparent">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--Bill To Column-->
                            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,0,10" Width="350">
                                <!--Header-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!--Bill To Label-->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
                                        <TextBlock Text="Bill To" FontWeight="SemiBold" FontFamily="Lexend" FontSize="24" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                    </StackPanel>

                                    <!-- Add Client Button -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <Button
                                           x:Name="BtnAddClient" Width="100"
                                           Style="{StaticResource ButtonStyle}">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <materialDesign:PackIcon Kind="AccountPlus" Width="20" Height="20" Foreground="#FDFDFD" Margin="0,0,5,0"/>
                                                <TextBlock Text="Client" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#FDFDFD" Margin="0,0,5,0"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <!--Search Client-->
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Search Client:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,10"/>
                                    <Border Style="{StaticResource RoundedGridStyle}" Margin="0,0,0,10"
                                            Padding="5" Width="Auto" Height="40" BorderBrush="#474747">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="3*"/>
                                                <RowDefinition Height="19*"/>
                                            </Grid.RowDefinitions>
                                            <TextBox BorderThickness="0" Background="Transparent" FontFamily="Lexend" FontSize="16"
                                                     Text="Enter customer name or mobile number..."  Foreground="#AEAEAE" Name="txtSearchCustomer"
                                                     TextWrapping="Wrap"
                                                     Style="{StaticResource RoundedTextboxStyle}"
                                                     Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Left" Width="Auto" Grid.RowSpan="2"/>
                                            <materialDesign:PackIcon Kind="Magnify" Width="30" Height="30" Foreground="#AEAEAE" Margin="300,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.RowSpan="2"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!--Client Details-->
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Client Details:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,10"/>
                                    <Border Width="Auto" Height="200" Padding="10" CornerRadius="10" Background="#FDFDFD" BorderBrush="#474747" BorderThickness="1"  Margin="0,0,0,10">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                            <TextBlock x:Name="lblClientName" Text="Eli Clark:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,20,5"/>
                                            <TextBlock Text="Phone: 09xxxxxxxxx" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                            <TextBlock Text="Email: brookerose@gmail.com" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!--Warehouse-->
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Warehouse:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,0,5,10"/>
                                    <ComboBox Style="{StaticResource RoundedComboBoxStyle}" Height="40" Width="Auto">
                                        <ComboBoxItem Content="" IsSelected="True"/>
                                        <ComboBoxItem Content=""/>
                                        <ComboBoxItem Content=""/>
                                        <ComboBoxItem Content=""/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>

                            <!--Subscription Properties Column-->
                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,5,5" Width="350" Height="Auto">
                                <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Margin="0,0,0,10"
                                            Padding="15,15,15,15" Width="Auto" Height="450" BorderThickness="0">
                                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                        <StackPanel Orientation="Vertical" Margin="5" >
                                            <!--Header Label: Subscription Properties-->
                                            <TextBlock Grid.Column="0" Text="Subscription Properties" FontWeight="SemiBold" FontFamily="Lexend" FontSize="20" Foreground="#AEAEAE" VerticalAlignment="Center" Margin="0,0,20,0"/>

                                            <!--Subscription Number-->
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Grid.Column="0" Text="Subscription Number:" FontWeight="SemiBold" FontFamily="Lexend"
                                                               FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,10,20,5"/>
                                                <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Margin="0,0,0,10"
                                                        Padding="5" Width="Auto" Height="34" BorderBrush="#474747">
                                                    <TextBox x:Name="txtSubscriptionNumber" BorderThickness="0" Background="Transparent"
                                                                 FontFamily="Lexend" FontWeight="SemiBold"
                                                                 Text=""  Foreground="#AEAEAE"
                                                                 TextWrapping="Wrap"
                                                                 Style="{StaticResource RoundedTextboxStyle}"
                                                                 Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Grid.RowSpan="2"/>
                                                </Border>
                                            </StackPanel>

                                            <!--Reference-->
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Grid.Column="0" Text="Reference:" FontWeight="SemiBold" FontFamily="Lexend"
                                                        FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,5"/>
                                                <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Margin="0,0,0,10"
                                                        Padding="5" Width="Auto" Height="34" BorderBrush="#474747">
                                                    <TextBox x:Name="txtReferenceNumber" BorderThickness="0" FontWeight="SemiBold"
                                                                 Background="Transparent" FontFamily="Lexend" 
                                                                 Text="Reference #"  Foreground="#AEAEAE"
                                                                 TextWrapping="Wrap"
                                                                 Style="{StaticResource RoundedTextboxStyle}"
                                                                 Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Grid.RowSpan="2"/>
                                                </Border>
                                            </StackPanel>

                                            <!--Subscription Date-->
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Grid.Column="0" Text="Subscription Date:" FontWeight="SemiBold" FontFamily="Lexend"
                                                      FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,5"/>
                                                <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Margin="0,0,0,10"
                                                        Padding="5" Width="Auto" Height="34" BorderBrush="#474747">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="3*"/>
                                                            <RowDefinition Height="19*"/>
                                                        </Grid.RowDefinitions>
                                                        <DatePickerTextBox x:Name="SubscriptionDate" BorderThickness="0" FontWeight="SemiBold"
                                                                 Background="Transparent" FontFamily="Lexend" 
                                                                 Text="DD-MM-YYYY"  Foreground="#AEAEAE"
                                                                 TextWrapping="Wrap"
                                                                 Style="{StaticResource RoundedTextboxStyle}"
                                                                 Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Grid.RowSpan="2"/>
                                                        <materialDesign:PackIcon Kind="Calendar" Width="25" Height="26" Foreground="#555555" Margin="260,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.RowSpan="2"/>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>

                                            <!--Next Payment After:-->
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Grid.Column="0" Text="Next Payment After::" FontWeight="SemiBold" FontFamily="Lexend"
                                                        FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,5"/>
                                                <ComboBox Style="{StaticResource RoundedComboBoxStyle}" x:Name="PaymentAfter"
                                                          Height="40" Width="Auto" Foreground="#555555" FontFamily="Lexend" Margin="0,0,0,10">
                                                    <ComboBoxItem Content="7 Days" IsSelected="True"/>
                                                    <ComboBoxItem Content=""/>
                                                    <ComboBoxItem Content=""/>
                                                    <ComboBoxItem Content=""/>
                                                </ComboBox>
                                            </StackPanel>

                                            <!--Tax-->
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Grid.Column="0" Text="Tax:" FontWeight="SemiBold" FontFamily="Lexend"
                                                        FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,5"/>
                                                <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Margin="0,0,0,10"
                                                        Padding="5" Width="Auto" Height="34" BorderBrush="#474747">
                                                    <TextBox x:Name="txtTaxSelection" BorderThickness="0" FontWeight="SemiBold"
                                                                 Background="Transparent" FontFamily="Lexend" 
                                                                 Text="Off"  Foreground="#AEAEAE"
                                                                 TextWrapping="Wrap"
                                                                 Style="{StaticResource RoundedTextboxStyle}"
                                                                 Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Grid.RowSpan="2"/>
                                                </Border>
                                            </StackPanel>

                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Grid.Column="0" Text="Discount:" FontWeight="SemiBold" FontFamily="Lexend"
                                                        FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,5"/>
                                                <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Margin="0,0,0,10"
                                                        Padding="5" Width="Auto" Height="34" BorderBrush="#474747">
                                                    <TextBox x:Name="txtDiscountSelection" BorderThickness="0" FontWeight="SemiBold"
                                                             Background="Transparent" FontFamily="Lexend" 
                                                             Text="Discount" Foreground="#AEAEAE"
                                                             TextWrapping="Wrap"
                                                             Style="{StaticResource RoundedTextboxStyle}"
                                                             Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Grid.RowSpan="2"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!--Rectangle as line-->
                        <Rectangle
                            Width="auto"
                            Height="1" 
                            Stroke="#AEAEAE"
                            StrokeThickness="1"
                            Fill="Transparent"
                            Margin="0,0,0,20"/>

                        <!--Product Info and DataGrid-->
                        <StackPanel Width="Auto">
                            <!--Date Grid of the Product Info-->
                            <DataGrid x:Name="ProductInfoDataGrid" Margin="0,0,0,10"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      BorderThickness="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="170"/>
                                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                                    <DataGridTextColumn Header="Rate:" Binding="{Binding Rate}" Width="100"/>
                                    <DataGridTextColumn Header="Tax (%)" Binding="{Binding TaxtPercent}" Width="100"/>
                                    <DataGridTextColumn Header="Tax" Binding="{Binding TaxValue}" Width="100"/>
                                    <DataGridTextColumn Header="Discount" Binding="{Binding Discount}" Width="100"/>
                                    <DataGridTextColumn Header="Amount(₱)" Binding="{Binding Amount}" Width="130"/>
                                </DataGrid.Columns>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="FontFamily" Value="Lexend"/>
                                        <Setter Property="Margin" Value="0,5,0,5"/>
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="Height" Value="Auto"/>
                                        <Setter Property="MinHeight" Value="40"/>
                                    </Style>
                                </DataGrid.RowStyle>

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontFamily" Value="Lexend"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#FDFDFD"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="Background" Value="#D6AEED"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="10,5"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridCell">
                                                    <Border Padding="{TemplateBinding Padding}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        Background="{TemplateBinding Background}">
                                                        <ContentPresenter VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </DataGrid.CellStyle>
                            </DataGrid>
                            <!--Products Info after the DataGrid-->
                            <Border BorderBrush="#D6AEED" BorderThickness="2" Background="#FDFDFD" CornerRadius="15" Padding="0">
                                <StackPanel Orientation="Vertical" Width="Auto" >
                                    <!--Inputs of Product Into-->
                                    <StackPanel Orientation="Horizontal" Margin="10">
                                        <!--Product Name-->
                                        <Border BorderBrush="#D6AEED" BorderThickness="2" Background="#FDFDFD"
                                                CornerRadius="15" Padding="5" Margin="0,0,5,0" Width="150">
                                            <TextBox x:Name="txtProductName"
                                            Text="Enter product name or code..." FontFamily="Lexend" FontSize="12"
                                                Foreground="#55555580" FontWeight="SemiBold" TextWrapping="Wrap" Padding="5"
                                                BorderThickness="0" 
                                                />
                                        </Border>
                                        <!--Product Quantity-->
                                        <Border BorderBrush="#D6AEED" BorderThickness="2" Background="#FDFDFD"
                                                CornerRadius="15" Padding="5" Margin="0,0,5,0">
                                            <TextBox x:Name="txtProductQuantiy"
                                                Text="" FontFamily="Lexend" FontSize="12" Width="95"
                                                Foreground="#55555580" FontWeight="SemiBold" TextWrapping="Wrap" Padding="5"
                                                BorderThickness="0"
                                                />
                                        </Border>
                                        <!--Product Rate-->
                                        <Border BorderBrush="#D6AEED" BorderThickness="2" Background="#FDFDFD"
                                                CornerRadius="15" Padding="5" Margin="0,0,5,0">
                                            <TextBox x:Name="txtProductRate"
                                               Text="" FontFamily="Lexend" FontSize="12" Width="80"
                                               Foreground="#55555580" FontWeight="SemiBold" TextWrapping="Wrap" Padding="5"
                                               BorderThickness="0"
                                               />
                                        </Border>
                                        <!--Product Tax Percent-->
                                        <Border BorderBrush="#D6AEED" BorderThickness="2" Background="#FDFDFD"
                                                CornerRadius="15" Padding="5" Margin="0,0,5,0">
                                            <TextBox x:Name="txtTaxPercent"
                                               Text="" FontFamily="Lexend" FontSize="12" Width="85"
                                               Foreground="#55555580" FontWeight="SemiBold" TextWrapping="Wrap" Padding="5"
                                               BorderThickness="0"
                                               />
                                        </Border>
                                        <!--Product Tax -->
                                        <Border BorderThickness="0" Background="#FDFDFD"
                                                CornerRadius="15" Padding="5" Margin="0,0,5,0">
                                            <TextBox x:Name="txtTax"
                                               Text="" FontFamily="Lexend" FontSize="12" Width="80"
                                               Foreground="#55555580" FontWeight="SemiBold" TextWrapping="Wrap" Padding="5"
                                               BorderThickness="0"
                                               />
                                        </Border>
                                        <!--Product Discount -->
                                        <Border BorderBrush="#D6AEED" BorderThickness="2" Background="#FDFDFD"
                                                CornerRadius="15" Padding="5" Margin="0,0,20,0">
                                            <TextBox x:Name="txtDiscount"
                                               Text="" FontFamily="Lexend" FontSize="12" Width="90"
                                               Foreground="#55555580" FontWeight="SemiBold" TextWrapping="Wrap" Padding="5"
                                               BorderThickness="0"
                                               />
                                        </Border>
                                        <!--Product Amount -->
                                        <Border BorderThickness="0" Background="#FDFDFD"
                                                CornerRadius="15" Padding="5" Margin="0,0,0,0" HorizontalAlignment="Center">
                                            <TextBlock x:Name="txtAmount"
                                               Text="₱0.00" FontFamily="Lexend" FontSize="12" Width="50"
                                               Foreground="#D98CAB" FontWeight="SemiBold" TextWrapping="Wrap" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                               />
                                        </Border>
                                        <materialDesign:PackIcon Kind="PlaylistRemove" Width="50" Height="40" Foreground="#D23636" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!--Input of Product Description-->
                                    <StackPanel Width="Auto">
                                        <Border Margin="10"
                                            BorderBrush="#D6AEED" BorderThickness="2"
                                            CornerRadius="5" Padding="10" Width="Auto"
                                            Height="120" Background="Transparent">
                                            <TextBox Text="Enter product description (Optional)" x:Name="txtProductDescription"
                                            BorderThickness="0" Background="Transparent" FontFamily="Lexend" FontSize="12"
                                            Foreground="#55555580" FontWeight="SemiBold"
                                            Height="Auto" VerticalAlignment="Top" HorizontalAlignment="Left"
                                            Width="Auto" TextWrapping="Wrap" />
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!--Generating Invoice and Payment Terms-->
                        <StackPanel Grid.Row="2" Margin="20,20,20,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!--Payment Terms-->
                                <StackPanel Grid.Column="0" Orientation="Vertical" Width="400">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                        <Button
                                            Style="{StaticResource ButtonStyle}" Background="#2E466B">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                <materialDesign:PackIcon Kind="PlaylistAdd" Width="30" Height="30" Foreground="#FFFFFF" Margin="-15,0,5,0"/>
                                                <TextBlock Text="Row" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,5,0"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                    <!--Payment Terms Combo Box-->
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Payment Terms:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,20,5,10"/>
                                        <ComboBox Style="{StaticResource RoundedComboBoxStyle}" Height="40" Width="Auto">
                                            <ComboBoxItem Content="Cash" IsSelected="True"/>
                                            <ComboBoxItem Content="7 Days PDC"/>
                                            <ComboBoxItem Content="14 Days PDC"/>
                                            <ComboBoxItem Content="30 Days PDC"/>
                                            <ComboBoxItem Content="45 Days PDC"/>
                                            <ComboBoxItem Content="60 Days PDC"/>
                                            <ComboBoxItem Content="Custom"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>

                                <!--Generate Invoice-->
                                <StackPanel Grid.Column="1" Orientation="Vertical" Width="400" HorizontalAlignment="Right" Margin="40,0,0,0">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Total Tax:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                            <TextBlock Text="₱ 0" FontSize="16" VerticalAlignment="Center" FontWeight="Bold" Foreground="#090909" Margin="20,10,0,0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Total Discount:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                            <TextBlock Text="₱ 0" FontSize="16" VerticalAlignment="Center" FontWeight="Bold" Foreground="#090909"  Margin="20,10,0,0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Shipping:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                            <Border BorderBrush="#474747" BorderThickness="1" Background="#FDFDFD" Padding="1" Width="200" CornerRadius="15" Margin="20,10,0,0" Height="30">
                                                <TextBlock x:Name="txtShipping" Text="" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Extra Discount:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                            <Border BorderBrush="#474747" BorderThickness="1" Background="#FDFDFD" Padding="1" Width="200" CornerRadius="15" Margin="20,10,0,0" Height="30">
                                                <TextBlock x:Name="txtExtraDiscount" Text="" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
