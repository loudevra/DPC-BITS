<UserControl x:Class="DPC.Views.Sales.Quotes.Quote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="Transparent"
        Width="Auto" Height="Auto">

    <UserControl.Resources>
        <!--Add Quote Button Style-->
        <Style x:Key="AddQuoteButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      VerticalAlignment="Center"
                                      Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="#AEAEAE"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           Focusable="False"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                Background="White" 
                                BorderBrush="#AEAEAE"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

        <!-- Convert Button Style -->
        <Style x:Key="ConvertButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Main Content -->
                    <StackPanel Grid.Row="1" Margin="20">
                        <!-- Header Section with "Quote" and "Convert to" button aligned horizontally -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Quote"
                                       FontSize="32"
                                       FontWeight="SemiBold"
                                       FontFamily="Lexend"
                                       Foreground="#555555"
                                       VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <Button x:Name="BtnAddQuote" HorizontalAlignment="Right" Style="{StaticResource AddQuoteButtonStyle}" Margin="20,0,0,0" Height="35" Width="152" Click="NavigateToQuotes">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Plus" Width="25" Height="25" Foreground="#FDFDFD"/>
                                        <TextBlock Text="Add Quote" FontSize="17" Foreground="#FDFDFD"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Filters and Controls -->
                        <Border Grid.Row="1" Padding="5" Background="White" CornerRadius="10" BorderBrush="White" Margin="0,0,0,15" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Controls -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <!-- Excel Button -->
                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="#456B2E" Foreground="White" Width="75" Height="29" Margin="10,0,10,0">
                                        <materialDesign:PackIcon Kind="MicrosoftExcel" Width="25" Height="25"/>
                                    </Button>
                                    <ComboBox Width="75" Style="{StaticResource RoundedComboBoxStyle}" Height="28" Foreground="#AEAEAE">
                                        <ComboBoxItem Content="10" IsSelected="True"/>
                                        <ComboBoxItem Content="25"/>
                                        <ComboBoxItem Content="50"/>
                                        <ComboBoxItem Content="100"/>
                                    </ComboBox>
                                    <!-- Search box replacing the 2nd ComboBox -->
                                    <Border Style="{StaticResource RoundedGridStyle}" HorizontalAlignment="Right" Margin="10" MinWidth="250" Height="25">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <DatePicker x:Name="StartDatePicker"
                 SelectedDate="{Binding StartDate, Mode=TwoWay}"
                 Visibility="Hidden"/>

                                            <Button Grid.Column="0"
             Background="Transparent"
             BorderThickness="0"
             HorizontalAlignment="Stretch"
             Click="StartDate_Click">
                                                <TextBlock Text="{Binding StartDate, StringFormat='MMM dd, yyyy'}"
                    FontFamily="Lexend"
                    FontSize="12"
                    VerticalAlignment="Center"
                    Margin="10,0,5,0"/>
                                            </Button>

                                            <TextBlock Text=" - "
                FontFamily="Lexend"
                FontSize="12"
                VerticalAlignment="Center"
                Grid.Column="1"/>

                                            <DatePicker x:Name="EndDatePicker"
                 SelectedDate="{Binding EndDate, Mode=TwoWay}"
                 Visibility="Hidden"/>

                                            <Button Grid.Column="2"
             Background="Transparent"
             BorderThickness="0"
             Padding="0"
             HorizontalAlignment="Stretch"
             Click="EndDate_Click">
                                                <TextBlock Text="{Binding EndDate, StringFormat='MMM dd, yyyy'}"
                    FontFamily="Lexend"
                    FontSize="12"
                    VerticalAlignment="Center"
                    Margin="5,0,10,0"/>
                                            </Button>

                                            <materialDesign:PackIcon Kind="Calendar"
                              Width="20"
                              Height="20"
                              Foreground="Black"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Grid.Column="3"
                              Margin="0,0,5,0"/>
                                        </Grid>
                                    </Border>
                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" Foreground="#474747" Width="29" Height="29" Margin="0,0,0,0">
                                        <materialDesign:PackIcon Kind="ViewGridOutline" Width="25" Height="25"/>
                                    </Button>
                                    <Button Style="{StaticResource RoundedButtonStyle}" Background="Transparent" Foreground="#474747" Width="29" Height="29" Margin="0,0,0,0">
                                        <materialDesign:PackIcon Kind="FormatListBulleted" Width="30" Height="30"/>
                                    </Button>
                                </StackPanel>

                                <!-- Right Controls -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Width="250" Height="34">
                                        <Grid>
                                            <TextBox BorderThickness="0" Background="Transparent" FontFamily="Lexend"  Name="txtSearch" Style="{StaticResource RoundedTextboxStyle}" Height="23" Margin="20,0,20,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Search" Foreground="#AEAEAE" FontSize="13" VerticalAlignment="Center" Margin="7,0,0,0" FontWeight="SemiBold"/>
                                            <materialDesign:PackIcon Kind="Magnify" Width="25" Height="26" Foreground="#AEAEAE" Margin="210,0,0,-2" VerticalAlignment="Bottom"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Add this grid directly after the filters and controls border -->
                        <Grid Background="#e0e0e0" Margin="0">
                            <Border Background="White" CornerRadius="0" Margin="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <!-- No -->
                                        <ColumnDefinition Width="*" />
                                        <!-- # -->
                                        <ColumnDefinition Width="4*" />
                                        <!-- Customer -->
                                        <ColumnDefinition Width="3*" />
                                        <!-- Date -->
                                        <ColumnDefinition Width="3*" />
                                        <!-- Amount -->
                                        <ColumnDefinition Width="3*" />
                                        <!-- Status -->
                                    </Grid.ColumnDefinitions>
                                    <!-- No -->
                                    <StackPanel Grid.Column="0"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Margin="0,0,-10,0"
                                                Width="Auto">
                                        <TextBlock Text="No"
                                                   FontWeight="Normal"
                                                   Foreground="#474747"
                                                   FontSize="14"
                                                   FontFamily="Lexend"
                                                   VerticalAlignment="Center"/>
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="20" Height="20" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!-- # column with UnfoldMoreHorizontal icon -->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Margin="0,0,-50,0"
                                                Width="Auto">
                                        <TextBlock Text="#"
                                                   FontWeight="SemiBold"
                                                   Foreground="#474747"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   FontFamily="Lexend"/>
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal"
                                                                 Width="20"
                                                                 Height="20"
                                                                 Foreground="#888"
                                                                 Margin="6,0,0,0"
                                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!-- Customer with sort icon -->
                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="110,0,0,0">
                                        <TextBlock Text="Customer" 
                                                   FontWeight="Normal"
                                                   Foreground="#474747"
                                                   FontSize="14"
                                                   FontFamily="Lexend"/>
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="20" Height="20" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!-- Date with sort icon -->
                                    <StackPanel Grid.Column="3"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="25,0,0,0">
                                        <TextBlock Text="Date" 
                                                   FontWeight="Normal"
                                                   Foreground="#474747"
                                                   FontSize="14"
                                                   FontFamily="Lexend"/>
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="20" Height="20" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!-- Amount with sort icon -->
                                    <StackPanel Grid.Column="4"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="-10,0,0,0">
                                        <TextBlock Text="Amount" 
                                                   FontWeight="Normal"
                                                   Foreground="#474747"
                                                   FontSize="14"
                                                   FontFamily="Lexend"/>
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="20" Height="20" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!-- Status with sort icon (added after Amount) -->
                                    <StackPanel Grid.Column="5"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="-10,0,0,0">
                                        <TextBlock Text="Status" 
                                                   FontWeight="Normal"
                                                   Foreground="#474747"
                                                   FontSize="14"
                                                   FontFamily="Lexend"/>
                                        <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="20" Height="20" Foreground="#888" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <!-- Divider line -->
                            <Border Grid.Row="1" Background="#ddd" Height="1" VerticalAlignment="Bottom" Margin="4,34,4,0"/>
                        </Grid>

                        <!-- Table and Controls -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,15"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>