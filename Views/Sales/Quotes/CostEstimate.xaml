<UserControl x:Class="DPC.Views.Sales.Quotes.CostEstimate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#D9D9D9">


    <UserControl.Resources>
        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

        <Style x:Key="ConvertButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid>
            <!-- Main Content (ScrollViewer) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="385*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Main Content -->
                    <StackPanel Grid.Row="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
                        <!-- Header Section -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10">
                            <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="25" Foreground="#555555" Margin="0,0,10,0"/>
                            <TextBlock Text="Quote #1" FontWeight="SemiBold" FontFamily="Lexend" FontSize="22" Foreground="#555555" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- buttons controls (views, link, print) -->
                        <Border Grid.Row="1" Padding="5" Background="White" CornerRadius="10,10,0,0" Margin="0,0,0,0" BorderThickness="0" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Left Controls -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,5,5">
                                    <!--view-->
                                    <Button Style="{StaticResource IconButton}">
                                        <StackPanel>
                                            <materialDesign:PackIcon Kind="FolderEyeOutline" Width="30" Height="30" Margin="10,10,10,0" Foreground="#555555"/>
                                            <TextBlock Text="View" FontSize="14" HorizontalAlignment="Center" Foreground="#555555"/>
                                        </StackPanel>
                                    </Button>
                                    <!--link-->
                                    <Button Style="{StaticResource IconButton}">
                                        <StackPanel>
                                            <materialDesign:PackIcon Kind="LinkBoxVariantOutline" Width="30" Height="30" Margin="10,10,10,0" Foreground="#555555"/>
                                            <TextBlock Text="Link" FontSize="14" HorizontalAlignment="Center" Foreground="#555555"/>
                                        </StackPanel>
                                    </Button>
                                    <!--print-->
                                    <Button Style="{StaticResource IconButton}">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                                <materialDesign:PackIcon Kind="PrinterOutline" Width="30" Height="30" Margin="10,10,5,0" Foreground="#555555"/>
                                                <TextBlock Text="Print" FontSize="14" HorizontalAlignment="Center" Margin="5,0,0,0" Foreground="#555555"/>
                                            </StackPanel>
                                            <materialDesign:PackIcon Kind="ChevronUp" Width="15" Height="15" VerticalAlignment="Center" Foreground="#555555"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <!-- Convert Buttons -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Button
                                        Style="{StaticResource ConvertButtonStyle}" Margin="0,0,15,0">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="ArrowLeftTop" Width="20" Height="30" Foreground="#ADE0C1" Margin="0,0,5,0"/>
                                            <TextBlock Text="Convert to" FontSize="18" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#ADE0C1" Margin="0,0,5,0"/>
                                            <materialDesign:PackIcon Kind="ChevronUp" Width="20" Height="30" Foreground="#ADE0C1"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <StackPanel Grid.Row="1" Margin="0,0,0,0" >
                            <Border Background="White" CornerRadius="0,0,10,10"  BorderThickness="0" Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!--Rectangle as line-->
                                    <Rectangle Grid.Row="0"
                                       Width="auto"
                                       Height="1" 
                                       Stroke="#AEAEAE"
                                       StrokeThickness="1"
                                       Fill="Transparent"
                                       VerticalAlignment="Top"
                                       Margin="10,0"/>

                                    <!--DPC Logo Side Bar-->
                                    <StackPanel Height="Auto" Width="220" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,10,0,0" Background="White">
                                        <Image Source="/Assets/images/logosidebarBlack.png" Stretch="Fill" VerticalAlignment="Center" Width="220"/>
                                    </StackPanel>
                                    <!--Cost Statement Label-->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                                        <TextBlock Text="COST ESTIMATE" FontWeight="SemiBold" FontFamily="Lexend" FontSize="20" Foreground="#090909" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <!--Invoice and Date-->
                                    <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right" Margin="10">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Invoice #:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#090909" VerticalAlignment="Center"/>
                                            <Border Background="White" BorderThickness="2,2,2,1"  BorderBrush="#090909" Padding="5" Width="200" Margin="10,0,0,0"></Border>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#090909" VerticalAlignment="Center"/>
                                            <Border Background="White" BorderThickness="2,1,2,2" BorderBrush="#090909" Padding="5" Width="200" Margin="10,0,0,0"></Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--Customers' Info-->
                                    <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Left" Margin="10,40,10,10">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,5">
                                            <TextBlock Text="Bill to:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="18" Foreground="#090909" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <!--Info-->
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                                            <TextBlock Text="Eli Clark" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                            <TextBlock Text="Wales, Swansea" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                            <TextBlock Text="United Kingdom" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                            <TextBlock Text="+63966634982" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                            <TextBlock Text="brookerose@gmail.com" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#7C7C7C" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--Status Info-->
                                    <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Right" Margin="10,40,10,10">
                                        <!--Status-->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
                                            <TextBlock Text="Status:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555" VerticalAlignment="Center"/>
                                            <Border Background="#F0F0F0" BorderBrush="#090909" CornerRadius="10" Padding="1" Width="200" Margin="10,0,0,0" Height="30">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="Approved" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#B1CCA1" VerticalAlignment="Center" Margin="0,0,30,0"/>
                                                    <materialDesign:PackIcon Kind="CogSyncOutline" Width="20" Height="20" Foreground="#B3B3B3" Margin="10,0,5,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                        <!--Payment Terms-->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
                                            <TextBlock Text="Payment Terms:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555" VerticalAlignment="Center"/>
                                            <Border Background="#F0F0F0" BorderBrush="#090909" CornerRadius="10" Padding="1" Width="200" Height="30" Margin="10,0,0,0">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="Payment on Receipt" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#AEAEAE" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                    <materialDesign:PackIcon Kind="CogSyncOutline" Width="20" Height="20" Foreground="#B3B3B3" Margin="10,0,5,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                        <!--Due Date-->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
                                            <TextBlock Text="Due Date:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555" VerticalAlignment="Center"/>
                                            <Border Background="#F0F0F0" BorderBrush="#090909" CornerRadius="10" Padding="1" Width="200" Height="30" Margin="10,0,0,0">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="20-03-2025" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#AEAEAE" VerticalAlignment="Center" Margin="0,0,30,0"/>
                                                    <materialDesign:PackIcon Kind="CogSyncOutline" Width="20" Height="20" Foreground="#B3B3B3" Margin="10,0,5,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--DataGrid 1: Seller Info-->
                                    <StackPanel Grid.Row="4" Orientation="Vertical" HorizontalAlignment="Left" Margin="10">
                                        <DataGrid 
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="False"
                                            HeadersVisibility="Column"
                                            GridLinesVisibility="None"
                                            RowBackground="White"
                                            AlternatingRowBackground="WhiteSmoke"
                                            BorderThickness="0">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Sales Representative:" Binding="{Binding SalesRep}" Width="260"/>
                                                <DataGridTextColumn Header="Checked by:" Binding="{Binding CheckedBy}" Width="260"/>
                                                <DataGridTextColumn Header="Approved by:" Binding="{Binding CheckedBy}" Width="260"/>
                                            </DataGrid.Columns>
                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <Setter Property="FontFamily" Value="Lexend"/>
                                                    <Setter Property="Margin" Value="0,5,0,5"/>
                                                    <Setter Property="Padding" Value="5"/>
                                                    <Setter Property="Height" Value="Auto"/>
                                                    <Setter Property="MinHeight" Value="40"/>
                                                </Style>
                                            </DataGrid.RowStyle>

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontFamily" Value="Lexend"/>
                                                    <Setter Property="FontSize" Value="16"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="Foreground" Value="#FDFDFD"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="10"/>
                                                    <Setter Property="Background" Value="#AEAEAE"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <DataGrid.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="Padding" Value="10,5"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="DataGridCell">
                                                                <Border Padding="{TemplateBinding Padding}" 
                                                                  BorderBrush="{TemplateBinding BorderBrush}" 
                                                                  BorderThickness="{TemplateBinding BorderThickness}" 
                                                                  Background="{TemplateBinding Background}">
                                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                                    <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                                </Style>
                                            </DataGrid.CellStyle>
                                        </DataGrid>
                                    </StackPanel>

                                    <!--Bill Info-->
                                    <StackPanel Grid.Row="5" Orientation="Vertical" HorizontalAlignment="Left" Margin="10">
                                        <DataGrid
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  HeadersVisibility="Column"
                                                  GridLinesVisibility="None"
                                                  RowBackground="White"
                                                  AlternatingRowBackground="WhiteSmoke"
                                                  BorderThickness="0">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="260"/>
                                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="260"/>
                                                <DataGridTextColumn Header="" Binding="{Binding Action}" Width="260"/>
                                            </DataGrid.Columns>
                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <Setter Property="FontFamily" Value="Lexend"/>
                                                    <Setter Property="Margin" Value="0,5,0,5"/>
                                                    <Setter Property="Padding" Value="5"/>
                                                    <Setter Property="Height" Value="Auto"/>
                                                    <Setter Property="MinHeight" Value="40"/>
                                                </Style>
                                            </DataGrid.RowStyle>

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontFamily" Value="Lexend"/>
                                                    <Setter Property="FontSize" Value="16"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="Foreground" Value="#FDFDFD"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="10"/>
                                                    <Setter Property="Background" Value="#090909"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <DataGrid.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="Padding" Value="10,5"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="DataGridCell">
                                                                <Border Padding="{TemplateBinding Padding}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                                    Background="{TemplateBinding Background}">
                                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                                    <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                                </Style>
                                            </DataGrid.CellStyle>
                                        </DataGrid>
                                    </StackPanel>

                                    <!--Customer Confirmation -->
                                    <Border Grid.Row="6" BorderBrush="#090909" BorderThickness="1" Margin="10,0,10,0" Padding="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!--Signature-->
                                            <Border Grid.Column="0" BorderBrush="#090909" BorderThickness="0,0,1,0" Padding="10">
                                                <TextBlock FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#090909" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                                PRINTED NAME<LineBreak/>AND SIGNATURE
                                                </TextBlock>
                                            </Border>

                                            <!--Upload Signature-->
                                            <Border Grid.Column="1" BorderBrush="#090909" BorderThickness="0,0,1,0" Padding="10">
                                                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <materialDesign:PackIcon Kind="TrayUpload" Width="30" Height="30" Foreground="#555555" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <TextBlock Text="Upload Signature (.png, .jpeg) " FontWeight="Bold" FontFamily="Lexend" FontSize="14" Foreground="#AEAEAE" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                                                        <Border BorderBrush="#AEAEAE" BorderThickness="1" Padding="1" Width="100" CornerRadius="10">
                                                            <TextBlock Text="Browse" FontWeight="Bold" FontFamily="Lexend" FontSize="16" Foreground="#AEAEAE" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <!--Total Cost Section-->
                                            <Border Grid.Column="2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                            <TextBlock Text="SUBTOTAL VAT EX." FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                        </Border>
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                            <TextBlock FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0">
                                                                INSTALLATION/
                                                                <LineBreak />
                                                                CONFIGURATION
                                                            </TextBlock>
                                                        </Border>
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                            <TextBlock Text="MOBILIZATION" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                        </Border>
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,1,1" Padding="1">
                                                            <TextBlock Text="VAT 12%" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                        </Border>
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,1,0" Padding="1">
                                                            <TextBlock Text="TOTAL COST" FontWeight="Bold" FontFamily="Lexend" FontSize="14" Foreground="#C75757" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1">
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                            <TextBlock Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                        </Border>
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                            <TextBlock Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,17"/>
                                                        </Border>
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                            <TextBlock Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                        </Border>
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,0,1" Padding="1">
                                                            <TextBlock Text="₱ 0.00" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                        </Border>
                                                        <Border BorderBrush="#090909" BorderThickness="0,0,0,0" Padding="1">
                                                            <TextBlock Text="₱ 0.00" FontWeight="Bold" FontFamily="Lexend" FontSize="14" Foreground="#C75757" HorizontalAlignment="Left" Margin="5,0,5,0"/>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!--Notes-->
                                    <Border Grid.Row="7" BorderBrush="#090909" BorderThickness="1,0,1,1" Margin="10,0,10,0" Padding="0">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                            <TextBlock Text="Notes:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#090909" VerticalAlignment="Center" Margin="10"/>
                                        </StackPanel>
                                    </Border>
                                    <!--Remarks-->
                                    <Border Grid.Row="8" BorderBrush="#090909" BorderThickness="1,0,1,1" Margin="10,0,10,0" Padding="0">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                            <TextBlock Text="Remarks:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#090909" VerticalAlignment="Center" Margin="10"/>
                                        </StackPanel>
                                    </Border>

                                    <!--Terms of Payment-->
                                    <Border Grid.Row="9" Margin="10,0,10,0" Background="#090909">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="2">
                                            <TextBlock Text="TERMS OF PAYMENT" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#FDFDFD" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!--Payments Info-->
                                    <Border Grid.Row="10" Margin="10,0,10,0" Background="#AEAEAE" BorderBrush="#090909" BorderThickness="1,0,1,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="2">
                                                <TextBlock Text="CASH Payments" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#090909" VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="2">
                                                <TextBlock Text="CHEQUE Payments" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#090909" VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="2">
                                                <TextBlock Text="Out of Town Projects" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#090909" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!--Payments Description Info-->
                                    <Border Grid.Row="11" Margin="10,0,10,0" Background="#FDFDFD" BorderBrush="#090909" BorderThickness="1,0,1,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Margin="10">
                                                <TextBlock Text="• 50% upon ordering" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909"/>
                                                <TextBlock Text="• 30% upon delivery" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909"/>
                                                <TextBlock Text="• 20% upon completiong" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909"/>
                                                <TextBlock Text="• Progress billing remaining balance (for bulk orders)" FontWeight="SemiBold" FontFamily="Lexend" FontSize="14" Foreground="#090909" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
