    <UserControl x:Class="DPC.Views.Sales.Quotes.NewQuoteGovernment"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:ctrl="DPC.Data.Controllers"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            mc:Ignorable="d"
            Background="#D9D9D9"
            Loaded="NewQuoteGovernment_Loaded">

        <UserControl.Resources>
            <!-- Border Style -->
            <Style x:Key="RoundedBorderStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="15"/>
            </Style>

            <Style x:Key="RoundedGridStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="BorderBrush" Value="#D98CAB"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Padding" Value="5"/>
            </Style>

            <!-- Add the RoundedTextboxStyle that was missing in the original code -->
            <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="FontFamily" Value="Lexend"/>
            </Style>

            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="130"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Background" Value="#555555"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--Combo Box Style-->
            <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
                <Setter Property="FontFamily" Value="{StaticResource Lexend}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="#474747"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="35"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#474747"/>

                <!-- Control Template with No Hover Effect and Scrollable Dropdown -->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Border x:Name="ComboBorder"
         Background="{TemplateBinding Background}"
         BorderBrush="{TemplateBinding BorderBrush}"
         BorderThickness="{TemplateBinding BorderThickness}"
         CornerRadius="20"
         Padding="0">
                                <Grid>
                                    <!-- ComboBox Content -->
                                    <ContentPresenter Margin="10,0,30,0"
                           VerticalAlignment="Center"
                           Content="{TemplateBinding SelectionBoxItem}"
                           ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>

                                    <!-- Dropdown Toggle Button -->
                                    <ToggleButton x:Name="ToggleButton"
                       IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                       Focusable="False"
                       Background="Transparent"
                       BorderThickness="0"
                       Style="{StaticResource ComboBoxToggleButton}"/>

                                    <!-- Default Popup for Dropdown -->
                                    <Popup x:Name="Popup"
                Placement="Bottom"
                IsOpen="{TemplateBinding IsDropDownOpen}"
                AllowsTransparency="True"
                PopupAnimation="Slide"
                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <Border Background="White"
                     CornerRadius="10"
                     BorderBrush="Gray"
                     BorderThickness="1"
                     MaxHeight="200">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </UserControl.Resources>

        <Grid>
            <!-- Main Content Area -->
            <Grid>
                <!-- Main Content (ScrollViewer) -->
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Style="{StaticResource ModernScrollViewerStyle}">
                    <!-- Main Content -->
                    <StackPanel Margin="10">
                        <StackPanel Background="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="300" MaxWidth="800"/>
                                    <ColumnDefinition Width="*" MinWidth="300" MaxWidth="715"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!--Bill To Column-->
                                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,10" MinWidth="350" MaxWidth="750">
                                    <!--Header-->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!--Bill To Label-->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,20">
                                            <TextBlock Text="Cost Estimate" FontWeight="SemiBold" FontFamily="Lexend" FontSize="24" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                        </StackPanel>

                                        <!-- Add Client Button -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                            <Button
                                               x:Name="BtnAddClient" Width="100"
                                                     Click="NavigateToCostEstimate"
                                               Style="{StaticResource ButtonStyle}">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="AccountPlus" Width="20" Height="20" Foreground="#FDFDFD" Margin="0,0,5,0"/>
                                                    <TextBlock Text="Client" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#FDFDFD" Margin="0,0,5,0"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <!--Search Client-->
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Search Client:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,10"/>
                                        <Border Style="{StaticResource RoundedGridStyle}" Margin="0,0,0,10"
                                                Padding="5" Height="40" BorderBrush="#474747">
                                            <Grid>
                                                <TextBox BorderThickness="0" Background="Transparent" FontFamily="Lexend" FontSize="16"
                                                         Foreground="Black" Name="txtSearchCustomer"
                                                         TextWrapping="Wrap"
                                                         Style="{StaticResource RoundedTextboxStyle}"
                                                         Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,35,0" TextChanged="txtSearchCustomer_TextChanged"/>
                                                <materialDesign:PackIcon Kind="Magnify" Width="30" Height="30" Foreground="#AEAEAE" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            </Grid>
                                        </Border>
                                        <Popup x:Name="AutoCompletePopup"
                                               PlacementTarget="{Binding ElementName=txtSearchCustomer}"
                                               Placement="Bottom"
                                               StaysOpen="False"
                                               IsOpen="False"
                                               AllowsTransparency="True"
                                               PopupAnimation="Fade"
                                               HorizontalOffset="0">

                                            <Border Background="White"
                                                    BorderBrush="LightGray"
                                                    BorderThickness="1"
                                                    MaxHeight="150"
                                                    MinWidth="{Binding ElementName=txtSearchCustomer, Path=ActualWidth}"
                                                    Width="{Binding ElementName=txtSearchCustomer, Path=ActualWidth}">

                                                <ListBox x:Name="LstItems"
                                                         SelectionChanged="LstItems_SelectionChanged"
                                                         Width="Auto"
                                                         MinWidth="{Binding ElementName=txtSearchCustomer, Path=ActualWidth}">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Name}" Padding="8"/>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Border>
                                        </Popup>
                                    </StackPanel>

                                    <!--Client Details-->
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Client Details:" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,10"/>
                                        <Border Height="200" Padding="10" CornerRadius="10" Background="#FDFDFD" BorderBrush="#474747" BorderThickness="1"  Margin="0,0,0,10">
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                                                <TextBox x:Name="TxtClientDetails" Style="{StaticResource RoundedTextboxStyle}" Height="170" Margin="10,5" VerticalContentAlignment="Top" IsReadOnly="True" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!--Warehouse-->
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Subject:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,0,5,10"/>
                                        <Border Height="110" Padding="10" CornerRadius="10" Background="#FDFDFD" BorderBrush="#474747" BorderThickness="1"  Margin="0,0,0,10">
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                                                <TextBox x:Name="TxtSubjectDetails" Style="{StaticResource RoundedTextboxStyle}" Height="77" Margin="10,5" VerticalContentAlignment="Top" IsReadOnly="False" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Project ID:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,0,5,10"/>
                                        <Border Height="45" Padding="6" CornerRadius="10" Background="#FDFDFD" BorderBrush="#474747" BorderThickness="1"  Margin="0,0,0,10">
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                                                <TextBox x:Name="TxtProjectID" Style="{StaticResource RoundedTextboxStyle}" Height="77" Margin="10,5" VerticalContentAlignment="Top" IsReadOnly="False" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <!--Credit Note Column-->
                                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,0,5" >
                                    <Border Style="{StaticResource RoundedGridStyle}" Margin="5,0,0,10"
                                                Padding="20,20,20,20" Height="594" BorderThickness="0" MinWidth="300" MaxWidth="1000">
                                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                            <StackPanel Orientation="Vertical" Margin="5" >
                                                <!--Header Label: Credit Note-->
                                                <TextBlock Grid.Column="0" Text="Quote Properties" FontWeight="SemiBold" FontFamily="Lexend" FontSize="20" Foreground="#AEAEAE" VerticalAlignment="Center" Margin="0,0,20,8"/>

                                                <!-- Cost Estimate Type -->
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Grid.Column="0" Text="Cost Estimate Type:" FontWeight="SemiBold" FontFamily="Lexend"
                                                               FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,5,0,5"/>

                                                    <ComboBox x:Name="cmbCostEstimateType"
                                                              SelectionChanged="cmbCostEstimateType_SelectionChanged"
                                                              Style="{StaticResource RoundedComboBoxStyle}"
                                                              HorizontalAlignment="Stretch"
                                                              VerticalAlignment="Stretch"
                                                              Margin="0,0,0,5"
                                                              Padding="5" Height="34">
                                                        <ComboBoxItem Content="Government Project CE (Government)" IsSelected="True"/>
                                                        <ComboBoxItem Content="Business CE (Corporate)"/>
                                                        <ComboBoxItem Content="Household CE (Residential)"/>
                                                        <ComboBoxItem Content="Walk-In CE (Walk In)"/>
                                                    </ComboBox>
                                                </StackPanel>


                                                <!--Quote Number-->
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Grid.Column="0" Text="Cost Estimate Number:" FontWeight="SemiBold" FontFamily="Lexend"
                                                                   FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,10,20,5"/>
                                                    <Border Style="{StaticResource RoundedGridStyle}" Margin="0,0,0,10"
                                                            Padding="5" Height="34" BorderBrush="#474747">
                                                        <TextBox x:Name="txtQuoteNumber" TextChanged="txtQuoteNumber_TextChanged" BorderThickness="0" Background="Transparent"
                                                                     FontFamily="Lexend" FontWeight="SemiBold"
                                                                     Text=""  Foreground="Black"
                                                                     TextWrapping="Wrap"
                                                                     Style="{StaticResource RoundedTextboxStyle}"
                                                                     Height="22" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                    </Border>
                                                </StackPanel>

                                                <!--Reference-->
                                                <StackPanel Orientation="Vertical" Visibility="Collapsed">
                                                    <TextBlock Grid.Column="0" Text="Reference:" FontWeight="SemiBold" FontFamily="Lexend"
                                                            FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,5"/>
                                                    <Border Style="{StaticResource RoundedGridStyle}" Margin="0,0,0,10"
                                                            Padding="5" Height="34" BorderBrush="#474747">
                                                        <TextBox x:Name="txtReferenceNumber" BorderThickness="0" FontWeight="SemiBold"
                                                                     Background="Transparent" FontFamily="Lexend" 
                                                                     Foreground="Black"
                                                                     TextWrapping="Wrap"
                                                                     PreviewTextInput="txtReferenceNumber_PreviewTextInput"
                                                                     Style="{StaticResource RoundedTextboxStyle}"
                                                                     Height="22" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                    </Border>
                                                </StackPanel>

                                                <!--Quote Date-->
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Grid.Column="0" Text="Cost Estimate Date:" FontWeight="SemiBold" FontFamily="Lexend"
                                                              FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,5"/>
                                                    <Border Style="{StaticResource RoundedGridStyle}" Margin="0,0,0,10"
                                                                Padding="5" Height="34" BorderBrush="#474747">
                                                        <Grid>
                                                            <DatePicker x:Name="QuoteDate" 
                                                                            Style="{StaticResource SingleDatePickerStyle}" 
                                                                            SelectedDate="{Binding SelectedDate, Mode=TwoWay}" 
                                                                            DisplayDateStart="{Binding MinimumDate}" />

                                                            <Button x:Name="QuoteDateButton" Click="QuoteDateButton_Click" Style="{StaticResource DateButtonStyle}" Margin="10,0" Background="Transparent" HorizontalAlignment="Stretch">
                                                                <Grid HorizontalAlignment="Stretch">
                                                                    <TextBlock Text="{Binding FormattedDate}" Margin="0,0,30,0" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                                    <materialDesign:PackIcon Kind="Calendar" Width="25" Height="25" Foreground="#474747" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>

                                                <!-- New Quote Validity Dropdown -->
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Grid.Column="0" Text="Valid Until:" FontWeight="SemiBold" FontFamily="Lexend"
                                                               FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,5"/>

                                                    <ComboBox x:Name="cmbCostEstimateValidty"
                                                                  SelectionChanged="cmbCostEstimateValidty_SelectionChanged"
                                                                  Style="{StaticResource RoundedComboBoxStyle}"
                                                                  HorizontalAlignment="Stretch"
                                                                  VerticalAlignment="Stretch"
                                                                  Margin="0,0,0,10"
                                                                  Padding="5" Height="34">
                                                        <ComboBoxItem Content="48 Hours" IsSelected="True"/>
                                                        <ComboBoxItem Content="1 Week"/>
                                                        <ComboBoxItem Content="2 Weeks"/>
                                                        <ComboBoxItem Content="3 Weeks"/>
                                                        <ComboBoxItem Content="1 Month"/>
                                                        <ComboBoxItem Content="2 Months"/>
                                                        <ComboBoxItem Content="6 Months"/>
                                                        <ComboBoxItem Content="1 Year"/>
                                                    </ComboBox>
                                                </StackPanel>

                                                <!--Tax-->
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Grid.Column="0" Text="Tax:" FontWeight="SemiBold" FontFamily="Lexend"
                                                               FontSize="16" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,20,5"/>

                                                    <ComboBox x:Name="txtTaxSelection"
                                                              SelectionChanged="txtTaxSelection_SelectionChanged"
                                                              Style="{StaticResource RoundedComboBoxStyle}"
                                                              HorizontalAlignment="Stretch"
                                                              VerticalAlignment="Stretch"
                                                              Margin="0,0,0,10"
                                                              Padding="5" Height="34">
                                                        <ComboBoxItem Content="Inclusive" IsSelected="True"/>
                                                        <ComboBoxItem Content="Exclusive"/>
                                                    </ComboBox>
                                                </StackPanel>
                                                <!-- Discount -->
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="Discount:" FontWeight="SemiBold" FontFamily="Lexend"
                                                            FontSize="16" Foreground="#555555"/>
                                                    <ComboBox x:Name="txtDiscountSelection"
                                                              Style="{StaticResource RoundedComboBoxStyle}"
                                                              HorizontalAlignment="Stretch"
                                                              VerticalAlignment="Stretch"
                                                              Margin="0,0,0,10"
                                                              Padding="5" Height="34">
                                                        <ComboBoxItem Content="% Discount After" IsSelected="True"/>
                                                        <ComboBoxItem Content="Flat Discount After"/>
                                                        <ComboBoxItem Content="% Discount Before"/>
                                                        <ComboBoxItem Content="Flat Discount Before"/>
                                                    </ComboBox>
                                                </StackPanel>
                                                <!-- Order Note -->
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="Cost Estimate Note:" FontFamily="Lexend" FontSize="16" FontWeight="SemiBold" Foreground="#474747" Margin="0,0,20,5"/>
                                                    <Border Style="{StaticResource RoundedGridStyle}" BorderBrush="#474747" Margin="0,0,0,10" Padding="0,1" HorizontalAlignment="Stretch">
                                                        <TextBox x:Name="txtQuoteNote" Style="{StaticResource RoundedTextboxStyle}" Foreground="Black" Height="130" VerticalContentAlignment="Top" TextWrapping="Wrap"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!--Rectangle as line-->
                            <Rectangle
                                Width="auto"
                                Height="1" 
                                Stroke="#AEAEAE"
                                StrokeThickness="1"
                                Fill="Transparent"
                                Margin="0,0,0,20"/>

                            <!--Category Input Section-->
                            <StackPanel Orientation="Vertical" Margin="0,0,0,15"/>

                            <!--Product Info and DataGrid-->
                            <StackPanel Width="Auto">
                                <!--Date Grid of the Product Info-->
                                <!--Products Info after the DataGrid-->
                            <StackPanel x:Name="MainContainer" Orientation="Vertical">
                                    <!-- Dynamic product inputs will be added here -->
                                </StackPanel>
                            </StackPanel>

                            <!--Generating Invoice and Payment Terms-->
                            <Grid Margin="20,20,20,10" Height="169">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="200"/>
                                    <ColumnDefinition Width="*" MinWidth="200"/>
                                </Grid.ColumnDefinitions>

                                <!--Payment Terms-->
                                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Width="137" Margin="0,0,0,118">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left"/>
                                    <!--Payment Terms Combo Box-->
                                    <StackPanel Orientation="Vertical" Visibility="Collapsed">
                                        <TextBlock Text="Payment Terms:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,20,5,10"/>
                                        <ComboBox Style="{StaticResource RoundedComboBoxStyle}" Height="40" HorizontalAlignment="Stretch">
                                            <ComboBoxItem Content="Cash" IsSelected="True"/>
                                            <ComboBoxItem Content="7 Days PDC"/>
                                            <ComboBoxItem Content="14 Days PDC"/>
                                            <ComboBoxItem Content="30 Days PDC"/>
                                            <ComboBoxItem Content="45 Days PDC"/>
                                            <ComboBoxItem Content="60 Days PDC"/>
                                            <ComboBoxItem Content="Custom"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>

                                <!--Generate Invoice-->
                                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Total Tax:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                            <TextBlock x:Name="txtTotalTax" Text="₱ 0" FontSize="16" VerticalAlignment="Center" FontWeight="Bold" Foreground="#090909" Margin="20,10,0,0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Total Discount:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                            <TextBlock x:Name="txtTotalDiscount" Text="₱ 0" FontSize="16" VerticalAlignment="Center" FontWeight="Bold" Foreground="#090909"  Margin="20,10,0,0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Collapsed">
                                            <TextBlock Text="Shipping:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                            <Border BorderBrush="#474747" BorderThickness="1" Padding="1" MinWidth="150" MaxWidth="250" CornerRadius="20" Margin="20,10,0,0" Height="40">
                                                <TextBlock x:Name="txtShipping" Text="" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Collapsed">
                                            <TextBlock Text="Extra Discount:" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                            <Border BorderBrush="#474747" BorderThickness="1" Padding="1" MinWidth="150" MaxWidth="250" CornerRadius="20" Margin="20,10,0,0" Height="40">
                                                <TextBlock x:Name="txtExtraDiscount" Text="" FontWeight="SemiBold" FontFamily="Lexend" FontSize="16" Foreground="#474747" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Grand Total(₱):" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#474747" Margin="0,10,0,0"/>
                                            <Border BorderBrush="#474747" BorderThickness="1" Padding="1" MinWidth="150" MaxWidth="250" CornerRadius="20" Margin="20,10,0,0" Height="40">
                                                <TextBlock x:Name="txtGrandTotal" Text="" FontWeight="Bold" FontFamily="Lexend" FontSize="15" Foreground="#090909" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel x:Name="ShowVatExBtn" Orientation="Vertical" HorizontalAlignment="Right" Margin="0,10,0,0" Visibility="Collapsed">
                                            <Button
                                                x:Name="IncExVatinExclusive"
                                                MinWidth="150"
                                                MaxWidth="250"
                                                Click="IncExVatinExclusive_Click"
                                                Style="{StaticResource ButtonStyle}" Background="#1D5642">
                                                <TextBlock x:Name="VatExShowVat" Text="Show VAT 12%" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,5,0"/>
                                            </Button>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,10,0,0">
                                            <Button
                                                x:Name="GenerateCostEstimate"
                                                MinWidth="210"
                                                MaxWidth="250"
                                                Click="GenerateCostEstimate_Click"
                                                Style="{StaticResource ButtonStyle}" Background="#1D5642">
                                                <TextBlock Text="Generate Cost Estimate" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <Button Style="{StaticResource ButtonStyle}" Background="#ffffff" Click="AddNewCategory_Click" Margin="3,50,153,73" Width="NaN">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <materialDesign:PackIcon Kind="PlaylistAdd" Width="30" Height="30" Foreground="#1D3242" Margin="-15,0,5,0"/>
                                        <TextBlock Text="New Category" FontSize="16" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#1D3242" Margin="0,0,5,0"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <Rectangle
                                Width="auto"
                                Height="1" 
                                Stroke="#AEAEAE"
                                StrokeThickness="1"
                                Fill="Transparent"
                                />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </UserControl>