<UserControl x:Class="DPC.Views.Sales.EmailGenerator.EmailGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FontFamily="{StaticResource Lexend}"
             xmlns:local="clr-namespace:DPC"
             Width="Auto"
             Height="Auto"
             >

    <Border Style="{StaticResource RoundedBorderStyle}" BorderBrush="#555555" BorderThickness="2" Width="Auto" Height="Auto" Background="Transparent">
        <StackPanel Orientation="Vertical">
            <!--<LOGO>"Send Email" <X>-->
            <Border Padding="15,10,15,10" Background="#555555" CornerRadius="15,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                        <materialDesign:PackIcon Kind="EmailOutline" Width="25" Height="25" Margin="0,0,15,0" Foreground="#FDFDFD" RenderTransformOrigin="0.5,1.325"/>
                        <TextBlock Text="Send Email" Foreground="#FDFDFD" VerticalAlignment="Center" FontSize="20px"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10">
                        <materialDesign:PackIcon Kind="WindowClose" Width="28" Height="28" Foreground="#FDFDFD" />
                    </StackPanel>
                </Grid>
            </Border>
            
            
            <!--CONTENT-->
            <Border Height="Auto" Background="#FDFDFD" CornerRadius="0,0,19,19">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Margin="20,15,20,0" Grid.Row="0">
                        <TextBlock Text="Choose a type of email to generate" 
                                   Foreground="#555555" FontSize="32px" 
                                   FontWeight="SemiBold" 
                                   Margin="10,10,0,10"/>
                        <TextBlock Text="Select a type of email to generate. You can still make changes to the generated email later." 
                                   Foreground="#AEAEAE" 
                                   FontSize="24px" 
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <Line X1="0" Y1="10" X2="1150" Y2="10"
                                Stroke="#AEAEAE"
                                StrokeThickness="2"
                                StrokeDashArray="5,2"
                                Margin="0,0,0,10"
                                Grid.Row="1"
                          
                                />

                    <!--First Radio-->
                    <Border Style="{StaticResource RoundedBorderStyle}"
                            Grid.Row="2"
                            Height="100"
                            Margin="20,10,20,10"
                            Padding="10"
                            Background="#F2F2F2"
                            BorderBrush="#555555"
                            >
                        <RadioButton Cursor="Hand" VerticalAlignment="Center" Margin="10">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="20"
                                                 Height="20"
                                                 StrokeThickness="2"
                                                 VerticalAlignment="Top"
                                                 Stroke="#AEAEAE"
                                                 Margin="0,5,0,0"
                                                 />
                                        <ContentPresenter Margin="15,0,0,0" VerticalAlignment="Center"/>

                                        <!--CONTENT-->
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Invoice Notification" FontWeight="SemiBold" FontSize="24" Foreground="#555555"/>
                                            <TextBlock Text="Generates an email message that notifies the client about the invoice being confirmed." FontSize="24" Foreground="#AEAEAE"/>
                                        </StackPanel>

                                    </StackPanel>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </Border>

                    <!--Second Radio-->
                    <Border Style="{StaticResource RoundedBorderStyle}"
                            Grid.Row="3"
                            Height="Auto"
                            Margin="20,10,20,10"
                            Padding="10"
                            Background="#F2F2F2"
                            BorderBrush="#555555"
                            >
                        <RadioButton Cursor="Hand" VerticalAlignment="Center" Margin="10">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                        <Ellipse Width="20"
                             Height="20"
                             StrokeThickness="2"
                             VerticalAlignment="Top"
                            Stroke="#AEAEAE"
                            Margin="0,5,0,0"
                                                 
                         
                             />
                                        <ContentPresenter Margin="15,0,0,0" VerticalAlignment="Center"/>

                                        <!--CONTENT-->
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Payment Reminder" FontWeight="SemiBold" FontSize="24" Foreground="#555555"/>
                                            <TextBlock Text="Generates an email message that notifies the client a payment reminder for their invoice." FontSize="24" Foreground="#AEAEAE"/>
                                        </StackPanel>

                                    </StackPanel>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </Border>

                    <!--Third Radio-->
                    <Border Style="{StaticResource RoundedBorderStyle}"
                            Grid.Row="4"
                            Height="Auto"
                            Margin="20,10,20,10"
                            Padding="10"
                            Background="#F2F2F2"
                            BorderBrush="#555555"
                            >
                        <RadioButton Cursor="Hand" VerticalAlignment="Center" Margin="10">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                        <Ellipse Width="20"
                         Height="20"
                         StrokeThickness="2"
                         VerticalAlignment="Top"
                            Stroke="#AEAEAE"
                            Margin="0,5,0,0"
                         
                         />
                                        <ContentPresenter Margin="15,0,0,0" VerticalAlignment="Center"/>

                                        <!--CONTENT-->
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Payment Received" FontWeight="SemiBold" FontSize="24" Foreground="#555555"/>
                                            <TextBlock Text="Generates an email message that notifies the client a payment has been received for their invoice." FontSize="24" Foreground="#AEAEAE"/>
                                        </StackPanel>

                                    </StackPanel>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </Border>

                    <!--Fourth Radio-->
                    <Border Style="{StaticResource RoundedBorderStyle}"
                            Grid.Row="5"
                            Height="Auto"
                            Margin="20,10,20,10"
                            Padding="10"
                            Background="#F2F2F2"
                            BorderBrush="#555555"
                            >
                        <RadioButton Cursor="Hand" VerticalAlignment="Center" Margin="10">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                        <Ellipse Width="20"
                         Height="20"
                         StrokeThickness="2"
                         VerticalAlignment="Top"
                        Stroke="#AEAEAE"
                        Margin="0,5,0,0"
                         
                         />
                                        <ContentPresenter Margin="15,0,0,0" VerticalAlignment="Center"/>


                                        <!--CONTENT-->
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Payment Overdue" FontWeight="SemiBold" FontSize="24" Foreground="#555555"/>
                                            <TextBlock Text="Generates an email message that notifies the client their payment is overdue for the invoice." FontSize="24" Foreground="#AEAEAE"/>
                                        </StackPanel>

                                    </StackPanel>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </Border>

                    <!--Fifth Radio-->
                    <Border Style="{StaticResource RoundedBorderStyle}"
                            Grid.Row="6"
                            Height="Auto"
                            Margin="20,10,20,10"
                            Padding="10"
                            Background="#F2F2F2"
                            BorderBrush="#555555"
                            >
                        <RadioButton Cursor="Hand" VerticalAlignment="Center" Margin="10">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                        <Ellipse Width="20"
                         Height="20"
                         StrokeThickness="2"
                         VerticalAlignment="Top"
                        Stroke="#AEAEAE"
                        Margin="0,5,0,0"
                         
                         />
                                        <ContentPresenter Margin="15,0,0,0" VerticalAlignment="Center"/>

                                        <!--CONTENT-->
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Refund Generated" FontWeight="SemiBold" FontSize="24" Foreground="#555555"/>
                                            <TextBlock Text="Generates an email message that notifies the client a refund being issued to their invoice." FontSize="24" Foreground="#AEAEAE"/>
                                        </StackPanel>

                                    </StackPanel>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </Border>

                    <Line X1="0" Y1="10" X2="1150" Y2="10"
                            Stroke="#AEAEAE"
                            StrokeThickness="2"
                            StrokeDashArray="5,2"
                            Margin="0,0,0,10"
                            Grid.Row="7"
      
                            />

                    <StackPanel Orientation="Horizontal" Height="Auto" Grid.Row="8" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20">
                        <Button Style="{StaticResource RoundedButtonStyle}" Width="250" Height="52" Margin="0" Background="#AEAEAE" Foreground="#555555" BorderThickness="0" Cursor="Hand">
                            <TextBlock Text="Cancel" TextAlignment="Center" FontSize="20px" FontWeight="SemiBold"/> 
                        </Button>
                        <Button Style="{StaticResource RoundedButtonStyle}" Width="250" Height="52" Margin="20,0,0,0" Background="#86BCD5" Foreground="#FDFDFD" BorderThickness="0" Cursor="Hand">
                            <TextBlock Text="Confirm" TextAlignment="Center" FontSize="20px" FontWeight="SemiBold"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            
        </StackPanel>
    </Border>
    
</UserControl>

