<UserControl x:Class="DPC.Views.Accounts.Transactions.ClientAddTabs.AddClientOtherSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="namespace:DPC.Views.Stocks.Suppliers.ManageSuppliers"
        mc:Ignorable="d"
        Background="#D9D9D9">

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header Section -->
            <RowDefinition Height="Auto"/>
            <!-- Options Bar -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid Section -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination Section -->
        </Grid.RowDefinitions>

        <!-- Main Content for Personal Information -->
        <StackPanel Grid.Row="2" Margin="20,20,20,10" Width="800">
            <!-- Form Content -->
            <StackPanel>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Customer Group:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                    <ComboBox x:Name="cmbCustomerGroup" Style="{StaticResource RoundedComboBoxStyle}"  Height="40" SelectedIndex="0" Margin="0"  FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747">
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Language:" FontWeight="SemiBold" FontFamily="Lexend" Foreground="#474747" Margin="0,10,0,10" />
                    <ComboBox x:Name="cmbLanguage" Style="{StaticResource RoundedComboBoxStyle}"  Height="40" SelectedIndex="0" Margin="0"  FontFamily="Lexend" FontWeight="SemiBold" Foreground="#474747">
                    </ComboBox>
                </StackPanel>

            </StackPanel>

            <!-- Submit Button -->
            <StackPanel Margin="20">
                <Button x:Name="btnAdd" Background="Transparent" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center">
                    <Border CornerRadius="20" Background="#52C69D" Height="40" Width="150">
                        <TextBlock Text="Add" FontFamily="{StaticResource Lexend}" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>