<UserControl x:Class="DPC.Views.Accounts.Accounts.ManageAccounts.AccountStatement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="av"
             Height="Auto"
             FontFamily="Lexend"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="RoundedDatePickerStyle" TargetType="DatePicker">
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Foreground" Value="#474747"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#474747"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25">
                            <Grid>
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   VerticalContentAlignment="Center"
                                                   Padding="10,0"
                                                   Foreground="Black"/>
                                <Button x:Name="PART_Button"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Width="40"
                                        Height="40"
                                        Padding="0"
                                        Margin="0,0,10,0"
                                        BorderThickness="0"
                                        Background="Transparent">
                                    <materialDesign:PackIcon Kind="CalendarOutline" Width="30" Height="30" Foreground="#555555"/>
                                </Button>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <materialDesign:Card Width="900" Padding="40" Background="#D9D9D9"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          UniformCornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock FontSize="32" Foreground="#474747" FontWeight="Bold" FontFamily="Lexend" Text="Account Statement" Margin="15,0,0,20" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Width="800" Margin="0,0,0,20">
                <!-- Account -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Account:" Foreground="#474747" FontSize="16" FontWeight="SemiBold" FontFamily="Lexend" Margin="0,0,5,0" />
                </StackPanel>
                <Border BorderBrush="#474747" BorderThickness="2" Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,10">

                    <!--Product Name Value is here!-->
                    <TextBox x:Name="TxtEmployee" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontSize="16"/>

                </Border>

                <!-- Type -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Type:" Foreground="#474747" FontSize="16" FontWeight="SemiBold" FontFamily="Lexend" Margin="0,10,0,0"/>
                </StackPanel>
                <Border BorderBrush="#474747" BorderThickness="2" Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,10">

                    <!--Product Name Value is here!-->
                    <TextBox x:Name="TxtDateTimePicker" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontSize="16"/>

                </Border>

                <!-- FROM DATE -->
                <StackPanel Margin="0,10" Grid.Row="2">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="From Date:" Foreground="#555555" FontSize="16" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    </StackPanel>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width=".05*" />
                            </Grid.ColumnDefinitions>

                            <DatePicker x:Name="FromDatePicker"
                                        Style="{StaticResource SingleDatePickerStyle}"
                                        SelectedDateChanged="FromDatePicker_SelectedDateChanged"
                                        Opacity="0"
                                        IsHitTestVisible="False"/>

                            <materialDesign:PackIcon Kind="Calendar" Width="32" Height="25"
                                                     Foreground="#474747" VerticalAlignment="Center"
                                                     Grid.ColumnSpan="2" Margin="758,0,0,0"/>

                            <Button x:Name="FromDateButton" Grid.Column="0"
                                    Style="{StaticResource DateButtonStyle}"
                                    Click="FromDateButton_Click" Width="Auto" Margin="28,0,25,0">
                                <TextBlock Margin="0,0,5,0" Height="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding SelectedDate, StringFormat='{}{0:MMM dd, yyyy}'}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedDate}" Value="{x:Null}">
                                                    <Setter Property="Text" Value="Select date"/>
                                                    <Setter Property="Foreground" Value="#999"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- TO DATE -->
                <StackPanel Margin="0,10" Grid.Row="3">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="To Date:" Foreground="#555555" FontSize="16" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    </StackPanel>
                    <Border Style="{StaticResource RoundedBorderStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width=".05*" />
                            </Grid.ColumnDefinitions>

                            <DatePicker x:Name="ToDatePicker"
                                        Style="{StaticResource SingleDatePickerStyle}"
                                        SelectedDateChanged="ToDatePicker_SelectedDateChanged"
                                        Opacity="0"
                                        IsHitTestVisible="False"/>

                            <materialDesign:PackIcon Kind="Calendar" Width="32" Height="25"
                                                     Foreground="#474747" VerticalAlignment="Center"
                                                     Grid.ColumnSpan="2" Margin="758,0,0,0"/>

                            <Button x:Name="ToDateButton" Grid.Column="0"
                                    Style="{StaticResource DateButtonStyle}"
                                    Click="ToDateButton_Click" Width="Auto" Margin="28,0,25,0">
                                <TextBlock Margin="0,0,5,0" Height="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding SelectedDate, StringFormat='{}{0:MMM dd, yyyy}'}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedDate}" Value="{x:Null}">
                                                    <Setter Property="Text" Value="Select date"/>
                                                    <Setter Property="Foreground" Value="#999"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="-5,10,0,10">
                    <Button Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Background="#3ea2d3" Width="103" Margin="0,0,10,10">
                        <TextBlock Text="Export" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="15" FontFamily="Lexend"/>
                    </Button>
                    <Button Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Background="#52C69D" Width="103">
                        <TextBlock Text="View" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="15" FontFamily="Lexend"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
