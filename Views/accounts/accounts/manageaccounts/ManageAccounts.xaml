<UserControl x:Class="DPC.Views.Accounts.Accounts.ManageAccounts.ManageAccounts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="AddNewButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#474747"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="Foreground" Value="#AEAEAE"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      VerticalAlignment="Center"
                                      Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="Black"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           Focusable="False"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                Background="White" 
                                BorderBrush="Black"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Added style for ModernScrollViewerStyle -->
        <Style x:Key="ModernScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Added style for RoundedTextboxStyle -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Custom DataGrid Style -->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="WhiteSmoke"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="ColumnWidth" Value="SizeToHeader"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="263*"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title and Add Button -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,20" Grid.ColumnSpan="2">
                <TextBlock Text="Manage Accounts"
                           FontWeight="Bold"
                           FontFamily="Lexend"
                           FontSize="35"
                           Foreground="#474747"
                           VerticalAlignment="Center"/>
                <Button x:Name="BtnAddNew"
                        Style="{StaticResource AddNewButtonStyle}"
                        Margin="20,0,0,0"
                        Width="130"
                        Click="NavigateToAddAccout">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="TextBoxPlusOutline" Width="25" Height="25" Foreground="#474747"/>
                        <TextBlock Text="Account" FontSize="17" Foreground="#474747" Margin="5,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Status Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <!-- Balance Card -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15,5,15,5" Margin="10" Height="80">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                            <TextBlock Text="Balance" FontSize="22" FontWeight="Bold" Foreground="#85c3e5"/>
                            <TextBlock Text="₱ 0.00" FontSize="22" FontWeight="Bold" Foreground="#92B77C"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Ellipse Width="55" Height="55" Fill="#bee4f7" VerticalAlignment="Center"/>
                            <materialDesign:PackIcon Kind="WalletOutline" Width="40" Height="40" Foreground="#83c2e1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-53,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Stock Out Card -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15,5,15,5" Margin="10" Height="80">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                            <TextBlock Text="Account" FontSize="22" FontWeight="Bold" Foreground="#F58A77"/>
                            <TextBlock Text="1" FontSize="22" FontWeight="Bold" Foreground="#92B77C"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Ellipse Width="55" Height="55" Fill="#FFCBC2" VerticalAlignment="Center"/>
                            <materialDesign:PackIcon Kind="TextAccount" Width="40" Height="40" Foreground="#F58A77" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-53,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Filters and Controls -->
            <Border Grid.Row="2" Padding="5" Background="White" CornerRadius="10" BorderBrush="White" Margin="0,0,0,10" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5,0,0,0" VerticalAlignment="Center">
                        <!-- Excel Button -->
                        <Button Style="{StaticResource RoundedButtonStyle}" Background="#456B2E" Foreground="White" Width="75" Height="29" Margin="5,0,0,0">
                            <materialDesign:PackIcon Kind="MicrosoftExcel" Width="25" Height="25"/>
                        </Button>

                        <Border Width="1.5" Height="Auto" Background="#D9D9D9" Margin="10,5,10,5"/>

                        <ComboBox Width="75" Style="{StaticResource RoundedComboBoxStyle}" Height="30">
                            <ComboBoxItem Content="10" IsSelected="True"/>
                            <ComboBoxItem Content="25"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>

                        <Button Style="{StaticResource IconButton}">
                            <materialDesign:PackIcon Kind="ViewGridOutline" Width="24" Height="24" Margin="5" Foreground="#555555"/>
                        </Button>
                        <Button Style="{StaticResource IconButton}">
                            <materialDesign:PackIcon Kind="FormatListBulleted" Width="24" Height="24" Margin="5" Foreground="#555555"/>
                        </Button>



                    </StackPanel>

                    <!-- Right Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Width="211" Height="34">
                            <Grid>
                                <TextBox Text="Search" BorderThickness="0" Background="Transparent" Foreground="#AEAEAE" FontFamily="Lexend" Name="txtSearch" Style="{StaticResource RoundedTextboxStyle}" Height="23" Margin="20,0,20,0" VerticalAlignment="Center" />
                                <materialDesign:PackIcon Kind="Magnify" Width="25" Height="25" Foreground="#AEAEAE" Margin="159,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- DataGrid Container -->
            <Border Grid.Row="3" Background="White" CornerRadius="10" BorderBrush="White" BorderThickness="1" Grid.ColumnSpan="2">
                <DataGrid Name="AccountsDataGrid"
                      Style="{StaticResource CustomDataGridStyle}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="5"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Visible">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="FontFamily" Value="Lexend"/>
                            <Setter Property="Margin" Value="0,5,0,5"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Height" Value="Auto"/>
                            <Setter Property="MinHeight" Value="40"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontFamily" Value="Lexend"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#474747"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="Background" Value="White"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding ID}" Width="Auto" MinWidth="50" FontFamily="Lexend" Foreground="#474747"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto" MinWidth="100" FontFamily="Lexend" Foreground="#474747"/>
                        <DataGridTextColumn Header="Total Products" Binding="{Binding TotalProd}" Width="Auto" MinWidth="100" FontFamily="Lexend" Foreground="#474747"/>
                        <DataGridTextColumn Header="Stock Quantity" Binding="{Binding Qty}" Width="Auto" MinWidth="100" FontFamily="Lexend" Foreground="#474747"/>
                        <DataGridTextColumn Header="Worth (Sales/Stocks)" Binding="{Binding Worth}" Width="Auto" FontFamily="Lexend" Foreground="#474747"/>


                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Button Content="Edit" Width="60" Height="25" Margin="2"/>
                                        <Button Content="Delete" Width="60" Height="25" Margin="2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>