<Window x:Class="DPC.Views.Accounts.Accounts.ManageAccounts.ManageAccounts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Manage Accounts"
        Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="SidebarContainer" Grid.Column="0" Background="Black"/>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Navigation -->
            <Border x:Name="TopNavBarContainer" Grid.Row="0" Background="White" Height="Auto" MinHeight="50"/>

            <!-- Main Content with Scroll -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <!-- Title -->
                    <TextBlock Text="Manage Accounts" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Card Section -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Balance Card -->
                        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="10" BorderBrush="#2196F3" BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="Balance" FontWeight="Bold" Foreground="#2196F3"/>
                                <TextBlock Text="₱ 0.00" FontSize="24" Foreground="#2196F3"/>
                                <TextBlock Text="Total" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- Accounts Card -->
                        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="10" BorderBrush="#F44336" BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="Accounts" FontWeight="Bold" Foreground="#F44336"/>
                                <TextBlock Text="₱ 0.00" FontSize="24" Foreground="#F44336"/>
                                <TextBlock Text="Total" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Controls (Search, Filter, Add) -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="Add Account" Margin="5" Background="#4CAF50" Foreground="White" Width="120" Click="AddAccount_Click"/>
                        <TextBox Width="200" Margin="5" Text="Search" />
                        <Button Content="Export" Margin="5" Background="#4CAF50" Foreground="White" Width="100"/>
                    </StackPanel>

                    <!-- Data Grid -->
                    <DataGrid x:Name="AccountsDataGrid" AutoGenerateColumns="False" Margin="0,10,0,0" Height="400" 
                              Background="White" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding AccountID}" Width="50"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding AccountName}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding AccountType}" Width="*"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" Width="150"/>
                            <DataGridTextColumn Header="Updated" Binding="{Binding UpdatedAt}" Width="150"/>
                            <DataGridTemplateColumn Header="Action" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="🔍" Margin="2"/>
                                            <Button Content="✏️" Margin="2"/>
                                            <Button Content="🗑️" Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
