<UserControl x:Class="DPC.Views.Accounts.Accounts.ManageAccounts.AddNewTransfer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" 
             Height="Auto"
             FontFamily="Lexend"
             Background="Transparent">

    <materialDesign:Card Width="900" Padding="40" Background="#D9D9D9"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            UniformCornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock FontSize="32" Foreground="#474747" FontWeight="SemiBold" FontFamily="Lexend" Text="Add New Transfer" Margin="15,0,0,20" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Grid.Column="1" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" x:Name="BtnClose"/>

            <StackPanel Grid.Row="1" Width="800" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="From Account:" Foreground="#474747" FontSize="16" FontWeight="SemiBold" FontFamily="Lexend" Margin="0,0,5,0" />
                </StackPanel>
                <Border BorderBrush="#474747" BorderThickness="2" Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,10">
                    <!--Product Name Value is here!-->
                    <TextBox x:Name="TxtFromAccount" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontSize="16"/>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="To Account:" Foreground="#474747" FontSize="16" FontWeight="SemiBold" FontFamily="Lexend" Margin="0,10,0,0"/>
                </StackPanel>
                <Border BorderBrush="#474747" BorderThickness="2" Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,10">
                    <!--Product Name Value is here!-->
                    <TextBox x:Name="TxtToAccount" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontSize="16"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Amount:" Foreground="#474747" FontSize="16" FontWeight="SemiBold" FontFamily="Lexend" Margin="0,10,5,0"/>
                </StackPanel>
                <Border BorderBrush="#474747" BorderThickness="2" Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,10">
                    <!--Product Name Value is here!-->
                    <TextBox x:Name="TxtAmount" Style="{StaticResource RoundedTextboxStyle}" FontFamily="Lexend" FontSize="16"/>
                </Border>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="-5,10,0,10">
                    
                    <Button Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Background="#52C69D" Width="803">
                        <TextBlock Text="Add" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="15" FontFamily="Lexend"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>