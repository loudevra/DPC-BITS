<UserControl x:Class="DPC.Views.Accounts.Accounts.ManageAccounts.AddNewTransfer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto"
             FontFamily="{StaticResource Lexend}"
             Background="#D9D9D9">
    <materialDesign:Card Width="450" Padding="20" Background="Transparent"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            UniformCornerRadius="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
                <TextBlock FontSize="20" Foreground="#474747" FontWeight="Bold" Text="Add New Transfer" Margin="0,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="From Account" Foreground="#555555" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0" />
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,20">
                    <TextBox x:Name="TxtFromAccount" Style="{StaticResource RoundedTextboxStyle}"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="To Account" Foreground="#555555" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,15">
                    <TextBox x:Name="TxtToAccount" Style="{StaticResource RoundedTextboxStyle}"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Amount:" Foreground="#555555" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
                </StackPanel>
                <Border Style="{StaticResource RoundedBorderStyle}" Margin="0,0,0,15">
                    <TextBox x:Name="TxtAmount" Style="{StaticResource RoundedTextboxStyle}"/>
                </Border>
                <Button Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Background="#52C69D" Width="100" HorizontalAlignment="Right">
                    <TextBlock Text="Add" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="15"/>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
