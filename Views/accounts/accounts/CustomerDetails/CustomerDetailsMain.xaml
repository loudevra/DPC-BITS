<UserControl x:Class="DPC.Views.Accounts.Accounts.CustomerDetailsMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#F5F5F5"
        >

    <UserControl.Resources>


        <Style x:Key="AddNewButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#474747"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      VerticalAlignment="Center"
                                      Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="Black"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           Focusable="False"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                Background="White" 
                                BorderBrush="Black"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Add the RoundedTextboxStyle that was missing in the original code -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,1,0,-1">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Foreground="#474747" FontSize="24" FontFamily="{StaticResource Lexend}">Customer Details</TextBlock>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT PANEL -->
                    <Grid Grid.Column="0">
                        <Border Padding="15, 25" Style="{StaticResource RoundedBorderStyle}" Background="#FDFDFD">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Height="102" HorizontalAlignment="Left" Width="102" Background="Black" CornerRadius="2000"/>
                                </Grid>

                                <StackPanel Margin="5,10,5,15">
                                    <TextBlock FontFamily="{StaticResource Lexend}" FontSize="20" FontWeight="Bold" Foreground="#474747">Customer Name</TextBlock>
                                    <TextBlock Margin="0,5,0,0" FontFamily="{StaticResource Lexend}" FontSize="14" FontWeight="SemiBold" Foreground="#AEAEAE">Default Group</TextBlock>

                                    <Border CornerRadius="5" Padding="8,4" Style="{StaticResource RoundedBorderStyle}" Background="#DEF9CE" Height="28">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="38*"/>
                                                <ColumnDefinition Width="65*"/>
                                                <ColumnDefinition Width="9*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Wallet Balance:" Grid.Column="0" VerticalAlignment="Center" Foreground="#89AC74" FontFamily="{StaticResource Lexend}" FontSize="10" FontWeight="DemiBold" Grid.ColumnSpan="2" Height="12" Margin="0,0,57,0"/>
                                            <TextBlock Text="120,000.00" Grid.Column="1" VerticalAlignment="Center" Foreground="#89AC74" FontFamily="{StaticResource Lexend}" FontSize="10" FontWeight="DemiBold" Height="12" Margin="5,0,24,0"/>
                                            <materialDesign:PackIcon Kind="CogRefreshOutline" Grid.Column="2" Height="16" Width="15" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="#AEAEAE"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <Rectangle Fill="#D9D9D9" Height="1"/>

                                <StackPanel Margin="0,20">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="0, 10"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="15,0"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE">Personal Information</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE">Invoices</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE">Transactions</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE">Quotes</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE">Projects</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE">Subscriptions</TextBlock>
                                </StackPanel>

                                <Rectangle Fill="#D9D9D9" Height="1"/>
                                <StackPanel Margin="0,20">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="0, 10"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="15,0"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE">Notes</TextBlock>
                                    <TextBlock FontFamily="{StaticResource Lexend}" FontSize="12" Foreground="#AEAEAE">Documents</TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- TOP-RIGHT COG ICON -->
                        <materialDesign:PackIcon Kind="CogOutline"
                                                 Width="18"
                                                 Height="18"
                                                 Foreground="#AEAEAE"
                                                 HorizontalAlignment="Right"
                                                 VerticalAlignment="Top"
                                                 Margin="0,10,10,0"/>
                    </Grid>

                    <Grid Grid.Column="1" Margin="10,0,0,0">
                        <!-- Content Panel -->
                        <Border Padding="30,25" Style="{StaticResource RoundedBorderStyle}" Background="#FDFDFD" Width="600">
                            <ContentControl/>
                        </Border>

                        <!-- Circular Floating Plus Button -->
                        <Button Width="48"
            Height="48"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,16,16"
            Background="Black"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand"
            ToolTip="Add New">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="24" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
