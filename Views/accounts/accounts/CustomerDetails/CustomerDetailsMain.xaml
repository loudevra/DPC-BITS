<UserControl x:Class="DPC.Views.Accounts.Accounts.CustomerDetails.CustomerDetailsMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">

    <UserControl.Resources>

        <Style x:Key="AddNewButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#474747"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15"
                                BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <ContentPresenter Name="ContentSite"
                                                  IsHitTestVisible="False"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="Center"
                                                  Margin="10,0,5,0"/>

                                <ToggleButton Name="ToggleButton"
                                              Grid.Column="1"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                              Background="Transparent"
                                              BorderBrush="Transparent"
                                              BorderThickness="0"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="Black"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <Popup Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       AllowsTransparency="True"
                                       MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Border Style="{StaticResource RoundedBorderStyle}" Background="White" BorderBrush="Black">
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

    </UserControl.Resources>

    <!-- MAIN LAYOUT -->
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,1,0,-1">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock FontWeight="Bold" Foreground="#474747" FontSize="24" FontFamily="Lexend">Customer Details</TextBlock>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MaxWidth="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT PANEL -->
                    <Grid Grid.Column="0">
                        <Border Padding="15,25" Style="{StaticResource RoundedBorderStyle}" Background="#FDFDFD">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Height="102" Width="102" Background="Black" CornerRadius="2000" Margin="0,0,148,0"/>
                                </Grid>

                                <StackPanel Margin="5,10,5,15">
                                    <TextBlock FontFamily="Lexend" FontSize="20" FontWeight="Bold" Foreground="#474747">Customer Name</TextBlock>
                                    <TextBlock Margin="0,5,0,0" FontFamily="Lexend" FontSize="14" FontWeight="SemiBold" Foreground="#AEAEAE">Default Group</TextBlock>

                                    <Border CornerRadius="5" Padding="8,4" Style="{StaticResource RoundedBorderStyle}" Background="#DEF9CE" Height="28">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="87*"/>
                                                <ColumnDefinition Width="105*"/>
                                                <ColumnDefinition Width="32*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Wallet Balance:" Grid.Column="0" VerticalAlignment="Center" Foreground="#89AC74" FontFamily="Lexend" FontSize="10" FontWeight="DemiBold" Margin="0,0,10,0" Height="12"/>
                                            <TextBlock Text="120,000.00" Grid.Column="1" VerticalAlignment="Center" Foreground="#89AC74" FontFamily="Lexend" FontSize="10" FontWeight="DemiBold" Height="12"/>
                                            <Button Grid.Column="2" Height="24" VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent" ToolTip="Refresh" Click="DetailsWallet_Click" x:Name="CustomerDetailsWallet" Margin="1,0,1,0">
                                                <materialDesign:PackIcon Kind="CogRefreshOutline"
                              Height="16"
                              Width="15"
                              VerticalAlignment="Center"
                              Foreground="#AEAEAE" />
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <Rectangle Fill="#D9D9D9" Height="1"/>

                                <!-- Buttons Group 1 -->
                                <StackPanel Margin="0,20">
                                    <Button Content="Personal Information" x:Name="BtnInfo" FontFamily="Lexend" FontSize="12" Foreground="#AEAEAE" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand"/>
                                    <Button Content="Invoices" x:Name="BtnInvoice" Click="BtnInvoice_Click" FontFamily="Lexend" FontSize="12" Foreground="#AEAEAE" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand"/>
                                    <Button Content="Transactions" x:Name="BtnTransactions" Click="BtnTransactions_Click" FontFamily="Lexend" FontSize="12" Foreground="#AEAEAE" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand" />
                                    <Button Content="Account Statements" x:Name="BtnAccountStatement" Click="BtnAccountStatement_Click" FontFamily="Lexend" FontSize="12" Foreground="#AEAEAE" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand" />
                                    <Button Content="Quotes" x:Name="BtnQuotes"  Click="BtnQuotes_Click" FontFamily="Lexend" FontSize="12" Foreground="#AEAEAE" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand"/>
                                    <Button Content="Projects" x:Name="BtnProjects" Click="BtnProjects_Click" FontFamily="Lexend" FontSize="12" Foreground="#AEAEAE" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand"/>
                                    <Button Content="Subscriptions" x:Name="BtnSubscriptions" Click="BtnSubscriptions_Click" FontFamily="Lexend" FontSize="12" Foreground="#AEAEAE" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand"/>
                                </StackPanel>

                                <Rectangle Fill="#D9D9D9" Height="1"/>

                                <!-- Buttons Group 2 -->
                                <StackPanel Margin="0,20">
                                    <Button Content="Notes" x:Name="BtnNotes" Click="BtnNotes_Click" FontFamily="Lexend" FontSize="12" Foreground="#AEAEAE" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand"/>
                                    <Button Content="Documents" x:Name="BtnDocuments" Click="BtnDocuments_Click" FontFamily="Lexend" FontSize="12" Foreground="#AEAEAE" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <materialDesign:PackIcon Kind="CogOutline" Width="18" Height="18" Foreground="#AEAEAE" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>
                    </Grid>

                    <!-- RIGHT PANEL -->
                    <Grid Grid.Column="1" Margin="10,0,0,0">
                        <Border Padding="30,25" Style="{StaticResource RoundedBorderStyle}" Background="#FDFDFD">
                            <ContentControl x:Name="customerdetailsmaincontent"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"/>
                        </Border>
                    </Grid>

                    <!-- Floating Button -->
                    <Button Width="48" Height="48"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,10"
                            Background="Black"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Add New" Grid.Column="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="24" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
                    </Button>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
