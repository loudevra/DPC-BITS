<UserControl x:Class="DPC.Views.Accounts.Accounts.CustomerDetails.CustomerDetailsCards1.CustomerDetailsWallet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent"
             HorizontalAlignment="Stretch"
             MinWidth="450">

    <UserControl.Resources>
        <!-- Rounded Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#AEAEAE"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <ContentPresenter Name="ContentSite"
                                                  IsHitTestVisible="False"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="Center"
                                                  Margin="10,0,5,0"/>

                                <ToggleButton Name="ToggleButton" 
                                              Grid.Column="1"
                                              Focusable="False"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                              Background="Transparent"
                                              BorderBrush="Transparent"
                                              BorderThickness="0"
                                              Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="#AEAEAE"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <Popup Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       AllowsTransparency="True"
                                       MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                            Background="White" 
                                            BorderBrush="Black"
                                            Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Grid Style -->
        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="17"/>
            <Setter Property="BorderBrush" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Textbox Style -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Border Background="Transparent" CornerRadius="15" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="10">
                        <!-- Wallet Header -->
                        <TextBlock Text="Wallet" FontSize="22" FontWeight="Bold" FontFamily="Lexend"
                                   Foreground="#555555" Margin="0,0,0,20"/>

                        <!-- Balance Card -->
                        <Border Padding="20" Background="#767E8B" CornerRadius="10" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Current Balance" FontSize="16" FontWeight="SemiBold" FontFamily="Lexend"
                                           Foreground="#FDFDFD" Margin="0,0,0,20"/>
                                <TextBlock Text="₱ 1,000.00" FontSize="30" FontWeight="Bold" FontFamily="Lexend"
                                           Foreground="#FDFDFD"/>
                                <Button x:Name="BtnAddBalance" HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}"
                                        Margin="0,20,0,0" Height="40" Width="160" Background="#A0B2BA">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="WalletAddOutline" Width="25" Height="25" Foreground="#FDFDFD" Margin="0,0,5,0"/>
                                        <TextBlock Text="Add Balance" FontSize="17" Foreground="#FDFDFD" FontFamily="Lexend" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Payment History Section -->
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="Payment History" FontSize="22" FontWeight="Bold" FontFamily="Lexend"
                                       Foreground="#555555" Margin="0,0,0,20"/>

                            <!-- Payment Item -->
                            <Border Padding="20,10" Background="#F5F5F5" CornerRadius="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0" Width="70" Height="70" Fill="#AEAEAE"/>
                                    <!-- Optional image:
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="your_image_path_here"/>
                                    </Ellipse.Fill>
                                    -->

                                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="15,0,0,0">
                                        <TextBlock Text="Legs Potato Chips" FontSize="16" FontWeight="SemiBold" FontFamily="Lexend"
                                                   Foreground="#555555"/>
                                        <TextBlock Text="5 days ago" FontSize="16" FontWeight="SemiBold" FontFamily="Lexend"
                                                   Foreground="#AEAEAE"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="₱ 550.00" FontSize="16" FontWeight="SemiBold" FontFamily="Lexend"
                                               Foreground="#555555" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
