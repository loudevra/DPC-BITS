<UserControl x:Class="DPC.Views.Accounts.Accounts.CustomerDetails.CustomerDetailsCards1.CustomerDetailsPersonalInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent"
             HorizontalAlignment="Stretch"
             MinWidth="600"
             FontFamily="Lexend">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Lexend"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Background="Transparent" Margin="0">
                <Border Background="White" CornerRadius="15" Padding="30">
                    <StackPanel HorizontalAlignment="Stretch">

                        <!-- Header -->
                        <TextBlock Text="Personal Information"
                                   FontSize="32"
                                   FontWeight="SemiBold"
                                   Foreground="#333"
                                   Margin="0,0,0,30"/>

                        <!-- Aligned Information Grid -->
                        <UniformGrid Columns="3" Margin="0,0,0,30" HorizontalAlignment="Stretch">
                            <!-- Row 1 -->
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Name" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="Eli Clark" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <!-- Email -->
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Email" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="brookerose@gmail.com"
               FontSize="16"
               Foreground="#555"
               TextTrimming="CharacterEllipsis"
               ToolTip="brookerose@gmail.com"
               MaxWidth="180"/>
                            </StackPanel>
                            <!-- Contact Number -->
                            <StackPanel>
                                <TextBlock Text="Contact No." FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="+44 7701756259"
               FontSize="16"
               Foreground="#555"
               TextTrimming="CharacterEllipsis"
               ToolTip="+44 7701756259"
               MaxWidth="180"/>
                            </StackPanel>

                            <!-- Row 2 -->
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Address" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="59 Tredegar St" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="City" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="Newport" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Postal Code" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="NP10" FontSize="16" Foreground="#555"/>
                            </StackPanel>

                            <!-- Row 3 -->
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Region" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="Olatus" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Country" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="Wales" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel />
                        </UniformGrid>

                        <!-- Divider between personal info and shipping address -->
                        <Separator Margin="0,0,0,30"/>

                        <!-- Shipping Address Grid -->
                        <UniformGrid Columns="3" Margin="0,0,0,30" HorizontalAlignment="Stretch">
                            <!-- Row 4 -->
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Shipping Address" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="59 Tredegar St" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="City" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="Newport" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Postal Code" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="NP10" FontSize="16" Foreground="#555"/>
                            </StackPanel>

                            <!-- Row 5 -->
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Region" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="Olatus" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Country" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="Wales" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel />
                        </UniformGrid>

                        <!-- Divider -->
                        <Separator Margin="0,0,0,30"/>

                        <!-- Registration Info -->
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Register Date" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="01/01/2024" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Document ID" FontSize="14" Foreground="#AEAEAE" Margin="0,0,0,4"/>
                                <TextBlock Text="DOC-112233" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                        </Grid>

                        <!-- Summary Header -->
                        <TextBlock Text="Summary"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="#333"
                                   Margin="0,0,0,20"/>

                        <!-- Summary Cards -->
                        <WrapPanel Margin="0,0,0,20">
                            <WrapPanel.Resources>
                                <Style TargetType="Border" x:Key="SummaryCardStyle">
                                    <Setter Property="CornerRadius" Value="10"/>
                                    <Setter Property="Background" Value="#FAFAFA"/>
                                    <Setter Property="BorderBrush" Value="#D9D9D9"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="12,10,12,10"/>
                                    <Setter Property="Margin" Value="0,0,12,12"/>
                                    <Setter Property="Height" Value="150"/>
                                    <Setter Property="Width" Value="200"/>
                                </Style>
                                <Style TargetType="TextBlock" x:Key="CardLabelStyle">
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="TextBlock" x:Key="CardAmountStyle">
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="Foreground" Value="#B0B0B0"/>
                                    <Setter Property="Margin" Value="0,2,0,0"/>
                                </Style>
                            </WrapPanel.Resources>

                            <Border Style="{StaticResource SummaryCardStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <materialDesign:PackIcon Kind="TrendingUp" Width="16" Height="16" Foreground="#89AC74" Margin="0,0,6,0"/>
                                        <TextBlock Text="Income" Style="{StaticResource CardLabelStyle}" Foreground="#89AC74"/>
                                    </StackPanel>
                                    <TextBlock Text="₱ 0.00" Style="{StaticResource CardAmountStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SummaryCardStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <materialDesign:PackIcon Kind="TrendingDown" Width="16" Height="16" Foreground="#D96A6C" Margin="0,0,6,0"/>
                                        <TextBlock Text="Expenses" Style="{StaticResource CardLabelStyle}" Foreground="#D96A6C"/>
                                    </StackPanel>
                                    <TextBlock Text="₱ 0.00" Style="{StaticResource CardAmountStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SummaryCardStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <materialDesign:PackIcon Kind="ReceiptText" Width="16" Height="16" Foreground="#86BCD5" Margin="0,0,6,0"/>
                                        <TextBlock Text="Total Due" Style="{StaticResource CardLabelStyle}" Foreground="#86BCD5"/>
                                    </StackPanel>
                                    <TextBlock Text="₱ 0.00" Style="{StaticResource CardAmountStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SummaryCardStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <materialDesign:PackIcon Kind="PercentBoxOutline" Width="16" Height="16" Foreground="#6A7F9E" Margin="0,0,6,0"/>
                                        <TextBlock Text="Total Discount" Style="{StaticResource CardLabelStyle}" Foreground="#6A7F9E"/>
                                    </StackPanel>
                                    <TextBlock Text="₱ 0.00" Style="{StaticResource CardAmountStyle}"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>