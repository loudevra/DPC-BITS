<UserControl x:Class="DPC.Views.Accounts.Accounts.CustomerDetails.CustomerDetailsCards1.CustomerDetailsProjects"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Transparent"
             MinWidth="0"
             MinHeight="0">

    <UserControl.Resources>
        <Style x:Key="AddNewButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#474747"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Style="{StaticResource RoundedBorderStyle}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Lexend"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Style="{StaticResource RoundedBorderStyle}" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1">
                            <Grid>
                                <!-- Define two columns, Content on left, Arrow on right -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                </Grid.ColumnDefinitions>

                                <!-- Selected Item Content -->
                                <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      VerticalAlignment="Center"
                                      Margin="10,0,5,0"/>

                                <!-- Arrow Button (Right) -->
                                <ToggleButton Name="ToggleButton" 
                                  Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <materialDesign:PackIcon Kind="ChevronDown" Width="20" Height="20" Foreground="Black"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <!-- Dropdown Items -->
                                <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           Focusable="False"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <!-- MATCH WIDTH -->
                                    <Border Style="{StaticResource RoundedBorderStyle}" 
                                Background="White" 
                                BorderBrush="Black"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                        <!-- MATCH WIDTH -->
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedGridStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Added style for ModernScrollViewerStyle -->
        <Style x:Key="ModernScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Added style for RoundedTextboxStyle -->
        <Style x:Key="RoundedTextboxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Custom DataGrid Style -->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="WhiteSmoke"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="ColumnWidth" Value="SizeToHeader"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="0,0,0,0"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Controls -->
                <RowDefinition Height="Auto"/>
                <!-- Filters or Extra -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Pagination -->
            </Grid.RowDefinitions>


            <!-- Title and Add Button -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10">

                <TextBlock Text="Projects"
                           FontWeight="SemiBold"
                           FontFamily="Lexend"
                           FontSize="25"
                           Foreground="#474747"
                           VerticalAlignment="Center"/>

            </StackPanel>



            <!-- Filters and Controls -->
            <Border Grid.Row="2" Padding="5" Background="#F5F5F5" CornerRadius="10" BorderBrush="White" Margin="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox Width="75" Style="{StaticResource RoundedComboBoxStyle}" Height="28" Foreground="#AEAEAE" BorderBrush="#AEAEAE">
                            <ComboBoxItem Content="10" IsSelected="True"/>
                            <ComboBoxItem Content="25"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>
                        <Button Style="{StaticResource IconButton}">
                            <materialDesign:PackIcon Kind="ViewGridOutline" Width="24" Height="24" Margin="10,0,0,0" Foreground="#474747"/>
                        </Button>
                        <Button Style="{StaticResource IconButton}">
                            <materialDesign:PackIcon Kind="FormatListBulleted" Width="24" Height="24" Margin="10,0,0,0" Foreground="#474747"/>
                        </Button>
                    </StackPanel>

                    <!-- Right Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Style="{StaticResource RoundedGridStyle}" MinWidth="200" Width="Auto" Height="34" BorderBrush="#AEAEAE">

                            <Grid>
                                <TextBox BorderThickness="0" Background="Transparent" FontFamily="Lexend" Name="txtSearch" Style="{StaticResource RoundedTextboxStyle}" Height="23" Margin="20,0,20,0" VerticalAlignment="Center" />
                                <materialDesign:PackIcon Kind="Magnify" Width="25" Height="25" Foreground="#AEAEAE" Margin="159,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- DataGrid Container -->
            <Border Grid.Row="3"
        Background="White"
        CornerRadius="10"
        BorderBrush="White"
        BorderThickness="1"
        Margin="0,0">
                <DataGrid Name="dataGrid"
              Style="{StaticResource CustomDataGridStyle}"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Margin="5"
              HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto"
              HeadersVisibility="All"
              CanUserAddRows="False">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Margin" Value="0,5,0,5"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontFamily" Value="Lexend"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#474747"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="SeparatorBrush" Value="#DDDDDD"/>
                            <Setter Property="SeparatorVisibility" Value="Visible"/>
                            <Setter Property="Background" Value="#AEAEAE"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Width="*" FontFamily="Lexend" Foreground="#474747"/>
                        <DataGridTemplateColumn Header="Project" Width="110"/>
                        <DataGridTextColumn Header="Due Date" Width="*" MinWidth="100" FontFamily="Lexend" Foreground="#474747"/>
                        <DataGridTextColumn Header="Status" Width="*" MinWidth="120" FontFamily="Lexend" Foreground="#474747"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>


            <!-- Pagination Controls -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">

                <Border Background="White" CornerRadius="30" Padding="10,5" BorderThickness="2" BorderBrush="#adadad">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >

                        <!-- Previous Page -->
                        <Button Content="&lt;" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" FontFamily="Lexend" Foreground="#adadad">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="15">
                                        <!-- Half of Width/Height for full circle -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Page Numbers -->
                        <Button Content="1" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" FontFamily="Lexend" Foreground="#555555">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="15">
                                        <!-- Half of Width/Height for full circle -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="2" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" Margin="5" FontFamily="Lexend" Foreground="#555555">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="15">
                                        <!-- Half of Width/Height for full circle -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Current Page -->

                        <Button Content="3" FontSize="14" Width="30" Height="30" Foreground="White" Background="#555555" Margin="5" FontFamily="Lexend">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="15">
                                        <!-- Half of Width/Height for full circle -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="4" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" Margin="5" FontFamily="Lexend" Foreground="#555555">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="15">
                                        <!-- Half of Width/Height for full circle -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="5" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="#474747" Margin="5" FontFamily="Lexend" Foreground="#555555">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
CornerRadius="15">
                                        <!-- Half of Width/Height for full circle -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Ellipsis -->
                        <TextBlock Text="..." VerticalAlignment="Center" FontSize="16" Margin="10,0" Foreground="#555555"/>

                        <!-- Next Arrow -->
                        <Button Content="&gt;" FontSize="14" Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" FontFamily="Lexend" Foreground="#555555" FontWeight="Bold">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
CornerRadius="15">
                                        <!-- Half of Width/Height for full circle -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>


                    </StackPanel>
                </Border>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
