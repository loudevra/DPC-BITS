<UserControl x:Class="DPC.Views.Accounts.Accounts.CustomerDetails.CustomersDetailsCards2.Residential.EditProfilePersonalInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Rounded TextBox Style -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#A9CCE3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#73404040" 
            CornerRadius="20" 
            Padding="0"
            BorderThickness="0">

        <Grid>
            <!-- Header -->
            <Border Background="#555555" Height="56" VerticalAlignment="Top" CornerRadius="20,20,0,0" Margin="0,0,-94,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="AccountEdit" Width="24" Height="24" Margin="20,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Foreground="#FDFDFD"/>
                    <TextBlock Text="Edit Profile" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0" FontWeight="Normal" FontSize="20" Foreground="#FDFDFD" Grid.Column="1"/>
                    <Button Grid.Column="2" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" 
                            Background="Transparent" BorderThickness="0" Foreground="White"
                            Width="30" Height="30" Margin="0,0,20,0"
                            VerticalAlignment="Center" HorizontalAlignment="Right" Cursor="Hand"/>
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="0,0,20,20" Margin="0,56,-94,0">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tabs -->
                    <StackPanel Orientation="Horizontal" Margin="30,0,0,0" VerticalAlignment="Center" Height="40">
                        <Button Content="Personal Info" 
                                FontWeight="Normal"
                                BorderThickness="0,0,0,2" 
                                BorderBrush="#979797"
                                Background="Transparent"
                                Foreground="#555555"
                                Padding="0"
                                Width="100"
                                Cursor="Hand"
                                FontSize="14"
                                FontFamily="lexend"
                                VerticalAlignment="Center"
                                Height="40"/>
                        <Button Content="Billing Address" Background="Transparent" BorderThickness="0" Foreground="#979797" Width="120" Cursor="Hand" FontFamily="lexend" FontSize="14" VerticalAlignment="Center" Height="40"/>
                        <Button Content="Shipping Address" Background="Transparent" BorderThickness="0" Foreground="#979797" Width="130" Cursor="Hand" FontFamily="lexend" FontSize="14" VerticalAlignment="Center" Height="40"/>
                        <Button Content="Other" Background="Transparent" BorderThickness="0" Foreground="#979797" Width="90" Cursor="Hand" FontFamily="lexend" FontSize="14" VerticalAlignment="Center" Height="40"/>
                    </StackPanel>

                    <!-- Fields -->
                    <StackPanel Grid.Row="1" Margin="30,30,30,0">
                        <!-- Name -->
                        <TextBlock Text="Name:" Margin="0,0,0,4" FontSize="14" FontFamily="lexend" FontWeight="SemiBold" Foreground="#555555"/>
                        <TextBox Height="40" FontSize="14" BorderBrush="#555555" BorderThickness="1" 
                                 Padding="15,0" Margin="0,0,0,16" 
                                 Background="White" 
                                 HorizontalAlignment="Stretch"
                                 Text="Eli Clark"
                                 Style="{StaticResource RoundedTextBoxStyle}" Foreground="#47474780"/>

                        <!-- Phone -->
                        <TextBlock Text="Phone:" Margin="0,0,0,4" FontSize="14" FontFamily="lexend" FontWeight="SemiBold" Foreground="#555555"/>
                        <TextBox Height="40" FontSize="14" BorderBrush="#555555" BorderThickness="1" 
                                 Padding="15,0" Margin="0,0,0,16" 
                                 Background="White"
                                 HorizontalAlignment="Stretch"
                                 Text="09736247465"
                                 Style="{StaticResource RoundedTextBoxStyle}" Foreground="#47474780"/>

                        <!-- Email -->
                        <TextBlock Text="Email:" Margin="0,0,0,4" FontSize="14" FontFamily="lexend" FontWeight="SemiBold" Foreground="#555555"/>
                        <TextBox Height="40" FontSize="14" BorderBrush="#555555" BorderThickness="1" 
                                 Padding="15,0" Margin="0,0,0,32" 
                                 Background="White"
                                 HorizontalAlignment="Stretch"
                                 Text="brookerose@gmail.com"
                                 Style="{StaticResource RoundedTextBoxStyle}" Foreground="#47474780"/>

                        <!-- Save Button -->
                        <Button Content="Save"
                                Width="140"
                                Height="40"
                                HorizontalAlignment="Right"
                                Background="#86BCD5"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Margin="0,0,0,0"
                                Cursor="Hand"
                                FontSize="14"
                                Style="{StaticResource RoundedButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>

