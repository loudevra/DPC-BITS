<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPC"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="DPC.Views.ItemManager.AddNewProducts.AddNewProductSecondForm"
        mc:Ignorable="d"
        Background="#D9D9D9"
        Title="AddNewProductSecondForm" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Measurement Unit :" HorizontalAlignment="Left" Margin="34,66,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Bar Code : " HorizontalAlignment="Left" Margin="36,117,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Leave blank if you want auto generated code." HorizontalAlignment="Left" Margin="272,172,0,0" VerticalAlignment="Top" FontSize="5" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Description :" HorizontalAlignment="Left" Margin="38,180,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Valid To Date : " HorizontalAlignment="Left" Margin="50,315,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <DatePicker HorizontalAlignment="Left" Margin="52,341,0,0" VerticalAlignment="Top" Width="350"/>
        <Label Content="Do not change if not applicable." HorizontalAlignment="Left" Margin="56,365,0,0" VerticalAlignment="Top" FontSize="5" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Upload Product Image :" HorizontalAlignment="Left" Margin="452,344,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Image HorizontalAlignment="Left" Height="166" Margin="722,344,0,0" VerticalAlignment="Top" Width="444"/>
        <Label Content="Allowed: .gif, .jepg, .png (Use light small weight images for fast loading - 200x200)" HorizontalAlignment="Left" Margin="466,365,0,0" VerticalAlignment="Top" FontSize="5" FontFamily="Lexend" Foreground="#474747"/>

        <materialDesign:PackIcon Kind="CartOutline" Foreground="Black" Width="22" Height="17" Margin="19,15,0,0"/>
        <materialDesign:PackIcon Kind="LocationOnOutline" Foreground="Black" Width="23" Height="17" Margin="47,15,0,0"/>
        <materialDesign:PackIcon Kind="BellOutline" Foreground="Black" Width="22" Height="16" Margin="1106,22,0,0"/>
        <materialDesign:PackIcon Kind="EmailOutline" Foreground="Black" Width="22" Height="16" Margin="1133,22,0,0"/>
        <materialDesign:PackIcon Kind="ClockOutline" Foreground="Black" Width="22" Height="16" Margin="1161,22,0,0"/>
        <TextBox HorizontalAlignment="Left" Margin="907,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" Height="26"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <materialDesign:PackIcon  Kind="Magnify " Foreground="#D9D9D9" Width="22" Height="16" Margin="1060,24,0,0"/>
        <ComboBox HorizontalAlignment="Left" Margin="34,95,0,0" VerticalAlignment="Top" Width="1144" Background="White"
            BorderThickness="2" BorderBrush="#474747" Height="28">
            <ComboBox.Style>
                <Style TargetType="{x:Type ComboBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ComboBox}">
                                <Grid>
                                    <!-- Border with rounded corners -->
                                    <Border CornerRadius="15" Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <!-- ContentPresenter for the selected item -->
                                            <ContentPresenter VerticalAlignment="Center" Margin="10,0,35,0"/>

                                            <!-- Drop-down button (on the right side) -->
                                            <ToggleButton x:Name="ArrowButton" Focusable="False"
                                                Background="Transparent" BorderThickness="0"
                                                HorizontalAlignment="Right" VerticalAlignment="Center"
                                                Width="30" Height="30" Margin="0,0,5,0">
                                                <Path Data="M 0 0 L 5 5 L 10 0" Stroke="#474747" StrokeThickness="2"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </ToggleButton>
                                        </Grid>
                                    </Border>
                                    <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom">
                                        <Border CornerRadius="10" BorderBrush="#474747" BorderThickness="2" Background="White">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ComboBox.Style>
        </ComboBox>
        <TextBox Text = "Bar Code"  Foreground="#474747" FontSize="8" FontWeight="Regular" HorizontalAlignment="Left" Margin="266,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="912" Height="29"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <ComboBox HorizontalAlignment="Left" Margin="34,141,0,0" VerticalAlignment="Top" Width="227" Background="White"
            BorderThickness="2" BorderBrush="#474747" Height="28">
            <ComboBox.Style>
                <Style TargetType="{x:Type ComboBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ComboBox}">
                                <Grid>
                                    <!-- Border with rounded corners -->
                                    <Border CornerRadius="15" Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <!-- ContentPresenter for the selected item -->
                                            <ContentPresenter VerticalAlignment="Center" Margin="10,0,35,0"/>

                                            <!-- Drop-down button (on the right side) -->
                                            <ToggleButton x:Name="ArrowButton" Focusable="False"
                                                Background="Transparent" BorderThickness="0"
                                                HorizontalAlignment="Right" VerticalAlignment="Center"
                                                Width="30" Height="30" Margin="0,0,5,0">
                                                <Path Data="M 0 0 L 5 5 L 10 0" Stroke="#474747" StrokeThickness="2"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </ToggleButton>
                                        </Grid>
                                    </Border>
                                    <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom">
                                        <Border CornerRadius="10" BorderBrush="#474747" BorderThickness="2" Background="White">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ComboBox.Style>
        </ComboBox>
        <TextBox HorizontalAlignment="Left" Margin="30,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1144" Height="106"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button x:Name="btnAddRow" Background="#52C69D" Margin="574,522,506,227">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CartPlus" Foreground="white" Width="24" Height="24" Margin="0,0,5,0"/>
                            <TextBlock Text="Add Product" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnAddRow_Copy" Background="#DF67C5" Margin="444,522,636,227">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="PlaylistAdd" Foreground="white" Width="24" Height="24" Margin="0,0,5,0"/>
                            <TextBlock Text="Serial Row" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnAddRow_Copy1" Background="#828282" Margin="59,522,1021,227">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CloudUploadOutline" Foreground="white" Width="24" Height="24" Margin="0,0,5,0"/>
                            <TextBlock Text="Upload" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnAddRow_Copy2" Background="#2E466B" Margin="60,614,1020,135">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="PlaylistAdd" Foreground="white" Width="24" Height="24" Margin="0,0,5,0"/>
                            <TextBlock Text="Row" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnAddRow_Copy3" Background="#2E466B" Margin="60,697,1020,52">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="PlaylistAdd" Foreground="white" Width="24" Height="24" Margin="0,0,5,0"/>
                            <TextBlock Text="Row" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnAddRow_Copy4" Background="#474747" Margin="58,572,28,177">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <Grid>
                            <!-- Define 2 columns: Icon (fixed width) + Text (fills remaining space) -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Icon -->
                                <ColumnDefinition Width="*"/>
                                <!-- Text -->
                            </Grid.ColumnDefinitions>

                            <!-- Icon on the left -->
                            <materialDesign:PackIcon Kind="PlusCircleOutline" Foreground="White" Width="24" Height="24"
                                             Margin="10,0,10,0" VerticalAlignment="Center" Grid.Column="0"/>

                            <!-- Text aligned to the left -->
                            <TextBlock Text="Products Variation" Foreground="White" FontFamily="Lexend" FontSize="13"
                               VerticalAlignment="Center" Grid.Column="1" TextAlignment="Left"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnAddRow_Copy5" Background="#474747" Margin="58,655,28,94">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <Grid>
                            <!-- Define 2 columns: Icon (fixed width) + Text (fills remaining space) -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Text -->
                                <!-- Icon -->
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon on the left -->
                            <materialDesign:PackIcon Kind="PlusCircleOutline" Foreground="White" Width="24" Height="24"
                                Margin="10,0,10,0" VerticalAlignment="Center" Grid.Column="0"/>

                            <!-- Text aligned to the left -->
                            <TextBlock Text="Stockroom to Reception" Foreground="White" FontFamily="Lexend" FontSize="13"
                                VerticalAlignment="Center" Grid.Column="1" TextAlignment="Left"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="Add New Products" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="68,31,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Lexend" Foreground="#474747"/>
        <materialDesign:PackIcon Kind="PackageVariantClosedPlus" Foreground="#474747" Width="48" Height="42" Margin="15,28,0,0"/>

    </Grid>
</Window>
