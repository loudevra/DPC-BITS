        </TextBox>
        <TextBox HorizontalAlignment="Left" Margin="422,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" Height="30"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
