<Window x:Class="AddNewProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DPC"
        mc:Ignorable="d"
        Background="#D9D9D9"
        Title="AddNewProducts" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <materialDesign:PackIcon Kind="CartOutline" Foreground="Black" Width="22" Height="17" Margin="19,15,0,0"/>
        <materialDesign:PackIcon Kind="LocationOnOutline" Foreground="Black" Width="23" Height="17" Margin="47,15,0,0"/>

        <Label Content="Add New Products" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="68,42,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Lexend" Foreground="#474747"/>


        <Label Content="Product Name:" HorizontalAlignment="Left" Margin="21,76,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>

        <Label Content="Product Code:" HorizontalAlignment="Left" Margin="21,128,0,0" VerticalAlignment="Top"  FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Product category:" HorizontalAlignment="Left" Margin="21,175,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Sub-Category:" HorizontalAlignment="Left" Margin="23,225,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Warehouse:" HorizontalAlignment="Left" Margin="24,271,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Height="26"/>
        <Label Content="Product category:" HorizontalAlignment="Left" Margin="22,322,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Product Retail Price: " HorizontalAlignment="Left" Margin="24,369,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Height="22"/>
        <Label Content="Product Order Price: " HorizontalAlignment="Left" Margin="410,75,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747" Height="22"/>
        <TextBox HorizontalAlignment="Left" Margin="422,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" Height="28"
         BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Control.Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Label Content="Default Tax Rate:" HorizontalAlignment="Left" Margin="410,133,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Default Discount Rate:" HorizontalAlignment="Left" Margin="410,191,0,0" VerticalAlignment="Top" FontWeight="Medium"  FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Stock Units:" HorizontalAlignment="Left" Margin="417,251,0,0" VerticalAlignment="Top" FontWeight="Medium"  FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="Alert Quantity:" HorizontalAlignment="Left" Margin="416,301,0,0" VerticalAlignment="Top"  FontWeight="Medium" FontSize="12" FontFamily="Lexend" Foreground="#474747"/>
        <TextBox HorizontalAlignment="Left" Margin="422,327,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" Height="28"
         BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Control.Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Label Content="You can also change the discount during invoice creation." HorizontalAlignment="Left" Margin="415,241,0,0" VerticalAlignment="Top"  FontSize="5" FontFamily="Lexend" Foreground="#474747"/>
        <Label Content="You can also change the discount during invoice creation." HorizontalAlignment="Left" Margin="421,181,0,0" VerticalAlignment="Top"  FontSize="5" FontFamily="Lexend" Foreground="#474747"/>

        <ComboBox HorizontalAlignment="Left" Margin="21,198,0,0" VerticalAlignment="Top" Width="359" Background="White"
          BorderThickness="2" BorderBrush="#474747" Height="28">
            <ComboBox.Style>
                <Style TargetType="ComboBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBox">
                                <Grid>
                                    <!-- Border with rounded corners -->
                                    <Border CornerRadius="15" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <!-- ContentPresenter for the selected item -->
                                            <ContentPresenter VerticalAlignment="Center" Margin="10,0,35,0"/>

                                            <!-- Drop-down button (on the right side) -->
                                            <ToggleButton x:Name="ArrowButton" Focusable="False"
                                                  Background="Transparent" BorderThickness="0"
                                                  HorizontalAlignment="Right" VerticalAlignment="Center"
                                                  Width="30" Height="30" Margin="0,0,5,0">
                                                <Path Data="M 0 0 L 5 5 L 10 0" Stroke="#474747" StrokeThickness="2"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </ToggleButton>
                                        </Grid>
                                    </Border>
                                    <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom">
                                        <Border CornerRadius="10" BorderBrush="#474747" BorderThickness="2" Background="White">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ComboBox.Style>
        </ComboBox>


        <materialDesign:PackIcon Kind="BellOutline" Foreground="Black" Width="22" Height="16" Margin="703,16,0,0"/>
        <materialDesign:PackIcon Kind="EmailOutline" Foreground="Black" Width="22" Height="16" Margin="730,16,0,0"/>
        <materialDesign:PackIcon Kind="ClockOutline" Foreground="Black" Width="22" Height="16" Margin="758,16,0,0"/>


        <Button x:Name="btnAddRow" Background="#2E466B" Margin="710,384,13,24">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                            <TextBlock Text="Next" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="10"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnAddRow_Copy" Background="#D23636" Margin="620,384,100,24">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                            <TextBlock Text="Cancel" Foreground="white" VerticalAlignment="Center" FontFamily="Lexend" FontSize="10"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <materialDesign:PackIcon Kind="PackageVariantClosedPlus" Foreground="#474747" Width="48" Height="42" Margin="15,38,0,0"/>
