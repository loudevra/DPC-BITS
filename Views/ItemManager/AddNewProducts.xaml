                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ComboBox.Style>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="24,294,0,0" VerticalAlignment="Top" Width="359" Background="White"
            BorderThickness="2" BorderBrush="#474747" Height="30">
            <ComboBox.Style>
                <Style TargetType="{x:Type ComboBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ComboBox}">
                                <Grid>
                                    <!-- Border with rounded corners -->
                                    <Border CornerRadius="15" Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <!-- ContentPresenter for the selected item -->
