                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Margin="417,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" Height="28"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBox Text = "Enter product name..."  Foreground="#474747" FontSize="8" FontWeight="Regular" HorizontalAlignment="Left" Margin="23,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" Height="29"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBox Text = "Enter product code..."  Foreground="#474747"  FontSize="8" FontWeight="Regular" HorizontalAlignment="Left" Margin="21,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" Height="29"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
