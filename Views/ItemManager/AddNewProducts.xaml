                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Margin="26,344,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" Height="29"
            BorderThickness="2" BorderBrush="#474747">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="15" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                    <ScrollViewer Margin="4" x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
