                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Grid HorizontalAlignment="Left" Margin="28,390,0,0" VerticalAlignment="Top">
            <Border CornerRadius="15" BorderThickness="2" BorderBrush="#474747" Background="White" Width="357" Height="29" Margin="-1,0,1,0">
                <Grid>

                    <materialDesign:PackIcon Kind="CurrencyPhp" Width="15" Height="15" Foreground="#474747" 
                                     VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                    <TextBox Margin="35,0,10,0" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"/>
                </Grid>
            </Border>
