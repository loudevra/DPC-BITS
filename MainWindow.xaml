<Window x:Class="DPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DPC"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DPC Login"
        Height="500"
        Width="800"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Main Border for Rounded Window with Shadow -->
        <Border Background="Transparent" Padding="0" Margin="0,0,0,0" Grid.RowSpan="2">

            <!-- Wrapper Grid -->
            <Grid>
                <!-- Main Content Grid -->
                <Grid Width="820" HorizontalAlignment="Center" Margin="0,40,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="282*"/>
                        <ColumnDefinition Width="87*"/>
                        <ColumnDefinition Width="451*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel with Rounded Corners -->
                    <Border Grid.Column="0" Background="Black" CornerRadius="50" Grid.ColumnSpan="2" Margin="10,0,0,0">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="Assets/images/logo.png" Height="120" Width="120"/>
                            <TextBlock Text="DREAM PC BUILD" Foreground="White" FontSize="20" FontWeight="Bold" TextAlignment="Center" FontFamily="{StaticResource Lexend}">
                            </TextBlock>
                            <TextBlock Text="AND IT SOLUTIONS INC." Foreground="Gray" FontSize="12" TextAlignment="Center" FontFamily="{StaticResource Lexend}"/>
                        </StackPanel>
                    </Border>

                    <!-- Right Panel with Rounded Corners -->
                    <Border Grid.Column="2" Background="White" CornerRadius="45" Padding="20" Margin="0,0,16,0">
                        <Grid>
                            <!-- Sign-In Panel -->
                            <Grid x:Name="SignInPanel">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                                    <TextBlock Text="Sign In" FontSize="20" FontWeight="Bold" FontFamily="{StaticResource Lexend}" TextAlignment="Center" Margin="0,0,0,20"/>
                                    <TextBox x:Name="txtEmail" materialDesign:HintAssist.Hint="Email" Margin="0,10"/>
                                    <PasswordBox x:Name="txtPassword" materialDesign:HintAssist.Hint="Password" Margin="0,10"/>
                                    <TextBlock Text="Forgot Password?" Foreground="Gray" TextAlignment="Right" Cursor="Hand" Margin="0,5" FontFamily="{StaticResource Lexend}"/>
                                    <Button Content="Sign In" Background="Black" Foreground="White" FontFamily="{StaticResource Lexend}" Margin="0,20" Height="40" Click="BtnSignIn_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
