<Window x:Class="DPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="namespace:DPC.Views.Auth"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Sign In"
        Height="550"
        Width="900"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        FontFamily="{StaticResource Lexend}">

    <Grid Background="Transparent">
        <Grid Background="#33000000" Margin="5">
            <md:Card Background="White" UniformCornerRadius="40"
                     Padding="20" Width="850" Height="500"
                     VerticalAlignment="Center" HorizontalAlignment="Center">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel (Logo Section) -->
                    <Border Background="#090909" CornerRadius="40,0,0,40" Grid.Column="0">
                        <Grid>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                <Image x:Name="LogoImage" Source="Assets/images/logo.png"
                                       Height="140" Width="140">
                                    <Image.Effect>
                                        <DropShadowEffect Color="Red" BlurRadius="40" ShadowDepth="0"/>
                                    </Image.Effect>
                                </Image>

                                <TextBlock Text="DREAM PC BUILD" Foreground="White" FontFamily="Lexend"
                                           FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
                                <TextBlock Text="AND IT SOLUTIONS INC." Foreground="Gray" FontFamily="Lexend"
                                           FontSize="14" TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Right Panel (Dynamic Content) -->
                    <Grid Grid.Column="1" Margin="15">
                        <ContentControl x:Name="RightPanelContent" />
                    </Grid>
                </Grid>
            </md:Card>
        </Grid>

        <!-- Close Button -->
        <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                Background="#090909"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="15,45,45,15"
                Click="BtnExit_Click">
            <md:PackIcon Kind="Close" Width="20" Height="20"/>
        </Button>
    </Grid>
</Window>
