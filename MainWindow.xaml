<Window x:Class="DPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Sign In"
        Height="550"
        Width="900"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        FontFamily="{StaticResource Lexend}">

    <Grid Background="Transparent">
        <!-- Shadow Effect -->
        <Grid Background="#33000000" Margin="5">
            <md:Card Background="WhiteSmoke" UniformCornerRadius="40"
                     Padding="20" Width="850" Height="500"
                     VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Layout Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel -->
                    <Border Background="Black" CornerRadius="40,0,0,40" Grid.Column="0">
                        <Grid>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                <!-- Logo -->
                                <Image x:Name="LogoImage" Source="Assets/images/logo.png"
                                       Height="140" Width="140" RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                                    </Image.RenderTransform>
                                    <Image.Effect>
                                        <DropShadowEffect x:Name="GlowEffect" Color="Red" BlurRadius="40" ShadowDepth="0"/>
                                    </Image.Effect>
                                </Image>

                                <TextBlock Text="DREAM PC BUILD" Foreground="White"
                                           FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
                                <TextBlock Text="AND IT SOLUTIONS INC." Foreground="Gray"
                                           FontSize="14" TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Right Panel (Sign In) -->
                    <Grid Grid.Column="1" Margin="40">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
                            <TextBlock Text="Sign In" FontSize="26" FontWeight="Bold"
                                       TextAlignment="Center" Margin="0,0,0,15"/>

                            <!-- Email Input -->
                            <TextBox x:Name="txtEmail"
                                     md:HintAssist.Hint="Email"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Margin="0,10"/>

                            <!-- Password Input -->
                            <TextBox x:Name="txtPassword"
                                md:HintAssist.Hint="Password"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Margin="0,10"/>



                            <!-- Forgot Password -->
                            <TextBlock Text="Forgot Password?" Foreground="Gray"
                                       FontSize="12" HorizontalAlignment="Right"
                                       Cursor="Hand" Margin="0,5,0,0"/>

                            <!-- Sign In Button -->
                            <Button Content="Sign In"
                                    Background="Black" Foreground="White"
                                    Height="45" Margin="0,20,0,0"
                                    Click="BtnSignIn_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="25">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </md:Card>
        </Grid>

        <!-- Exit Button as Floating Action Button (FAB) -->
        <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
        Background="Black"
        Foreground="White"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="10,39,41,10"
        Click="BtnExit_Click">
            <md:PackIcon Kind="Close"
                 Width="20"
                 Height="20"/>
        </Button>

    </Grid>
</Window>
